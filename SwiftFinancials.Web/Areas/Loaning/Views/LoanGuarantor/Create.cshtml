
@model  Application.MainBoundedContext.DTO.BackOfficeModule.LoanGuarantorDTO

@{
    /**/

    ViewBag.Title = "Create Loan Guarantor";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Loan Guarantor</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "LoanGuarantor", new { Area = "Loaning" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger fade in">
        <button class="close" data-dismiss="alert">
            ×
        </button>
        <i class="fa-fw fa fa-times"></i>
        <strong>Error!</strong> @TempData["Error"]
    </div>
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Create", "LoanGuarantor", new { Area = "Loaning" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <h1>Guarantor Details</h1>
                            <fieldset>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.CustomerIndividualIdentityCardNumber, htmlAttributes: new { @class = "" })
                                            @Html.EditorFor(model => model.CustomerIndividualIdentityCardNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "ID Number" } })
                                            @Html.ValidationMessageFor(model => model.CustomerIndividualIdentityCardNumber, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.AppraisalFactor, htmlAttributes: new { @class = "" })
                                            @Html.EditorFor(model => model.AppraisalFactor, new { htmlAttributes = new { @class = "form-control", @placeholder = "Appraisal Factor" } })
                                            @Html.ValidationMessageFor(model => model.AppraisalFactor, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.TotalShares, htmlAttributes: new { @class = "" })
                                            @Html.EditorFor(model => model.TotalShares, new { htmlAttributes = new { @class = "form-control", @placeholder = "Total Shares", disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.TotalShares, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.CommittedShares, htmlAttributes: new { @class = "" })
                                            @Html.EditorFor(model => model.CommittedShares, new { htmlAttributes = new { @class = "form-control", @placeholder = "Committed Shares", disabled = "disabled" } })
                                            @Html.ValidationMessageFor(model => model.CommittedShares, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.AmountGuaranteed, htmlAttributes: new { @class = "" })
                                            @Html.EditorFor(model => model.AmountGuaranteed, new { htmlAttributes = new { @class = "form-control", @placeholder = "Amount Guranteed" } })
                                            @Html.ValidationMessageFor(model => model.AmountGuaranteed, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.CustomerId, htmlAttributes: new { @class = "control-label" })
                                            @Html.HiddenFor(model => model.CustomerId)
                                            @Html.ValidationMessageFor(model => model.CustomerId, "", new { @class = "text-danger" })
                                            @Html.EditorFor(model => model.CustomerFullName, new { htmlAttributes = new { @class = "CustomersLookup form-control required", placeholder = "Customer Name" } })
                                        </div>
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.LoanCaseId, htmlAttributes: new { @class = "control-label" })
                                            @Html.HiddenFor(model => model.LoanCaseId)
                                            @Html.ValidationMessageFor(model => model.LoanCaseId, "", new { @class = "text-danger" })
                                            @Html.EditorFor(model => model.LoanCaseCaseNumber, new { htmlAttributes = new { @class = "LoanCasesLookup form-control required", placeholder = "Customer Name" } })
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
            //customers typehead starts here
            $('.CustomersLookup').typeahead({
                source: function (query, process) {
                    return $.getJSON(
                        '@Url.Action("GetCustomersAsync", "Customer", new { Area = "Registry" })',
                        { query: query },
                        function (Customers) {
                            var newCustomersData = [];
                            CustomersMap = {};
                            $.each(Customers, function (i,Customer) {
                                newCustomersData.push(Customer.FullName);
                                CustomersMap[Customer.FullName] = Customer;
                            });
                            process(newCustomersData); return;
                        });
                },
                matcher: function (item) {
                    if (item.toLowerCase().indexOf(this.query.trim().toLowerCase()) != -1) {
                        return true;
                    }
                },
                sorter: function (items) {
                    return items.sort();
                },
                highlighter: function (item) {
                    var regex = new RegExp('(' + this.query + ')', 'gi');
                    return item.replace(regex, "<strong>$1</strong>");
                },
                updater: function (item) {
                    var customerId = "";
                    CustomerId = CustomersMap[item].Id;
                    $('#CustomerId').val(CustomerId);
                    //console.log(CustomerId)
                    return item;
                }
            });
             //LoanCases typehead starts here
            $('.LoanCasesLookup').typeahead({
                source: function (query, process) {
                    return $.getJSON(
                        '@Url.Action("GetLoanCasesAsync", "LoanRegistration", new { Area = "Loaning" })',
                        { query: query },
                        function (LoanCases) {
                        var newLoanCasesData = [];
                        LoanCasesMap = {};
                        $.each(LoanCases, function (i,LoanCase) {
                            newLoanCasesData.push(LoanCase.LoanCaseCaseNumber);
                            LoanCasesMap[LoanCase.LoanCaseCaseNumber] = LoanCase;
                        });
                        process(newLoanCasesData); return;
                        });
                        },
                        matcher: function (item) {
                        if (item.toLowerCase().indexOf(this.query.trim().toLowerCase()) != -1) {
                        return true;
                        }
                        },
                        sorter: function (items) {
                        return items.sort();
                        },
                        highlighter: function (item) {
                        var regex = new RegExp('(' + this.query + ')', 'gi');
                        return item.replace(regex, "<strong>$1</strong>");
                        },
                        updater: function (item) {
                        var loanCaseId = "";
                        LoanCaseId = LoanCasesMap[item].Id;
                        $('#LoanCaseId').val(LoanCaseId);
                        //console.log(LoanCaseId)
                        return item;
                        }
            });
        $(document).ready(function () {

            $("#wizard").steps();
            $("#form").steps({
                bodyTag: "fieldset",
                onStepChanging: function (event, currentIndex, newIndex) {
                    // Always allow going backward even if the current step contains invalid fields!
                    if (currentIndex > newIndex) {
                        return true;
                    }

                    // Forbid suppressing "Warning" step if the user is to young
                    if (newIndex === 3 && Number($("#age").val()) < 18) {
                        return false;
                    }

                    var form = $(this);

                    // Clean up if user went backward before
                    if (currentIndex < newIndex) {
                        // To remove error styles
                        $(".body:eq(" + newIndex + ") label.error", form).remove();
                        $(".body:eq(" + newIndex + ") .error", form).removeClass("error");
                    }

                    // Disable validation on fields that are disabled or hidden.
                    form.validate().settings.ignore = ":disabled,:hidden";

                    // Start validation; Prevent going forward if false
                    return form.valid();
                },
                onStepChanged: function (event, currentIndex, priorIndex) {
                    // Suppress (skip) "Warning" step if the user is old enough.
                    if (currentIndex === 2 && Number($("#age").val()) >= 18) {
                        $(this).steps("next");
                    }

                    // Suppress (skip) "Warning" step if the user is old enough and wants to the previous step.
                    if (currentIndex === 2 && priorIndex === 3) {
                        $(this).steps("previous");
                    }
                },
                onFinishing: function (event, currentIndex) {
                    var form = $(this);

                    // Disable validation on fields that are disabled.
                    // At this point it's recommended to do an overall check (mean ignoring only disabled fields)
                    form.validate().settings.ignore = ":disabled";

                    // Start validation; Prevent form submission if false
                    return form.valid();
                },
                onFinished: function (event, currentIndex) {
                    var form = $(this);

                    // Submit form input
                    form.submit();
                }
            }).validate({
                errorPlacement: function (error, element) {
                    element.before(error);
                },
                rules: {
                    confirm: {
                        equalTo: "#password"
                    }
                }
            });
</script>
}