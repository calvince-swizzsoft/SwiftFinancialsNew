    <script>

    //ChartOfAccount typehead starts here
    $('.ChartOfAccountsLookup').typeahead({
                source: function (query, process) {
                    return $.getJSON(
                        '@Url.Action("GetChartOfAccountsAsync", "ChartOfAccount", new { Area = "Accounts" })',
                        { query: query },
                        function (ChartOfAccounts) {
                            var newChartOfAccountsData = [];
                            ChartOfAccountsMap = {};
                            $.each(ChartOfAccounts, function (i, ChartOfAccount) {
                                newChartOfAccountsData.push(ChartOfAccount.AccountName);
                                ChartOfAccountsMap[ChartOfAccount.AccountName] = ChartOfAccount;
                            });
                            process(newChartOfAccountsData); return;
                        });
                },
                matcher: function (item) {
                    if (item.toLowerCase().indexOf(this.query.trim().toLowerCase()) != -1) {
                        return true;
                    }
                },
                sorter: function (items) {
                    return items.sort();
                },
                highlighter: function (item) {
                    var regex = new RegExp('(' + this.query + ')', 'gi');
                    return item.replace(regex, "<strong>$1</strong>");
                },
                updater: function (item) {
                    var chartOfAccountId = "";
                    ChartOfAccountId = ChartOfAccountsMap[item].Id;

                    $('#ChartOfAccountId').val(ChartOfAccountId);

                    //console.log(ChartOfAccountId)
                    return item;
                }
    });

                //Station typehead starts here
        $('.ProductsLookup').typeahead({
                source: function (query, process) {
                    return $.getJSON(
                        '@Url.Action("GetProductsAsync", "Salary", new { Area = "HumanResource" })',
                        { query: query },
                        function (Stations) {
                            var newProductsData = [];
                            ProductsMap = {};
                            $.each(Products, function (i, Product) {
                                newProductsData.push(Product.Description);
                                ProductsMap[Product.Description] = Product;
                            });
                            process(newProductsData); return;
                        });
                },
                matcher: function (item) {
                    if (item.toLowerCase().indexOf(this.query.trim().toLowerCase()) != -1) {
                        return true;
                    }
                },
                sorter: function (items) {
                    return items.sort();
                },
                highlighter: function (item) {
                    var regex = new RegExp('(' + this.query + ')', 'gi');
                    return item.replace(regex, "<strong>$1</strong>");
                },
                updater: function (item) {
                    var ProductID = "";
                    ProductID = ProductsMap[item].Id;
                    $('#CustomerAccountTypeTargetProductId').val(ProductID);
                    $('#CustomerAccountTypeTargetProductId').val(ProductsMap[item].CustomerAccountTypeProductCodeDescription);
                    $('#ProductDescription').val(ProductsMap[item].ProductDescription);
                    $('#CustomerAccountTypeProductCode').val(ProductsMap[item].CustomerAccountTypeProductCode);
                    //console.log(StationId)
                    return item;
                }
            });

    $('#salaryHeadsGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "SavingsProduct", new { Area = "Accounts" }))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                  var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var selectUrl = '<a  href="/HumanResource/Salary/Create/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Select</a>';

                    $('td:eq(5)', nRow).html(dt_Created);
                    $('td:eq(6)', nRow).html(selectUrl);

                    return nRow;
                },
        // Display settings
        "aoColumns": [
            { "mDataProp": "Description", "sTitle": "Description", "sWidth": "10%" },
            { "mDataProp": "MinimumBalance", "sTitle": "Minimum Balance", "sWidth": "5%" },
            { "mDataProp": "OperatingBalance", "sTitle": "Operating Balance", "sWidth": "5%" },
            //{ "mDataProp": "AnnualPercentageYield", "sTitle": "Annual Percentage Yield", "sWidth": "10%" },
            { "mDataProp": "MaximumAllowedWithdrawal", "sTitle": "Maximum Allowed Withdrawal", "sWidth": "10%" },
            { "mDataProp": "WithdrawalNoticePeriod", "sTitle": "Withdrawal Notice Period (Days)", "sWidth": "10%" },
            { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "5%" },
            //{ "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "10%" },

            { "mDataProp": "selectUrl", "sTitle": "", "sWidth": "10%" ,"bSortable": false}],
        "aaSorting": [[0, "desc"]]
    });
    </script>
