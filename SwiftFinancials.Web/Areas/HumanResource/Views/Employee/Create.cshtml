                    var regex = new RegExp('(' + this.query + ')', 'gi');
                    return item.replace(regex, "<strong>$1</strong>");
                },
                updater: function (item) {
                    var departmentId = "";
                    DepartmentId = DepartmentsMap[item].Id;
                    $('#DepartmentId').val(DepartmentId);
                    //console.log(DepartmentId)
                    return item;
                }
            });
    </script>
