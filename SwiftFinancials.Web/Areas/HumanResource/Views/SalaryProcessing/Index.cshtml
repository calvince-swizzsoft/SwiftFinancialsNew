                    var create = '<a  href="/HumanResource/SalaryPeriods/create/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Create</a>';
                    var viewUrl = '<a  href="/HumanResource/SalaryPeriods/details/' + aData.Id + '" class = "btn btn-outline-info"">' + 'View</a>';

