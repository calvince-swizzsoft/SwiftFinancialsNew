@model Application.MainBoundedContext.DTO.HumanResourcesModule.SalaryGroupEntryDTO

@{
    ViewBag.Title = "Salary Groups";
    var valueType = ViewBag.ValueTypeSelectList as List<SelectListItem>;
    var roundingTypes = ViewBag.RoundingTypeSelectList as List<SelectListItem>;
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Salary Groups</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "SalaryGroups", new { Area = "HumanResource" }, null)
            </li>
            <li class="breadcrumb-item active">
                @*<strong>Create Salary Group</strong>*@
            </li>
        </ol>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger fade in">
        <button class="close" data-dismiss="alert">
        </button>
        <i class="fa-fw fa fa-times"></i>
        <strong>Error!</strong> @TempData["Error"]
    </div>
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Create Salary Group</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Create", "SalaryGroups", new { Area = "HumanResource" }, FormMethod.Post, new { @class = "wizard-big", @id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                        <fieldset>
                            <div class="form-group form-group-lg">
                                @Html.LabelFor(model => model.SalaryGroupDescription, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.SalaryGroupDescription, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Salary Group Name.", @required = "" } })
                                @Html.ValidationMessageFor(model => model.SalaryGroupDescription, "", new { @class = "text-danger" })
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="col-md-13 form-group">
                                        @Html.LabelFor(model => model.SalaryHeadId, htmlAttributes: new { @class = "control-label" })
                                        <div class="input-group" data-autoclose="true">
                                            @Html.HiddenFor(model => model.SalaryHeadId)
                                            @Html.TextBoxFor(model => model.SalaryGroupDescription, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly", placeholder = "Link salary head." })
                                            <span class="input-group-addon">
                                                <a data-toggle="modal" data-target="#SalaryGroupsLookupModal"><span class="fa fa-search"></span></a>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="col-md-13 form-group">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.ChargeTypeDescription, htmlAttributes: new { @class = "" })
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.ChargeTypeDescription, valueType, new { @class = "form-control input-md" })
                                            @Html.ValidationMessageFor(model => model.ChargeTypeDescription)
                                        </div>
                                    </div>

                                    <div class="input-group">
                                        @Html.LabelFor(model => model.MinimumValue, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.MinimumValue, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kshs.0.00", @required = "" } })
                                        @Html.ValidationMessageFor(model => model.MinimumValue, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-13 form-group">
                                    <div class="input-group">
                                        @Html.LabelFor(model => model.ChargeType, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.ChargeType, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kshs.0.00", @required = "" } })
                                        @Html.ValidationMessageFor(model => model.ChargeType, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="input-group">
                                        @Html.LabelFor(model => model.RoundingTypeDescription, htmlAttributes: new { @class = "" })
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.RoundingTypeDescription, roundingTypes, new { @class = "form-control input-md" })
                                            @Html.ValidationMessageFor(model => model.RoundingTypeDescription)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                        <div class="ibox-content m-b-sm border-bottom">
                            @using (Html.BeginForm("Create", "SalaryGroups", new { Area = "HumanResource" }, FormMethod.Post, new { @class = "wizard-big", @id = "form" }))
                            {
                                <div class="row">
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <input type="submit" style="width:270px; background-color:darkgreen; border-color:darkgreen" value="Create" class="btn btn-success" />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal  fade" id="SalaryGroupsLookupModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
