                                        @Html.LabelFor(model => model.CommissionCustomerAccountStatusDescription, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.CommissionCustomerAccountStatusDescription, new { htmlAttributes = new { @class = "EmployeesLookup form-control required", placeholder = "Description.." } })
