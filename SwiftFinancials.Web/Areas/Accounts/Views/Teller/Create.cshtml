                                        @Html.LabelFor(model => model.ExcessChartOfAccountAccountName, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.ExcessChartOfAccountAccountName, new { htmlAttributes = new { @class = "EmployeesLookup form-control required", placeholder = "Description.." } })
                                        @Html.ValidationMessageFor(model => model.ExcessChartOfAccountAccountName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.FloatCustomerAccountStatusDescription, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.FloatCustomerAccountStatusDescription, new { htmlAttributes = new { @class = "EmployeesLookup form-control required", placeholder = "Description.." } })
                                        @Html.ValidationMessageFor(model => model.FloatCustomerAccountStatusDescription, "", new { @class = "text-danger" })
