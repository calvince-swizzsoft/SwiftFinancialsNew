                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Create", "Teller", new { Area = "Accounts" }, FormMethod.Post, new { @class = "wizard-big", @id = "form" }))
