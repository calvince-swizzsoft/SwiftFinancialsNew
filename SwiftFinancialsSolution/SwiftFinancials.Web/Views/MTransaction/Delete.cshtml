@model SwiftFinancials.Web.Models.MTransaction

@{
    ViewBag.Title = "Delete Transaction";
}

<div class="container">
    <h2 class="text-danger">Delete Transaction</h2>

    <h4 class="text-warning">Are you sure you want to delete this record?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Client Code</dt>
        <dd class="col-sm-9">@Model.ClientCode</dd>
        <dt class="col-sm-3">Account No</dt>
        <dd class="col-sm-9">@Model.AccountNo</dd>
        <dt class="col-sm-3">Amount</dt>
        <dd class="col-sm-9">@Model.Amount?.ToString("C")</dd>
        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" />
        @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary" })
    }
</div>
