@model List<SwiftFinancials.Web.Models.MTransaction>
@{
    ViewBag.Title = "MTransaction List";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>MTransaction Records</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Dashboard", "Index", "Home")</li>
            <li class="breadcrumb-item active"><strong>Transaction List</strong></li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="ibox">
        <div class="ibox-title">
            <h5>Manage Transactions</h5>
            <div class="ibox-tools">
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                <a class="close-link"><i class="fa fa-times"></i></a>
            </div>
        </div>
        <div class="ibox-content">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }

            <div class="mb-3 text-right">
                @Html.ActionLink("Create New Transaction", "Create", null, new { @class = "btn btn-success btn-lg" })
            </div>

            <!-- Filters -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <input type="text" id="filterAccountNo" class="form-control" placeholder="Filter by Account No">
                </div>
                <div class="col-md-3">
                    <select id="filterTransactionType" class="form-control">
                        <option value="">All Transaction Types</option>
                        @foreach (var type in Model.Select(m => m.TransactionType).Distinct())
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select id="filterStatus" class="form-control">
                        <option value="">All Status</option>
                        <option value="Approved">Approved</option>
                        <option value="Pending">Pending</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="text" id="filterDescription" class="form-control" placeholder="Search Description">
                </div>
            </div>

            <!-- Table -->
            <div class="table-responsive">
                <table id="transactionTable" class="table table-striped table-bordered table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th>#</th>
                            <th>Account No</th>
                            <th>Amount</th>
                            <th>Charge</th>
                            <th>Transaction Type</th>
                            <th>Transaction Date</th>
                            <th>Status</th>
                            <th>Description</th>
                            <th>Application Type</th>
                            <th style="width: 170px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            for (int i = 0; i < Model.Count; i++)
                            {
                                var tx = Model[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@tx.AccountNo</td>
                                    <td>
                                        @(decimal.TryParse(tx.Amount, out var amt) ? amt.ToString("C") : tx.Amount)
                                    </td>
                                    <td>
                                        @(decimal.TryParse(tx.Charge, out var chg) ? chg.ToString("C") : tx.Charge)
                                    </td>
                                    <td>@tx.TransactionType</td>
                                    <td>@(tx.TransactionDate?.ToString("dd MMM yyyy") ?? "N/A")</td>
                                    <td>
                                        @{
                                            var statusLabel = tx.Status == 1 ? "Approved" :
                                                              tx.Status == 0 ? "Pending" : "Other";
                                            var badgeClass = tx.Status == 1 ? "success" :
                                                             tx.Status == 0 ? "secondary" : "warning";
                                        }
                                        <span class="badge badge-@badgeClass">@statusLabel</span>
                                    </td>
                                    <td title="@tx.Description">
                                        @((tx.Description?.Length > 20) ? tx.Description.Substring(0, 20) + "..." : tx.Description)
                                    </td>
                                    <td>@tx.ApplicationType</td>
                                    <td>
                                        <div class="dropdown">
                                            <button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown">
                                                Actions
                                            </button>
                                            <div class="dropdown-menu">
                                                <a class="dropdown-item" href="@Url.Action("Details", new { id = tx.ID })">View</a>
                                                <a class="dropdown-item" href="@Url.Action("Edit", new { id = tx.ID })">Edit</a>
                                                <a class="dropdown-item text-danger" href="@Url.Action("Delete", new { id = tx.ID })">Delete</a>
                                            </div>
                                        </div>
                                    </td>

                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="10" class="text-center text-muted">No transactions found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    <style>
        .btn-sm + .btn-sm {
            margin-left: 5px;
        }

        .badge-success {
            background-color: #1ab394;
        }

        .badge-secondary {
            background-color: #ccc;
        }

        .badge-warning {
            background-color: #f8ac59;
        }

        .dataTables_filter {
            display: none; /* hide built-in search */
        }
    </style>
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#transactionTable').DataTable({
                pageLength: 10,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'MTransactions' },
                    { extend: 'pdf', title: 'MTransactions' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg').css('font-size', '10px');
                            $(win.document.body).find('table').addClass('compact').css('font-size', 'inherit');
                        }
                    }
                ],
                language: {
                    search: "Search Transactions:",
                    lengthMenu: "Show _MENU_ entries"
                }
            });

            // Filters
            $('#filterAccountNo').on('keyup', function () {
                table.column(1).search(this.value).draw();
            });

            $('#filterTransactionType').on('change', function () {
                table.column(4).search(this.value).draw();
            });

            $('#filterStatus').on('change', function () {
                table.column(6).search(this.value).draw();
            });

            $('#filterDescription').on('keyup', function () {
                table.column(7).search(this.value).draw();
            });
        });
    </script>
}
