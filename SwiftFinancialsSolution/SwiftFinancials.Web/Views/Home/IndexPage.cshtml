@{
    ViewBag.Title = "ERP Executive Dashboard";
}

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', sans-serif;
    }

    .ibox {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.06);
        transition: all 0.3s ease-in-out;
        text-decoration: none;
    }

        .ibox:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 35px rgba(0, 0, 0, 0.1);
        }

    .ibox-title {
        padding: 18px 24px;
        border-bottom: 1px solid #e1e5eb;
        font-weight: 600;
        font-size: 17px;
        color: #333;
    }

    .ibox-content {
        padding: 25px 24px;
    }

    .counter-number {
        font-size: 36px;
        font-weight: bold;
        color: #007bff;
    }

    .description {
        font-size: 14px;
        color: #6c757d;
    }

    .chart-container {
        height: 280px;
    }

    .table thead th {
        background: #007bff;
        color: #fff;
        border: none;
    }

    .list-group-item {
        font-size: 14px;
        border-left: 4px solid #007bff;
        background-color: #f9fbff;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 6px;
    }

    .form-select, .form-control {
        height: 45px;
        font-size: 15px;
    }
</style>

<div class="container-fluid">

    <!-- KPI Summary -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="ibox">
                <div class="ibox-title">Total Members</div>
                <div class="ibox-content text-center">
                    <div class="counter-number" id="customers">0</div>
                    <div class="description">SACCO Membership</div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="ibox">
                <div class="ibox-title">Savings Accounts</div>
                <div class="ibox-content text-center">
                    <div class="counter-number" id="savings">Loading...</div>
                    <div class="description">Active Savings</div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="ibox">
                <div class="ibox-title">Loan Portfolio</div>
                <div class="ibox-content text-center">
                    <div class="counter-number" id="loans">0</div>
                    <div class="description">Disbursed Loans</div>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-3">
            <div class="ibox">
                <div class="ibox-title">Dividends Paid</div>
                <div class="ibox-content text-center">
                    <div class="counter-number" id="dividends">0</div>
                    <div class="description">Total Paid (KES)</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <label for="savingsProductSelect" class="form-label">Savings Product</label>
            <select id="savingsProductSelect" class="form-select">
                <option value="">-- Select Product --</option>
            </select>
        </div>
        <div class="col-md-4">
            <label for="endDateInput" class="form-label">End Date</label>
            <input type="date" id="endDateInput" class="form-control" />
        </div>
        <div class="col-md-2 d-flex align-items-end">
            <button id="fetchBalanceBtn" class="btn btn-primary w-100">Get Balance</button>
        </div>
    </div>

    <!-- Charts -->
    <div class="row">
        <div class="col-md-6 mb-3">@ChartBox("Monthly Savings Trends", "savingsChart")</div>
        <div class="col-md-6 mb-3">@ChartBox("Loan Repayment Status", "repaymentChart")</div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">@ChartBox("Revenue Performance", "revenueChart")</div>
        <div class="col-md-6 mb-3">@ChartBox("Expense Allocation", "expenseChart")</div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">@ChartBox("Profitability Analysis", "profitChart")</div>
        <div class="col-md-6 mb-3">@ChartBox("Risk Heatmap", "riskChart")</div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">@ChartBox("Branch Performance", "branchChart")</div>
        <div class="col-md-6 mb-3">
            <div class="ibox">
                <div class="ibox-title">Notifications & Alerts</div>
                <div class="ibox-content">
                    <ul class="list-group">
                        <li class="list-group-item">🔔 New Loan Application Submitted</li>
                        <li class="list-group-item">⚠️ Compliance Alert: KYC Pending</li>
                        <li class="list-group-item">📢 AGM Scheduled for 15th July</li>
                        <li class="list-group-item">💼 3 Positions Open for Recruitment</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@helper ChartBox(string title, string chartId)
{
    <div class="ibox">
        <div class="ibox-title">@title</div>
        <div class="ibox-content">
            <div class="chart-container">
                <canvas id="@chartId"></canvas>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/plugins/chartjs")
<script>
        $(document).ready(function () {
            // Populate dropdown
            $.get('/Dashboard/Dashboard/GetSavingsProducts', function (products) {
                const $select = $('#savingsProductSelect');
                products.forEach(p => {
                    $select.append(`<option value="${p.ID}">${p.Name}</option>`);
                });
            });
            $(document).ready(function () {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Customers", "Dashboard", new { Area = "Dashboard" })',
                success: function (data) {
                    $('#customers').empty();
                    $(jQuery.parseJSON(JSON.stringify(data))).each(function (key, val) {
                        $('#customers').append((val.Customers).toLocaleString("en"));
                    });
                }
            });
        });
            // Fetch balance on button click
            $('#fetchBalanceBtn').click(function () {
                const productId = $('#savingsProductSelect').val();
                const endDate = $('#endDateInput').val();

                if (!productId || !endDate) {
                    alert("Please select both product and end date.");
                    return;
                }

                $.get('/Dashboard/Dashboard/GetSavingsProductBalanceByDate', {
                    productId: productId,
                    endDate: endDate
                }).done(function (data) {
                    let total = 0;
                    data.forEach(row => total += row.Balance);

                    $('#savings').text(total.toLocaleString('en-KE', {
                        style: 'currency',
                        currency: 'KES',
                        minimumFractionDigits: 0
                    }));
                }).fail(function () {
                    $('#savings').text("Failed to load");
                });
            });

            // Static KPI values
            $('#members').text('2,345');
            $('#loans').text('895');
            $('#dividends').text('KES 5.3M');

            // Charts
            initCharts();
        });

        function initCharts() {
            new Chart($('#savingsChart'), {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: 'Savings (KES)',
                        data: [150000, 180000, 200000, 220000, 240000, 260000],
                        backgroundColor: 'rgba(0,123,255,0.2)',
                        borderColor: '#007bff',
                        fill: true
                    }]
                }
            });

            new Chart($('#repaymentChart'), {
                type: 'doughnut',
                data: {
                    labels: ['Paid', 'Overdue', 'Pending'],
                    datasets: [{
                        data: [65, 20, 15],
                        backgroundColor: ['#28a745', '#dc3545', '#ffc107']
                    }]
                }
            });

            new Chart($('#revenueChart'), {
                type: 'bar',
                data: {
                    labels: ['Q1', 'Q2', 'Q3', 'Q4'],
                    datasets: [{
                        data: [1.2, 2.0, 1.5, 2.5],
                        backgroundColor: '#007bff'
                    }]
                }
            });

            new Chart($('#expenseChart'), {
                type: 'pie',
                data: {
                    labels: ['Salaries', 'Office Rent', 'Marketing', 'Utilities'],
                    datasets: [{
                        data: [400000, 150000, 80000, 70000],
                        backgroundColor: ['#ffc107', '#007bff', '#28a745', '#dc3545']
                    }]
                }
            });

            new Chart($('#profitChart'), {
                type: 'bar',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        data: [200000, 250000, 300000, 320000, 350000, 400000],
                        backgroundColor: '#17a2b8'
                    }]
                }
            });

            new Chart($('#riskChart'), {
                type: 'polarArea',
                data: {
                    labels: ['Credit Risk', 'Liquidity Risk', 'Operational Risk', 'Compliance Risk'],
                    datasets: [{
                        data: [50, 40, 30, 20],
                        backgroundColor: ['#dc3545', '#ffc107', '#007bff', '#28a745']
                    }]
                }
            });

            new Chart($('#branchChart'), {
                type: 'bar',
                data: {
                    labels: ['Nairobi', 'Mombasa', 'Kisumu', 'Eldoret'],
                    datasets: [{
                        data: [10, 7, 5, 3],
                        backgroundColor: '#007bff'
                    }]
                }
            });
        }
</script>
}
