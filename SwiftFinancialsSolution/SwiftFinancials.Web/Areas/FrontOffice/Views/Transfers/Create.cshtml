$('#cashTransferButton').on('click', function () {

    var cashTransferRequestDTO = {
        amount: $('#amount').val(),  
        reference: $('#reference').val(),
        employeeId: $('#employeeId').val()
    };

    // AJAX request to send selected cheques data to the controller
    $.ajax({
