@model Application.MainBoundedContext.DTO.FrontOfficeModule.ElectronicJournalDTO

@{
    ViewBag.Title = "Truncated Cheques Processing";
}

<style>
    .main-container {
        padding: 20px;
        background-color: #f0f0f0;
    }

    .panel {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 4px;
        margin-bottom: 20px;
    }

    .panel-heading {
        background-color: #f5f5f5;
        padding: 10px 15px;
        border-bottom: 1px solid #ddd;
    }

    .form-control {
        width: 100%;
        padding: 6px 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .table th {
            background-color: #f5f5f5;
        }

    .image-container {
        border: 1px solid #ddd;
        padding: 10px;
        margin-bottom: 10px;
    }

    .btn-primary {
        background-color: #337ab7;
        color: #fff;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
    }
</style>

<div class="main-container">
    <h2>Truncated Cheques Processing</h2>

    <div class="panel">
        <div class="panel-heading">
            <div class="row">
                <div class="col-md-4">
                    <label>Electronic Journal:</label>
                    <div class="input-group">
                        @Html.TextBoxFor(model => model.StatusDescription, new { @class = "form-control", placeholder = "Enter Text..." })
                        <span class="input-group-addon">
                            <a href="#" data-toggle="modal" data-target="#StatusDescriptionModal"><i class="fa fa-search"></i></a>
                        </span>
                    </div>
                </div>
                <div class="col-md-4">
                    <label>File Serial Number:</label>
                    @Html.TextBoxFor(model => model.HeaderRecordFileSerialNumber, new { @class = "form-control", placeholder = "Enter Text..." })
                </div>
                <div class="col-md-4">
                    <label>Date of File Exchange:</label>
                    @Html.TextBoxFor(model => model.HeaderRecordDateOfFileExchange, new { @class = "form-control", placeholder = "Enter Text..." })
                </div>
            </div>
        </div>

        <div class="panel-body">
            <table id="ChequesGrid" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Status</th>
                        <th>Serial Number</th>
                        <th>Destination Account Bank</th>
                        <th>Destination Account Branch</th>
                        <th>Destination Account</th>
                        <th>Value</th>
                        <th>Reason for Return</th>
                        <th>Destination Account Check Digit</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="8">Loading data from server</td>
                    </tr>
                </tbody>
            </table>

            <div class="row">
                <div class="col-md-6">
                    <label>Items per page:</label>
                    <select class="form-control" style="width: auto;">
                        <option>15</option>
                    </select>
                </div>
                <div class="col-md-6 text-right">
                    <ul class="pagination">
                        <li><a href="#">1</a></li>
                    </ul>
                </div>
            </div>

            <div class="row">
                <div class="col-md-10">
                    <input type="text" class="form-control" placeholder="Enter Text..">
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary">Refresh</button>
                </div>
            </div>
        </div>
    </div>

    <div class="panel">
        <div class="panel-heading">
            <label><input type="checkbox" id="chequeImagesCheckbox"> Cheque Images</label>
            <label><input type="checkbox" id="accountPreviewCheckbox"> Account Preview</label>
            <label><input type="checkbox" id="payUnpayCheckbox"> Pay/UnPay</label>
        </div>

        <div class="panel-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="image-container">
                        <h4>Front Image 1</h4>
                        <div style="height: 200px; background-color: #f9f9f9;"></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="image-container">
                        <h4>Front Image 2</h4>
                        <div style="height: 200px; background-color: #f9f9f9;"></div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="image-container">
                        <h4>Rear Image</h4>
                        <div style="height: 200px; background-color: #f9f9f9;"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

