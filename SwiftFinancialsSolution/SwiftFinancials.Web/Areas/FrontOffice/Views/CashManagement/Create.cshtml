<script>
        $(document).ready(function () {
            var selectedValue = localStorage.getItem('selectedTransactionType'); // Get selected value from local storage
            var modalShown = false; // Flag to track if modal has been shown for the selected value

            // Function to show the appropriate modal based on the selected value without delay
            function showCorrectModal() {
                // Hide all modals initially
                $('#BankssLookupModal, #EmployeeLookupModal, #TresuriesLookupModal').modal('hide');

                // Show the modal based on the selected value if it hasn't been shown before
                if (!modalShown) {
                    switch (selectedValue) {
                        case '1':
                            $('#TresuriesLookupModal').modal('show'); // Show modal
                            setTimeout(function () {
                                $('#BankssLookupModal, #EmployeeLookupModal, #TresuriesLookupModal').modal('hide');
                            }, 600000); // 10 minutes timeout
                            break;
                        case '2':
                        case '4':
                            $('#BankssLookupModal').modal('show'); // Show modal
                            setTimeout(function () {
                                $('#BankssLookupModal, #EmployeeLookupModal, #TresuriesLookupModal').modal('hide');
                            }, 600000); // 10 minutes timeout
                            break;
                        case '8':
                            $('#EmployeeLookupModal').modal('show'); // Show modal
                            setTimeout(function () {
                                $('#BankssLookupModal, #EmployeeLookupModal, #TresuriesLookupModal').modal('hide');
                            }, 600000); // 10 minutes timeout
                            break;
                        default:
                            // Handle default case if necessary
                            break;
                    }
                    modalShown = true; // Set flag to true indicating modal has been shown
                }
            }

            // Handle dropdown change event
            $('#TransactionType').change(function () {
                selectedValue = $(this).val();
                localStorage.setItem('selectedTransactionType', selectedValue); // Save selected value to local storage
                modalShown = false; // Reset flag when dropdown value changes
                showCorrectModal();
            });

            // Initialize dropdown with persisted value
            if (selectedValue) {
                $('#TransactionType').val(selectedValue).change();
            }
        });




