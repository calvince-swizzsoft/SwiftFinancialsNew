    <script>

        $(document).ready(function () {
            $('#submitButton').click(function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Are you sure?',
                    text: "Do you want to proceed with the transaction?",
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, submit it!',
                    cancelButtonText: 'No, go back'
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Proceed with the AJAX request if the user confirms
                        $.ajax({
                            url: $('#cashManagementForm').attr('action'),
                            type: 'POST',
                            data: $('#cashManagementForm').serialize(),
                            dataType: 'json',
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire({
                                        icon: 'success',
                                        title: 'Success',
                                        text: response.message
                                    });
                                    resetAllFields();
                                    $('#treasuryGlTable').DataTable().ajax.reload();
                                } else {
                                    Swal.fire({
                                        icon: 'error',
                                        title: 'Error',
                                        text: response.message
                                    });
                                    resetAllFields();
                                    $('#treasuryGlTable').DataTable().ajax.reload();
                                }
                            },
                            error: function (xhr, status, error) {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'An unexpected error occurred. Please try again later.'
                                });
                            }
                        });
                    }
                });
            });
        });

        // Helper function to reset all fields in the form
        function resetAllFields() {
            $('#cashManagementForm')[0].reset();
