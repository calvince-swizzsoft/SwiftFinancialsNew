    <script>
        $(document).ready(function () {
            var searchButton = $('#searchButton');
            var selectedValue = $('#TransactionType').val(); // Get the initial value of the dropdown

            function updateSearchButtonTarget() {
                // Reset data-target
                searchButton.attr('data-target', '#');

                // Set data-target based on the selected value
                switch (selectedValue) {
                    case '1':
                        searchButton.attr('data-target', '#TresuriesLookupModal');
                        break;
                    case '2':
                    case '4':
                        searchButton.attr('data-target', '#BankssLookupModal');
                        break;
                    case '8':
                        searchButton.attr('data-target', '#EmployeeLookupModal');
                        break;
                    default:
                        searchButton.attr('data-target', '#TresuriesLookupModal');
                        break;
                }
            }


            updateSearchButtonTarget();

            $('#TransactionType').change(function () {
                selectedValue = $(this).val();
                updateSearchButtonTarget();
            });

            if (selectedValue) {
                $('#TransactionType').val(selectedValue).change();
            }
        });


    </script>

    <script>


        $(document).ready(function () {

            $('#refreshButton1').on('click', function () {
                // Reload the DataTable when the Refresh button is clicked
                $('#treasuryGlTable').DataTable().ajax.reload();
                $('#startDate').val('');
                $('#endDate').val('');
            });

            const defaultStartDate = new Date();
            defaultStartDate.setDate(defaultStartDate.getDate() - 30); // 30 days ago
            const defaultEndDate = new Date();

            $('#treasuryGlTable').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("FetchTreasuryTransactions", "CashManagement", new { Area = "FrontOffice" })",
                "sServerMethod": "POST",
                "fnServerParams": function (aoData) {
                    // Add startDate and endDate to the server parameters
                    aoData.push(
                        {
                            "name": "startDate",
                            "value": $('#startDate').val() || defaultStartDate.toISOString().split('T')[0]
                        },
                        {
                            "name": "endDate",
                            "value": $('#endDate').val() || defaultEndDate.toISOString().split('T')[0]
                        }
                    );
                },

                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var createdDate = new Date(parseInt(aData.JournalCreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);
                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.JournalCreatedDate = dt_Created;
                    $('td:eq(1)', nRow).html(dt_Created);
                    return nRow;
                },
                "aoColumns": [
                    { "mDataProp": "BranchDescription", "sTitle": "Branch", "sWidth": "15%" },
                    { "mDataProp": "JournalCreatedDate", "sTitle": "Txn Date", "sWidth": "15%" },
                    { "mDataProp": "JournalPrimaryDescription", "sTitle": "Primary Description", "sWidth": "25%" },
                    { "mDataProp": "Debit", "sTitle": "Debit", "sWidth": "10%" },
                    { "mDataProp": "Credit", "sTitle": "Credit", "sWidth": "10%" },
                    { "mDataProp": "RunningBalance", "sTitle": "Running Balance", "sWidth": "10%" },
                    { "mDataProp": "ContraGLAccountName", "sTitle": "Contra G/L Account", "sWidth": "15%" }
                ],
                "aaSorting": [[1, "desc"]], // Default sorting, adjust index as needed
                "fnDrawCallback": function (settings) {
                    // Access the JSON response
                    var jsonResponse = settings.json;

                    if (!jsonResponse.success && jsonResponse.message != null) {

                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: jsonResponse.message
                        });

                    };

                    // Update the summary data
                    $('#AvailableBalanceBroughtForward').val(jsonResponse.summary.AvailableBalanceBroughtForward);
                    $('#TotalCredits').val(jsonResponse.summary.TotalCredits);
                    $('#TotalDebits').val(jsonResponse.summary.TotalDebits);
                    $('#AvailableBalanceCarriedForward').val(jsonResponse.summary.AvailableBalanceCarriedForward);
                }
            });

        })

    </script>


