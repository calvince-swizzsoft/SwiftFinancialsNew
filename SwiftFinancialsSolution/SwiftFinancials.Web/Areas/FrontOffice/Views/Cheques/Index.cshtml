@{
    ViewBag.Title = "Cheques";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Cheques</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>

<div class="col-lg-12">
    <div class="nav1">
        <div class="col-lg-12">
            <nav class="nav">
                <a href="@Url.Action("Cheques", "Cheques", new { Area = "FrontOffice" })" class="nav-link">

                    <i class="fa fa-cog"></i> External Cheques
                </a>
                <a href="@Url.Action("Index", "InHouse", new { Area = "FrontOffice" })" class="nav-link">
                    <i class="fa fa-cog"></i> In-House Cheques
                </a>
                <a href="@Url.Action("Journals", "AutomatedClearing", new { Area = "FrontOffice" })" class="nav-link">
                    <i class="fa fa-cog"></i> Automated-Clearing
                </a>



            </nav>

        </div>

    </div>
</div>
<style>

    .nav {
        display: flex;
        flex-wrap: wrap; /* Allows the links to wrap onto multiple lines */
        padding: 0;
        margin: 5px;
        margin-bottom:0;
        border: 2px solid Black;
        border-radius:8px;
        margin-top:20px;
        gap: 10px; /* Space between links */
        text-align: center; /* Centers the text inside links */

        padding:10px;
    }

    .nav-link {
        display: flex;


        text-decoration: none;
        color: #007bff; /* Default text color */
        transition: color 0.3s ease, background-color 0.3s ease; /* Smooth transition */

        border-radius: 4px; /* Rounded corners */
        font-size: 14px; /* Adjust font size for better fit */
        white-space: nowrap; /* Prevents text from wrapping inside the link */

       @* border: 1px solid #007bff;*@ /* Border color and style */
    }

        .nav-link:hover {
            color: #fff; /* Text color on hover */
            background-color: #0056b3; /* Background color on hover */
        }

        .nav-link i {
            margin-right: 8px; /* Space between icon and text */
            font-size: 16px; /* Adjust icon size */
        }

        .nav-link.disabled {
            pointer-events: none;
            opacity: 0.6;
            cursor: not-allowed;
        }

    .col-lg-2 {
        display: flex;
        align-items: center; /* Center the title vertically */
        justify-content: center; /* Center the title horizontally if needed */
        padding: 0; /* Remove default padding if necessary */
        border-radius: 4px; /* Rounded corners */
        @*border: 1px solid black;*@ /* Border color and style */
    }
</style>






<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                   
                    @{ ViewBag.Title = "Cheques"; }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>}
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="ChequesGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">
                                        Loading data from server
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



