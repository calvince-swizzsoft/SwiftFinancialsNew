    <script type="text/javascript">
    $(document).ready(function () {
        var chequeTable = $('#ChequesGrid').DataTable({
            "sPaginationType": "full_numbers",
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "@Url.Action("ChequeClearance", "Cheques", new { Area = "FrontOffice" })",
            "sServerMethod": "POST",
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $('td:eq(0)', nRow).html('<input type="checkbox" class="select-row" value="' + aData.Id + '"/>');
            },
            "aoColumns": [
                { "mDataProp": "Id", "sTitle": "Select", "sWidth": "5%", "bSortable": false },
                { "mDataProp": "CustomerAccountCustomerFullName", "sTitle": "Customer Name", "sWidth": "15%" },
                { "mDataProp": "CustomerAccountCustomerReference1", "sTitle": "Account Number", "sWidth": "15%" },
                { "mDataProp": "CustomerAccountCustomerReference2", "sTitle": "Membership Number", "sWidth": "15%" },
                { "mDataProp": "CustomerAccountCustomerReference3", "sTitle": "Personal File Number", "sWidth": "15%" },
                { "mDataProp": "CustomerAccountFullAccountNumber", "sTitle": "Full Account Number", "sWidth": "15%" },
                { "mDataProp": "Number", "sTitle": "Cheque Number", "sWidth": "15%" },
                { "mDataProp": "Amount", "sTitle": "Amount", "sWidth": "15%" },
                { "mDataProp": "Drawer", "sTitle": "Drawer", "sWidth": "15%" },
                { "mDataProp": "DrawerBank", "sTitle": "Drawer Bank", "sWidth": "15%" }
            ],
            "aaSorting": [[1, "desc"]]
        });

        $('#updateButton').click(function () {
            var selectedCheques = [];
            var action = $('#payUnpayOption').val();
            var clearingOption;

            if (action === 'clear') {
                clearingOption = 1;
            } else if (action === 'unpay') {
                clearingOption = 2;
            }

            $('.select-row:checked').each(function () {
                selectedCheques.push($(this).val());
            });

            if (selectedCheques.length === 0) {
                Swal.fire({
                    icon: 'warning',
                    title: 'No Cheques Selected',
                    text: 'Please select at least one cheque to proceed.',
                    confirmButtonText: 'OK'
                });
                return;
            }

            $.ajax({
                url: '@Url.Action("ClearSelectedCheques", "Cheques", new { Area = "FrontOffice" })',
                type: 'POST',
                data: JSON.stringify({
                    selectedChequeIds: selectedCheques,
                    clearingOption: clearingOption,
                    actionType: action
                }),
                contentType: 'application/json; charset=utf-8',
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: 'Cheques updated successfully.',
                            showConfirmButton: true,
                            timer: 3000
                        }).then(function () {
                            chequeTable.ajax.reload(); 
                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'Failed to update cheques: ' + response.message,
                            confirmButtonText: 'OK'
                        });
                    }
                },
                error: function (xhr, status, error) {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred while updating cheques: ' + error,
                        confirmButtonText: 'OK'
                    });
                }
            });
        });
    });
    </script>

    <script type="text/javascript">
        $(document).ready(function () {
            var allSelected = false;

            $('#toggle-select-all').click(function () {
                allSelected = !allSelected;

                if (allSelected) {
                    $('.select-row').prop('checked', true);
                    $(this).text('Deselect All');
                } else {
                    $('.select-row').prop('checked', false);
                    $(this).text('Select All');
                }
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            $('#refreshButton').on('click', function () {
                location.reload();
            });

        });
    </script>



