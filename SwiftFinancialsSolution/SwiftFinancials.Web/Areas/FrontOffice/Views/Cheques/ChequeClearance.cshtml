﻿@model Application.MainBoundedContext.DTO.FrontOfficeModule.ExternalChequeDTO

@{
    ViewBag.Title = "Cheque Clearance";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Cheque Clearance</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "Cheques", new { Area = "FrontOffice" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Cheque Clearance</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <div class="ibox-tools">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        <a class="close-link"><i class="fa fa-times"></i></a>
                    </div>
                </div>


                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>

                    </div>

                    <div class="col-lg-4">
                        <button id="toggle-select-all" class="btn btn-primary">Select All</button>
                    </div>

                    <div class="table-responsive">

                        <table id="ChequesGrid" class="table table-striped table-bordered table-hover" width="100%">

                            <thead>
                                <tr>
                                    <th>Select</th>
                                    <th>Customer Name</th>
                                    <th>Account Number</th>
                                    <th>Membership Number</th>
                                    <th>Personal File Number</th>
                                    <th>Full Account Number</th>
                                    <th>Cheque Number</th>
                                    <th>Amount</th>
                                    <th>Drawer</th>
                                    <th>Drawer Bank</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="10" class="dataTables_empty">Loading data from server</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="bottom-button row mt-3">
                        <div class="col-lg-4">
                            <select id="payUnpayOption" class="form-control">
                                <option value="clear">Clear (Pay)</option>
                                <option value="unpay">UnPay</option>
                            </select>
                        </div>
                        <div class="col-lg-4">

                        </div>

                            <div class="col-lg-4" style="display: flex; justify-content: flex-end; padding-right:50px; margin-top:20px;">
                                <button id="updateButton" class="btn btn-primary">Update</button>
                                @*<button id="refreshButton" class="btn btn-info">Refresh</button>*@

                            </div>

                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>

