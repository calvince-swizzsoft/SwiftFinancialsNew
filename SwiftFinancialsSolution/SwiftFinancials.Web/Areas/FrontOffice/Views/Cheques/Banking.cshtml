@model Application.MainBoundedContext.DTO.FrontOfficeModule.ExternalChequeDTO

@{
    ViewBag.Title = "Banking";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Cheque Banking</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <!-- New Input Fields Section -->
                <div class="ibox-content bg-white">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-4">
                                @Html.LabelFor(model => model.BankName, new { @class = "control-label" })
                                <div class="input-group" data-autoclose="true">
                                    @Html.TextBoxFor(model => model.BankName, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly", @placeholder = "Link Bank..." })
                                    <span class="input-group-addon">
                                        <a data-toggle="modal" data-target="#bankLinkageLookupModal"><span class="fa fa-search"></span></a>
                                    </span>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                @Html.LabelFor(model => model.BranchDescription, new { @class = "control-label" })
                                <div class="input-group" data-autoclose="true">
                                    @Html.HiddenFor(model => model.BranchDescription)
                                    @Html.TextBoxFor(model => model.BranchDescription, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly", @placeholder = "Bank Branch..." })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                @Html.LabelFor(model => model.ChartOfAccountAccountName, new { @class = "control-label" })
                                <div class="input-group" data-autoclose="true">
                                    @Html.HiddenFor(model => model.ChartOfAccountAccountName)
                                    @Html.TextBoxFor(model => model.ChartOfAccountAccountName, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly", @placeholder = "G/L Account..." })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- End of New Input Fields Section -->
                <!-- Bank Lookup Modal -->
                <div class="modal fade" id="bankLinkageLookupModal" role="dialog" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header bg-primary">
                                <h3 class="font-bold">Bank Linkages Lookup<button type="button" class="close" data-dismiss="modal"><span class="sr-only">Close</span></button></h3>
                            </div>
                            <table id="bankLinkageGrid" class="table table-striped table-bordered table-hover" style="width:100%;">
                                <tbody>
                                    <tr>
                                        <td class="dataTables_empty">Loading data from server</td>
                                    </tr>
                                </tbody>
                            </table>

                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Table Section -->
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="ChequesGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <thead>
                                <tr>
                                    <th>Select</th>
                                    <th>Teller Name</th>
                                    <th>Customer Name</th>
                                    <th>Cheque Number</th>
                                    <th>Amount</th>
                                    <th>Drawer</th>
                                    <th>Drawer Bank</th>
                                    <th>Drawer Bank Branch</th>
                                    <th>Cheque Type</th>
                                    <th>Maturity Date</th>
                                    <th>Full Account Number</th>
                                    <th>Write Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td colspan="13" class="dataTables_empty">Loading data from server</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <button id="bankSelectedButton" class="btn btn-success">Bank</button>

                </div>
            </div>
        </div>
    </div>
</div>

