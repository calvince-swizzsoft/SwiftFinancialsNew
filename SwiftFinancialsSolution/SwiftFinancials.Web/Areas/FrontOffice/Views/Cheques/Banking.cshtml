            // Close the modal
            $('#bankLinkageLookupModal').modal('hide');
        });
    </script>




   


    <script>
        $(document).ready(function () {
    // Initialize the DataTable
    var chequeTable = $('#ChequesGrid').DataTable({
        "sPaginationType": "full_numbers",
        "bProcessing": true,
        "bServerSide": true,
        "sAjaxSource": "@Url.Action("Banking", "Cheques", new { Area = "FrontOffice" })",
        "sServerMethod": "POST",
        "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
            // Add a checkbox in the first column
            $('td:eq(0)', nRow).html('<input type="checkbox" class="select-row" value="' + aData.Id + '"/>');

            // Format Maturity Date
            if (aData.MaturityDate) {
                var maturityDate = new Date(parseInt(aData.MaturityDate.replace("/Date(", "").replace(")/", ""), 10));
                $('td:eq(9)', nRow).html($.datepicker.formatDate('dd/mm/yy', maturityDate));
            }

            // Format Write Date
            if (aData.WriteDate) {
                var writeDate = new Date(parseInt(aData.WriteDate.replace("/Date(", "").replace(")/", ""), 10));
                $('td:eq(11)', nRow).html($.datepicker.formatDate('dd/mm/yy', writeDate));
            }
        },
        "aoColumns": [
            { "mDataProp": "Id", "sTitle": "Select", "sWidth": "5%", "bSortable": false },
            { "mDataProp": "TellerDescription", "sTitle": "Teller Name", "sWidth": "20%" },
            { "mDataProp": "CustomerAccountCustomerFullName", "sTitle": "Customer Name", "sWidth": "20%" },
            { "mDataProp": "PaddedNumber", "sTitle": "Cheque Number", "sWidth": "15%" },
            { "mDataProp": "Amount", "sTitle": "Amount", "sWidth": "10%" },
            { "mDataProp": "Drawer", "sTitle": "Drawer", "sWidth": "10%" },
            { "mDataProp": "DrawerBank", "sTitle": "Drawer Bank", "sWidth": "15%" },
            { "mDataProp": "DrawerBankBranch", "sTitle": "Drawer Bank Branch", "sWidth": "20%" },
            { "mDataProp": "ChequeTypeDescription", "sTitle": "Cheque Type", "sWidth": "20%" },
            { "mDataProp": "MaturityDate", "sTitle": "Maturity Date", "sWidth": "20%" },
            { "mDataProp": "CustomerAccountFullAccountNumber", "sTitle": "Full Account Number", "sWidth": "20%" },
            { "mDataProp": "WriteDate", "sTitle": "Write Date", "sWidth": "5%" }
        ],
        "aaSorting": [[1, "desc"]]
    });

    // Handle "Bank" button click
    $('#bankSelectedButton').click(function () {
        var selectedCheques = [];

        // Collect all selected cheque IDs
        $('.select-row:checked').each(function () {
            selectedCheques.push($(this).val());
        });

        if (selectedCheques.length === 0) {
            alert("Please select at least one cheque to bank.");
            return;
        }

        // Send selected cheques to the server
        $.ajax({
            url: '@Url.Action("BankSelectedCheques", "Cheques", new { Area = "FrontOffice" })',
            type: 'POST',
            data: JSON.stringify({
                selectedChequeIds: selectedCheques,
                bankLinkageDTO: {
                    BankName: $('#BankName').val(),
                    BranchDescription: $('#BranchDescription').val(),
                    ChartOfAccountAccountName: $('#ChartOfAccountAccountName').val()
                },
                moduleNavigationItemCode: 1 // Example code, replace with actual value
            }),
            contentType: 'application/json; charset=utf-8',
            success: function (response) {
                if (response.success) {
                    alert(response.message);
                    chequeTable.ajax.reload(); // Reload the table data
                } else {
                    alert("Failed to bank cheques: " + response.message);
                }
            },
            error: function (xhr, status, error) {
                alert("An error occurred while banking the cheques: " + error);
            }
        });
    });
});

    </script>

}



