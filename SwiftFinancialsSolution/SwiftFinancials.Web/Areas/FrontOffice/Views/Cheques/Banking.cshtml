    <script>

        $('#bankLinkageGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "BankLinkage", new { Area = "Accounts"}))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                   var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var selectUrl = '<a  href="/FrontOffice/Cheques/Banking/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Select</a>';


                    $('td:eq(5)', nRow).html(dt_Created);

                    $('td:eq(6)', nRow).html(selectUrl);

                    return nRow;
                },
            // lookup Display settings
            "aoColumns": [

                { "mDataProp": "BankBranchName", "sTitle": "Bank Branch Name", "sWidth": "15%" },
                { "mDataProp": "BranchDescription", "sTitle": "Branch Name", "sWidth": "10%" },
                { "mDataProp": "ChartOfAccountAccountName", "sTitle": "G/L Account Name", "sWidth": "10%" },
                { "mDataProp": "BankName", "sTitle": "Bank Name", "sWidth": "10%" },
                { "mDataProp": "ChartOfAccountCostCenterDescription", "sTitle": "G/L Account Cost Center", "sWidth": "10%" },
                { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "1%" },
                { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "10%", "bSortable": false }],
            "aaSorting": [[0, "desc"]]
        });

        $('#bankLinkageGrid').on('click', '.select-bank', function (e) {
            e.preventDefault();

            var bankId = $(this).data('bank-id');
            var bankName = $(this).data('bank-name');
            var branch = $(this).data('branch');
            var glAccount = $(this).data('gl-account');
            var chartOfAccountId = $(this).data('ChartOfAccountId');
            var chartOfAccountCostCenterId = $(this).data('ChartOfAccountCostCenterId');
            var chartOfAccountCostCenterDescription = $(this).data('ChartOfAccountCostCenterDescription');
            var chartOfAccountAccountCode = $(this).data('ChartOfAccountAccountCode');
            var chartOfAccountAccountType = $(this).data('ChartOfAccountAccountType');

            $('#BankName').val(bankName);
            $('#BranchDescription').val(branch);
            $('#BankLinkageChartOfAccountAccountName').val(glAccount);
            $('#BankLinkageChartOfAccountId').val(chartOfAccountId);
            $('#BankLinkageChartOfAccountCostCenterId').val(chartOfAccountCostCenterId);
            $('#BankLinkageChartOfAccountCostCenterDescription').val(chartOfAccountCostCenterDescription);
            $('#BankLinkageChartOfAccountAccountCode').val(chartOfAccountAccountCode);
            $('#BankLinkageChartOfAccountAccountType').val(chartOfAccountAccountType)





            $('#bankLinkageLookupModal').modal('hide');
        });
    </script>



    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    $(document).ready(function () {
        var chequeTable = $('#ChequesGrid').DataTable({
            "sPaginationType": "full_numbers",
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "@Url.Action("BankCheques", "Cheques", new { Area = "FrontOffice" })",
            "sServerMethod": "POST",
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                $('td:eq(0)', nRow).html('<input type="checkbox" class="select-row" value="' + aData.Id + '"/>');

                if (aData.MaturityDate) {
                    var maturityDate = new Date(parseInt(aData.MaturityDate.replace("/Date(", "").replace(")/", ""), 10));
                    $('td:eq(9)', nRow).html($.datepicker.formatDate('dd/mm/yy', maturityDate));
                }

                if (aData.WriteDate) {
                    var writeDate = new Date(parseInt(aData.WriteDate.replace("/Date(", "").replace(")/", ""), 10));
                    $('td:eq(11)', nRow).html($.datepicker.formatDate('dd/mm/yy', writeDate));
                }
            },
            "aoColumns": [
                { "mDataProp": "Id", "bSortable": false },
                { "mDataProp": "TellerDescription" },
                { "mDataProp": "CustomerAccountCustomerFullName" },
                { "mDataProp": "PaddedNumber" },
                { "mDataProp": "Amount" },
                { "mDataProp": "Drawer" },
                { "mDataProp": "DrawerBank" },
                { "mDataProp": "DrawerBankBranch" },
                { "mDataProp": "ChequeTypeDescription" },
                { "mDataProp": "MaturityDate" },
                { "mDataProp": "CustomerAccountFullAccountNumber" },
                { "mDataProp": "WriteDate" }
            ]
        });

        // Toggle select all rows
        $('#toggle-select-all').on('click', function () {
            var rows = chequeTable.rows({ 'search': 'applied' }).nodes();
            $('input[type="checkbox"]', rows).prop('checked', true);
        });

        // Bank selected cheques
        $('#bankSelectedButton').on('click', function () {
            var selectedCheques = [];
            $('#ChequesGrid input.select-row:checked').each(function () {
                selectedCheques.push($(this).val());
            });

            if (selectedCheques.length === 0) {
                Swal.fire({
                    icon: 'warning',
                    title: 'No Cheques Selected',
                    text: 'Please select at least one cheque to proceed.',
                    showConfirmButton: true
                });
                return;
            }

            $.ajax({
                type: "POST",
                url: "@Url.Action("BankSelectedCheques", "Cheques", new { Area = "FrontOffice" })",
                data: JSON.stringify({ selectedChequeIds: selectedCheques }),
                contentType: "application/json",
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success',
                            text: 'Cheques banked successfully!',
                            showConfirmButton: true,
                            timer: 3000
                        }).then(function () {
                            chequeTable.ajax.reload(); 

                        });
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: response.message,
                            showConfirmButton: true,
                            timer: 5000
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'An error occurred while processing your request.',
                        showConfirmButton: true
                    });
                }
            });
        });
    });
    </script>






    <script type="text/javascript">
        $(document).ready(function () {
            var allSelected = false;

            $('#toggle-select-all').click(function () {
                allSelected = !allSelected;

                if (allSelected) {
                    $('.select-row').prop('checked', true);
                    $(this).text('Deselect All');
                } else {
                    $('.select-row').prop('checked', false);
                    $(this).text('Select All');
                }
            });
        });
    </script>
