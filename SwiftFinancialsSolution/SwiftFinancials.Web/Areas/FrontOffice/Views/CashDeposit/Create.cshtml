                                    var tableBody = '';
                                    $.each(commissions, function (index, commission) {
                                        tableBody += '<tr>' +
                                            '<td>' + commission.Description + '</td>' +
                                            '<td>' + commission.MaximumCharge + '</td>' +
                                            '<td>' + commission.ExtendedChargeBenefactorDescription + '</td>' +
                                            '</tr>';
                                    });

                                    // Insert the rows into the tbody of the table
                                    $('#chargesLevies tbody').html(tableBody);
