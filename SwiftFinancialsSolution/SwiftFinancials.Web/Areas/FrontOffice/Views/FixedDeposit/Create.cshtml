    <script>
        document.getElementById('addEntryButton').addEventListener('click', function () {
            var template = document.getElementById('fixedDepositTemplate').innerHTML;
            var container = document.getElementById('fixedDepositEntries');

            container.insertAdjacentHTML('beforeend', template);

            // Show remove buttons and hide "No Entries" message
            document.getElementById('noEntriesMessage').style.display = 'none';

            // Add event listener to remove button
            container.querySelectorAll('.remove-entry-button').forEach(function (button) {
                button.addEventListener('click', function () {
                    this.closest('.fixed-deposit-entry').remove();

                    // Show "No Entries" message if all entries are removed
                    if (container.children.length === 0) {
                        document.getElementById('noEntriesMessage').style.display = 'block';
                    }
                });
            });
        });
    </script>



