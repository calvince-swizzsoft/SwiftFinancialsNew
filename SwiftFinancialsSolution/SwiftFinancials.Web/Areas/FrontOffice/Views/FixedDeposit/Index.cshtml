    <script type="text/javascript">
        $(document).ready(function () {
            $('#FixedDepositsGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "FixedDeposit", new { Area = "FrontOffice"}))",
                "sServerMethod": "POST",
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);
                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;



                    var dropdownHtml = `
                        <div class="dropdown">
                            <button style="width: 150px;" class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">`;


                    var verifyButton = `<a class="dropdown-item" href="/FrontOffice/FixedDeposit/verify/${aData.Id}">Verify</a>`;
                    var terminateButton = `<a class="dropdown-item" href="/FrontOffice/FixedDeposit/terminate/${aData.Id}">Terminate</a>`;
                    var liquidationButton = `<a class="dropdown-item" href="/FrontOffice/FixedDeposit/liquidation/${aData.Id}">Liquidation</a>`;


                    $('td:eq(8)', nRow).html(dt_Created);


                    switch (aData.Status) {
                        case 8:
                            dropdownHtml += verifyButton + terminateButton + liquidationButton;
                            break;

                        case 1:
                            dropdownHtml += terminateButton + liquidationButton;
                            break;
                        case 2:
                            dropdownHtml += liquidationButton;
                            break;
                        case 4:
                            dropdownHtml += terminateButton;
                            break;

                        default:
                            dropdownHtml += verifyButton + terminateButton + liquidationButton;
                            break;
                    }

                    dropdownHtml += `</div></div>`;

                    $('td:eq(9)', nRow).html(dropdownHtml);


                    return nRow;
                },

                // Display settings
                "aoColumns": [
                    { "mDataProp": "BranchDescription", "sTitle": "Branch", "sWidth": "10%" },
                    { "mDataProp": "StatusDescription", "sTitle": "Status", "sWidth": "10%" },
                    { "mDataProp": "Value", "sTitle": "Value", "sWidth": "15%" },
                    { "mDataProp": "CustomerAccountCustomerReference1", "sTitle": "Account Number", "sWidth": "15%" },
                    { "mDataProp": "CustomerAccountCustomerReference2", "sTitle": "Membership Number", "sWidth": "15%" },
                    { "mDataProp": "CustomerAccountCustomerReference3", "sTitle": "Personal File", "sWidth": "15%" },
                    { "mDataProp": "CustomerAccountCustomerFullName", "sTitle": "Customer Name", "sWidth": "15%" },
                    { "mDataProp": "ProductDescription", "sTitle": "Product Name", "sWidth": "15%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "3%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Action", "sWidth": "5%", "bSortable": false }
                ],
                "aaSorting": [[0, "desc"]]
            });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });

        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>

    <script>
    $(document).ready(function () {
        $('#startDate').datepicker();
        $('#endDate').datepicker();

        function loadCheques() {
            var startDate = $('#startDate').datepicker('getDate');
            var endDate = $('#endDate').datepicker('getDate');
            var text = $('#searchInput').val();
            if (!startDate || !endDate) {
                alert("Please select both a start date and an end date.");
                return;
            }

            var formattedStartDate = startDate.toISOString().split('T')[0];
            var formattedEndDate = endDate.toISOString().split('T')[0];

            var url = '@(Url.Action("FindExternalChequesByDate", "FixedDeposit", new { Area = "FrontOffice" }))';
            url += '?startDate=' + formattedStartDate + '&endDate=' + formattedEndDate + '&text=' + text;

            $('#FixedDepositsGrid').DataTable().ajax.url(url).load();
        }

        $('#searchButton').click(function () {
            loadCheques();
        });

        $('#refreshButton').on('click', function () {
            loadCheques();
        });
    });
    </script>
