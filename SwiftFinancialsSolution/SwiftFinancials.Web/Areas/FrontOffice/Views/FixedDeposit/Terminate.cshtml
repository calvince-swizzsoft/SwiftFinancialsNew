@model Application.MainBoundedContext.DTO.FrontOfficeModule.FixedDepositDTO

@using (Html.BeginForm("Terminate", "FixedDeposit", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <input type="hidden" name="moduleNavigationItemCode" value="@ViewBag.ModuleNavigationItemCode" />

    <div class="form-group">
        <label>Search Fixed Deposits</label>
        <div class="row">
            <div class="col-md-3">
                <input type="date" id="startDate" class="form-control" placeholder="Start Date" />
            </div>
            <div class="col-md-3">
                <input type="date" id="endDate" class="form-control" placeholder="End Date" />
            </div>
            <div class="col-md-4">
                <input type="text" id="searchText" class="form-control" placeholder="Search by Account or Product Name" />
            </div>
            <div class="col-md-2">
                <button type="button" id="refreshButton" class="btn btn-primary">Search</button>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Select Fixed Deposit(s) to Liquidate</label>
        <table class="table" style="border-collapse: collapse; width: 100%;">
            <thead>
                <tr>
                    <th style="border: 1px solid #ddd; padding: 8px;">Select</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Status</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Type</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Category</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Branch</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Full Account Number</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Product Name</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Customer Name</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Value</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Term (months)</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Annual Percentage Rate</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Maturity Action</th>
                </tr>
            </thead>
            <tbody id="fixedDepositTableBody">
                @if (Model != null)
                {
                    <tr>
                        <td style="border: 1px solid #ddd; padding: 8px;">
                            <input type="checkbox" name="selectedFixedDepositIds" value="@Model.Id" />
                        </td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.StatusDescription</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.FixedDepositTypeDescription</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.CategoryDescription</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.BranchDescription</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.CustomerAccountFullAccountNumber</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.ProductDescription</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.CustomerAccountCustomerFullName</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.Value</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.Term</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.Rate</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.MaturityAction</td>
                    </tr>
                }
                else
                {
                    <tr><td colspan="12" style="border: 1px solid #ddd; padding: 8px;">No records found.</td></tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-right">
        <button type="submit" class="btn btn-danger">Terminate Selected</button>
    </div>
}

<script src="~/Scripts/jquery.min.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const refreshButton = document.getElementById('refreshButton');
        const tableBody = document.getElementById('fixedDepositTableBody');
        const startDate = document.getElementById('startDate');
        const endDate = document.getElementById('endDate');
        const searchText = document.getElementById('searchText');

        refreshButton.addEventListener('click', function () {
            const queryParams = new URLSearchParams({
                startDate: startDate.value,
                endDate: endDate.value,
                searchText: searchText.value
            }).toString();

            fetch(`/FrontOffice/FixedDeposit/Terminate?${queryParams}`, {
                method: 'GET',
                headers: { 'Accept': 'application/json' }
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    // Clear existing rows
                    tableBody.innerHTML = '';

                    // Populate table with new data
                    if (data && Array.isArray(data)) {
                        data.forEach(deposit => {
                            const row = document.createElement('tr');
                            row.innerHTML = `
                        <td><input type="checkbox" name="selectedFixedDepositIds" value="${deposit.id}" /></td>
                        <td>${deposit.statusDescription}</td>
                        <td>${deposit.fixedDepositTypeDescription}</td>
                        <td>${deposit.categoryDescription}</td>
                        <td>${deposit.branchDescription}</td>
                        <td>${deposit.customerAccountFullAccountNumber}</td>
                        <td>${deposit.productDescription}</td>
                        <td>${deposit.customerAccountCustomerFullName}</td>
                        <td>${deposit.value}</td>
                        <td>${deposit.term}</td>
                        <td>${deposit.rate}</td>
                        <td>${deposit.maturityAction}</td>
                    `;
                            tableBody.appendChild(row);
                        });
                    } else {
                        tableBody.innerHTML = '<tr><td colspan="12">No records found.</td></tr>';
                    }
                })
                .catch(error => {
                    console.error('Error fetching data:', error);
                    alert('An error occurred while retrieving the data. Please try again.');
                });
        });
    });
</script>
