@using (Html.BeginForm("Terminate", "FixedDeposit", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <input type="hidden" name="moduleNavigationItemCode" value="@ViewBag.ModuleNavigationItemCode" />

   

    <div class="form-group">
        <label>Select Fixed Deposit(s) to Terminate</label>
        <table class="table" style="border-collapse: collapse; width: 100%;">
            <thead>
                <tr>
                    <th style="border: 1px solid #ddd; padding: 8px;">Select</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Status</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Type</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Category</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Branch</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Full Account Number</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Remarks</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Customer Name</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Value</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Term (months)</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Annual Percentage Rate</th>
                    <th style="border: 1px solid #ddd; padding: 8px;">Maturity Action</th>
                </tr>
            </thead>
            <tbody id="fixedDepositTableBody">
                @if (Model != null)
                {
                    <tr>
                        <td style="border: 1px solid #ddd; padding: 8px;">
                            <input type="checkbox" name="selectedFixedDepositIds" value="@Model.Id" />
                        </td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.StatusDescription</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.FixedDepositTypeDescription</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.CategoryDescription</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.BranchDescription</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.CustomerAccountFullAccountNumber</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.Remarks</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.CustomerAccountCustomerFullName</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.Value</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.Term</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.Rate</td>
                        <td style="border: 1px solid #ddd; padding: 8px;">@Model.MaturityAction</td>
                    </tr>
                }
                else
                {
                    <tr><td colspan="12" style="border: 1px solid #ddd; padding: 8px;">No records found.</td></tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-right">
        <button type="submit" class="btn btn-danger">Terminate Selected</button>
    </div>
}


