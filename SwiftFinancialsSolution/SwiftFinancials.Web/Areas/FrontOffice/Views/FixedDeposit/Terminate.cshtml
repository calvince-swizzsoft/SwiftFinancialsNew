    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const refreshButton = document.getElementById('refreshButton');
            const tableBody = document.getElementById('fixedDepositTableBody');
            const startDate = document.getElementById('startDate');
            const endDate = document.getElementById('endDate');
            const searchText = document.getElementById('searchText');

            refreshButton.addEventListener('click', function () {
                const queryParams = new URLSearchParams({
                    startDate: startDate.value,
                    endDate: endDate.value,
                    searchText: searchText.value
                }).toString();

                fetch(`/FrontOffice/FixedDeposit/Terminate?${queryParams}`, {
                    method: 'GET',
                    headers: { 'Accept': 'application/json' }
                })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        // Clear existing rows
                        tableBody.innerHTML = '';

                        // Populate table with new data
                        if (data && Array.isArray(data)) {
                            data.forEach(deposit => {
                                const row = document.createElement('tr');
                                row.innerHTML = `
                            <td><input type="checkbox" name="selectedFixedDepositIds" value="${deposit.id}" /></td>
                            <td>${deposit.statusDescription}</td>
                            <td>${deposit.fixedDepositTypeDescription}</td>
                            <td>${deposit.categoryDescription}</td>
                            <td>${deposit.branchDescription}</td>
                            <td>${deposit.customerAccountFullAccountNumber}</td>
                            <td>${deposit.remarks}</td>
                            <td>${deposit.customerAccountCustomerFullName}</td>
                            <td>${deposit.value}</td>
                            <td>${deposit.term}</td>
                            <td>${deposit.rate}</td>
                            <td>${deposit.maturityAction}</td>
                        `;
                                tableBody.appendChild(row);
                            });
                        } else {
                            tableBody.innerHTML = '<tr><td colspan="12">No records found.</td></tr>';
                        }
                    })
                    .catch(error => {
                        console.error('Error fetching data:', error);
                        alert('An error occurred while retrieving the data. Please try again.');
                    });
            });
        });
    </script>

    <script>
    $(document).ready(function () {
        $('#startDate').datepicker();
        $('#endDate').datepicker();

        function loadCheques() {
            var startDate = $('#startDate').datepicker('getDate');
            var endDate = $('#endDate').datepicker('getDate');
            var text = $('#searchInput').val();
            if (!startDate || !endDate) {
                alert("Please select both a start date and an end date.");
                return;
            }

            var formattedStartDate = startDate.toISOString().split('T')[0];
            var formattedEndDate = endDate.toISOString().split('T')[0];

            var url = '@(Url.Action("FindExternalChequesByDate", "FixedDeposit", new { Area = "FrontOffice" }))';
            url += '?startDate=' + formattedStartDate + '&endDate=' + formattedEndDate + '&text=' + text;

            $('#FixedDepositsGrid').DataTable().ajax.url(url).load();
        }

        $('#searchButton').click(function () {
            loadCheques();
        });

        $('#refreshButton').on('click', function () {
            loadCheques();
        });
    });
    </script>
