            });

            $('#addEntryButton').on('click', function () {
                var entryData = {
                    value: parseFloat($('#newEntryValue').val()) || 0,

                };

                addEntry(entryData);
            });


            $('#ExpensePayableEntries').on('DOMNodeInserted', 'tr', function () {
                updateAmounts();
            });

