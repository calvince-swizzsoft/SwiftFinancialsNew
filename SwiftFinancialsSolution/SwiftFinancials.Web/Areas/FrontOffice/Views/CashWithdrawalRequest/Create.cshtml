<script>
        $(document).ready(function () {
            $('#mainTabs a').on('click', function (e) {
                e.preventDefault()
                $(this).tab('show')
            })

            $('#cashDepositSubTabs a').on('click', function (e) {
                e.preventDefault()
                $(this).tab('show')
            })

            $('#cashWithdrawalSubTabs a').on('click', function (e) {
                e.preventDefault()
                $(this).tab('show')
            })
        })


        $('#cashDepositRequestsTable').DataTable({
    "sPaginationType": "full_numbers",
    "bProcessing": true,
    "bServerSide": true,
    "sAjaxSource": "@(Url.Action("CashDepositRequestsIndex", "CashWithdrawalRequest", new { Area = "FrontOffice"}))",
    "sServerMethod": "POST",
    "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
        var dropDownHtml = `
            <button type="button" class="btn btn-outline-info select-action-button" style="width: 150px;">
                Select
            </button>
        `;

        // Set the HTML for the action column
        $('td:eq(6)', nRow).html(dropDownHtml);
        return nRow;
    },
    "aoColumns": [
        { "mDataProp": "CustomerAccountCustomerFullName", "sTitle": "Customer Name", "sWidth": "15%" },
        { "mDataProp": "StatusDescription", "sTitle": "Authorization Status", "sWidth": "15%" },
        { "mDataProp": "Amount", "sTitle": "Amounts", "sWidth": "10%" },
        { "mDataProp": "CustomerAccountFullAccountNumber", "sTitle": "Account Number", "sWidth": "15%" },
        { "mDataProp": "CustomerAccountCustomerReference1", "sTitle": "Customer Reference 1", "sWidth": "10%" },
        { "mDataProp": "CustomerAccountCustomerReference2", "sTitle": "Customer Reference 2", "sWidth": "10%" },
        { "mDataProp": "PostedDate", "sTitle": "Action", "sWidth": "15%", "bSortable": false }
    ],
    "aaSorting": [[1, "desc"]]
});

// Use event delegation to handle clicks on dynamically generated buttons
$(document).on('click', '.select-action-button', function (e) {
    e.preventDefault();

    const rowData = $('#cashDepositRequestsTable').DataTable().row($(this).closest('tr')).data(); // Get the data for the clicked row
    const requestId = rowData.Id; // Get the ID of the selected item
    var requestType = 0;

    // Show the modal
    $('#authorizationModal').modal('show');

    // Set up the modal buttons for approval and rejection
    $('#authorizeBtn').off('click').on('click', function () {
        handleRequest(requestId, requestType, true); // Handle approve
    });

    $('#rejectBtn').off('click').on('click', function () {
        handleRequest(requestId, requestType, false); // Handle reject
    });
});

