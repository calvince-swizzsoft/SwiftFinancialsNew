@{
    ViewBag.Title = "Account Closure Request";
}

<style>

    .nav {
        display: flex;
        flex-wrap: wrap; /* Allows the links to wrap onto multiple lines */
        padding: 0;
        margin: 5px;
        margin-bottom:0;
        border: 2px solid Black;
        border-radius:8px;
        margin-top:20px;
        gap: 10px; /* Space between links */
        text-align: center; /* Centers the text inside links */

        padding:10px;
    }

    .nav-link {
        display: flex;


        text-decoration: none;
        color: #007bff; /* Default text color */
        transition: color 0.3s ease, background-color 0.3s ease; /* Smooth transition */

        border-radius: 4px; /* Rounded corners */
        font-size: 14px; /* Adjust font size for better fit */
        white-space: nowrap; /* Prevents text from wrapping inside the link */

       @* border: 1px solid #007bff;*@ /* Border color and style */
    }

        .nav-link:hover {
            color: #fff; /* Text color on hover */
            background-color: #0056b3; /* Background color on hover */
        }

        .nav-link i {
            margin-right: 8px; /* Space between icon and text */
            font-size: 16px; /* Adjust icon size */
        }

        .nav-link.disabled {
            pointer-events: none;
            opacity: 0.6;
            cursor: not-allowed;
        }

    .col-lg-2 {
        display: flex;
        align-items: center; /* Center the title vertically */
        justify-content: center; /* Center the title horizontally if needed */
        padding: 0; /* Remove default padding if necessary */
        border-radius: 4px; /* Rounded corners */
        @*border: 1px solid black;*@ /* Border color and style */
    }
</style>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>FrontOffice</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>



<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">

                <div class="ibox-title">
                    @Html.ActionLink("Create Account Closure Request", "Create", "AccountClosure", new { Area = "FrontOffice" }, new { @class = "btn btn-primary" })

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["SuccessMessage"]

                            <button type="button" class="close" data-dismiss="alert">
                                <span>
                                    &times;
                                </span>
                            </button>
                        </div>
                    }
                    @if (TempData["verifySuccess"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["Success"]

                            <button type="button" class="close" data-dismiss="alert">
                                <span>
                                    &times;
                                </span>
                            </button>
                        </div>
                    }

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="AccountClosuresGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="8" class="dataTables_empty">
                                        Loading data from server
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#AccountClosuresGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "AccountClosure", new { Area = "FrontOffice" }))",
                "sServerMethod": "POST",
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);
                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var dropdownHtml = `
                        <div class="dropdown">
                            <button style="width: 150px;" class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">`;

                    var viewButton = `<a class="dropdown-item" href="/FrontOffice/AccountClosure/details/${aData.Id}">View</a>`;
                    var approveButton = `<a class="dropdown-item" href="/FrontOffice/AccountClosure/Approve/${aData.Id}">Approve</a>`;
                    var verifyButton = `<a class="dropdown-item" href="/FrontOffice/AccountClosure/verify/${aData.Id}">Verify</a>`;

                    switch (aData.Status) {
                        case 1: // Pending
                            dropdownHtml += viewButton + approveButton + verifyButton;
                            break;
                        case 2: // Audited
                            dropdownHtml += viewButton + verifyButton;
                            break;
                        case 4: // Posted
                            dropdownHtml += viewButton;
                            break;
                        default:
                            dropdownHtml += viewButton;
                            break;
                    }

                    dropdownHtml += `</div></div>`;

                    $('td:eq(6)', nRow).html(dt_Created);
                    $('td:eq(7)', nRow).html(dropdownHtml);

                    return nRow;
                },
                "aoColumns": [
                    { "mDataProp": "BranchDescription", "sTitle": "Branch", "sWidth": "10%" },
                    { "mDataProp": "CustomerAccountCustomerReference1", "sTitle": "Account Number", "sWidth": "15%" },
                    { "mDataProp": "CustomerAccountCustomerReference3", "sTitle": "Personal File", "sWidth": "15%" },
                    { "mDataProp": "CustomerAccountCustomerFullName", "sTitle": "Customer Name", "sWidth": "15%" },
                    { "mDataProp": "StatusDescription", "sTitle": "Status", "sWidth": "15%" },
                    { "mDataProp": "Reason", "sTitle": "Reason", "sWidth": "15%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "12%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Actions", "sWidth": "10%", "bSortable": false }
                ],
                "aaSorting": [[0, "desc"]]
            });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });

        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>
}
