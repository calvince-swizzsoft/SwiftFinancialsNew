    <script type="text/javascript">
        $(document).ready(function () {
            // Show/hide fields based on the selected source of funds
            $('#FundingDescription').change(function () {
                var selectedSource = $(this).val();

                if (selectedSource === "GL") {
                    $('#glAccountDetails').show();
                    $('#customerAccountDetails').hide();
                } else if (selectedSource === "Customer") {
                    $('#glAccountDetails').hide();
                    $('#customerAccountDetails').show();
                } else {
                    // Hide both if no valid option is selected
                    $('#glAccountDetails').hide();
                    $('#customerAccountDetails').hide();
                }
            });


            // Add transaction to table
            $('#addTransaction').click(function () {
                var branchName = $('#customerAccountLookup').val();
                var chequeType = "Cheque";
                var FundingDescription = $('input[name="SourceOfFunds"]:checked').val();
                var debitGlAccountName = $('#glAccountLookup').val();
                var debitCustomerAccountNumber = $('#customerAccountLookup').val();
                var payee = $('#Payee').val();
                var amount = $('#Amount').val();
                var amountInWords = $('#WordifiedAmount').val();
                var paddedAmount = $('#Amount').val();
                var reference = $('#Reference').val();

                var newRow = `
                                                                    <tr>
                                                                            <td>${branchName}</td>
                                                                            <td>${chequeType}</td>
                                                                            <td>${funding}</td>
                                                                            <td>${debitGlAccountName}</td>
                                                                            <td>${debitCustomerAccountNumber}</td>
                                                                            <td>${payee}</td>
                                                                            <td>${amount}</td>
                                                                            <td>${amountInWords}</td>
                                                                            <td>${paddedAmount}</td>
                                                                            <td>${reference}</td>
                                                                    </tr>`;




                $('#transactionsTable tbody').append(newRow);
                clearFormFields();
            });

            // Enable remove button when a transaction is selected
            $(document).on('change', '.select-transaction', function () {
                $('#removeTransaction').prop('disabled', false);
            });

            // Remove selected transaction
            $('#removeTransaction').click(function () {
                $('input[name="selectedTransaction"]:checked').closest('tr').remove();
                $('#removeTransaction').prop('disabled', true);
            });

            // Clear form fields after adding transaction
            function clearFormFields() {
                $('#branchName').val('');
                $('#chequeType').val('');
                $('#funding').val('');
                $('#debitGlAccountName').val('');
                $('#debitGlAccountName').val('');
                $('#debitCustomerAccountNumber').val('');
                $('#paddedAmount').val('');
                $('#Amount').val('');
                $('#Payee').val('');
                $('#Reference').val('');
                $('#Chargeable').prop('checked', false);
            }
        });
    </script>

    <script>
        $(document).ready(function () {
    $('#glAccountDetailsTable').DataTable({
        "processing": true,
        "serverSide": true,
        "ajax": {
            "url": "@Url.Action("GetGLAccounts", "InHouse", new { Area = "FrontOffice" })",
            "type": "GET",
            "dataSrc": function (json) {
                if (json.error) {
                    alert(json.error); // Display the server error message if any
                    return [];
                }
                return json.data; // Return the actual data array
            }
        },
        "columns": [
            { "data": "ParentAccountName", "title": "Parent Account Name", "width": "70%" },
            { "data": "CostCenterDescription", "title": "Cost Center", "width": "30%" }
        ],
        "order": [[0, "asc"]]
    });

    // Handle row click to populate fields
    $('#glAccountDetailsTable tbody').on('click', 'tr', function () {
        var table = $('#glAccountDetailsTable').DataTable();
        var data = table.row(this).data();

        // Populate the form fields with the selected data
        $('#DebitChartOfAccountAccountName').val(data.ParentAccountName);
        $('#costCenter').text(data.CostCenterDescription);

        // Close the modal
        $('#glAccountLookup').modal('hide');
    });
});

    </script>

    <script>
         $(document).ready(function () {
        // Initialize DataTable for customer account lookup
        $('#customerAccountDetailsTable').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": "@Url.Action("GetCustomerAccounts", "InHouse", new { Area = "FrontOffice" })",
                "type": "GET",
                "data": function (d) {
                    d.customerId = $('#customerId').val(); // Pass customer ID if needed
                },
                "error": function (xhr, status, error) {
                    console.log("Error fetching data: " + error);
                }
            },
            "columns": [
                { "data": "AvailableBalance", "title": "Available Balance" },
                { "data": "SelectButton", "title": "Select", "orderable": false }
            ]
        });

        // Function to handle selecting a customer account
        window.selectCustomerAccount = function (accountNumber, availableBalance) {
            $('#customerAccountLookup').val(accountNumber);
            $('#customerAccountNumber').text(accountNumber);
            $('#customerBalance').text(availableBalance);
            $('#customerAccountLookupModal').modal('hide');
        };

        // Reset Customer Account data on modal opening
        $('#lookupCustomerAccountButton').click(function () {
            $('#customerAccountNumber').text(''); // Clear previous account number
            $('#customerBalance').text(''); // Clear previous balance
        });

            // Error handling during AJAX requests
            $(document).ajaxError(function (event, jqxhr, settings, thrownError) {
                console.log("AJAX error: " + thrownError);
            });
        });


    </script>

    <script>
    $(document).ready(function () {
        // Initialize the DataTable
        $('#ChequeTypeGrid').DataTable({
            // Ajax settings
            "sPaginationType": "full_numbers",
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "@(Url.Action("Index", "Cheques", new { Area = "FrontOffice"}))",
            "sServerMethod": "POST",

            // Callback settings
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                // Parse and format the created date
                var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                var formattedDate = createdDate.toLocaleDateString('en-GB') + " " + createdDate.toLocaleTimeString('en-GB');

                // Create the Select button with data attributes
                var selectUrl = '<a href="#" class="btn btn-outline-info select-bank" data-cheque-type-id="' + aData.Id + '" data-branch="' + aData.BranchDescription + '" data-cheque-type-description="' + aData.ChequeTypeDescription + '" >Select</a>';

                // Update the row data
                $('td:eq(2)', nRow).html(formattedDate);
                $('td:eq(3)', nRow).html(selectUrl);

                return nRow;
            },

            // Display settings
            "aoColumns": [
                { "mDataProp": "BranchDescription", "sTitle": "Branch Name", "sWidth": "10%" },
                { "mDataProp": "ChequeTypeDescription", "sTitle": "Cheque Type", "sWidth": "10%" },
                { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "1%" },
                { "mDataProp": null, "sTitle": "", "sWidth": "10%", "bSortable": false }
            ],
            "aaSorting": [[0, "desc"]]
        });

        // Handle the selection of a bank from the lookup
        $('#bankLinkageGrid').on('click', '.select-bank', function (e) {
            e.preventDefault();

            // Retrieve data from the clicked button's data attributes
            var chequeTypeId = $(this).data('cheque-type-id');
            var branch = $(this).data('branch');
            var chequetypedescription = $(this).data('cheque-type-description');

            // Set values in the form fields
            $('#BranchDescription').val(branch);
            $('#ChequeTypeDescription').val(chequetypedescription);

            // Close the modal
            $('#bankLinkageLookupModal').modal('hide');
        });
    });
    </script>






