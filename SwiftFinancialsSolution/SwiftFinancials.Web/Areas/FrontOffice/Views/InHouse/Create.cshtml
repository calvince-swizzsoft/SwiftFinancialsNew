<div class="main-container">
    <h2 class="section-header">Create In-House Cheque</h2>

    @using (Html.BeginForm("Create", "InHouse", new { Area = "FrontOffice" }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <!-- Step 1: Select Source of Funds -->
        <div class="row">
            <div class="col-md-3">
                @Html.LabelFor(model => model.FundingDescription, new { @class = "control-label", @for = "FundingDescription" })
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-money fa-fw"></i> <!-- Icon for funding -->
                    </span>
                    @Html.DropDownListFor(model => model.FundingDescription,
                        new SelectList(new List<SelectListItem>
                        {
                            new SelectListItem { Text = "Select Funding Source", Value = "" },
                            new SelectListItem { Text = "G/L Account", Value = "GL" },
                            new SelectListItem { Text = "Customer Account", Value = "Customer" }
                        }, "Value", "Text"),
                        new { @class = "form-control", @id = "FundingDescription" }
                    )
                    @Html.ValidationMessageFor(model => model.FundingDescription)
                </div>
            </div>

            <!-- Step 3: Enter Amount -->
            <div class="col-md-3">
                <label for="amount">Amount</label>
                @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", placeholder = "Enter amount" })
                @Html.HiddenFor(model => model.WordifiedAmount)
            </div>

            <!-- Step 4: Enter Payee Name -->
            <div class="col-md-3">
                <label for="payee">Payee</label>
                @Html.TextBoxFor(model => model.Payee, new { @class = "form-control", placeholder = "Enter payee's name" })
            </div>


            <div class="col-md-3">
                @Html.LabelFor(model => model.ChequeTypeDescription, "Cheque Type", new { @class = "control-label" })
                <div class="input-group" data-autoclose="true">
                    @Html.EditorFor(model => model.ChequeTypeDescription, new { htmlAttributes = new { @class = "form-control", @placeholder = "EnterText...", @required = "" } })
                    <span class="input-group-addon">
                        <a data-toggle="modal" data-target="#ChequeTypeLookupModal" onclick="captureDetails();">
                            <span class="fa fa-search"></span>
                        </a>
                    </span>
                </div>
            </div>




        </div>

        <!-- G/L Account Details -->
        <div id="glAccountDetails" class="form-group content" style="display:none;">
            <label for="debitChartOfAccount">Debit G/L Account</label>
            <div class="input-group">
                <input type="text" id="DebitChartOfAccountAccountName" name="DebitChartOfAccountAccountName" class="form-control" placeholder="Look up G/L Account" readonly />
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" id="lookupButton" data-toggle="modal" data-target="#glAccountLookup">
                        <i class="fa fa-search"></i> <!-- Lookup icon -->
                    </button>
                </span>
            </div>
            <label>Cost Center:</label>
            <p id="costCenter">@Html.DisplayFor(model => model.CostCenter)</p>
        </div>



        <!-- Customer Account Details Section -->
        <div id="customerAccountDetails" class="form-group content" style="display:none;">
            <label for="debitCustomerAccount">Debit Customer Account</label>
            <div class="input-group">
                <input type="text" id="customerAccountLookup" class="form-control" placeholder="Look up Customer Account" readonly />
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" id="lookupCustomerAccountButton" data-toggle="modal" data-target="#customerAccountLookupModal">
                        <i class="fa fa-search"></i> <!-- Lookup icon -->
                    </button>
                </span>
            </div>
            <!-- Display selected customer account information -->
            <p id="customerAccountNumber"></p>
            <label>Available Balance:</label>
            <p id="customerBalance"></p>
        </div>

        <!-- Step 5: Enter Reference Number -->
        <div class="col-md-12">
            <label for="reference">Reference</label>
            @Html.TextBoxFor(model => model.Reference, new { @class = "form-control", placeholder = "Enter reference number" })
        </div>






        <!-- Step 2: Cheque Writing Charges Checkbox -->
        <div class="form-group">
            @Html.CheckBoxFor(model => model.Chargeable) Chargeable? Apply Cheque Writing Charges
        </div>



        <!-- Step 5: Add Button to Add Transaction -->
        <div class="form-group">
            <button id="addTransaction" type="button" class="btn btn-success btn-custom">Add</button>
        </div>

        <!-- Display a List of Transactions (Table) -->
        <div class="table-container mt-4">
            <h3>Cheques</h3>
            <table id="transactionsTable" class="table table-bordered">
                <thead>
                    <tr>
                        <th>Branch Name</th>
                        <th>Cheque Type</th>
                        <th>Funding</th>
                        <th>Debit G/L Account Name</th>
                        <th>Debit Customer Account Number</th>
                        <th>Payee</th>
                        <th>Amount</th>
                        <th>Amount in Words</th>
                        <th>Padded Amount</th>
                        <th>Reference</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Existing transactions will be listed here -->
                </tbody>
            </table>
        </div>

        <!-- Step 6: Remove Button to Remove Selected Transaction -->
        <div class="form-group">
            <button id="removeTransaction" type="button" class="btn btn-danger btn-remove" disabled>Remove</button>
        </div>

        <!-- Step 7: Update Button to Save Changes -->
        <div class="form-group">
            <input type="submit" value="Update" class="btn btn-primary btn-update" />
            <a href="@Url.Action("Index", "InHouseCheque")" class="btn btn-secondary">Cancel</a>
        </div>
    }
</div>
<!-- Modal for G/L Account Lookup -->
