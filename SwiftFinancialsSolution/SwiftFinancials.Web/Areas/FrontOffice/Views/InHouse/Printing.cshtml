@if (TempData["SuccessMessage"] != null)
{
    <script>
        // Show a dialog when the page loads
        window.onload = function () {
            var successMessage = "@TempData["SuccessMessage"]";
            if (successMessage) {
                // Show a confirmation dialog
                var userChoice = confirm(successMessage + "\nDo you want to print the cheque?");
                if (userChoice) {
                    // If the user clicks "OK", proceed to print
                    printCheque();
                }
            }
        };

        // Function to trigger cheque printing
        function printCheque() {
            // Implement the logic to print the cheque here
            window.open('/path-to-print-cheque-page', '_blank'); // Example of opening print page
        }
    </script>
}


<div class="main-container">
    <h2 class="section-header">Cheque Printing</h2>

    @using (Html.BeginForm("Printing", "InHouse", new { Area = "FrontOffice" }, FormMethod.Post))
