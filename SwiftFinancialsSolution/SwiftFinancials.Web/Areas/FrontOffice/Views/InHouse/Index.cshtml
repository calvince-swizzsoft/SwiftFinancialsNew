    <script>
       $(document).ready(function () {
    $('#ChequesGrid').DataTable({
        "sPaginationType": "full_numbers",
        "bProcessing": true,
        "bServerSide": true,
        "sAjaxSource": "@(Url.Action("Index", "InHouse", new { Area = "FrontOffice"}))",
        "sServerMethod": "POST",
        "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
            var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
            var h = ("0" + createdDate.getHours()).slice(-2);
            var m = ("0" + createdDate.getMinutes()).slice(-2);
            var s = ("0" + createdDate.getSeconds()).slice(-2);
            var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
            aData.CreatedDate = dt_Created;



            $('td:eq(8)', nRow).html(dt_Created);

            return nRow;
        },

        "aoColumns": [
            { "mDataProp": "BranchDescription", "sTitle": "Branch Name", "sWidth": "15%" },
            { "mDataProp": "DebitChartOfAccountAccountName", "sTitle": "Debit G/L Account", "sWidth": "20%" },
            { "mDataProp": "ChequeTypeDescription", "sTitle": "Cheque Type", "sWidth": "10%" },
            { "mDataProp": "Amount", "sTitle": "Amount", "sWidth": "20%" },
            { "mDataProp": "Payee", "sTitle": "Payee", "sWidth": "20%" },
            { "mDataProp": "Reference", "sTitle": "Reference", "sWidth": "20%" },
            { "mDataProp": "Chargeable", "sTitle": "Chargeable", "sWidth": "20%" },
            { "mDataProp": "WordifiedAmount", "sTitle": "WordifiedAmount", "sWidth": "20%" },
            { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "5%" }
        ],
        "aaSorting": [[0, "desc"]]
    });
});

    </script>

    <script>
    $(document).ready(function () {
        $('#startDate').datepicker();
        $('#endDate').datepicker();

        function loadCheques() {
            var startDate = $('#startDate').datepicker('getDate');
            var endDate = $('#endDate').datepicker('getDate');
            var text = $('#searchInput').val();
            if (!startDate || !endDate) {
                alert("Please select both a start date and an end date.");
                return;
            }

            var formattedStartDate = startDate.toISOString().split('T')[0];
            var formattedEndDate = endDate.toISOString().split('T')[0];

            var url = '@(Url.Action("FindExternalChequesByDate", "InHouse", new { Area = "FrontOffice" }))';
            url += '?startDate=' + formattedStartDate + '&endDate=' + formattedEndDate + '&text=' + text;

            $('#ChequesGrid').DataTable().ajax.url(url).load();
        }

        $('#searchButton').click(function () {
            loadCheques();
        });

        $('#refreshButton').on('click', function () {
            loadCheques();
        });
    });
    </script>


