@model Application.MainBoundedContext.DTO.FrontOfficeModule.InHouseChequeDTO

<html>
<head>
    <title>Print Cheque</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .cheque {
            border: 2px solid #000;
            padding: 20px;
            width: 600px;
            margin: auto;
            position: relative;
        }

            .cheque h3 {
                text-align: center;
            }

        .signature {
            margin-top: 50px;
            text-align: center;
        }

        .routing-account {
            border-top: 1px solid #000;
            padding-top: 10px;
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="cheque">
        <div class="bank-info">
            <h3>@Model.BankName</h3>
            <p>@Model.BranchDescription</p>
        </div>
        <div class="details">
            <p>Date: @Model.CreatedDate.ToShortDateString()</p>
            <p>Cheque No: @Model.ChequeNumber</p>
            <p>Pay to the Order of: @Model.Payee</p>
            <p>Amount: $@Model.Amount</p>
            <p>(@Model.WordifiedAmount)</p>
            <p>Memo: @Model.Reference</p>
        </div>
        <div class="signature">
            <p>_________________________</p>
            <p>Signature</p>
        </div>
        <div class="routing-account">
            <p>Routing Number: @Model.DebitChartOfAccountAccountName</p>
            <p>Account Number: @Model.BankAccount</p>
        </div>
    </div>
    <script>
        function printCheque() {
            var printContents = document.getElementById("chequeDetails").innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents; // Restore original content
        }
    </script>
</body>
</html>
