
@{
    ViewBag.Title = "Create End of Day";
}

@{
    ViewBag.Title = "End of Day";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>End of Day</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "EndOfDay", new { Area = "FrontOffice" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>End of Day</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content bg-white text-info" style="border: 1px solid #ddd; border-radius: 4px; padding: 20px; margin-bottom: 20px;">
                    <form>
                        <div class="form-horizontal">
                            <div style="border: 1px solid #ddd; padding: 20px; border-radius: 4px;">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="openingBalance">Opening Balance:</label>
                                            <input type="text" id="openingBalance" class="form-control" readonly value="£0.00">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="totalReceipts">Total Receipts:</label>
                                            <input type="text" id="totalReceipts" class="form-control" readonly value="£0.00">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="totalPayments">Total Payments:</label>
                                            <input type="text" id="totalPayments" class="form-control" readonly value="£0.00">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="expectedCash">Expected Cash:</label>
                                            <input type="text" id="expectedCash" class="form-control" readonly value="£0.00">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="chequesPendingTransfer">Cheques Pending Transfer:</label>
                                            <input type="text" id="chequesPendingTransfer" class="form-control" readonly value="£0.00">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="closingBalance">Closing Balance:</label>
                                            <input type="text" id="closingBalance" class="form-control" readonly value="£0.00">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label for="excess">Excess:</label>
                                            <input type="text" id="excess" class="form-control" readonly value="£10,000.00">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group" style="margin-top: 20px; text-align: right;">
                                <button type="submit" class="btn btn-primary" style="background-color: #007bff; border: 2px solid #0056b3; padding: 10px 20px; font-weight: bold;">Update</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

