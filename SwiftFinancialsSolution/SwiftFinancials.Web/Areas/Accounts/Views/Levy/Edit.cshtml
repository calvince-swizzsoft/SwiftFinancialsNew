@model Application.MainBoundedContext.DTO.AccountsModule.LevyDTO

@{
    ViewBag.Title = "Edit Levy";
    var chargeTypes = ViewBag.ChargeTypeSelectList as List<SelectListItem>;
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Levy</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "Levy", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Edit</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content white-bg">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Edit", "Levy", new { Area = "Accounts" }, FormMethod.Post, new { @class = "wizard-big", @id = "form" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group form-group-sm">
                                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.ChargeType, new { @class = "control-label" })
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                        @Html.DropDownListFor(model => model.ChargeType, chargeTypes, new { @class = "form-control input-md" })
                                        @Html.ValidationMessageFor(model => model.ChargeType)
                                    </div>
                                </div>
                                <div class="form-group form-group-sm">
                                    @Html.LabelFor(model => model.ChargePercentage, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.ChargePercentage, new { htmlAttributes = new { @class = "form-control", @placeholder = "ChargePercentage" } })
                                    @Html.ValidationMessageFor(model => model.ChargePercentage, "", new { @class = "text-danger" })
                                </div>

                            </div>
                            <div class="col-lg-6">
                                <div class="form-group form-group-sm">
                                    @Html.LabelFor(model => model.ChargeValue, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.ChargeValue, new { htmlAttributes = new { @class = "form-control", @placeholder = "ChargeValue" } })
                                    @Html.ValidationMessageFor(model => model.ChargeValue, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-group-sm">
                                    @Html.LabelFor(model => model.ChargeFixedAmount, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.ChargeFixedAmount, new { htmlAttributes = new { @class = "form-control", @placeholder = "ChargeFixedAmount" } })
                                    @Html.ValidationMessageFor(model => model.ChargeFixedAmount, "", new { @class = "text-danger" })
                                </div>


                                <div class="form-group form-group-lg">
                                    @Html.CheckBoxFor(model => model.IsLocked, htmlAttributes: new { @class = "" })
                                    @Html.LabelFor(model => model.IsLocked, new { htmlAttributes = new { @class = "form-control", @placeholder = "Is Locked?" } })
                                    @Html.ValidationMessageFor(model => model.IsLocked, "", new { @class = "text-danger" })
                                </div>

                            </div>

                            <div class="col-lg-6">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.LevySplits[0].Description, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.LevySplits[0].Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Levy Split Name", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.LevySplits[0].Description, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.LevySplits[0].Percentage, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.LevySplits[0].Percentage, new { htmlAttributes = new { @class = "form-control", @placeholder = "Levy Split Percentage", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.LevySplits[0].Percentage, "", new { @class = "text-danger" })
                                </div>


                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.LevySplit.ChartOfAccountId, htmlAttributes: new { @class = "control-label" })
                                    @Html.HiddenFor(model => model.Id)
                                    @Html.ValidationMessageFor(model => model.LevySplit.ChartOfAccountAccountName, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.Id, new { htmlAttributes = new { @class = "ChartOfAccountsLookup form-control required", placeholder = "Description.." } })
                                </div>
                            </div>
                            <row>
                                <div class="ibox-content m-b-sm border-bottom  text-dark">
                                    <table class="footable table table-stripped toggle-arrow-tiny grey-table">
                                        <thead>
                                            <tr>
                                                <th data-toggle="true">Description</th>
                                                <th data-hide="phone">Percentage</th>
                                                <th data-hide="phone">Remove Entry</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (ViewBag.LevySplitDTOs != null)
                                            {
                                                foreach (var levySplit in ViewBag.LevySplitDTOss)
                                                {
                                                    <tr>
                                                        <td>
                                                            @levySplit.Description
                                                        </td>
                                                        <td>
                                                            @levySplit.Percentage
                                                        </td>
                                                        <td>
                                                            <button type="button" class="btn btn-outline-danger remove-btn">Remove</button>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </row>

                            <div>
                                @Html.ActionLink("Back to List", "Index", "Levy", new { Area = "Accounts" }, new { @class = "btn btn-success" })
                            </div>

                            <div class="col-sm-2">
                                <div class="form-group">
                                    <input type="submit" value="Post" class="btn btn-success" />
                                </div>
                            </div>
                        </div>

                    }
                </div>

            </div>
        </div>
    </div>
</div>

