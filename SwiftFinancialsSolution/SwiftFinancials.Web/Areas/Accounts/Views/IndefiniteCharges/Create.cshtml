@model Application.MainBoundedContext.DTO.AccountsModule.DynamicChargeDTO

@{
    ViewBag.Title = "Create Indefinite Charges";
    var source = ViewBag.Source as List<SelectListItem>;
    var charge = ViewBag.DynamicCharge as List<SelectListItem>;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "IndefiniteCharges", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Create Indefinite Charges</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        <a class="close-link"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Create", "IndefiniteCharges", new { Area = "Accounts" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    @Html.LabelFor(model => model.RecoverySource, new { @class = "control-label" })
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                        @Html.DropDownListFor(model => model.RecoverySource, source, new { @class = "form-control input-md" })
                                        @Html.ValidationMessageFor(model => model.RecoverySource)
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.Description, new { @class = "" })
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Description ." } })
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.RecoveryMode, new { @class = "control-label" })
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.RecoveryMode, charge, new { @class = "form-control input-md" })
                                            @Html.ValidationMessageFor(model => model.RecoveryMode)
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <br />

                            <!-- Tabs -->
                            <div class="tabs-container">
                                <ul class="nav nav-tabs">
                                    <li><a class="nav-link active" data-toggle="tab" href="#applicableChargesTab">Applicable Charges</a></li>
                                    <!-- Add more tabs here if necessary -->
                                </ul>
                                <div class="tab-content">
                                    <div id="applicableChargesTab" class="tab-pane active">
                                        <div class="panel-body">
                                            <div style="text-align: left;">
                                                <input type="checkbox" id="headerCheckbox" style="transform: scale(1); color: blue;">
                                                <label for="headerCheckbox" style="font-weight: bold;">Select All</label>
                                            </div>

                                            <div class="table-responsive">
                                                <table id="LoanProductsGrid" class="table table-striped table-bordered table-hover" width="100%">
                                                    <tbody>
                                                        <tr>
                                                            <td colspan="7" class="dataTables_empty">
                                                                Loading data from server
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>

                                            <button id="submit-btn" class="btn btn-secondary" style="margin-top: 20px; margin-bottom: 10px;">Create</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-3"></div>
                                <div class="col-lg-4"></div>
                                <div class="col-lg-2"></div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/plugins/dataTables")

    <script>
        function showTab() {
            $('.nav-tabs a[href="#applicableChargesTab"]').tab('show');
        }

        $(document).ready(function () {
            var table = $('#LoanProductsGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "Commission", new { Area = "Accounts" }))",
                "sServerMethod": "POST",
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var checkboxHTML = '<input type="checkbox" class="rowCheckbox" data-id="' + aData.Id + '">';
                    $('td:eq(0)', nRow).html(checkboxHTML);
                    return nRow;
                },
                "aoColumns": [
                    { "mDataProp": "Id", "sTitle": "Select", "sWidth": "0.09%" },
                    { "mDataProp": "Description", "sTitle": "Name", "sWidth": "10%", "bSortable": false }
                ],
                "aaSorting": [[0, "desc"]]
            });

            $('#headerCheckbox').on('change', function () {
                $('.rowCheckbox').prop('checked', $(this).prop('checked'));
            });
        });
    </script>
}
