@model Application.MainBoundedContext.DTO.AccountsModule.PostingPeriodDTO

@{
    ViewBag.Title = "Close Posting Periods";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Close Posting Periods</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "PostingPeriod", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Close</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Close", "PostingPeriod", new { Area = "Accounts" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <h2>Posting Period</h2>
                        <fieldset>
                            <div class="col-md-4">
                                @Html.LabelFor(model => model.Description, new { @class = "control-label" })
                                <div class="input-group" data-autoclose="true">
                                    @Html.HiddenFor(model => model.Id)
                                    @Html.TextBoxFor(model => model.Description, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly" })
                                    <span class="input-group-addon">
                                        <a data-toggle="modal" data-target="#postingLookupModal"><span class="fa fa-search"></span></a>
                                    </span>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="col-lg-6">
                                        <div class="form-group form-group-lg" id="data_5">
                                            @Html.LabelFor(model => model.DurationStartDate, htmlAttributes: new { @class = "" })
                                            <div class="input-daterange input-group" id="datepicker">
                                                <span class="input-group-addon">Start Date</span>
                                                @Html.TextBox("startDate", DateTime.Today.AddDays(-30).ToString("dd/MM/yyyy"), new { @class = "form-control-lg form-control" })
                                            </div>
                                        </div>

                                    </div>
                                  


                                    <div class="col-lg-6">
                                        <div class="form-group form-group-lg" id="data_5">
                                            @Html.LabelFor(model => model.DurationEndDate, htmlAttributes: new { @class = "" })
                                            <div class="input-daterange input-group" id="datepicker">
                                                <span class="input-group-addon">End Date</span>
                                                @Html.TextBox("endDate", DateTime.Today.ToString("dd/MM/yyyy"), new { @class = "form-control-lg form-control" })
                                            </div>
                                        </div>
                                    </div>



                                    <div class="form-group form-group-sm">
                                        <div class="col-md-offset-2">
                                            <input type="submit" value="Close" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                    }

                    <div>
                        @Html.ActionLink("Back to List", "Index", "PostingPeriod", new { Area = "Accounts" }, new { @class = "btn btn-success" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="modal  fade" id="postingLookupModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header  bg-primary">
                <h3 class="font-bold">posting period Lookup<button type="button" class="close" data-dismiss="modal"><span class="sr-only">Close</span></button></h3>
            </div>
            <table id="customersGrid" class="table table-striped table-bordered table-hover" style="width:100%;">
                <tbody>
                    <tr>
                        <td class="dataTables_empty">
                            Loading data from server
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
