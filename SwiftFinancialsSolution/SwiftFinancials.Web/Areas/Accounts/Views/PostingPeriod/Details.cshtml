@model Application.MainBoundedContext.DTO.AccountsModule.PostingPeriodDTO

@{
    ViewBag.Title = "Details";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Posting Periods</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "PostingPeriod", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>View</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content text-info">
                    <div class="row">
                        <div class="col-lg-6">
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.Description)</strong>

                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @readonly = "readonly" })
                            </p>

                            <p>
                                <strong>@Html.DisplayNameFor(model => model.DurationStartDate)</strong>

                                @Html.TextBoxFor(model => model.DurationStartDate, new { @class = "form-control", @readonly = "readonly" })
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.DurationEndDate)</strong>

                                @Html.TextBoxFor(model => model.DurationEndDate, new { @class = "form-control", @readonly = "readonly" })
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.IsLocked)<br></strong>

                                @Html.CheckBoxFor(model => model.IsLocked)<br>
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.IsActive)<br></strong>

                                @Html.CheckBoxFor(model => model.IsActive)<br>
                            </p>
                        </div>
                        <div class="col-lg-6">
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.IsClosed)<br></strong>

                                @Html.CheckBoxFor(model => model.IsClosed)<br>
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.ClosedBy)</strong>

                                @Html.TextBoxFor(model => model.ClosedBy, new { @class = "form-control", @readonly = "readonly" })
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.ClosedDate)</strong>

                                @Html.TextBoxFor(model => model.ClosedDate, new { @class = "form-control", @readonly = "readonly" })
                            </p>


                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">

                            <div class="row">
                                <div class="col-lg-12">
                                    <p>
                                        @Html.ActionLink("Edit", "Edit", "PostingPeriod", new { id = Model.Id, Area = "Accounts" }, new { @class = "btn btn-success" })
                                        @Html.ActionLink("Back to List", "Index", "PostingPeriod", new { Area = "Accounts" }, new { @class = "btn btn-success" })
                                    </p>
                                </div>
                            </div>
                            @*<p>
                                @Html.ActionLink("Edit", "Edit", "PostingPeriod", new { id = Model.Id, Area = "Accounts" }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Back to List", "Index", "PostingPeriod", new { Area = "Accounts" }, new { @class = "btn btn-success" })
                            </p>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>