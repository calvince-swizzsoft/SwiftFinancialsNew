    <script type="text/javascript">
    $(document).ready(function () {
        $('#addEntryBtn').click(function (event) {
            event.preventDefault();

            var formData = $('#addDebitBatchForm').serialize();

            $.ajax({
                url: '@Url.Action("Add", "BatchOrigination_Debit", new { Area = "Accounts" })',
                type: 'POST',
                data: formData,
                success: function (response) {
                    if (response.success) {
                        var newRows = '';
                        $.each(response.entries, function (index, entry) {
                            newRows += '<tr data-id="' + entry.Id + '">';
                            newRows += '<td>' + entry.DebitCustomerAccountFullName + '</td>';
                            newRows += '<td>' + entry.DebitCustomerAccountFullAccountNumber + '</td>';
                            newRows += '<td>' + entry.Multiplier + '</td>';
                            newRows += '</tr>';
                        });

                        $('#ChargeSplits tbody').html(newRows);

                        // Clear the form fields with the specific class (e.g., .entry-field)
                        $('.entry-field').val('');
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('An error occurred while processing your request.');
                }
            });
        });
    });
    </script>





