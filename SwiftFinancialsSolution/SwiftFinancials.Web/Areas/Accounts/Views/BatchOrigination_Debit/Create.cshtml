        $('#debitForm').on('submit', function (e) {
            e.preventDefault(); // Prevent the default form submission

            // Serialize the form data
            var formData = $(this).serialize();

            $.ajax({
                url: '@Url.Action("Create", "BatchOrigination_Debit", new { Area = "Accounts" })',
                type: 'POST',
                data: formData,
                success: function (response) {
                    if (response.success) {
                        // Show success message
                        Swal.fire({
                            icon: 'success',
                            title: 'Batch Created!',
                            text: response.message,
                            timer: 1000,
                            showConfirmButton: false
                        }).then(function () {
                            // Redirect to the Index action of the same controller
                            window.location.href = '@Url.Action("Index", "BatchOrigination_Debit", new { Area = "Accounts" })';
                        });
                    } else {
                        // Handle failure, show error message
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: response.message
                        });
                    }
                },
                error: function (xhr, status, error) {
                    // Handle AJAX errors
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: 'Something went wrong!'
                    });
                }
            });
        });
    });
</script>



<script type="text/javascript">
    $(document).ready(function () {
        $('#addEntryBtn').click(function (event) {
            event.preventDefault();

            var formData = $('#addDebitBatchForm').serialize();

            $.ajax({
                url: '@Url.Action("Add", "BatchOrigination_Debit", new { Area = "Accounts" })',
                type: 'POST',
                data: formData,
                success: function (response) {
                    if (response.success) {
                        updateEntriesTable(response.entries);
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: 'Entry added successfully.',
                            timer: 2000,
                            showConfirmButton: false
                        });
                        // Clear the form fields with the specific class (e.g., .entry-field)
                        clearEntryForm();
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: response.message,
                            timer: 8000,
                            showConfirmButton: true
                        });
                    }
                },
                error: function () {
                    alert('An error occurred while processing your request.');
                }
            });
        });
    });



        function updateEntriesTable(entries) {
            var tableBody = $("#ChargeSplits tbody");
            tableBody.empty(); // Clear existing entries

            $.each(entries, function (index, entry) {
                var row = `<tr data-id="${entry.Id}">
                       <td>${entry.DebitCustomerAccountFullName}</td>
                       <td>${entry.DebitCustomerAccountFullAccountNumber}</td>
                       <td>${entry.BasisValue}</td>
                       <td>${entry.Multiplier}</td>
                       <td><button type="button" class="btn btn-danger remove-entry" data-id="${entry.Id}">Remove</button></td>
                   </tr>`;
                tableBody.append(row);
