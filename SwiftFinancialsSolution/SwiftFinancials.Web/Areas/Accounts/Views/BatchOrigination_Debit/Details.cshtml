@model Application.MainBoundedContext.DTO.AccountsModule.DebitBatchDTO

@{
    ViewBag.Title = "Debit Batch Details";
}

<style>
    .custom-container {
        border: 2px solid gray;
        padding: 10px;
        border-radius: 5px;
        align-items: center;
        justify-content: center;
        font-size: 15px;
        text-align: center;
        margin-top: 30px;
        font-weight: bold;
        background-color: #00e0ff;
    }

    .combined-container {
        padding: 20px;
        border-radius: 5px;
        margin: 20px 0;
        font-size: 15px;
        display: flex;
        flex-direction: column;
        font-weight: bold;
        border: 2px solid #00ffff;
    }

    .row {
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        margin-top: 5px;
    }

    .control-label {
        font-size: 18px;
        color: #333;
    }

    .form-value {
        font-size: 16px;
        color: #007bff;
    }

    #policies {
        color: black;
    }

    .checkbox-label {
        font-size: 18px;
        color: #333;
    }

    .checkbox-field {
        font-size: 16px;
        color: #007bff;
    }

    .main1 {
        border: 1px solid black;
        padding: 10px;
    }
</style>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "BatchOrigination_Debit", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Details</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2 style="font-weight: bold;">Debit Batch Details</h2>
                    <hr />
                    @Html.ActionLink("Back To List", "Index", "BatchOrigination_Debit", new { Area = "Accounts" }, new { @class = "btn btn-primary" })
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    <div class="form-horizontal">
                        <fieldset>
                            <div class="main1">
                                <div class="combined-container">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group form-group-lg">
                                                @Html.LabelFor(model => model.DebitTypeDescription, new { @class = "control-label" })
                                                <div class="form-value">@Model.DebitTypeDescription</div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group form-group-lg">
                                                @Html.LabelFor(model => model.BranchDescription, new { @class = "control-label" })
                                                <div class="form-value">@Model.BranchDescription</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group form-group-lg">
                                                @Html.LabelFor(model => model.Priority, new { @class = "control-label" })
                                                <div class="form-value">@Model.Priority</div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group form-group-lg">
                                                @Html.LabelFor(model => model.Reference, new { @class = "control-label" })
                                                <div class="form-value">@Model.Reference</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
