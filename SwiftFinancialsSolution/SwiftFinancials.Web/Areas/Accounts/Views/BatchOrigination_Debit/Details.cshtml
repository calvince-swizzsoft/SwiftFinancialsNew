@model Application.MainBoundedContext.DTO.AccountsModule.DebitBatchDTO

@{
    ViewBag.Title = "Debit Batch Details";
    var queuePriorities = ViewBag.QueuePrioritySelectList as List<SelectListItem>;
}

<style>
    .main1 {
        border: 1px solid black;
        
        
        background-color: #f1f1f1;
    }
    .content {
        border: 3px solid #00ffff;
        border-radius:12px;
    }
    .control-label {
        color: #333; /* Replace with your desired color */
        font-weight:bold;
    }

    .input-md{
        color: #007bff; /* Replace with your desired color */
    }
    .custom-container {
        border: 2px solid gray;
        padding: 10px;
        border-radius: 5px;
        align-items: center;
        justify-content: center;
        font-size: 15px;
        text-align: center;
        
        font-weight: bold;
        background-color: #00e0ff;
    }

    .combined-container {
        padding: 20px;
        border-radius: 5px;
        
        font-size: 15px;
        display: flex;
        flex-direction: column;
        font-weight: bold;
        border: 2px solid #00ffff;
    }
    @* Batch Entries table Styling*@ #ChargeSplits {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
    }

    #ChargeSplits thead {
        background-color: white;
        color: #333;
        font-family: Arial, Helvetica, sans-serif;
    }

    #ChargeSplits th, #ChargeSplits td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
    }

    #ChargeSplits th {
        font-weight: bold;
    }

    #ChargeSplits tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    #ChargeSplits tbody tr:hover {
        background-color: #f1f1f1;
    }


    .row {
        margin-bottom: 5px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        margin-top: 5px;
    }

    .control-label {
        font-size: 16px;
        color: #333;
    }

    .form-value {
        font-size: 16px;
        color: #007bff;
    }

    #policies {
        color: black;
    }

    .checkbox-label {
        font-size: 16px;
        color: #333;
    }

    .checkbox-field {
        font-size: 16px;
        color: #007bff;
    }

   
</style>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "BatchOrigination_Debit", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Details</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2 style="font-weight: bold;">Debit Batch Details</h2>
                    <hr />

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="main1">
                    <div class="content" style="padding: 20px; margin: 20px;">
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.DebitTypeId, new { @class = "control-label" })
                                    <div class="input-group" data-autoclose="true">
                                        @Html.HiddenFor(model => model.DebitTypeId)
                                        @Html.TextBoxFor(model => model.DebitTypeDescription, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly" })
                                        <span class="input-group-addon">
                                            <a data-toggle="modal" data-target="#BenefactorcustomerLookupModal"><span class="fa fa-search"></span></a>
                                        </span>
                                    </div>
                                </div>

                            </div>
                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.BranchId, htmlAttributes: new { @class = "control-label" })
                                    @Html.HiddenFor(model => model.BranchId)
                                    @Html.ValidationMessageFor(model => model.BranchId, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.BranchDescription, new { htmlAttributes = new { @class = "BranchesLookup form-control input-md required", placeholder = "Description..", @readonly = "readonly" } })
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.Priority, new { @class = "control-label" })
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                        @Html.DropDownListFor(model => model.Priority, queuePriorities, new { @class = "form-control input-md", @readonly = "readonly" })
                                        @Html.ValidationMessageFor(model => model.Priority)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.Reference, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Reference, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "Reference", @required = "", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.Reference, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.CreatedBy, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.CreatedBy, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "Reference", @required = "", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.CreatedBy, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.CreatedDate, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control input-md", @placeholder = "Reference", @required = "", @readonly = "readonly" } })
                                    @Html.ValidationMessageFor(model => model.CreatedDate, "", new { @class = "text-danger" })
                                </div>
                            </div>




                        </div>


                    </div>
                    <br/>
                    <div style="border: 1px solid gray; padding: 20px; margin: 20px; position: relative; border-radius:12px;">
                        <h2 style="position: absolute; top: -20px; left: 20px; background: white; padding: 0 10px; color: #333;font-weight:bold;">Debit Batch Entries</h2>

                        <row>
                            <table id="ChargeSplits" class="footable table table-striped toggle-arrow-tiny grey-table" style="text-wrap: normal; color: black; width: 100%; margin-bottom: 50px;">
                                <thead style="font-style: italic; color: cadetblue; text-align: center;">
                                    <tr>
                                        @*<th style="width: 15%;">Credit BatchId</th>*@
                                        <th style="width: 20%;">Customer FullName</th>
                                        <th style="width: 15%;">Full AccountNumber</th>
                                        <th style="width: 15%;">Product Description</th>
                                        <th style="width: 15%;"> Multiplier</th>
                                        

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.DebitBatchEntryDTOs != null)
                                    {
                                        foreach (var debitBatchEntries in ViewBag.DebitBatchEntryDTOs)
                                        {
                                            <tr data-id="@debitBatchEntries.Id">
                                                <td>@debitBatchEntries.CustomerFullName</td>
                                                <td>@debitBatchEntries.FullAccountNumber</td>
                                                <td>@debitBatchEntries.ProductDescription</td>
                                                <td>@debitBatchEntries.Multiplier</td>

                                                
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </row>
                    </div>


                    


                </div>
                <br />
                @Html.ActionLink("Back To List", "Index", "BatchOrigination_Debit", new { Area = "Accounts" }, new { @class = "btn btn-primary" })

            </div>
        </div>
    </div>
</div>
