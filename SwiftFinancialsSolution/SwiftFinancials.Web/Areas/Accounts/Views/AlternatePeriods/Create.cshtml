@model Application.MainBoundedContext.DTO.AccountsModule.AlternateChannelReconciliationPeriodDTO

@{
    ViewBag.Title = "Alternate Period";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Alternate Periods</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    @Html.ActionLink("Create Alternate Periods", "Index", "AlternatePeriods", new { Area = "Accounts" }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Closed Alternate Channels", "Clos", "AlternatePeriods", new { Area = "Accounts" }, new { @class = "btn btn-primary" })
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["SuccessMessage"]

                            <button type="button" class="close" data-dismiss="alert">
                                <span>
                                    &times;
                                </span>
                            </button>
                        </div>
                    }
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>


                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="AlternatePeriodsGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">
                                        Loading data from server
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#AlternatePeriodsGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Create", "AlternatePeriods", new { Area = "Accounts"}))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                   var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var startDate = new Date(parseInt(aData.DurationStartDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + startDate.getHours()).slice(-2);
                    var m = ("0" + startDate.getMinutes()).slice(-2);
                    var s = ("0" + startDate.getSeconds()).slice(-2);

                    var dt_StartDate = $.datepicker.formatDate('dd/mm/yy', startDate) ;
                    aData.DurationStartDate = dt_StartDate;

                    var endDate = new Date(parseInt(aData.DurationEndDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + endDate.getHours()).slice(-2);
                    var m = ("0" + endDate.getMinutes()).slice(-2);
                    var s = ("0" + endDate.getSeconds()).slice(-2);

                    var dt_EndDate = $.datepicker.formatDate('dd/mm/yy', endDate) ;
                    aData.DurationEndDate = dt_EndDate;

                    var editUrl = '<a  href="/accounts/AlternatePeriods/edit/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Edit</a>';
                    var viewUrl = '<a  href="/accounts/AlternatePeriods/Processing/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Processing</a>';
                    var CloseUrl = '<a  href="/accounts/AlternatePeriods/Closing/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Close</a>';

                    $('td:eq(3)', nRow).html(dt_StartDate);
                    $('td:eq(4)', nRow).html(dt_EndDate);
                    //$('td:eq(5)', nRow).html(dt_Created);
                    $('td:eq(5)', nRow).html(viewUrl + '&nbsp;' + editUrl + "&nbsp" + CloseUrl);

                    return nRow;
                },
                // Display settings
                "aoColumns": [

                    { "mDataProp": "AlternateChannelTypeDescription", "sTitle": "ChannelType", "sWidth": "10%" },
                    { "mDataProp": "StatusDescription", "sTitle": "Status", "sWidth": "10%" },
                    { "mDataProp": "SetDifferenceModeDescription", "sTitle": "SetDifferenceModeDescription", "sWidth": "15%" },
                    { "mDataProp": "DurationStartDate", "sTitle": "Start Date", "sWidth": "10%" },
                    { "mDataProp": "DurationEndDate", "sTitle": "End Date", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "10%", "bSortable": false }],
                "aaSorting": [[0, "desc"]]
            });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>

}
