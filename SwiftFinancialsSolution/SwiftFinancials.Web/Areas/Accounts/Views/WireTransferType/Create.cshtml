    <script src="~/Scripts/js/navlink.js"></script>

    <script>
        $('#chartsofAccountGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("ChartOfAccountsIndex", "CreditType", new { Area = "Accounts"}))",
                "sServerMethod": "POST",
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var selectUrl = '<button class="btn btn-outline-info" onclick="selectCoA(\'' + aData.Id + '\')">Select</button>';

                    $('td:eq(3)', nRow).html(dt_Created);
                    $('td:eq(4)', nRow).html(selectUrl);

                    return nRow;
                },
                "aoColumns": [
                    { "mDataProp": "AccountName", "sTitle": "G/L Account Name", "sWidth": "10%" },
                    { "mDataProp": "CostCenterDescription", "sTitle": "Cost Center", "sWidth": "10%" },
                    { "mDataProp": "AccountCode", "sTitle": "Code", "sWidth": "5%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Action", "sWidth": "10%", "bSortable": false }],
                "aaSorting": [[0, "desc"]]
            });

         function selectCoA(id) {
            console.log("Selected ID:", id);
            $.ajax({
                url: '/Accounts/WireTransferType/ChartOfAccountLookUp',
                type: 'POST',
                data: { Id: id },
                success: function (response) {
                    if (response.success) {
                        console.log(response);
                        $('#ChartOfAccountId').val(response.data.ChartOfAccountId);
                        $('#ChartOfAccountAccountName').val(response.data.ChartOfAccountAccountName);

                        $('#chartofAccountLookupModal').modal('hide');
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('An error occurred while processing your request.');
                }
            });
        }
    </script>



    <script>
        $(document).ready(function () {
            function saveCheckboxState(key, state) {
                localStorage.setItem(key, state);
            }

            function loadCheckboxState(key) {
                return localStorage.getItem(key) === 'true';
            }

            $('#headerCheckbox').on('change', function () {
                $('.rowCheckbox').prop('checked', $(this).prop('checked')).each(function () {
                    var checkboxKey = $(this).attr('id');
                    saveCheckboxState(checkboxKey, $(this).prop('checked'));
                });
                saveCheckboxState('headerCheckbox', $(this).prop('checked'));
            });

            $('#ApplicableChargesGrid').on('change', '.rowCheckbox', function () {
                var checkboxKey = $(this).attr('id');
                saveCheckboxState(checkboxKey, $(this).prop('checked'));

                if (!$(this).prop('checked')) {
                    $('#headerCheckbox').prop('checked', false);
                    saveCheckboxState('headerCheckbox', false);
                } else {
                    var allChecked = $('.rowCheckbox:checked').length === $('.rowCheckbox').length;
                    $('#headerCheckbox').prop('checked', allChecked);
                    saveCheckboxState('headerCheckbox', allChecked);
                }
            });

            var table = $('#ApplicableChargesGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("CommissionsIndex", "UnPayReason", new { Area = "Accounts" })",
                "sServerMethod": "POST",
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var checkboxHTML = '<input type="checkbox" class="rowCheckbox" data-id="' + aData.Id + '"';
                    if (aData.AutomateLedgerFeeCalculation === true) {
                        checkboxHTML += ' checked';
                    }
                    checkboxHTML += '>';
                    $('td:eq(0)', nRow).html(checkboxHTML);
                    return nRow;
                },
                "aoColumns": [
                    { "mDataProp": "Id", "sTitle": "Select", "sWidth": "0.09%" },
                    { "mDataProp": "Description", "sTitle": "Name", "sWidth": "10%", "bSortable": false }
                ],
                "aaSorting": [[0, "desc"]],
                "initComplete": function (settings, json) {
                    $('#headerCheckbox').prop('checked', false);
                }
            });


            $(document).ready(function () {
                $('#headerCheckbox').on('change', function () {
                    $('.rowCheckbox').prop('checked', $(this).prop('checked'));
                });

                $('#submit-btn').on('click', function (e) {
                    var selectedIds = [];
                    $('.rowCheckbox:checked').each(function () {
                        selectedIds.push($(this).data('id'));
                    });
                    $('#SelectedIds').val(selectedIds.join(','));
                });
            });

        });
    </script>

    <script>
        document.getElementById('submit-btn').addEventListener('click', function (event) {
            const inputs = document.querySelectorAll('.form-control[required]');
            let isValid = true;
            inputs.forEach(input => {
                if (!input.value.trim()) {
                    isValid = false;
                    input.classList.add('is-invalid');
                } else {
                    input.classList.remove('is-invalid');
                }
            });
            if (!isValid) {
                event.preventDefault();
                alert('Please fill in all required fields.');
            }
        });
    </script>

}
