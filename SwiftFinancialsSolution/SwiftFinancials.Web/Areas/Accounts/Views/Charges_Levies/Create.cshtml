    <script>
$(document).ready(function () {
    // Function to save the state of the header checkbox to local storage
    function saveCheckboxState(key, state) {
        // Implementation for saving checkbox state goes here
    }

    // Function to load the state of the header checkbox from local storage
    function loadCheckboxState(key) {
        // Implementation for loading checkbox state goes here
    }

    $(document).ready(function () {
        // Event listener for header checkbox
        $('#headerCheckbox').on('change', function () {
            // Check or uncheck all row checkboxes based on the header checkbox state
            $('.rowCheckbox').prop('checked', $(this).prop('checked')).each(function () {
                var checkboxKey = $(this).attr('id');
                // Save the state of the checkbox to local storage
                saveCheckboxState(checkboxKey, $(this).prop('checked'));
            });
            // Save the state of the header checkbox to local storage
            saveCheckboxState('headerCheckbox', $(this).prop('checked'));
        });

        // Event listener for individual row checkboxes
        $('#LoanProductsGrid').on('change', '.rowCheckbox', function () {
            // Save the state of the checkbox to local storage
            var checkboxKey = $(this).attr('id');
            saveCheckboxState(checkboxKey, $(this).prop('checked'));

            // Uncheck header checkbox if any row checkbox is unchecked
            if (!$(this).prop('checked')) {
                $('#headerCheckbox').prop('checked', false);
                // Save the state of the header checkbox to local storage
                saveCheckboxState('headerCheckbox', false);
            } else {
                // Check if all row checkboxes are checked and check the header checkbox accordingly
                var allChecked = $('.rowCheckbox:checked').length === $('.rowCheckbox').length;
                $('#headerCheckbox').prop('checked', allChecked);
                // Save the state of the header checkbox to local storage
                saveCheckboxState('headerCheckbox', allChecked);
            }
        });

        // Load the state of the header checkbox from local storage after the page is loaded
        $('#headerCheckbox').prop('checked', loadCheckboxState('headerCheckbox'));
    });

    // Initialize the DataTable
    var table = $('#LoanProductsGrid').DataTable({
        // Ajax settings
        "sPaginationType": "full_numbers",
        "bProcessing": true,
        "bServerSide": true,
        "sAjaxSource": "@(Url.Action("Index", "Levy", new { Area = "Accounts"}))",

        "sServerMethod": "POST",
        // Callback settings
        "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
            var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
            var h = ("0" + createdDate.getHours()).slice(-2);
            var m = ("0" + createdDate.getMinutes()).slice(-2);
            var s = ("0" + createdDate.getSeconds()).slice(-2);
            var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
            aData.CreatedDate = dt_Created;

            //var editUrl = '<a href="/accounts/SavingsProduct/edit/' + aData.Id + '" class="btn btn-outline-info">Edit</a>';
            //var viewUrl = '<a href="/accounts/SavingsProduct/details/' + aData.Id + '" class="btn btn-outline-info">View</a>';
            var checkboxHTML = '<input type="checkbox" class="rowCheckbox" data-id="' + aData.Id + '"';
            if (aData.AutomateLedgerFeeCalculation === true) {
                checkboxHTML += ' checked';
            }
            checkboxHTML += '>';

            $('td:eq(0)', nRow).html(checkboxHTML);

            return nRow;
        },
        // Display settings
        "aoColumns": [
            { "mDataProp": "Id", "sTitle": "Select", "sWidth": "0.1%" },
            { "mDataProp": "Description", "sTitle": "Applicable Levy", "sWidth": "10%" },
