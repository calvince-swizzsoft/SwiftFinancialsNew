

@model  Application.MainBoundedContext.DTO.AccountsModule.BankLinkageDTO

@{
    /**/

    ViewBag.Title = "Bank Linkage Details";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "BankLinkage", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger fade in">
        <button class="close" data-dismiss="alert">
            ×
        </button>
        <i class="fa-fw fa fa-times"></i>
        <strong>Error!</strong> @TempData["Error"]
    </div>
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Bank Linkage Details</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    <fieldset>
                        <div class="form-horizontal">
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.BankName, htmlAttributes: new { @class = "control-label" })
                                        @Html.HiddenFor(model => model.Id)
                                        @Html.EditorFor(model => model.BankName, new { htmlAttributes = new { @class = "form-control required", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 form-group">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.BranchDescription, htmlAttributes: new { @class = "control-label" })
                                        @Html.HiddenFor(model => model.BranchId)
                                        @Html.EditorFor(model => model.BranchDescription, new { htmlAttributes = new { @class = "form-control required", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.BranchId, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.ChartOfAccountId, htmlAttributes: new { @class = "control-label" })
                                        @Html.HiddenFor(model => model.ChartOfAccountId)
                                        @Html.EditorFor(model => model.ChartOfAccountAccountName, new { htmlAttributes = new { @class = "form-control required", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.ChartOfAccountId, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 form-group">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.BankBranchName, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.BankBranchName, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.BankBranchName, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.BankAccountNumber, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.BankAccountNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.BankAccountNumber, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-6 form-group">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    @Html.ActionLink("Back To List", "Index", "BankLinkage", new { Area = "Accounts" }, new { @class = "btn btn-primary" })
                                </div>

                                <div class="col-md-6">
                                    @Html.ActionLink("Edit Bank Linkage", "Edit", "BankLinkage", new { Area = "Accounts" }, new { @class = "btn btn-primary" })
                                </div>
                            </div>

                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>


