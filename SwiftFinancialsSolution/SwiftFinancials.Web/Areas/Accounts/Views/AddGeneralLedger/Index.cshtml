    <script type="text/javascript">


        $(document).ready(function () {
            $('#GeneralLedgerAccountMappingsGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "AddGeneralLedger", new { Area = "Accounts"}))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                   var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var editUrl = '<a  href="/accounts/AddGeneralLedger/edit/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Edit</a>';
                    var viewUrl = '<a  href="/accounts/AddGeneralLedger/details/' + aData.Id + '" class = "btn btn-outline-info"">' + 'View</a>';

                    $('td:eq(2)', nRow).html(dt_Created);
                    $('td:eq(3)', nRow).html(viewUrl + '&nbsp;' + editUrl);

                    return nRow;
                },
                // Display settings
                "aoColumns": [
                    { "mDataProp": "LedgerNumber", "sTitle": "LedgerNumber", "sWidth": "10%" },
                    { "mDataProp": "TotalValue", "sTitle": "TotalValue", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "10%"},
                    { "mDataProp": "CreatedDate", "sTitle": "Action", "sWidth": "15%", "bSortable": false }],
                "aaSorting": [[0, "desc"]]
            });
         });

        $(document).ready(function () {
            $('#data_3 .input-group.date').datepicker({
                startView: 2,
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                autoclose: true,
            });
        });


        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });

        $(document).ready(function () {
            $('#submitBtn').click(function (e) {
                e.preventDefault(); // Prevent the default form submission

                // Gather the data from the form (if needed)
                // For example:
                var inputValue = $('#inputField').val();

                // Insert the data into the table
                var newRow = '<tr><td>' + inputValue + '</td><td>New data</td></tr>';
                $('#GeneralLedgerAccountMappingsGrid tbody').html(newRow);
            });
        });


    $("#submitBtn").click(function(e) {
        e.preventDefault(); // Prevent the default form submission
        // Perform AJAX request
        $.ajax({
            url: '@Url.Action("Index", "AddGeneralLedger")', // Specify the URL of the controller action
            type: 'POST',
            data: {}, // You can pass any data you need here
            success: function(result) {
                // Handle the success response if needed
                console.log("Data pushed successfully");

            },
            error: function(xhr, status, error) {
                // Handle errors
                console.error(error);
            }
        });
    });

    </script>

