    <script type="text/javascript">
        // Function to save the state of the header checkbox to local storage
        function saveCheckboxState(key, state) {
            // Implementation for saving checkbox state goes here
        }

        // Function to load the state of the header checkbox from local storage
        function loadCheckboxState(key) {
            // Implementation for loading checkbox state goes here
        }

        $(document).ready(function () {
            // Event listener for header checkbox
            $('#headerCheckbox').on('change', function () {
                // Check or uncheck all row checkboxes based on the header checkbox state
                $('.rowCheckbox').prop('checked', $(this).prop('checked')).each(function () {
                    var checkboxKey = $(this).attr('id');
                    // Save the state of the checkbox to local storage
                    saveCheckboxState(checkboxKey, $(this).prop('checked'));
                });
                // Save the state of the header checkbox to local storage
                saveCheckboxState('headerCheckbox', $(this).prop('checked'));
            });

            // Event listener for individual row checkboxes
            $('#savingsProductsGrid').on('change', '.rowCheckbox', function () {
                // Save the state of the checkbox to local storage
                var checkboxKey = $(this).attr('id');
                saveCheckboxState(checkboxKey, $(this).prop('checked'));

                // Uncheck header checkbox if any row checkbox is unchecked
                if (!$(this).prop('checked')) {
                    $('#headerCheckbox').prop('checked', false);
                    // Save the state of the header checkbox to local storage
                    saveCheckboxState('headerCheckbox', false);
                } else
                {
                    // Check if all row checkboxes are checked and check the header checkbox accordingly
                    var allChecked = $('.rowCheckbox:checked').length === $('.rowCheckbox').length;
                    $('#headerCheckbox').prop('checked', allChecked);
                    // Save the state of the header checkbox to local storage
                    saveCheckboxState('headerCheckbox', allChecked);
                }
            });

            // Load the state of the header checkbox from local storage after the page is loaded
            $('#headerCheckbox').prop('checked', loadCheckboxState('headerCheckbox'));
        });

        // Initialize the DataTable for Savings Products
        $('#savingsProductsGrid').DataTable({
            // Ajax settings
            "sPaginationType": "full_numbers",
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "@(Url.Action("Index", "SavingsProduct", new { Area = "Accounts"}))",
            "sServerMethod": "POST",
            // Callback settings
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                var h = ("0" + createdDate.getHours()).slice(-2);
                var m = ("0" + createdDate.getMinutes()).slice(-2);
                var s = ("0" + createdDate.getSeconds()).slice(-2);
                var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                aData.CreatedDate = dt_Created;

                var checkboxHTML = '<input type="checkbox" class="rowCheckbox" data-id="' + aData.Id + '"';
                if (aData.AutomateLedgerFeeCalculation == true) {
                    checkboxHTML += ' checked';
                }
                checkboxHTML += '>';

                $('td:eq(0)', nRow).html(checkboxHTML);

                $('td:eq(6)', nRow).html(dt_Created);

                return nRow;
            },
            // Display settings
            "aoColumns": [
                { "mDataProp": "Id", "sTitle": "Select", "visible": true },
                { "mDataProp": "Id", "sTitle": "", "visible": false },
                { "mDataProp": "Description", "sTitle": "Description" },
                { "mDataProp": "OperatingBalance", "sTitle": "OperatingBalance" },
                { "mDataProp": "MaximumAllowedWithdrawal", "sTitle": "MaximumAllowedWithdrawal" },
                { "mDataProp": "MinimumBalance", "sTitle": "MinimumBalance" },
                { "mDataProp": "AnnualPercentageYield", "sTitle": "AnnualPercentageYield" },
                { "mDataProp": "CreatedDate", "sTitle": "Created Date",  "bSortable": true }
            ],
            "aaSorting": [[0, "desc"]],
            "initComplete": function (settings, json) {
                // Load the state of the header checkbox from local storage after DataTable initialization is complete
                $('#headerCheckbox').prop('checked', loadCheckboxState('headerCheckbox'));
            }
        });

        // Place the header checkbox anywhere on the grid
        $('#savingsProductsGrid .dataTables_scroll').prepend('<div><input type="checkbox" id="headerCheckbox"> Select $ Deselect All</div>');

        // Event listener for header checkbox
        $('#headerCheckbox').on('change', function () {
            // Check or uncheck all row checkboxes based on the header checkbox state
            $('.rowCheckbox').prop('checked', $(this).prop('checked')).each(function () {
                var checkboxKey = $(this).attr('id');
                // Save the state of the checkbox to local storage
                saveCheckboxState(checkboxKey, $(this).prop('checked'));
            });
            // Save the state of the header checkbox to local storage
            saveCheckboxState('headerCheckbox', $(this).prop('checked'));
        });

        // Event listener for individual row checkboxes
        $('#savingsProductsGrid').on('change', '.rowCheckbox', function () {
            // Save the state of the checkbox to local storage
            var checkboxKey = $(this).attr('id');
            saveCheckboxState(checkboxKey, $(this).prop('checked'));

            // Uncheck header checkbox if any row checkbox is unchecked
            if (!$(this).prop('checked')) {
                $('#headerCheckbox').prop('checked', false);
                // Save the state of the header checkbox to local storage
                saveCheckboxState('headerCheckbox', false);
            }
        });

        //PostingPeriod typehead starts here
        $('.PostingPeriodsLookup').typeahead({
            source: function (query, process) {
                return $.getJSON(
                    '@Url.Action("GetPostingPeriodsAsync", "PostingPeriod", new { Area = "Accounts" })',
                    { query: query },
                    function (PostingPeriods) {
                        var newPostingPeriodsData = [];
                        PostingPeriodsMap = {};
                        $.each(PostingPeriods, function (i, PostingPeriod) {
                            newPostingPeriodsData.push(PostingPeriod.Description);
                            PostingPeriodsMap[PostingPeriod.Description] = PostingPeriod;
                        });
                        process(newPostingPeriodsData); return;
                    });
            },
            matcher: function (item) {
                if (item.toLowerCase().indexOf(this.query.trim().toLowerCase()) != -1) {
                    return true;
                }
            },
            sorter: function (items) {
                return items.sort();
            },
            highlighter: function (item) {
                var regex = new RegExp('(' + this.query + ')', 'gi');
                return item.replace(regex, "<strong>$1</strong>");
            },
            updater: function (item) {
                var postingPeriodId = "";
                PostingPeriodId = PostingPeriodsMap[item].Id;
                $('#PostingPeriodId').val(PostingPeriodId);
                //console.log(PostingPeriodId)
                return item;
            }
        });
        $('#createButton').click(function () {
            var selectedRowsData = [];
            $('.rowCheckbox:checked').each(function () {
                var rowData = {
                    Id: $(this).data('id'),
                    // Add other properties you want to include
                };
                selectedRowsData.push(rowData);
            });

            // Send the selected rows data to the backend using AJAX
            $.ajax({
                url: '/Accounts/SavingsDynamicFees/Create',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(selectedRowsData),
                success: function (response) {
                    // Handle success response
                },
                error: function (xhr, status, error) {
                    // Handle error response
                }
            });
        });



        $("#wizard").steps();
        $("#form").steps({
            bodyTag: "fieldset",
            onStepChanging: function (event, currentIndex, newIndex) {
                // Always allow going backward even if the current step contains invalid fields!
                if (currentIndex > newIndex) {
                    return true;
                }

                // Forbid suppressing "Warning" step if the user is to young
                if (newIndex === 3 && Number($("#age").val()) < 18) {
                    return false;
                }

                var form = $(this);

                // Clean up if user went backward before
                if (currentIndex < newIndex) {
                    // To remove error styles
                    $(".body:eq(" + newIndex + ") label.error", form).remove();
                    $(".body:eq(" + newIndex + ") .error", form).removeClass("error");
                }

                // Disable validation on fields that are disabled or hidden.
                form.validate().settings.ignore = ":disabled,:hidden";

                // Start validation; Prevent going forward if false
                return form.valid();
            },
            onStepChanged: function (event, currentIndex, priorIndex) {
                // Suppress (skip) "Warning" step if the user is old enough.
                if (currentIndex === 2 && Number($("#age").val()) >= 18) {
                    $(this).steps("next");
                }

                // Suppress (skip) "Warning" step if the user is old enough and wants to the previous step.
                if (currentIndex === 2 && priorIndex === 3) {
                    $(this).steps("previous");
                }
            },
            onFinishing: function (event, currentIndex) {
                var form = $(this);

                // Disable validation on fields that are disabled.
                // At this point it's recommended to do an overall check (mean ignoring only disabled fields)
                form.validate().settings.ignore = ":disabled";

                // Start validation; Prevent form submission if false
                return form.valid();
            },
            onFinished: function (event, currentIndex) {
                var form = $(this);

                // Submit form input
                form.submit();
            }
        }).validate({
            errorPlacement: function (error, element) {
                element.before(error);
            },
            rules: {
                confirm: {
                    equalTo: "#password"
                }
            }
        });
    </script>
}
