                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group form-group-lg" style="color:cadetblue">
                                            @Html.LabelFor(model => model.Priority, new { @class = "control-label" })
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                                @Html.DropDownListFor(model => model.Priority, QueuePriority, new { @class = "form-control input-md vibrant-color-input" })
                                                @Html.ValidationMessageFor(model => model.Priority)
                                            </div>
                                        </div>
                                        <div class="form-group form-group-lg" style="color:cadetblue">
                                            @Html.CheckBoxFor(model => model.EnforceMonthValueDate, htmlAttributes: new { @class = "" })
                                            @Html.LabelFor(model => model.EnforceMonthValueDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "EnforceMonthValueDate?" } })
                                            @Html.ValidationMessageFor(model => model.EnforceMonthValueDate, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="form-group form-group-sm">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="button" value="Create" class="btn btn-primary" id="createButton" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <div class="ibox-content">
                                <div class="ibox-content">
                                    <div class="sk-spinner sk-spinner-double-bounce">
                                        <div class="sk-double-bounce1"></div>
                                        <div class="sk-double-bounce2"></div>
                                    </div>

                                    <div class="table-responsive">
                                        <input type="checkbox" id="headerCheckbox" style="transform: scale(1); color: blue;">
                                        <label for="headerCheckbox" style="font-weight: bold; color: blue;">Toggle</label>

                                        <table id="savingsProductsGrid" class="table table-striped table-bordered table-hover" width="100%">

                                            <tbody>

                                                <tr>
                                                    <td colspan="7" class="dataTables_empty">
                                                        Loading data from server
