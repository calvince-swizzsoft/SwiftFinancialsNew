@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#systemGeneralLedgerAccountMappingsGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "Charges", new { Area = "Accounts"}))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                   var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var editUrl = '<a  href="/accounts/charges/edit/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Edit</a>';
                    var viewUrl = '<a  href="/accounts/charges/details/' + aData.Id + '" class = "btn btn-outline-info"">' + 'View</a>';

                    $('td:eq(5)', nRow).html(dt_Created);
                    $('td:eq(6)', nRow).html(/*viewUrl + '&nbsp;' + editUrl*/);

                    return nRow;
                },
                // Display settings
                "aoColumns": [
                    { "mDataProp": "Description", "sTitle": "Range (Lower Limit)", "sWidth": "10%" },
                    { "mDataProp": "MaximumCharge", "sTitle": "Range (Upper Limit)", "sWidth": "5%" },
                    { "mDataProp": "IsLocked", "sTitle": "Charge Type", "sWidth": "3%" },
                    { "mDataProp": "IsLocked", "sTitle": "Percentage", "sWidth": "3%" },
                    { "mDataProp": "IsLocked", "sTitle": "Fixed Amount", "sWidth": "3%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "10%"},
                    { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "0%", "bSortable": false }],
                "aaSorting": [[0, "desc"]]
        });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>

}

