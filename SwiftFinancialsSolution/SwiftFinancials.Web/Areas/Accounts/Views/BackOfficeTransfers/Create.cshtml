        function updateEntriesTable(entries) {
            var tableBody = $("#RefundBatchEntry tbody");
            tableBody.empty(); // Clear existing entries

            // Grab the ChartOfAccountName from the input field
            var chartOfAccountNameDebit = $("#ChartOfAccountNameDebit").val();

            $.each(entries, function (index, entry) {
                var customerName = entry.ApportionTo == 2 ? chartOfAccountNameDebit : entry.CustomerFullName;
                var accountNumber = entry.ApportionTo == 2 ? entry.CreditChartOfAccountId : entry.FullAccountNumber;

                var row = `<tr data-id="${entry.Id}">
                       <td>${customerName}</td>
                       <td>${accountNumber}</td>
                       <td>${entry.Principal}</td>
                       <td>${entry.Interest}</td>
                       <td>${entry.Reference}</td>

                       <td><button type="button" class="btn btn-danger remove-entry" data-id="${entry.Id}">Remove</button></td>
                   </tr>`;
                tableBody.append(row);
            });
        }



            // Attach click event to remove buttons
            $(document).on("click", ".remove-entry", function (event) {
                event.preventDefault(); // Prevent default behavior
                var entryId = $(this).data("id"); // Get the GUID from the button's data-id
                removeEntry(entryId);
            });


        function removeEntry(id) {
    $.ajax({
        url: '@Url.Action("Remove", "BackOfficeTransfers")',
        type: 'POST',
        data: { id: id },
        success: function (response) {
            if (response.success) {
                // Update the entries table with the new data
                $('#TotalValue').val(response.totalSum);
                updateEntriesTable(response.data);
                console.log("Updated sum amount:", response.totalSum);
            } else {
                alert("An error occurred while removing the entry.");
            }
        },
        error: function () {
            alert("An error occurred while processing the request.");
        }
    });
}



