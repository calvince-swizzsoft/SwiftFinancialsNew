
@model  Application.MainBoundedContext.DTO.AccountsModule.UnPayReasonDTO

@{
    ViewBag.Title = "UnPay Reason Details";
}


<style>
    #ApplicableChargesTable {
        width: 100%;
        border-collapse: collapse;
    }

    #ApplicableChargesTable, th, td {
        padding: 15px;
        text-align: center;
        border: 1px solid #ddd;
        transition: background 0.3s, transform 0.3s;
    }

    #ApplicableChargesTable, th {
        background: linear-gradient(to bottom, #4a90e2, #003366);
        color: white;
        text-transform: uppercase;
        font-size: 1.1em;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    #ApplicableChargesTable, tr:hover td {
        background: rgba(74, 144, 226, 0.2);
        transform: translateY(-2px);
    }

    #ApplicableChargesTable, td {
        background: #f9f9f9;
        color: #333;
    }

    #ApplicableChargesTable, tr:nth-child(even) td {
        background: #f2f2f2;
    }

    #ApplicableChargesTable, tr:nth-child(odd) td {
        background: #ffffff;
    }

    #ApplicableChargesTable, tr:last-child td {
        border-bottom: none;
    }




    .styled-checkbox {
        width: 20px;
        height: 20px;
        cursor: not-allowed;
        border: 2px solid #007bff;
        border-radius: 4px;
        accent-color: #007bff;
        background-color: #f8f9fa;
    }

        .styled-checkbox:checked {
            background-color: #007bff;
            border-color: #0056b3;
            box-shadow: 0 0 5px #0056b3;
        }

        .styled-checkbox:disabled {
            opacity: 0.8;
        }
</style>



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "UnPayReason", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>View</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>View UnPay Reason</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white">
                    <div class="row">
                        <div class="col-lg-8">
                            @Html.LabelFor(model => model.Description)
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Code", @readonly = "readonly" } })
                        </div>

                        <div class="col-lg-3">
                            @Html.LabelFor(model => model.Code)
                            @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @placeholder = "Code", @readonly = "readonly" } })
                        </div>


                        <div class="col-lg-1" style="margin-top: 30px;">
                            @Html.DisplayFor(model => model.IsLocked)
                            @Html.DisplayNameFor(model => model.IsLocked)
                        </div>
                    </div>



                    <br />
                    <ul class="nav nav-tabs" style="margin-bottom: 20px; font-size: large; margin-top: 40px;">
                        <li class="nav-item">
                            <a class="nav-link active" href="#ApplicableCharges"><i class="fa fa-table" aria-hidden="true"></i> Applicable Charges</a>
                        </li>
                    </ul>

                    <div class="tab-content">
                        <div id="ApplicableCharges" class="tab-pane active">
                            <div class="table-container">
                                <h3 style="font-size: 1.9rem; text-align: center;">Applicable Charges</h3>
                                <table id="#ApplicableChargesTable" class="footable table table-striped toggle-arrow-tiny grey-table">
                                    <thead>
                                        <tr>
                                            <th>Select?</th>
                                            <th>Charge Name</th>
                                            <th>Maximum Charge</th>
                                            <th>Charge Basis Value</th>
                                            <th>Benefactor</th>
                                            <th>RoundingType</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.Commissions != null)
                                        {
                                            foreach (var item in ViewBag.Commissions)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" class="rowCheckbox" data-id="@item.Id"
                                                               @(ViewBag.CheckedStates.ContainsKey(item.Id) && ViewBag.CheckedStates[item.Id] ? "checked" : "") style="font-weight: bold;" />
                                                    </td>
                                                    <td>@item.Description</td>
                                                    <td style="text-align: right;">@item.MaximumCharge</td>
                                                    <td>@item.ChargeBasisValueDescription</td>
                                                    <td>@item.ChargeBenefactorDescription</td>
                                                    <td>@item.RoundingTypeDescription</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




