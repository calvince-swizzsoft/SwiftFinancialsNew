        $(document).ready(function () {
            // Initial page load: Check the TotalValue and disable the submit button if necessary
            var totalValue = parseFloat($("#TotalValue").val());

            // If TotalValue is not set or invalid, disable the submit button
            if (isNaN(totalValue) || totalValue <= 0) {
                $("#submitButton").prop('disabled', true);
            }
        });

        function updateEntriesTable(entries) {
            var tableBody = $("#RefundBatchEntry tbody");
            tableBody.empty(); // Clear existing entries

            // Grab the ChartOfAccountName from the input field
            var chartOfAccountNameDebit = $("#ChartOfAccountNameDebit").val();
            var totalApportionment = 0;  // Initialize running total for Principal + Interest

            // Loop through each entry and build table rows
            $.each(entries, function (index, entry) {
                var customerName = entry.ApportionTo == 2 ? chartOfAccountNameDebit : entry.CustomerFullName;
                var accountNumber = entry.ApportionTo == 2 ? entry.CreditChartOfAccountId : entry.FullAccountNumber;

                // Calculate total for this entry (Principal + Interest)
                var entryTotal = parseFloat(entry.Principal) + parseFloat(entry.Interest);

                // Add this entry's total to the running total
                totalApportionment += entryTotal;

                // Build the row
                var row = `<tr data-id="${entry.Id}">
            <td>${customerName}</td>
            <td>${accountNumber}</td>
            <td>${entry.Principal}</td>
            <td>${entry.Interest}</td>
            <td>${entry.Reference}</td>
            <td><button type="button" class="btn btn-danger remove-entry" data-id="${entry.Id}">Remove</button></td>
        </tr>`;

                tableBody.append(row);
            });

            // Get the TotalValue from the input field
            var totalValue = parseFloat($("#TotalValue").val());

            // Check if totalValue is valid and not NaN or less than or equal to 0
            if (isNaN(totalValue) || totalValue <= 0 || entries.length === 0) {
                // If the input is blank, invalid, or there are no entries, disable the submit button
                $("#submitButton").prop('disabled', true);
            } else {
                // Disable or enable the submit button based on the comparison
                if (totalApportionment < totalValue) {
                    $("#submitButton").prop('disabled', true);  // Disable the button
                } else {
                    $("#submitButton").prop('disabled', false); // Enable the button
                }
            }
        }






