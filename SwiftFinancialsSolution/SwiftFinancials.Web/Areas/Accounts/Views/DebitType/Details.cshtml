@model  Application.MainBoundedContext.DTO.AccountsModule.DebitTypeDTO
@{
    ViewBag.Title = "Debit Type Details";

    var charges = TempData["ApplicableCharges"] as List<string>;
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "DebitType", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>View</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Debit Type Details</h2>
                    <hr />
                    @Html.ActionLink("Back to List", "Index", "DebitType", new { Area = "Accounts" }, new { @class = "btn btn-primary" })

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12">
                            @Html.DisplayNameFor(model => model.Description)
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @readonly = "readonly" } })
                        </div>
                    </div>

                    <br />


                    <div class="row">
                        <div class="col-lg-3">
                            @Html.DisplayNameFor(model => model.CustomerAccountTypeProductCodeDescription)
                            @Html.EditorFor(model => model.CustomerAccountTypeProductCodeDescription, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @readonly = "readonly" } })
                        </div>

                        <div class="col-lg-4">
                            @Html.DisplayNameFor(model => model.CustomerAccountTypeTargetProductDescription)
                            @Html.EditorFor(model => model.CustomerAccountTypeTargetProductDescription, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @readonly = "readonly" } })
                        </div>

                        <div class="col-lg-3">
                            @Html.DisplayNameFor(model => model.CreatedDate)
                            @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @readonly = "readonly" } })
                        </div>

                        <div class="col-lg-2">
                            @Html.DisplayFor(model => model.IsLocked)
                            @Html.DisplayNameFor(model => model.IsLocked)
                        </div>
                    </div>

                    <br />

                    @if (ViewBag.applicableCharges != null)
                    {
                        <h2>Applicable Charges</h2>

                        <div class="row">
                            <div class="col-lg-12">
                                <table id="ChargeSplits" class="footable table table-striped toggle-arrow-tiny grey-table" style="text-wrap:normal; color: black; width: 90%; border: thin;">
                                    <thead style="font-style: italic; color: white; background-color: grey;">
                                        <tr>
                                            <th style="width: 20%;">Charge Name</th>
                                            <th style="width: 20%;">Maximum Charge</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var applicableCharges in ViewBag.applicableCharges)
                                        {
                                            <tr>
                                                <td>@applicableCharges.Description</td>
                                                <td>@applicableCharges.MaximumCharge</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

