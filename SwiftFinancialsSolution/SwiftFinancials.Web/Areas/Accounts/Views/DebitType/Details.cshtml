@model  Application.MainBoundedContext.DTO.AccountsModule.DebitTypeDTO
@{
    ViewBag.Title = "Debit Type Details";

    var charges = TempData["ApplicableCharges"] as List<string>;
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "DebitType", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>View</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Debit Type Details</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-6">
                            @Html.DisplayNameFor(model => model.Description)
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @readonly = "readonly" } })
                        </div>

                        <div class="col-lg-6">
                            @Html.DisplayNameFor(model => model.SavingsProductDescription)
                            @Html.EditorFor(model => model.SavingsProductDescription, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @readonly = "readonly" } })
                        </div>
                    </div>

                    <br />


                    <div class="row">
                        <div class="col-lg-6">
                            @Html.DisplayNameFor(model => model.CustomerAccountTypeProductCode)
                            @Html.EditorFor(model => model.CustomerAccountTypeProductCode, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @readonly = "readonly" } })
                        </div>

                        <div class="col-lg-6">
                            @Html.DisplayNameFor(model => model.CreatedDate)
                            @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @readonly = "readonly" } })
                        </div>
                    </div>

                    <br />

                    <div class="row">
                        <div class="col-lg-2">
                            @Html.DisplayFor(model => model.IsLocked)
                            @Html.DisplayNameFor(model => model.IsLocked)
                        </div>
                    </div>

                    <br />


                    <div class="row">
                        <div class="col-lg-12">
                            @if (TempData["ApplicableCharges"] != null)
                            {
                                <h2>Applicable Charges</h2>
                                <br />


                            }
                        </div>
                    </div>


                    <div class="row">
                        <div class="col-lg-3">
                            @Html.ActionLink("Edit", "Edit", "DebitType", new { id = Model.Id, Area = "Accounts" }, new { @class = "btn btn-success" })
                        </div>

                        <div class="col-lg-3">
                            @Html.ActionLink("Back to List", "Index", "DebitType", new { Area = "Accounts" }, new { @class = "btn btn-success" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

