
@{
    ViewBag.Title = "Customer Standing order";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Standing order</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    @Html.ActionLink("Create Standing Order", "Create", "CustomerAccountstandingorder", new { Area = "Accounts" }, new { @class = "btn btn-primary" })
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div id="custom-warning" class="custom-reminder" style="display: none;">
                        <div class="custom-reminder-icon">
                            <i class="fa fa-exclamation-circle"></i>
                        </div>
                        <div class="custom-reminder-text">
                            <strong>DataTables Warning:</strong> Table id=StandingorderexecutionsGrid - Ajax error. For more information about this error, please see <a href="http://datatables.net/tn/7" class="alert-link">here</a>.
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table id="StandingorderexecutionsGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">
                                        <script>
                                            $(document).ready(function () {
                                                $('#custom-warning').fadeIn('slow');
                                            });
                                        </script>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#StandingorderexecutionsGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "CustomerAccountstandingorder", new { Area = "Accounts"}))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                   var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var editUrl = '<a  href="/accounts/CustomerAccountstandingorder/edit/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Edit</a>';
                    var viewUrl = '<a  href="/accounts/CustomerAccountstandingorder/details/' + aData.Id + '" class = "btn btn-outline-info"">' + 'View</a>';

                    $('td:eq(5)', nRow).html(dt_Created);
                    $('td:eq(6)', nRow).html(viewUrl + '&nbsp;' + editUrl);

                    return nRow;
                },
                // Display settings
                "aoColumns": [
                 { "mDataProp": "TriggerDescription", "sTitle": "Trigger", "sWidth": "15%" },
                    { "mDataProp": "BenefactorCustomerAccountCustomerFullName", "sTitle": "Benefactor full name", "sWidth": "15%" },
                    { "mDataProp": "BeneficiaryCustomerAccountCustomerFullName", "sTitle": "Beneficiary full name", "sWidth": "10%" },
                    { "mDataProp": "BenefactorFullAccountNumber", "sTitle": "BenefactorFullAccountNumber", "sWidth": "10%" },
                    { "mDataProp": "BeneficiaryFullAccountNumber", "sTitle": "BeneficiaryFullAccountNumber", "sWidth": "10%" },
                    { "mDataProp": "CreatedBy", "sTitle": "Created Date", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "10%", "bSortable": false }],
                "aaSorting": [[0, "desc"]]
        });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>

}

