    @Scripts.Render("~/plugins/knob")
    @Scripts.Render("~/plugins/imagecropper")
    @Scripts.Render("~/plugins/colorpicker")
    @Scripts.Render("~/plugins/clockpicker")
    @Scripts.Render("~/plugins/dateRange")
    @Scripts.Render("~/plugins/select2")
    @Scripts.Render("~/plugins/touchSpin")
    @Scripts.Render("~/plugins/tagInputs")
    @Scripts.Render("~/plugins/duallist")



    <script type="text/javascript">
        $(document).ready(function () {
            $('#refundBatchesGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "BatchOrigination_Refund", new { Area = "Accounts"}))",
                "sServerMethod": "POST",
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);
                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var dropdownHtml = `
                        <div class="dropdown">
                            <button style="width: 150px;" class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">`;

                    var viewButton = `<a class="dropdown-item" href="/Accounts/BatchOrigination_Refund/details/${aData.Id}">View</a>`;
                    var editButton = `<a class="dropdown-item" href="/Accounts/BatchOrigination_Refund/edit/${aData.Id}">Edit</a>`;
                    var verifyButton = `<a class="dropdown-item" href="/Accounts/BatchOrigination_Refund/Verify/${aData.Id}">Verify</a>`;
                    var authorizeButton = `<a class="dropdown-item" href="/Accounts/BatchOrigination_Refund/Authorize/${aData.Id}">Authorize</a>`;

                    switch (aData.Status) {
                        case 1:
                            dropdownHtml += viewButton + editButton + verifyButton + authorizeButton;
                            break;
                        case 8:
                            dropdownHtml += viewButton + authorizeButton;
                            break;
                        case 2:
                            dropdownHtml += viewButton;
                            break;
                        default:
                            dropdownHtml += viewButton;
                            break;
                    }

                    dropdownHtml += `</div></div>`;

                    $('td:eq(8)', nRow).html(dt_Created);
                    $('td:eq(9)', nRow).html(dropdownHtml);

                    return nRow;
                },
                "aoColumns": [
                    { "mDataProp": "BranchDescription", "sTitle": "Branch", "sWidth": "5%" },
                    { "mDataProp": "BatchNumber", "sTitle": "Batch Number", "sWidth": "5%" },
                    { "mDataProp": "StatusDescription", "sTitle": "Status", "sWidth": "3%" },
                    { "mDataProp": "TotalValue", "sTitle": "Total Value", "sWidth": "2%" },
                    { "mDataProp": "Reference", "sTitle": "Reference", "sWidth": "2%" },
                    { "mDataProp": "AuditRemarks", "sTitle": "Verification/Rejection Remarks", "sWidth": "2%" },
                    { "mDataProp": "AuditedBy", "sTitle": "Verified/Rejected by", "sWidth": "2%" },
                    { "mDataProp": "AuditedDate", "sTitle": "Verification/Rejection Date", "sWidth": "2%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "8%" },
                    { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "4%", "bSortable": false }
                ],
                "aaSorting": [[0, "desc"]]
            });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>
}
