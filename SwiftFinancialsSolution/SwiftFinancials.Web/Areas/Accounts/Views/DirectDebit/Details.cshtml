@model Application.MainBoundedContext.DTO.AccountsModule.DirectDebitDTO

@{
    ViewBag.Title = "Direct Debit Details";
}

<!-- _Layout.cshtml or individual views -->
<link href="~/Scripts/css/tabbing2.css" rel="stylesheet" />

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "DirectDebit", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h2>Treasury Details</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>


                <div class="ibox-content">
                    <fieldset>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control required", @placeholder = "", @readonly = "readonly" } })
                                </div>
                            </div>



                            <div class="col-md-6 form-group">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.CustomerAccountTypeProductCodeDescription, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.CustomerAccountTypeProductCodeDescription, new { htmlAttributes = new { @id = "LoanCaseAmountApplied", @class = "form-control required", @placeholder = "", @readonly = "readonly" } })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 form-group">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.ChargePercentage, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.ChargePercentage, new { htmlAttributes = new { @id = "LoanCaseAmountApplied", @class = "form-control required", @placeholder = "", @readonly = "readonly" } })
                                </div>
                            </div>

                            <div class="col-md-3 form-group">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.ChargeTypeDescription, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.ChargeTypeDescription, new { htmlAttributes = new { @id = "LoanCaseAmountApplied", @class = "form-control required", @placeholder = "", @readonly = "readonly" } })
                                </div>
                            </div>

                            <div class="col-md-6 form-group">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.CustomerAccountTypeTargetProductDescription, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.CustomerAccountTypeTargetProductDescription, new { htmlAttributes = new { @id = "LoanCaseAmountApplied", @class = "form-control required", @placeholder = "", @readonly = "readonly" } })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 form-group">
                                @Html.ActionLink("Back To List", "Index", "Treasuries", new { Area = "Accounts" }, new { @class = "btn btn-primary" })
                            </div>

                            <div class="col-md-3 form-group">
                                @Html.ActionLink("Edit Treasury", "Edit", "Treasuries", new { Area = "Accounts" }, new { @class = "btn btn-primary" })
                            </div>
                        </div>

                    </fieldset>
                </div>
            </div>
        </div>
    </div>
</div>
