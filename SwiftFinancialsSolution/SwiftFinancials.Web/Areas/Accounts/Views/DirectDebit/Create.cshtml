    <script>
         $('#SavingsProductsGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "SavingsProduct", new { Area = "Accounts"}))",
                "sServerMethod": "POST",
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var selectUrl = '<button class="btn btn-outline-info" onclick="selectSavingsProduct(\'' + aData.Id + '\')">Select</button>';

                    $('td:eq(5)', nRow).html(dt_Created);
                    $('td:eq(6)', nRow).html(selectUrl);

                    return nRow;
                },
                "aoColumns": [
                    { "mDataProp": "PaddedCode", "sTitle": "Code", "sWidth": "5%" },
                    { "mDataProp": "Description", "sTitle": "Name", "sWidth": "10%" },
                    { "mDataProp": "MinimumBalance", "sTitle": "Minimum Balance", "sWidth": "5%" },
                    { "mDataProp": "OperatingBalance", "sTitle": "Operating Balance", "sWidth": "5%" },
                    { "mDataProp": "MaximumAllowedWithdrawal", "sTitle": "Maximum Withdrawal", "sWidth": "5%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Action", "sWidth": "10%", "bSortable": false }],
                "aaSorting": [[0, "desc"]]
            });

         function selectSavingsProduct(id) {
            console.log("Selected ID:", id);
            $.ajax({
                url: '/Accounts/DirectDebit/SavingsProduct',
                type: 'POST',
                data: { Id: id },
                success: function (response) {
                    if (response.success) {
                        console.log(response);
                        $('#CustomerAccountTypeTargetProductId').val(response.data.CustomerAccountTypeTargetProductId);
                        $('#CustomerAccountTypeTargetProductDescription').val(response.data.CustomerAccountTypeTargetProductDescription);
                        $('#CustomerAccountTypeProductCode').val(response.data.CustomerAccountTypeProductCode);

                        $('#SavingsProductLookupModal').modal('hide');
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('An error occurred while processing your request.');
                }
            });
        }
    </script>

