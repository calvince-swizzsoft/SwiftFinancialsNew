        percentageInput.addEventListener('input', function () {
            var inputValue = parseFloat(percentageInput.value);
            if (inputValue > 100) {
                percentageInput.value = '';
                feedbackMessage.textContent = "Percentage cannot be greater than 100%";
                feedbackMessage.style.display = 'block';
            }
            else if (inputValue < 1) {
                percentageInput.value = '';
                feedbackMessage.textContent = "Percentage must be at least 1%";
                feedbackMessage.style.display = 'block';
            }
            else {
