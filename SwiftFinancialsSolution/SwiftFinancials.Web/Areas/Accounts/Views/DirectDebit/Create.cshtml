@model  Application.MainBoundedContext.DTO.AccountsModule.DirectDebitDTO

@{
    /**/

    ViewBag.Title = "Create Direct Debit";

    var productCode = ViewBag.ProductCode as List<SelectListItem>;
    var chargeType = ViewBag.ChargeType as List<SelectListItem>;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "CostCenter", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Create Direct Debit</h2>

                    @if (TempData["CreateError"] != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Failed !</strong> @TempData["CreateError"]

                            <button type="button" class="close" data-dismiss="alert">
                                <span>
                                    &times;
                                </span>
                            </button>
                        </div>
                    }


                    @if (TempData["Amount"] != null)
                    {
                        <div class="alert alert-info">
                            <strong>Attempt failed !</strong> @TempData["Amount"]

                            <button type="button" class="close" data-dismiss="alert">
                                <span>
                                    &times;
                                </span>
                            </button>
                        </div>
                    }


                    @if (TempData["ErrorMsg"] != null)
                    {
                        <div class="alert alert-warning">
                            @TempData["ErrorMsg"]

                            <button type="button" class="close" data-dismiss="alert">
                                <span>
                                    &times;
                                </span>
                            </button>
                        </div>
                    }

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content bg-white">
                    @using (Html.BeginForm("Create", "DirectDebit", new { Area = "Accounts" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <fieldset>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.CustomerAccountTypeProductCode, new { @class = "control-label" })
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.CustomerAccountTypeProductCode, productCode, new { @class = "form-control input-md", @id = "productDropdown" })
                                            @Html.ValidationMessageFor(model => model.CustomerAccountTypeProductCode)
                                        </div>
                                    </div>
                                </div>

                                <div id="savingsProductSection" class="col-lg-6" style="display:block; text-align: left;">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.CustomerAccountTypeTargetProductId, new { @class = "control-label" })
                                        <div class="input-group" data-autoclose="true">
                                            @Html.HiddenFor(model => model.CustomerAccountTypeTargetProductId)
                                            @Html.TextBoxFor(model => model.CustomerAccountTypeTargetProductDescription, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly", @placeholder = "Link Savings Product..." })
                                            <span class="input-group-addon">
                                                <a data-toggle="modal" data-target="#customerLookupModal"><span class="fa fa-search"></span></a>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div id="loansProductSection" class="col-lg-6" style="display:none; text-align: left;">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.CustomerAccountTypeTargetProductId, new { @class = "control-label" })
                                        <div class="input-group" data-autoclose="true">
                                            @Html.HiddenFor(model => model.CustomerAccountTypeTargetProductId)
                                            @Html.TextBoxFor(model => model.CustomerAccountTypeTargetProductDescription, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly", @placeholder = "Link Loan Product..." })
                                            <span class="input-group-addon">
                                                <a data-toggle="modal" data-target="#loansProductLookupModal"><span class="fa fa-search"></span></a>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div id="investmentsProductSection" class="col-lg-6" style="display:none; text-align: left;">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.CustomerAccountTypeTargetProductId, new { @class = "control-label" })
                                        <div class="input-group" data-autoclose="true">
                                            @Html.HiddenFor(model => model.CustomerAccountTypeTargetProductId)
                                            @Html.TextBoxFor(model => model.CustomerAccountTypeTargetProductDescription, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly", @placeholder = "Link Investment Product..." })
                                            <span class="input-group-addon">
                                                <a data-toggle="modal" data-target="#investmentsProductLookupModal"><span class="fa fa-search"></span></a>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.ChargeType, new { @class = "control-label" })
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.ChargeType, chargeType, new { @class = "form-control input-md", @id = "chargeTypeDropdown" })
                                            @Html.ValidationMessageFor(model => model.ChargeType)
                                        </div>
                                    </div>
                                </div>

                                <div id="percentageSection" class="col-lg-6" style="display:block; text-align: left;">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.ChargePercentage, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.ChargePercentage, new { htmlAttributes = new { @class = "form-control percentage-input", @placeholder = "00.00%" } })
                                        @Html.ValidationMessageFor(model => model.ChargePercentage, "", new { @class = "text-danger" })
                                        <div class="invalid-feedback" style="display: none; color:red; "></div>
                                    </div>
                                </div>

                                <div id="fixedAmountSection" class="col-lg-6" style="display:none; text-align: left;">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.ChargeFixedAmount, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.ChargeFixedAmount, new { htmlAttributes = new { @class = "form-control fixedAmount-input", @placeholder = "Kshs.0.00" } })
                                        @Html.ValidationMessageFor(model => model.ChargeFixedAmount, "", new { @class = "text-danger" })
                                        <div class="invalid-feedback2" style="display: none; color:red; "></div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-10">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter name to describe Direct Debit" } })
                                    </div>
                                </div>

                                <div class="col-lg-2" style="margin-top: 30px;">
                                    @Html.CheckBoxFor(model => model.IsLocked, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.IsLocked, htmlAttributes: new { @class = "" })
                                    @Html.ValidationMessageFor(model => model.IsLocked, "", new { @class = "text-danger" })
                                </div>

                            </div>

                            <div class="row">
                                <div class="col-lg-3">
                                    <button type="submit" id="submitButton" class="btn btn-primary" style="width:200px;">Create</button>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


