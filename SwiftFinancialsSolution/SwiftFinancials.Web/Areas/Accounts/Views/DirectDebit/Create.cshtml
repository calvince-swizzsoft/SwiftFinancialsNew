@model  Application.MainBoundedContext.DTO.AccountsModule.DirectDebitDTO

@{
    /**/

    ViewBag.Title = "Create Direct Debit";

    var productCode = ViewBag.ProductCode as List<SelectListItem>;
    var chargeType = ViewBag.ChargeType as List<SelectListItem>;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "CostCenter", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Create Direct Debit</h2>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Failed !</strong> @TempData["Error"]

                            <button type="button" class="close" data-dismiss="alert">
                                <span>
                                    &times;
                                </span>
                            </button>
                        </div>
                    }

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Create", "DirectDebit", new { Area = "Accounts" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter name to describe Direct Debit" } })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.CustomerAccountTypeProductCode, new { @class = "control-label" })
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.CustomerAccountTypeProductCode, productCode, new { @class = "form-control input-md" })
                                            @Html.ValidationMessageFor(model => model.CustomerAccountTypeProductCode)
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    @Html.LabelFor(model => model.CustomerAccountTypeTargetProductDescription, new { @class = "control-label" })
                                    <div class="input-group" data-autoclose="true">
                                        @Html.HiddenFor(model => model.CustomerAccountTypeTargetProductId)
                                        @Html.TextBoxFor(model => model.CustomerAccountTypeTargetProductDescription, new { @id = "LoanCaseCaseNumber", @class = "form-control input-md alpha alphaspace required", @readonly = "readonly", @placeholder = "Link Savings Product..." })
                                        <span class="input-group-addon">
                                            <a data-toggle="modal" data-target="#companyLookupModal"><span class="fa fa-search"></span></a>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.ChargeTypeDescription, new { @class = "control-label" })
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.ChargeTypeDescription, chargeType, new { @class = "form-control input-md" })
                                            @Html.ValidationMessageFor(model => model.ChargeTypeDescription)
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    @Html.LabelFor(model => model.ChargePercentage, htmlAttributes: new { @class = "" })
                                    @Html.EditorFor(model => model.ChargePercentage, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Direct Debit Name" } })
                                    @Html.ValidationMessageFor(model => model.ChargePercentage, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    @Html.CheckBoxFor(model => model.IsLocked, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.LabelFor(model => model.IsLocked, htmlAttributes: new { @class = "" })
                                    @Html.ValidationMessageFor(model => model.IsLocked, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-lg-6">
                                    <input type="submit" style="width:200px;" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>

            </div>

        </div>
    </div>
</div>

<div class="modal  fade" id="companyLookupModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h3 class="font-bold">Savings Product Lookup<button type="button" class="close" data-dismiss="modal"><span class="sr-only">Close</span></button></h3>
            </div>
            <table id="companiesGrid" class="table table-striped table-bordered table-hover" style="width:100%">
                <tbody>
                    <tr>
                        <td class="dataTables_empty">
                            Loading data from server
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>



