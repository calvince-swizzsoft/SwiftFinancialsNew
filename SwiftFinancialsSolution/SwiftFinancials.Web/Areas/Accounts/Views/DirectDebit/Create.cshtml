                                            @Html.HiddenFor(model => model.CustomerAccountTypeTargetProductId)
                                            @Html.TextBoxFor(model => model.CustomerAccountTypeTargetProductDescription, new { @class = "form-control input-md alpha alphaspace required", @disabled = "", @placeholder = "Search Savings Product..." })
