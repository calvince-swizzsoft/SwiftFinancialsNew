@model  Application.MainBoundedContext.DTO.AccountsModule.InterAccountTransferBatchDTO

@{
    ViewBag.Title = " Inter Transfer Batch Details";

}
<style>
    .custom-container {
        border: 2px solid gray;
        padding:20px;
        border-radius: 5px;

        align-items: center;
        justify-content: center;
        font-size: 15px;
        text-align: center;
        margin-top: 30px;
        font-weight: bold;
        background-color: #00e0ff;
    }

    .combined-container {
        padding: 20px;
        border-radius: 5px;
        margin: 20px 0;
        font-size: 15px;
        display: flex;
        flex-direction: column;
        font-weight: bold;
        border: 2px solid #00ffff;
    }

    @* Batch Entries table Styling*@ #ChargeSplits {
        width: 100%;
        border-collapse: collapse;
        font-family: Arial, sans-serif;
    }

    #ChargeSplits thead {
        background-color: white;
        color: #333;
        font-family: Arial, Helvetica, sans-serif;
    }

    #ChargeSplits th, #ChargeSplits td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
    }

    #ChargeSplits th {
        font-weight: bold;
    }

    #ChargeSplits tbody tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    #ChargeSplits tbody tr:hover {
        background-color: #f1f1f1;
    }

    .row {
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        margin-top: 5px;
    }

    .control-label {
        font-size: 18px; /* Increased label font size */
        color: #333; /* Set a different color for the labels */
    }
    .form-control {
        color: #007bff; /* Replace with your desired color */
    }
    .style1 {
        color: #007bff; /* Replace with your desired color */
    }
    .form-value {
        font-size: 16px;
        color: #007bff; /* Set a different color for the field values */
    }

    #policies {
        color: black;
    }

    .checkbox-label {
        font-size: 18px; /* Increased label font size */
        color: #333; /* Set a different color for the checkbox labels */
    }

    .checkbox-field {
        font-size: 16px;
        color: #007bff; /* Set a different color for the checkbox fields */
    }

    .main1 {
        border: 1px solid black;
        border-radius:12px;
        padding: 10px;
        background-color: #f1f1f1;
    }
</style>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "InterAccountTransfer", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Details</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    <div class="form-horizontal">

                        <div class="main1">
                            <div class="combined-container">
                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="col-md-13 form-group">
                                            @Html.LabelFor(model => model.CustomerAccountFullAccountNumber, new { @class = "control-label" })
                                            <div class="input-group" data-autoclose="true">
                                                @Html.HiddenFor(model => model.CustomerAccountId, new { @id = "CustomerAccountId1" })
                                                @Html.TextBoxFor(model => model.CustomerAccountFullAccountNumber, new { @class = "form-control input-md alpha alphaspace required ", @readonly = "readonly", @id = "AccountNumber1" })
                                                <span class="input-group-addon">
                                                    <a data-toggle="modal" data-target="#customerAccountLookupModal1"><span class="fa fa-search"></span></a>
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.CustomerId, htmlAttributes: new { @class = "control-label", @id = "" })
                                            @Html.EditorFor(model => model.CustomerAccountCustomerFullName, new { htmlAttributes = new { @class = "JournalVoucherEntryChartOfAccountsLookup form-control required ", placeholder = "", @readonly = "readonly", id = "CustomerFullName1" } })
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.CustomerAccountCustomerReference1, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.CustomerAccountCustomerReference1, new { htmlAttributes = new { @class = " form-control required ", placeholder = "", @readonly = "readonly", id = "CustomerAccountCustomerReference11" } })
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.CustomerAccountCustomerReference2, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.CustomerAccountCustomerReference2, new { htmlAttributes = new { @class = "JournalVoucherEntryChartOfAccountsLookup form-control required ", placeholder = "", @readonly = "readonly", id = "CustomerAccountCustomerReference21" } })
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="row">


                                    <div class="col-lg-3">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.CustomerAccountCustomerReference3, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.CustomerAccountCustomerReference3, new { htmlAttributes = new { @class = "JournalVoucherEntryChartOfAccountsLookup form-control required ", placeholder = "", @readonly = "readonly", id = "CustomerAccountCustomerReference31" } })
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.AvailableBalance, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.AvailableBalance, new { htmlAttributes = new { @class = "JournalVoucherEntryChartOfAccountsLookup form-control required ", placeholder = "", id = "AvailableBalance1" , @readonly = "readonly" } })
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.Reference, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.Reference, new { htmlAttributes = new { @class = "JournalVoucherEntryChartOfAccountsLookup form-control required", placeholder = "", id = "Reference1" , @readonly = "readonly" } })
                                            @Html.ValidationMessageFor(model => model.Reference)
                                        </div>
                                    </div>
                                </div>
                                
                                

                                <div class="row">
                                    <div class="col-lg-3">

                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.CreatedBy, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.CreatedBy, new { htmlAttributes = new { @class = "BranchesLookup form-control required", placeholder = "", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.CreatedDate, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "BranchesLookup form-control required", placeholder = "", @readonly = "readonly" } })
                                        </div>
                                    </div>

                                    <div class="col-lg-3">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.AuditedBy, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.AuditedDate, new { htmlAttributes = new { @class = "BranchesLookup form-control required", placeholder = "", @readonly = "readonly" } })
                                        </div>

                                    </div>
                                    <div class="col-lg-3">

                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.AuditedDate, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.AuditedDate, new { htmlAttributes = new { @class = "BranchesLookup form-control required", placeholder = "", @readonly = "readonly" } })
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="col-lg-3">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.AuditRemarks, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.AuditRemarks, new { htmlAttributes = new { @class = "BranchesLookup form-control required", placeholder = "", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.AuthorizedBy, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.AuthorizedBy, new { htmlAttributes = new { @class = "BranchesLookup form-control required", placeholder = "", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.AuthorizedDate, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.AuthorizedDate, new { htmlAttributes = new { @class = "BranchesLookup form-control required", placeholder = "", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                    <div class="col-lg-3">
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.AuthorizationRemarks, htmlAttributes: new { @class = "control-label" })

                                            @Html.EditorFor(model => model.AuthorizationRemarks, new { htmlAttributes = new { @class = "BranchesLookup form-control required", placeholder = "", @readonly = "readonly" } })
                                        </div>
                                    </div>
                                </div>


                            </div>


                            <div style="border: 1px solid gray; padding: 20px; margin: 20px; position: relative; border-radius:12px;">
                                <h2 style="position: absolute; top: -20px; left: 20px; background: white; padding: 0 10px; color: #333;font-weight:bold;">Credit Batch Entries</h2>

                                <row>
                                    <table id="ChargeSplits" class="footable table table-striped toggle-arrow-tiny grey-table" style="text-wrap: normal; color: black; width: 100%; margin-bottom: 50px;">
                                        <thead style="font-style: italic; color: cadetblue; text-align: center;">
                                            <tr>
                                                <th style="width: 5%;"> Chart of Account</th>
                                                <th style="width: 5%;">Customer Name </th>
                                                <th style="width: 5%;">Customer Account Number</th>
                                                <th style="width: 5%;">ApportionTo </th>
                                                <th style="width: 5%;">Principal</th>
                                                <th style="width: 5%;">Interest</th>

                                            </tr>


                                        </thead>
                                        <tbody>
                                            @if (ViewBag.InterAccountTransferEntries != null)
                                            {
                                                foreach (var WireTransferEntries in ViewBag.InterAccountTransferEntries)
                                                {
                                                    <tr data-id="@WireTransferEntries.Id">
                                                        <td>@WireTransferEntries.ChartOfAccountAccountName</td>
                                                        <td>@WireTransferEntries.CustomerAccountCustomerFullName</td>
                                                        <td>@WireTransferEntries.CustomerAccountFullAccountNumber</td>
                                                        <td>@WireTransferEntries.ApportionToDescription</td>
                                                        <td>@WireTransferEntries.Principal</td>
                                                        <td>@WireTransferEntries.Interest</td>
                                                        



                                                    </tr>
                                                }
                                            }
                                        </tbody>


                                    </table>
                                </row>
                            </div>



                            <div class="custom-container">

                                <div class="col-lg-12">
                                    <div class="row">
                                        @Html.ActionLink("Back To List", "Index", "InterAccountTransfer", new { Area = "Accounts" }, new { @class = "btn btn-primary" })
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





