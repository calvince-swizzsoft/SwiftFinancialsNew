    <script type="text/javascript">
        $(document).ready(function () {
            $('#data_3 .input-group.date').datepicker({
                startView: 2,
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                autoclose: true,
                format: 'dd/mm/yyyy',
                language: 'en-GB'  // Use British English locale to ensure dd/mm/yyyy format
            });

            // Set default values
            var defaultStatus = $('#status').val();
            var defaultStartDate = $('#startDate').val();
            var defaultEndDate = $('#endDate').val();

            // Function to convert date from dd/mm/yyyy to yyyy-mm-dd
            function formatDate(dateString) {
                var parts = dateString.split("/");
                return parts[2] + "-" + parts[1] + "-" + parts[0];
            }
            $('#InterAccountTransferGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("Index", "InterAccountTransfer", new { Area = "Accounts" })",
                "sServerMethod": "POST",
                "fnServerParams": function (aoData) {
                    aoData.push(
                        { "name": "status", "value": $('#status').val() || defaultStatus },
                        { "name": "startDate", "value": formatDate($('#startDate').val() || defaultStartDate) },
                        { "name": "endDate", "value": formatDate($('#endDate').val() || defaultEndDate) }
                    );
                },
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var dropdownHtml = `
                        <div class="dropdown">
                            <button style="width: 150px;" class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">`;

                    var viewButton = `<a class="dropdown-item" href="/Accounts/InterAccountTransfer/details/${aData.Id}">View</a>`;
                    var verifyButton = `<a class="dropdown-item" href="/Accounts/InterAccountTransfer/Verify/${aData.Id}">Verify</a>`;
                    var authorizeButton = `<a class="dropdown-item" href="/Accounts/InterAccountTransfer/Authorize/${aData.Id}">Authorize</a>`;

                    switch (aData.Status) {
                        case 1:
                            dropdownHtml += viewButton + verifyButton;
                            break;
                        case 8:
                            dropdownHtml += viewButton + authorizeButton;
                            break;
                        case 2:
                            dropdownHtml += viewButton;
                            break;
                        default:
                            dropdownHtml += viewButton;
                            break;
                    }

                    dropdownHtml += `</div></div>`;

                    $('td:eq(6)', nRow).html(dt_Created);
                    $('td:eq(7)', nRow).html(dropdownHtml);

                    return nRow;
                },
                "aoColumns": [
                    { "mDataProp": "BranchDescription", "sTitle": "Branch", "sWidth": "15%" },
                    { "mDataProp": "BatchNumber", "sTitle": "Batch Number", "sWidth": "5%" },
                    { "mDataProp": "StatusDescription", "sTitle": "Status", "sWidth": "15%" },
                    { "mDataProp": "CustomerAccountFullAccountNumber", "sTitle": "Posting Period", "sWidth": "15%" },
                    { "mDataProp": "CustomerAccountCustomerFullName", "sTitle": "Customer Name", "sWidth": "15%" },
                    { "mDataProp": "Reference", "sTitle": "Reference", "sWidth": "15%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "15%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Action", "sWidth": "5%", "bSortable": false }
                ],
                "aaSorting": [[6, "desc"]]
            });

            // Refresh button click handler
            $('#form').on('submit', function (e) {
                e.preventDefault();
                $('#InterAccountTransferGrid').DataTable().ajax.reload();
            });
        });
    </script>
