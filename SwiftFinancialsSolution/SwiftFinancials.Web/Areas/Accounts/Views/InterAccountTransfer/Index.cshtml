    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["SuccessMessage"]
                        </div>
                    }

                    @if (TempData["VerifySuccess"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["VerifySuccess"]
                        </div>
                    }

                    @if (TempData["AuthorizationSuccess"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["AuthorizationSuccess"]
                        </div>
                    }
                    @Html.ActionLink("Inter Account Transfer", "Create", "InterAccountTransfer", new { Area = "Accounts" }, new { @class = "btn btn-primary" })

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>

                    <div class="table-responsive">
                        <table id="InterAccountTransferGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="8" class="dataTables_empty">
