            function updateEntriesTable(entries) {
                var tableBody = $("#RefundBatchEntry tbody");
                tableBody.empty(); // Clear existing entries

                $.each(entries, function (index, entry) {
                    var row = `<tr data-id="${entry.Id}">
                           <td>${entry.ContraChartOfAccountName}</td>
                           <td>${entry.ContraCustomerAccountCustomerIndividualFirstName}</td>
                           <td>${entry.ContraCustomerAccountAccountTypeTargetProductDescription}</td>
                           <td>${entry.DebitFullAccountNumber}</td>
                           <td>${entry.ChartOfAccountName}</td>
                           <td>${entry.CustomerAccountCustomerIndividualFirstName}</td>
                           <td>${entry.CustomerAccountAccountTypeTargetProductDescription}</td>
                           <td>${entry.CreditFullAccountNumber}</td>
                           <td>${entry.Amount}</td>
                           <td><button type="button" class="btn btn-danger remove-entry" data-id="${entry.Id}">Remove</button></td>
                       </tr>`;
                    tableBody.append(row);
                });
            }

            // Attach click event to remove buttons
            $(document).on("click", ".remove-entry", function (event) {
                event.preventDefault(); // Prevent default behavior
                var entryId = $(this).data("id"); // Get the GUID from the button's data-id
                removeEntry(entryId);
            });



            function removeEntry(id) {
                $.ajax({
                    url: '@Url.Action("Remove", "AddGeneralLedger")',
                    type: 'POST',
                    data: { id: id },
                    success: function (response) {
                        if (response.success) {
                            updateEntriesTable(response.data);
                        } else {
                            alert("An error occurred while removing the entry.");
                        }
                    },
                    error: function () {
                        alert("An error occurred while processing the request.");
                    }
                });
            }


            function clearEntryForm() {
                // Reset only the fields with the 'entry-field' class
                $('#formAddBatch').find('.entry-field').val('');
            }
    </script>






