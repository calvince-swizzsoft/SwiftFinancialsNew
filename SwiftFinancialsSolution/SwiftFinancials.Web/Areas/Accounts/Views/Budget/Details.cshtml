@model Application.MainBoundedContext.DTO.AccountsModule.BudgetDTO

@{
    ViewBag.Title = "Details";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Budgets</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "Budget", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>View</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content text-info">
                    <div class="row">
                        <div class="col-lg-6">
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.PostingPeriodDescription)<br></strong>

                                @Html.TextBoxFor(model => model.PostingPeriodDescription, new { @class = "form-control", @readonly = "readonly" })<br>
                            </p>

                            <p>
                                <strong>@Html.DisplayNameFor(model => model.BranchDescription)<br></strong>

                                @Html.TextBoxFor(model => model.BranchDescription, new { @class = "form-control", @readonly = "readonly" })<br>
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.Description)<br></strong>

                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @readonly = "readonly" })<br>
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.TotalValue)<br></strong>

                                @Html.TextBoxFor(model => model.TotalValue, new { @class = "form-control", @readonly = "readonly" })<br>
                            </p>
                            
                        </div>
                        <div class="col-lg-6">
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.BudgetEntries[0].Type)<br></strong>

                                @Html.TextBoxFor(model => model.BudgetEntries[0].Type, new { @class = "form-control", @readonly = "readonly" })<br>
                            </p>

                            <p>
                                <strong>@Html.DisplayNameFor(model => model.BudgetEntries[0].Amount)<br></strong>

                                @Html.TextBoxFor(model => model.BudgetEntries[0].Amount, new { @class = "form-control", @readonly = "readonly" })<br>
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.BudgetEntries[0].Reference)<br></strong>

                                @Html.TextBoxFor(model => model.BudgetEntries[0].Reference, new { @class = "form-control", @readonly = "readonly" })<br>
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.CreatedDate)<br></strong>

                                @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control", @readonly = "readonly" })<br>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <p>
                                @Html.ActionLink("Edit", "Edit", "Budget", new { id = Model.Id, Area = "Accounts" }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Back to List", "Index", "Budget", new { Area = "Accounts" }, new { @class = "btn btn-success" })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>