    <script type="text/javascript">
        $(document).ready(function () {
            $('.edit-btn').click(function () {
                var row = $(this).closest('tr');
                var entryId = row.data('id'); // Assuming each row has a data-id attribute with the entry ID.

                $.ajax({
                    url: '@Url.Action("Edit3", "Budget")/' + entryId,
                    type: 'GET',
                    success: function (response) {
                        // Populate the form fields with the response data
                        $('#BudgetEntries_Type').val(response.Type);
                        $('#BudgetEntries_ChartOfAccountId').val(response.ChartOfAccountId);
                        $('#BudgetEntries_ChartOfAccountAccountName').val(response.ChartOfAccountAccountName);
                        $('#BudgetEntries_Amount').val(response.Amount);
                        $('#BudgetEntries_Reference').val(response.Reference);
                    },
                    error: function (xhr, status, error) {
                        console.error('Error fetching budget entry:', error);
                    }
                });
            });

            $('.remove-btn').click(function () {
                $(this).closest('tr').remove();
            });

            $('.Add-btn').click(function () {
                var type = $('#BudgetEntries').val();
                var accountId = $('#BudgetEntries_ChartOfAccountId').val();
                var accountName = $('#BudgetEntries_ChartOfAccountAccountName').val();
                var amount = $('#BudgetEntries_Amount').val();
                var reference = $('#BudgetEntries_Reference').val();

                if (!type || !accountId || !amount) {
                    alert('Please fill in all required fields');
                    return;
                }

                var newRow = '<tr data-type="' + type + '" data-account-id="' + accountId + '" data-account-name="' + accountName + '" data-amount="' + amount + '" data-reference="' + reference + '">' +
                    '<td>' + type + '</td>' +
                    '<td class="amount-cell">' + amount + '</td>' +
                    '<td>' + reference + '</td>' +
                    '<td><button type="button" class="btn btn-outline-primary edit-btn">Edit</button> ' +
                    '<button type="button" class="btn btn-outline-danger remove-btn">Remove</button></td>' +
                    '</tr>';

                $('table tbody').append(newRow);

                $('#BudgetEntries_Type').val('');
                $('#BudgetEntries_ChartOfAccountId').val('');
                $('#BudgetEntries_ChartOfAccountAccountName').val('');
                $('#BudgetEntries_Amount').val('');
                $('#BudgetEntries_Reference').val('');
            });
        });
    </script>




