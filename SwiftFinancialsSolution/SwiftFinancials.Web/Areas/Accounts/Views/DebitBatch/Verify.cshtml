@model  Application.MainBoundedContext.DTO.AccountsModule.DebitBatchDTO

@{
    /**/

    ViewBag.Title = "Verify Debit Batch ";
    var batchAuthOptions = ViewBag.BatchAuthOptionSelectList as List<SelectListItem>;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Debit Batch</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "DebitBatch", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Verify</strong>
            </li>
        </ol>
