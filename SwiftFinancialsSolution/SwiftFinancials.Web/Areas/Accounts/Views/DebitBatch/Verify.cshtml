</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger fade in">
        <button class="close" data-dismiss="alert">
            ×
        </button>
        <i class="fa-fw fa fa-times"></i>
        <strong>Error!</strong> @TempData["Error"]
    </div>
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Verify", "DebitBatch", new { Area = "Accounts" }, FormMethod.Post, new { @class = "wizard-big", @id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h1>Debit Batch</h1>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group form-group-sm">
                                    @Html.LabelFor(model => model.DebitTypeId, htmlAttributes: new { @class = "control-label" })
                                    @Html.HiddenFor(model => model.DebitTypeId)
                                    @Html.ValidationMessageFor(model => model.DebitTypeId, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.DebitTypeDescription, new { htmlAttributes = new { @class = "DebitTypesLookup form-control required", placeholder = "Description..", disabled = "disabled" } })
                                </div>
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.BranchId, htmlAttributes: new { @class = "control-label" })
                                    @Html.HiddenFor(model => model.BranchId)
                                    @Html.ValidationMessageFor(model => model.BranchId, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.BranchDescription, new { htmlAttributes = new { @class = "BranchesLookup form-control required", placeholder = "Description..", disabled = "disabled" } })
                                </div>
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.Reference, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Reference, new { htmlAttributes = new { @class = "form-control", @placeholder = "Reference" } })
                                    @Html.ValidationMessageFor(model => model.Reference, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.AuditRemarks, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.AuditRemarks, new { htmlAttributes = new { @class = "form-control", @placeholder = "Audit Remarks", @required = "" } })
                                    @Html.ValidationMessageFor(model => model.AuditRemarks, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.BatchAuthOption, new { @class = "control-label" })
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                        @Html.DropDownListFor(model => model.BatchAuthOption, batchAuthOptions, new { @class = "form-control input-md" })
                                        @Html.ValidationMessageFor(model => model.BatchAuthOption)
                                    </div>
                                </div>
                                <div class="form-group form-group-sm">
                                    <div class="col-md-offset-2">
                                        <input type="submit" value="Verify" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </div>

                                }
                            </div>
