    <script>
        document.addEventListener("DOMContentLoaded", function () {
            function updateHiddenInput(tabId, hiddenInputId, checkboxClass) {
                const checkboxes = document.querySelectorAll(`#${tabId} .${checkboxClass}`);
                const hiddenInput = document.getElementById(hiddenInputId);

                const selectedIds = Array.from(checkboxes)
                    .filter(checkbox => checkbox.checked)
                    .map(checkbox => checkbox.getAttribute("data-id"));

                hiddenInput.value = selectedIds.join(",");
            }

            const tabs = [
                { tabId: "MainTab1", hiddenInputId: "SelectedApplicableChargesIds", checkboxClass: "ApplicableChargesrowCheckbox" },
                { tabId: "MainTab2", hiddenInputId: "SelectedApplicableDirectDebitsIds", checkboxClass: "ApplicableDirectDebitsrowCheckbox" },
                { tabId: "MainTab3", hiddenInputId: "SelectedAttachedLoanProductsIds", checkboxClass: "AttachedLoanProductsrowCheckbox" },
                { tabId: "MainTab4", hiddenInputId: "SelectedCELoanProductsIds", checkboxClass: "CELoanProductsrowCheckbox" },
                { tabId: "MainTab5", hiddenInputId: "SelectedAttachedInvestmentsProductsIds", checkboxClass: "AttachedInvestmentsProductsrowCheckbox" },
                { tabId: "MainTab6", hiddenInputId: "SelectedAttachedSavingsProductsIds", checkboxClass: "AttachedSavingsProductsrowCheckbox" }
            ];

            tabs.forEach(tab => {
                const checkboxes = document.querySelectorAll(`#${tab.tabId} .${tab.checkboxClass}`);
                checkboxes.forEach(checkbox => {
                    checkbox.addEventListener("change", () => updateHiddenInput(tab.tabId, tab.hiddenInputId, tab.checkboxClass));
                });

                updateHiddenInput(tab.tabId, tab.hiddenInputId, tab.checkboxClass);
            });

            document.querySelectorAll('[id$="headerCheckbox"]').forEach(headerCheckbox => {
                headerCheckbox.addEventListener("change", function () {
                    const tabId = this.id.replace("headerCheckbox", "");
                    const rowCheckboxes = document.querySelectorAll(`#${tabId} .rowCheckbox`);
                    rowCheckboxes.forEach(checkbox => {
                        checkbox.checked = this.checked;
                    });
                    const matchingTab = tabs.find(tab => tab.tabId === tabId);
                    if (matchingTab) {
                        updateHiddenInput(tab.tabId, matchingTab.hiddenInputId, matchingTab.checkboxClass);
                    }
                });
            });
        });
    </script>



