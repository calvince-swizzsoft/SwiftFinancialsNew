@model  Application.MainBoundedContext.DTO.AccountsModule.CreditTypeDTO
@{
    ViewBag.Title = "Credit Type Details";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Credit Type</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "CreditType", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>View</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-6">
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.Description)</strong>

                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @readonly = "readonly" })
                            </p>


                            <p>
                                <strong>@Html.DisplayNameFor(model => model.TransactionOwnershipDescription)</strong>

                                @Html.TextBoxFor(model => model.TransactionOwnershipDescription, new { @class = "form-control", @readonly = "readonly" })
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.IsLocked)</strong><br>

                                @Html.CheckBoxFor(model => model.IsLocked)<br>
                            </p>
                        </div>
                        <div class="col-lg-6">
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.ChartOfAccountAccountName)</strong>

                                @Html.TextBoxFor(model => model.ChartOfAccountAccountName, new { @class = "form-control", @readonly = "readonly" })
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.CreatedDate)</strong>

                                @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control", @readonly = "readonly" })
                            </p>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <p>
                                @Html.ActionLink("Edit", "Edit", "CreditType", new { id = Model.Id, Area = "Accounts" }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Back to List", "Index", "CreditType", new { Area = "Accounts" }, new { @class = "btn btn-success" })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
