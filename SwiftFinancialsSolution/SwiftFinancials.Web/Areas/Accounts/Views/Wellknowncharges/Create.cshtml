@model Application.MainBoundedContext.DTO.AccountsModule.SystemTransactionTypeInCommissionDTO
@{
    ViewBag.Title = "Create Well Known Charges";
    var systemTransactionType = ViewBag.SystemTransactionType as List<SelectListItem> ?? new List<SelectListItem>();
    var chargeType = ViewBag.Chargetype as List<SelectListItem> ?? new List<SelectListItem>();
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Dashboard", "Index", "Home")</li>
            <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "WellKnownCharges", new { Area = "Accounts" })</li>
            <li class="breadcrumb-item active"><strong>Create</strong></li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Create Well Known Charges</h2>
                    @if (TempData["Successfully"] != null)
                    {
                        <div class="alert alert-primary">
                            <strong>Successfully!</strong> @TempData["Successfully"]
                            <button type="button" class="close" data-dismiss="alert">
                                <span>&times;</span>
                            </button>
                        </div>
                    }
                    <div class="ibox-tools">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        <a class="close-link"><i class="fa fa-times"></i></a>
                    </div>
                </div>

                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Create", "Wellknowncharges", new { Area = "Accounts" }, FormMethod.Post, new { id = "wellKnownChargesForm" }))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="form-group">
                                @Html.LabelFor(model => model.SystemTransactionType, new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.SystemTransactionType, systemTransactionType, new { @class = "form-control input-md", @id = "Systemtransactionype" })
                                @Html.ValidationMessageFor(model => model.SystemTransactionType)
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-group">
                                    @Html.LabelFor(model => model.ComplementType, new { @class = "control-label" })
                                    @Html.DropDownListFor(model => model.ComplementType, chargeType, new { @class = "form-control input-md", @id = "ComplementType" })
                                    @Html.ValidationMessageFor(model => model.ComplementType)
                                </div>
                                <div class="col-md-6 form-group">
                                    @Html.LabelFor(model => model.ComplementFixedAmount, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.ComplementFixedAmount, new { htmlAttributes = new { @class = "form-control", @placeholder = "Fixed Amount.", @id = "ComplementFixedAmount" } })
                                </div>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-hover" id="commissionsTable">
                                    <thead>
                                        <tr>
                                            <th style="display: none">Id</th>
                                            <th>Select</th>
                                            <th>Description</th>
                                            <th>Maximum Charge</th>
                                            <th>Is Locked?</th>
                                            <th>Created Date</th>
                                        </tr>
                                    </thead>
                                    <tbody id="commissionsTableBody"></tbody>
                                </table>
                            </div>

                            <button type="submit" id="submitCharges" class="btn btn-primary">Submit</button>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/Scripts/css/tabbing2.css" rel="stylesheet" />
@section Scripts {
    @Scripts.Render("~/plugins/wizardSteps")
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/typehead")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/sweetalert")
    <script src="~/Scripts/js/navlink.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            $('#Systemtransactionype').change(function () {
                loadCommissions($(this).val());
            });

            function loadCommissions(systemTransactionTypeId) {
                $.ajax({
                    url: '@Url.Action("GetAction", "Wellknowncharges", new { Area = "Accounts" })',
                    type: 'GET',
                    data: { systemTransactionTypeId: systemTransactionTypeId },
                    dataType: 'json',
                    success: function (data) {
                        if (data) {
                            populateCommissions(data.linkedTransactionTypes, data.unlinkedTransactionTypes);
                        } else {
                            Swal.fire({ icon: 'warning', title: 'No Data', text: 'No commissions found for the selected type.' });
                        }
                    },
                    error: function (xhr) {
                        let errorMsg = xhr.status === 404 ? 'Resource not found.' : 'Failed to load commissions.';
                        Swal.fire({ icon: 'error', title: 'Error', text: errorMsg });
                    }
                });
            }

            function populateCommissions(linked, unlinked) {
                var tableBody = $('#commissionsTableBody').empty();

                // Populate Linked Commissions (checked by default)
                linked.forEach(function (item) {
                    tableBody.append(`
                        <tr>
                            <td style="display: none">${item.id}</td>
                            <td><input type="checkbox" class="link-commission" value="${item.id}" checked /></td>
                            <td>${item.description}</td>
                            <td>${item.maximumCharge}</td>
                            <td>${item.isLocked}</td>
                            <td>${item.createdDate}</td>
                        </tr>
                    `);
                });

                // Populate Unlinked Commissions (unchecked by default)
                unlinked.forEach(function (item) {
                    tableBody.append(`
                        <tr>
                            <td style="display: none">${item.id}</td>
                            <td><input type="checkbox" class="link-commission" value="${item.id}" /></td>
                            <td>${item.description}</td>
                            <td>${item.maximumCharge}</td>
                            <td>${item.isLocked}</td>
                            <td>${item.createdDate}</td>
                        </tr>
                    `);
                });
            }
        });
    </script>
}
