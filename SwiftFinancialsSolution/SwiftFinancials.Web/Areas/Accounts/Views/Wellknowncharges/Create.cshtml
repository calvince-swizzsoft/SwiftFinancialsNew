@model Application.MainBoundedContext.DTO.AccountsModule.SystemTransactionTypeInCommissionDTO
@{ var commissions = ViewBag.Commisions;
    ViewBag.Title = "Create Well Known Charges";
    var systemTransactionType = ViewBag.SystemTransactionType as List<SelectListItem>
    ?? new List<SelectListItem>
        ();
    var chargeType = ViewBag.Chargetype as List<SelectListItem>
        ?? new List<SelectListItem>
            (); }

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Dashboard", "Index", "Home")</li>
            <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "WellKnownCharges", new { Area = "Accounts" })</li>
            <li class="breadcrumb-item active"><strong>Create</strong></li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">

                    @if (TempData["successfully"] != null)
                    {
        <script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: '@TempData["successfully"]',
                confirmButtonText: 'OK'
            });
        });
        </script>}

                    <h2>Create Well Known Charges</h2>

                    <div class="ibox-tools">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        <a class="close-link"><i class="fa fa-times"></i></a>
                    </div>
                </div>

                <div class="ibox-content bg-white text-primary">
                    @using (Html.BeginForm("Create", "Wellknowncharges", new { Area = "Accounts" }, FormMethod.Post, new { id = "wellKnownChargesForm" }))
                    {
        @Html.AntiForgeryToken()
                        <fieldset>

                            <div class="form-group">
                                @Html.LabelFor(model => model.SystemTransactionType, new { @class = "control-label" })
                                @Html.DropDownListFor(model => model.SystemTransactionType, systemTransactionType, new { @class = "form-control input-md", @id = "Systemtransactionype" })
                                @Html.ValidationMessageFor(model => model.SystemTransactionType)
                            </div>

                            <div class="row">
                                <div class="col-md-6 form-group">
                                    @Html.LabelFor(model => model.ComplementType, new { @class = "control-label" })
                                    @Html.DropDownListFor(model => model.ComplementType, chargeType, new { @class = "form-control input-md", @id = "ComplementType" })
                                    @Html.ValidationMessageFor(model => model.ComplementType)
                                </div>
                                <div class="col-md-6 form-group">
                                    @Html.LabelFor(model => model.ComplementFixedAmount, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.ComplementFixedAmount, new { htmlAttributes = new { @class = "form-control", @placeholder = "Fixed Amount.", @id = "ComplementFixedAmount" } })
                                </div>

                            </div>                                        <div class="table-responsive">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                        <tr>
                                            <th>Select</th>
                                            <th>Commission Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (commissions != null)
                                        {
                                            foreach (var commission in commissions)
                                            {
                        <tr>
                            <td>
                                <input type="checkbox" name="commisionIds" value="@commission.Id" />
                            </td>
                            <td>@commission.Description</td>
                        </tr>
 }
                }
                else
                {
<tr>
    <td colspan="2">No commissions available</td>
</tr>
}
                                    </tbody>
                                </table>
                            </div>

                            <button type="submit" id="submitCharges" class="btn btn-primary">Submit</button>
                        </fieldset>}
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/wizardSteps")
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/typehead")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/sweetalert")
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>$(document).ready(function () {
            $('#Systemtransactionype').change(function () {
                loadCommissions($(this).val());
            });

            function loadCommissions(systemTransactionTypeId) {
                $.ajax({
                    url: '@Url.Action("GetAction", "Wellknowncharges", new { Area = "Accounts" })',
                    type: 'GET',
                    data: { systemTransactionTypeId: systemTransactionTypeId },
                    dataType: 'json',
                    success: function (data) {
                        if (data && data.linkedTransactionTypes && data.unlinkedTransactionTypes) {
                            populateCommissions(data.linkedTransactionTypes, data.unlinkedTransactionTypes);
                        } else {
                            Swal.fire({ icon: 'warning', title: 'No Data', text: 'No commissions found for the selected type.' });
                        }
                    },
                    error: function (xhr) {
                        Swal.fire({ icon: 'error', title: 'Error', text: xhr.status === 404 ? 'Resource not found.' : 'Failed to load commissions.' });
                    }
                });
            }

            function populateCommissions(linked, unlinked) {
                var tableBody = $('#commissionsTableBody').empty();
                function appendRow(item) {
                    tableBody.append(`<tr><td>${item.description || 'No Description'}</td></tr>`);
                }
                linked.forEach(item => appendRow(item));
                unlinked.forEach(item => appendRow(item));
            }
        });</script>
}
