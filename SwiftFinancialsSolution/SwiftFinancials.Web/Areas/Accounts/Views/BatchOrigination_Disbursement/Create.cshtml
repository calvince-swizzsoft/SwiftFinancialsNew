                                        @Html.EditorFor(model => model.AuditRemarks, new { htmlAttributes = new { @class = "form-control custom-border-radius", @required = "", @placeholder = "Enter text..." } })
                                    </div>
                                </div>


                                <div class="col-lg-4" style="margin-top: 25px;">
