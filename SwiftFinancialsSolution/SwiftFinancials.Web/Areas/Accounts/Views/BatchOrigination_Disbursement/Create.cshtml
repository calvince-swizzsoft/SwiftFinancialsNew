                                </div>
                            </div>
                            <div class="col-lg-4">
                                @Html.LabelFor(model => model.Type, "Type", new { @class = "control-label" })
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                    @Html.DropDownListFor(model => model.Type, disbursementType, new { @class = "form-control input-md custom-border-radius" })
                                    @Html.ValidationMessageFor(model => model.Type)
                                </div>
                            </div>
                            <div class="col-lg-4">
                                @Html.LabelFor(model => model.Priority, new { @class = "control-label" })
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                    @Html.DropDownListFor(model => model.Priority, priority, new { @class = "form-control input-md custom-border-radius" })
                                    @Html.ValidationMessageFor(model => model.Priority)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                @Html.LabelFor(model => model.LoanProductCategory, new { @class = "control-label" })
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                    @Html.DropDownListFor(model => model.LoanProductCategory, category, new { @class = "form-control input-md custom-border-radius" })
                                    @Html.ValidationMessageFor(model => model.LoanProductCategory)
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.BranchId, htmlAttributes: new { @class = "control-label" })
                                    @Html.HiddenFor(model => model.BranchId)
                                    @Html.ValidationMessageFor(model => model.BranchDescription, "", new { @class = "text-danger" })
                                    @Html.EditorFor(model => model.BranchDescription, new { htmlAttributes = new { @class = "BranchesLookup form-control required", placeholder = "Description.." } })
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.Reference, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Reference, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "" } })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.BatchTotal, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.BatchTotal, new { htmlAttributes = new { @class = "form-control custom-border-radius", @id = "BatchTotal", @placeholder = "" } })
                                </div>
                            </div>

                            @*<div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.CreatedBy, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.CreatedBy, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "" } })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.CreatedDate, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "" } })
                                </div>
                            </div>*@
                        </div>

                        <br />

                        <div class="section-container">
                            <div class="section-title">Batch Entries</div>
                            <div class="table-container">
                                <h3 style="font-size: 1.9rem; text-align: center;">Loan Disbursement Batch Entries</h3>

                                <table id="dataTableEntries" class="footable table table-striped toggle-arrow-tiny grey-table">
                                    <thead>
                                        <tr>
                                            <th>Select?</th>
                                            <th>Loan Number</th>
                                            <th>Loan Status</th>
                                            <th>Customer Name</th>
                                            <th>Personal File Number</th>
                                            <th>Loan Product</th>
                                            <th>Loan Purpose</th>
                                            <th>Annual Percentage Rate</th>
                                            <th>Term (Months)</th>
                                            <th>Amount Approved</th>
                                            <th>Received Date</th>

                                        </tr>
                                    </thead>
                                    <tbody>
