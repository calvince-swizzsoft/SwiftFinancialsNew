
@model  Application.MainBoundedContext.DTO.BackOfficeModule.LoanDisbursementBatchDTO

@{
    ViewBag.Title = "Create Loan Disbursement Batch";

    var priority = ViewBag.Priority as List<SelectListItem>;
    //var batchType = ViewBag.BatchType as List<SelectListItem>;

    var disbursementType = ViewBag.DisbursementType as List<SelectListItem>;
    var category = ViewBag.Category as List<SelectListItem>;

}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "BatchOrigination_Disbursement", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger fade in">
        <button class="close" data-dismiss="alert">
            ×
        </button>
        <i class="fa-fw fa fa-times"></i>
        <strong>Error!</strong> @TempData["Error"]
    </div>
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Create Loan Disbursement Batch</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-dark">
                    @using (Html.BeginForm("Create", "BatchOrigination_Disbursement", new { Area = "Accounts" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.Type,"Type", new { @class = "control-label" })
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                        @Html.DropDownListFor(model => model.Type, disbursementType, new { @class = "form-control input-md custom-border-radius" })
                                        @Html.ValidationMessageFor(model => model.Type)
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.Priority, new { @class = "control-label" })
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                        @Html.DropDownListFor(model => model.Priority, priority, new { @class = "form-control input-md custom-border-radius" })
                                        @Html.ValidationMessageFor(model => model.Priority)
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.LoanProductCategory, new { @class = "control-label" })
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                        @Html.DropDownListFor(model => model.LoanProductCategory, category, new { @class = "form-control input-md custom-border-radius" })
                                        @Html.ValidationMessageFor(model => model.LoanProductCategory)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.Reference, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.Reference, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @required = "" } })
                                </div>
                            </div>
                        </div>

                        <div class="bottom-button">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="form-group form-group-sm">
                                        <input type="submit" value="Create" class="btn btn-primary" style="width: 150px;" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


