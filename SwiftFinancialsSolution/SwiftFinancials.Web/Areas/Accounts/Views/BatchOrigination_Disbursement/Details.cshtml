@model  Application.MainBoundedContext.DTO.BackOfficeModule.LoanDisbursementBatchDTO

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .section-container {
        border: 1px solid #00000080;
        border-radius: 5px;
        padding: 20px;
        background-color: #fff;
        width: 100%;
        margin: auto;
        position: relative;
    }

    .section-title {
        position: absolute;
        top: -12px;
        left: 20px;
        background-color: #fff;
        padding: 0 10px;
        font-weight: bold;
        color: black;
    }

    #dataTableEntries {
        width: 100%;
        border-collapse: collapse;
    }

        #dataTableEntries th, td {
            padding: 15px;
            text-align: center;
            border: 1px solid #ddd;
            transition: background 0.3s, transform 0.3s;
        }

        #dataTableEntries th {
            background: linear-gradient(to bottom, #4a90e2, #003366);
            color: white;
            text-transform: uppercase;
            font-size: 1.1em;
            position: sticky;
            top: 0;
            z-index: 1;
        }

        #dataTableEntries tr:hover td {
            background: rgba(74, 144, 226, 0.2);
            transform: translateY(-2px);
        }

        #dataTableEntries td {
            background: #f9f9f9;
            color: #333;
        }

        #dataTableEntries tr:nth-child(even) td {
            background: #f2f2f2;
        }

        #dataTableEntries tr:nth-child(odd) td {
            background: #ffffff;
        }

        #dataTableEntries tr:last-child td {
            border-bottom: none;
        }

    .blue-section {
        margin-top: 20px;
        background-color: #e0f0ff;
        padding: 15px;
        border-radius: 8px;
    }
</style>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "BatchOrigination_Disbursement", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger fade in">
        <button class="close" data-dismiss="alert">
            ×
        </button>
        <i class="fa-fw fa fa-times"></i>
        <strong>Error!</strong> @TempData["Error"]
    </div>
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Loan Disbursement Batch Details</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-dark">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group form-group-lg">
                                @Html.LabelFor(model => model.BatchNumber, "Batch Number", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.BatchNumber, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group form-group-lg">
                                @Html.LabelFor(model => model.TypeDescription, "Type", htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.TypeDescription, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group form-group-lg">
                                @Html.LabelFor(model => model.PriorityDescription, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.PriorityDescription, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="form-group form-group-lg">
                                @Html.LabelFor(model => model.LoanProductCategoryDescription, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.LoanProductCategoryDescription, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group form-group-lg">
                                @Html.LabelFor(model => model.Reference, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Reference, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="section-container">
                        <div class="section-title">Batch Entries</div>
                        <div class="table-container">
                            <h3 style="font-size: 1.9rem; text-align: center;">Loan Disbursement Batch Entries</h3>

                            <table id="dataTableEntries" class="footable table table-striped toggle-arrow-tiny grey-table">
                                <thead>
                                    <tr>
                                        <th>Loan Number</th>
                                        <th>Loan Status</th>
                                        <th>Customer Name</th>
                                        <th>Personal File Number</th>
                                        <th>Loan Product</th>
                                        <th>Loan Purpose</th>
                                        <th>Annual Percentage Rate</th>
                                        <th>Term (Months)</th>
                                        <th>Amount Approved</th>
                                        <th>Received Date</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (ViewBag.BatchEntries != null)
                                    {
                                        foreach (var entries in ViewBag.BatchEntries)
                                        {
                                            <tr>
                                                <td>@entries.LoanCaseCaseNumber</td>
                                                <td>@entries.LoanCaseStatusDescription</td>
                                                <td>@entries.CustomerFullName</td>
                                                <td>@entries.LoanCaseCustomerReference3</td>
                                                <td>@entries.LoanCaseLoanProductDescription</td>
                                                <td>@entries.LoanCaseLoanPurposeDescription</td>
                                                <td>@entries.LoanCaseLoanInterestAnnualPercentageRate</td>
                                                <td>@entries.LoanCaseLoanRegistrationTermInMonths</td>
                                                <td style="text-align: right;">@entries.LoanCaseApprovedAmount</td>
                                                <td>@entries.LoanCaseReceivedDate</td>

                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/Scripts/css/ViewbagTable.css" rel="stylesheet" />
