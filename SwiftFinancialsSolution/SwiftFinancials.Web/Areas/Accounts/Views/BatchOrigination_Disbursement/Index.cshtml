

@model  Application.MainBoundedContext.DTO.BackOfficeModule.LoanDisbursementBatchDTO



@{
    ViewBag.Title = "Disbursement | Origination";
    var batchStatus = ViewBag.BatchStatus as List<SelectListItem>;

}



<style>
    .blue-section {
        margin-top: 20px;
        background-color: #e0f0ff;
        padding: 15px;
        border-radius: 8px;
    }
</style>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Loan Disbursement Batch</h2>
                    <hr />
                    @Html.ActionLink("Create Disbursement Batch", "Create", "BatchOrigination_Disbursement", new { Area = "Accounts" }, new { @class = "btn btn-primary" })

                    @if (TempData["Verification"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Verification"]
                        </div>
                    }

                    @if (TempData["Authorization"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["Authorization"]
                        </div>
                    }

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>

                    <div class="blue-section">
                        <form id="filterForm">
                            <div class="row" style="display: flex; justify-content: flex-start; align-content:center;">
                                <div class="col-lg-2">
                                    <div class="form-group form-group-lg">
                                        <label for="filterType">Status</label>
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.Status, batchStatus,
                                            new { @class = "form-control input-md", @id = "Status" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-2">
                                    <div class="form-group form-group-lg">
                                        <label for="filterType">Start Date</label>
                                        <div class="input-group">
                                            <input type="date" class="form-control" id="startDate" value="@DateTime.Now.AddDays(-355).ToString("yyyy-MM-dd")" />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-2">
                                    <div class="form-group form-group-lg">
                                        <label for="filterType">End Date</label>
                                        <div class="input-group">
                                            <input type="date" class="form-control" id="endDate" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-5" style="margin-top: 27px;">
                                    <div class="form-group spacing-form-group">
                                        <div class="input-group text-box">
                                            @Html.TextBox("filterValue", null, new { @class = "form-control", @placeholder = "Enter filter value...", @id = "filterValue" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-1" style="margin-top:20px;">
                                    <div class="form-group form-group-sm">
                                        <input type="submit" value="Refresh" id="applyFilter" class="btn btn-primary" style="width: 80px; height: auto; " />
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                    <br />
                    <div class="table-responsive">
                        <table id="LoanDisbursementBatchesGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">
                                        Loading data from server
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#LoanDisbursementBatchesGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "BatchOrigination_Disbursement", new { Area = "Accounts"}))",
                "sServerMethod": "POST",

                "fnServerParams": function (aoData) {
                    var startDateValue = $('#startDate').val();
                    var endDateValue = $('#endDate').val();

                    var formattedStartDate = startDateValue ? new Date(startDateValue).toISOString().split("T")[0] : null;
                    var formattedEndDate = endDateValue ? new Date(endDateValue).toISOString().split("T")[0] : null;

                    console.log("Sending AJAX Params:");
                    console.log("Status:", $('#Status').val());
                    console.log("Start Date:", formattedStartDate);
                    console.log("End Date:", formattedEndDate);
                    console.log("Filter Value:", $('#filterValue').val());

                    aoData.push({ "name": "Status", "value": $('#Status').val() });
                    aoData.push({ "name": "startDate", "value": formattedStartDate });
                    aoData.push({ "name": "endDate", "value": formattedEndDate });
                    aoData.push({ "name": "filterValue", "value": $('#filterValue').val() });
                },


                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var viewButton = `<a class="btn btn-primary" style="width: 150px;" href="/accounts/BatchOrigination_Disbursement/Details/${aData.Id}">View</a>`;

                    $('td:eq(7)', nRow).html(dt_Created);
                    $('td:eq(8)', nRow).html(viewButton);

                    return nRow;
                },

                // Display settings
                "aoColumns": [
                    { "mDataProp": "BatchNumber", "sTitle": "Batch Number", "sWidth": "10%" },
                    { "mDataProp": "TypeDescription", "sTitle": "Type", "sWidth": "10%" },
                    { "mDataProp": "StatusDescription", "sTitle": "Status", "sWidth": "10%" },
                    { "mDataProp": "BranchDescription", "sTitle": "Branch", "sWidth": "10%" },
                    { "mDataProp": "PriorityDescription", "sTitle": "Priority", "sWidth": "10%" },
                    { "mDataProp": "LoanProductCategoryDescription", "sTitle": "Category", "sWidth": "10%" },
                    { "mDataProp": "Reference", "sTitle": "Reference", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Action", "sWidth": "10%", "bSortable": false }],
                "aaSorting": [[0, "desc"]]
            });

            $('#filterForm').on('submit', function (e) {
                e.preventDefault();
                $('#LoanDisbursementBatchesGrid').DataTable().ajax.reload();
            });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>
}

