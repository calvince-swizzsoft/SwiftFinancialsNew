                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-4">
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.Description)</strong><br>
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @readonly = "readonly" } })
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.Code)</strong><br>
                                @Html.EditorFor(model => model.Code, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @readonly = "readonly" } })
