                                @Html.EditorFor(model => model.MinimumBalance, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @readonly = "readonly" } })
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.OperatingBalance)</strong><br>
                                @Html.EditorFor(model => model.OperatingBalance, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @readonly = "readonly" } })
                            </p>
                        </div>

                        <div class="col-lg-4">
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.WithdrawalNoticeAmount)</strong><br>
                                @Html.EditorFor(model => model.WithdrawalNoticeAmount, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @readonly = "readonly" } })
                            </p>
                            <p>
                                <strong> @Html.DisplayNameFor(model => model.CreatedDate)</strong><br>
                                @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control", @placeholder = "Maximum Allowed Withdrawal", @readonly = "readonly" } })
