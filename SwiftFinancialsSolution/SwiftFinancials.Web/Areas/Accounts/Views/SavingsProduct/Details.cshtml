                    </div>


                    <div class="row">
                        <div class="col-lg-12">
                            <p>
                                @Html.ActionLink("Back to List", "Index", "SavingsProduct", new { Area = "Accounts" }, new { @class = "btn btn-success" })

                                &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;

                                @Html.ActionLink("Edit Savings Products", "Edit", "SavingsProduct", new { id = Model.Id, Area = "Accounts" }, new { @class = "btn btn-success" })
                            </p>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
