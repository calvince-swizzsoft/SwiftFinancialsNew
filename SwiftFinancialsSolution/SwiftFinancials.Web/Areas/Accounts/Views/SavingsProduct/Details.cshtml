                            <p>
                                <strong>@Html.DisplayNameFor(model => model.ChartOfAccountAccountName)</strong><br>
                                @Html.EditorFor(model => model.ChartOfAccountAccountName, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @readonly = "readonly" } })
                            </p>
                        </div>

                        <div class="col-lg-4">
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.MaximumAllowedWithdrawal)</strong><br>
                                @Html.EditorFor(model => model.MaximumAllowedWithdrawal, new { htmlAttributes = new { @class = "form-control", @placeholder = "", @readonly = "readonly" } })
