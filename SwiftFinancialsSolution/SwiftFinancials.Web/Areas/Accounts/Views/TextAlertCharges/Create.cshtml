@model Application.MainBoundedContext.DTO.AccountsModule.DynamicChargeDTO

@{
    ViewBag.Title = "Create Text Alert Charges";
    var queuePriorities = ViewBag.SystemTransactionType as List<SelectListItem>;
    var Charge = ViewBag.ChargeBenefactor as List<SelectListItem>;
    var Alternate = ViewBag.AlternateChannelType as List<SelectListItem>;
}

<div class="row wrapper border-bottom white-bg page-heading" style="box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb" style="background-color: #f8f9fa; border-radius: 5px;">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "TextAlertCharges", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Text Alert Charges</h2>
                    @if (TempData["Successfully"] != null)
                    {
                        <div class="alert alert-primary">
                            <strong>Success!</strong> @TempData["Successfully"]
                            <button type="button" class="close" data-dismiss="alert">
                                <span>&times;</span>
                            </button>
                        </div>
                    }
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Create", "TextAlertCharges", new { Area = "Accounts" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="row">
                                <div class="col-md-12 form-group">
                                    @Html.LabelFor(model => model.RecoverySource, new { @class = "control-label" })
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                        @Html.DropDownListFor(model => model.RecoverySource, Charge, new { @class = "form-control input-md", style = "border: 1px solid #ccc;" })
                                        @Html.ValidationMessageFor(model => model.RecoverySource)
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", style = "border: 1px solid #ccc;" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.RecoveryMode, new { @class = "control-label" })
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.RecoveryMode, queuePriorities, new { @class = "form-control input-md", style = "border: 1px solid #ccc;" })
                                            @Html.ValidationMessageFor(model => model.RecoveryMode)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Tabs for charges -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                                        <li class="nav-item">
                                            <a class="nav-link active" id="charges-tab" data-toggle="tab" href="#charges" role="tab" aria-controls="charges" aria-selected="true">Applicable Charges</a>
                                        </li>
                                        @*<li class="nav-item">
                                            <a class="nav-link" id="other-tab" data-toggle="tab" href="#other" role="tab" aria-controls="other" aria-selected="false">Other Information</a>
                                        </li>*@
                                    </ul>
                                    <div class="tab-content" id="myTabContent">
                                        <div class="tab-pane fade show active" id="charges" role="tabpanel" aria-labelledby="charges-tab">
                                            <h3>Applicable Charges</h3>
                                            <div class="form-group">
                                                <div style="text-align: left;">
                                                    <input type="checkbox" id="headerCheckbox" style="transform: scale(1); color: blue;">
                                                    <label for="headerCheckbox" style="font-weight: bold;">Select All</label>
                                                </div>

                                                <div class="table-responsive">
                                                    <table id="LoanProductsGrid" class="table table-striped table-bordered table-hover" style="border: 1px solid #ddd; border-radius: 5px; margin-top: 10px;">
                                                        <thead>
                                                            <tr>
                                                                <th>Select</th>
                                                                <th>Name</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr>
                                                                <td colspan="2" class="dataTables_empty">Loading data from server</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>

                                                <input type="submit" value="Create" class="btn btn-primary" />
                                            </div>
                                        </div>
                                        <!--<div class="tab-pane fade" id="other" role="tabpanel" aria-labelledby="other-tab">
                                            <h3>Other Information</h3>-->
                                            <!-- You can add additional fields or information here -->
                                            <!--<p>Placeholder for other information related to text alert charges.</p>
                                        </div>-->
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/sweetAlert2")

    <script>
        $(document).ready(function () {
            var table = $('#LoanProductsGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "Commission", new { Area = "Accounts" }))",
                "sServerMethod": "POST",
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var checkboxHTML = '<input type="checkbox" class="rowCheckbox" data-id="' + aData.Id + '">';
                    $('td:eq(0)', nRow).html(checkboxHTML);
                    return nRow;
                },
                "aoColumns": [
                    { "mDataProp": "Id", "sTitle": "Select", "sWidth": "0.09%" },
                    { "mDataProp": "Description", "sTitle": "Name", "sWidth": "10%", "bSortable": false }
                ],
                "aaSorting": [[0, "desc"]]
            });

            $('#headerCheckbox').on('change', function () {
                $('.rowCheckbox').prop('checked', $(this).prop('checked'));
            });

            // SweetAlert for submit button
            document.getElementById('submit-btn').addEventListener('click', function (e) {
                e.preventDefault();
                Swal.fire({
                    title: 'Success',
                    text: 'Applicable charge created successfully!',
                    icon: 'success',
                    confirmButtonText: 'OK'
                });
            });
        });
    </script>
}
