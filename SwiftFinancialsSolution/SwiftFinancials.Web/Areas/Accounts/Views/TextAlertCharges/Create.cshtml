    <script>
        // Open the modal
        $("#openModalButton").click(function () {
            $("#applicableChargesModal").css("display", "block");
        });

        // Close the modal
        $(".close").click(function () {
            $("#applicableChargesModal").css("display", "none");
        });



        function sendFormData() {
            // Create an object to hold the form data
            let formData = {
                Description: document.querySelector('[name="Description"]').value,
                RecoveryMode: document.querySelector('[name="RecoveryMode"]').value,
                RecoverySource: document.querySelector('[name="RecoverySource"]').value
            };

            // Send the data to the first controller using fetch
            fetch('/TextAlertCharges/TextAlertCharges', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': document.querySelector('[name="__RequestVerificationToken"]').value // Include this line if you are using Anti-Forgery Token
                },
                body: JSON.stringify(formData)
            })
                .then(response => response.json())
                .then(data => {
                    // Handle the response data here
                    console.log('Form Data Submitted:', data);
                })
                .catch((error) => {
                    console.error('Error:', error);
                });
        }
    </script>




