                        Swal.fire({
                            icon: 'error',
                            title: 'Error!',
                            text: response.message,
                            timer: 8000,  // Closes after 8 seconds
                            showConfirmButton: true
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: 'An error occurred while processing your request.',
                        timer: 8000,
                        showConfirmButton: true
                    });
                }
            });
        });
    });
    </script>





