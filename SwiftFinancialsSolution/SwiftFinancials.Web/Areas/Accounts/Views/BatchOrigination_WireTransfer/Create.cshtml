    <script>

  $(document).ready(function () {
    // Handle form submission with AJAX
    $("#formAddBatch").submit(function (e) {
        e.preventDefault(); // Prevent default form submission

        $.ajax({
            url: $(this).attr('action'), // Use the action attribute of the form
            type: 'POST',
            data: $(this).serialize(), // Serialize the form data
            success: function (response) {
                if (response.success) {
                    updateEntriesTable(response.entries); // Update the table with the new data
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Entry added successfully.',
                        timer: 2000,
                        showConfirmButton: false
                    });
                    clearEntryForm(); // Clear the form after successful submission
                } else {
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: response.message,
                        timer: 8000,
                        showConfirmButton: true
                    });
                }
            },
            error: function (xhr, status, error) {
                console.error("An error occurred:", error); // Log any errors for debugging
            }
        });
    });
});

        function updateEntriesTable(entries) {
            var tableBody = $("#ChargeSplits tbody");
            tableBody.empty(); // Clear existing entries

            $.each(entries, function (index, entry) {
                var row = `<tr data-id="${entry.Id}">
                           <td>${entry.WiretransferCustomerAccountFullAccountNumber}</td>
                           <td>${entry.ProductDescription}</td>
                           <td>${entry.Amount}</td>
                           <td><button type="button" class="btn btn-danger remove-entry" data-id="${entry.Id}">Remove</button></td>
                       </tr>`;
                tableBody.append(row); // Append the new row to the table
            });
