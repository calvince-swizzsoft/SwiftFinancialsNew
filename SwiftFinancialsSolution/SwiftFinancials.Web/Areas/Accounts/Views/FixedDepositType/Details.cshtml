<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white">
                    @using (Html.BeginForm("Details", "FixedDepositType", new { Area = "Accounts" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="row">
                                <!-- Left Column -->
                                <div class="col-lg-6 d-flex flex-column justify-content-center">
                                    <div class="form-group form-group-sm">
                                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Name", @required = "" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <!-- Right Column -->
                                <div class="col-lg-6 d-flex align-items-center">
                                    <div class="form-group form-group-lg">
                                        <div class="form-check">
                                            @Html.CheckBoxFor(model => model.IsLocked, new { @class = "form-check-input" })
                                            @Html.LabelFor(model => model.IsLocked, new { @class = "form-check-label", @placeholder = "Is Locked?" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.IsLocked, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>






                            <input type="hidden" name="SelectedRoles" id="SelectedRoles" />
                            <input type="hidden" name="SelectedBranches" id="SelectedBranches" />

                            <!-- Tabs -->
                            <ul class="nav nav-tabs" id="roleBranchTabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link active" id="roles-tab" data-toggle="tab" href="#roles" role="tab">Roles</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" data-toggle="tab" href="#mandatorySavingsProducts" role="tab">AttachedLoan</a>
                                </li>
                            </ul>

                            <div class="tab-content">
                                <!-- Roles Tab -->
                                <div class="tab-pane fade show active" id="roles" role="tabpanel">
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">Levies</div>
                                        <div class="panel-body">
                                            <table class="table table-bordered table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Description</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (ViewBag.ApplicableLevies != null)
                                                    {
                                                        foreach (var levy in ViewBag.ApplicableLevies)
                                                        {
                                                            <tr>                                                                
                                                                <td>@levy.Description</td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td colspan="2">No levies available</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <!-- Branches Tab -->
                                <div id="mandatorySavingsProducts" class="tab-pane">
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">Loanproducts</div>
                                        <div class="panel-body">
                                            <table class="table table-bordered table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Description</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @if (ViewBag.AttachedloanProduct != null)
                                                    {
                                                        foreach (var product in ViewBag.AttachedloanProduct)
                                                        {
                                                            <tr>
                                                               
                                                                <td>@product.Description</td>
                                                            </tr>
                                                        }
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td colspan="2">No loan products available</td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="button-group" style="display: flex; gap: 10px;">
                                <div style="width: 100px; height: 40px;">
                                    @Html.ActionLink("Edit", "Edit", "FixedDepositType", new { id = Model.Id, Area = "Accounts" }, new { @class = "btn btn-success", style = "display: flex; justify-content: center; align-items: center; width: 100%; height: 100%;" })
                                </div>
                                <div style="width: 100px; height: 40px;">
                                    @Html.ActionLink("Back to List", "Index", "FixedDepositType", new { Area = "Accounts" }, new { @class = "btn btn-success", style = "display: flex; justify-content: center; align-items: center; width: 100%; height: 100%;" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


