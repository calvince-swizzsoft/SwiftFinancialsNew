@{
    ViewBag.Title = "Transaction Journals";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Transaction Journals</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)</li>
            <li class="breadcrumb-item active"><strong>List</strong></li>
        </ol>
    </div>
</div>

<style>
    .dropdown-item {
        display: block;
        padding: 10px 15px;
        color: #333;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 4px;
        transition: background-color 0.3s, color 0.3s;
    }

        .dropdown-item:hover {
            background-color: #007bff;
            color: #fff;
        }

        .dropdown-item:focus {
            outline: none;
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
        }
</style>

<div class="wrapper wrapper-content">
    <div class="row mb-3">
        <div class="col-md-2">
            <label for="startDate">Start Date</label>
            <input type="date" class="form-control" id="startDate" name="startDate" />
        </div>
        <div class="col-md-2">
            <label for="endDate">End Date</label>
            <input type="date" class="form-control" id="endDate" name="endDate" />
        </div>
        <div class="col-md-3">
            <label for="reference">Reference</label>
            <input type="text" class="form-control" id="reference" name="reference" placeholder="Search Ref..." />
        </div>
        <div class="col-md-2">
            <label>&nbsp;</label>
            <button id="filterBtn" class="btn btn-primary btn-block">Apply Filter</button>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
                    }
                    <div class="ibox-tools">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        <a class="close-link"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="TransactionJournals" class="table table-striped table-bordered table-hover" width="100%">
                            <thead></thead>
                            <tbody>
                                <tr><td colspan="11" class="dataTables_empty">Loading data from server...</td></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        let dataTable;

        function loadTable() {
            dataTable = $('#TransactionJournals').DataTable({
                destroy: true,
                sPaginationType: "full_numbers",
                bProcessing: true,
                bServerSide: true,
                sAjaxSource: "@Url.Action("Index", "TransactionJournals", new { Area = "Accounts" })",
                sServerMethod: "POST",
                fnServerParams: function (aoData) {
                    aoData.push(
                        { name: "startDate", value: $('#startDate').val() },
                        { name: "endDate", value: $('#endDate').val() },
                        { name: "reference", value: $('#reference').val() }
                    );
                },
                fnRowCallback: function (nRow, aData) {
                    var jsDate = new Date(parseInt(aData.JournalCreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var formattedDate = $.datepicker.formatDate('dd/mm/yy', jsDate) + " " +
                        ("0" + jsDate.getHours()).slice(-2) + ":" +
                        ("0" + jsDate.getMinutes()).slice(-2) + ":" +
                        ("0" + jsDate.getSeconds()).slice(-2);
                    $('td:eq(16)', nRow).html(formattedDate);

                    var actions = `
                        <div class="dropdown">
                            <button class="btn btn-outline-info dropdown-toggle" type="button" data-toggle="dropdown">
                                Actions
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/accounts/ChartOfAccount/details/${aData.Id}">View</a>
                                <a class="dropdown-item" href="/accounts/ChartOfAccount/edit/${aData.Id}">Edit</a>
                            </div>
                        </div>`;
                    $('td:eq(17)', nRow).html(actions);
                    return nRow;
                },
                aoColumns: [
                    { mDataProp: "AvailableBalance", sTitle: "Account Balance", sWidth: "10%" },
                    { mDataProp: "JournalTransactionCodeDescription", sTitle: "Transaction Type", sWidth: "10%" },
                    { mDataProp: "JournalSecondaryDescription", sTitle: "Sec: Description", sWidth: "15%" },
                    { mDataProp: "CustomerFullName", sTitle: "Full Name", sWidth: "15%" },
                    { mDataProp: "CustomerReference2", sTitle: "Customer Ref", sWidth: "10%" },
                    { mDataProp: "Debit", sTitle: "Debit", sWidth: "10%" },
                    { mDataProp: "Credit", sTitle: "Credit", sWidth: "10%" },
                    { mDataProp: "CustomerAccountAccountTypeTargetProductDescription", sTitle: "Terget Product", sWidth: "10%" },
                    { mDataProp: "CustomerAccountNumber", sTitle: "Account Number", sWidth: "10%" },
                    { mDataProp: "ContraGLAccountDescription", sTitle: "Contra Gl Account", sWidth: "10%" },
                    { mDataProp: "JournalPrimaryDescription", sTitle: "Primary Description", sWidth: "10%" },
                    { mDataProp: "RunningBalance", sTitle: "RunningBalance", sWidth: "10%" },
                    { mDataProp: "BookBalance", sTitle: "Book Balance", sWidth: "10%" },
                    { mDataProp: "GLAccountDescription", sTitle: "GL Description", sWidth: "10%" },
                    { mDataProp: "EnvironmentUserName", sTitle: "Posted By", sWidth: "10%" },
                    { mDataProp: "JournalCreatedDate", sTitle: "Date Created", bSortable: false },
                    { mDataProp: null, sTitle: "Actions", bSortable: false }
                ],
                aaSorting: [[9, "desc"]]
            });
        }

        $(document).ready(function () {
            // Set default date range to today
            const today = new Date().toISOString().split('T')[0];
            $('#startDate').val(today);
            $('#endDate').val(today);

            loadTable();

            $('#filterBtn').on('click', function (e) {
                e.preventDefault();
                dataTable.ajax.reload();
            });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').addClass('sk-loading');
        });

        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').removeClass('sk-loading');
        });
    </script>
}
