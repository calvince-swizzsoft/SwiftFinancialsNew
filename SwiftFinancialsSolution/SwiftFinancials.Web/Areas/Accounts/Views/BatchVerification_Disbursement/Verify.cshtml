    <!-- JavaScript -->
    <script>
        $(document).ready(function () {
            var selectedIds = [];
            $('#headerCheckbox').on('change', function () {
                var isChecked = $(this).is(':checked');
                $('.rowCheckbox').prop('checked', isChecked);

                selectedIds = isChecked ? $('.rowCheckbox').map(function () { return this.value; }).get() : [];
                $('#selectedIds').val(selectedIds.join(','));
            });

            $('.rowCheckbox').on('change', function () {
                var value = $(this).val();
                if ($(this).is(':checked')) {
                    if (!selectedIds.includes(value)) {
                        selectedIds.push(value);
                    }
                } else {
                    selectedIds = selectedIds.filter(id => id !== value);
                }

                $('#headerCheckbox').prop('checked', $('.rowCheckbox:checked').length === $('.rowCheckbox').length);

                $('#selectedIds').val(selectedIds.join(','));
            });

            $('#submitForm').on('submit', function () {
                $('<input />').attr('type', 'hidden')
                    .attr('name', 'selectedIds')
                    .attr('value', selectedIds.join(','))
                    .appendTo('#submitForm');
            });
        });
    </script>

    <script>
        $(document).ready(function () {
            function calculateBatchTotal() {
                let total = 0;

                $(".rowCheckbox:checked").each(function () {
                    let amount = parseFloat($(this).closest("tr").find("td:nth-child(10)").text().replace(/,/g, '')) || 0;
                    total += amount;
                });
                $("#BatchTotal").val(total.toLocaleString());
            }

            $(".rowCheckbox").on("change", function () {
                calculateBatchTotal();
            });

            $("#headerCheckbox").on("change", function () {
                $(".rowCheckbox").prop("checked", this.checked);
                calculateBatchTotal();
            });
        });
    </script>
