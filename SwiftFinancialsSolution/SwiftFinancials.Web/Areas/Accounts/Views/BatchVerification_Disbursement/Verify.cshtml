    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "BatchOrigination_Disbursement", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Verify Loan Disbursement Batch</h2>

                    @if (TempData["required"] != null)
                    {
                        <script>
                            document.addEventListener("DOMContentLoaded", function () {
                                Swal.fire({
                                    icon: "warning",
                                    title: "Warning!",
                                    text: "@TempData["required"]",
                                    confirmButtonColor: "#007bff"
                                });
                            });
                        </script>
                    }

                    @if (TempData["Fail"] != null)
                    {
                        <script>
                            document.addEventListener("DOMContentLoaded", function () {
                                Swal.fire({
                                    icon: "error",
                                    title: "Error!",
                                    text: "@TempData["Fail"]",
                                    confirmButtonColor: "#007bff"
                                });
                            });
                        </script>
                    }

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-dark">
                    @using (Html.BeginForm("Verify", "BatchVerification_Disbursement", new { Area = "Accounts" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.BatchNumber, "Batch Number", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.BatchNumber, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.TypeDescription, "Type", htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.TypeDescription, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.PriorityDescription, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.PriorityDescription, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.LoanProductCategoryDescription, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.LoanProductCategoryDescription, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.BranchDescription, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.BranchDescription, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.Reference, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Reference, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.BatchTotal, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.BatchTotal, new { htmlAttributes = new { @class = "form-control custom-border-radius", @id = "BatchTotal", @placeholder = "", @disabled = "" } })
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.CreatedBy, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.CreatedBy, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.CreatedDate, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.CreatedDate, new { htmlAttributes = new { @class = "form-control custom-border-radius", @placeholder = "", @disabled = "" } })
                                </div>
                            </div>
                        </div>

                        <br />

                        <div class="section-container">
                            <div class="section-title">Batch Entries</div>
                            <div class="table-container">
                                <h3 style="font-size: 1.9rem; text-align: center;">Loan Disbursement Batch Entries</h3>

                                <table id="dataTableEntries" class="footable table table-striped toggle-arrow-tiny grey-table">
                                    <thead>
                                        <tr>
                                            <th>Select?</th>
                                            <th>Loan Number</th>
                                            <th>Loan Status</th>
                                            <th>Customer Name</th>
                                            <th>Personal File Number</th>
                                            <th>Loan Product</th>
                                            <th>Loan Purpose</th>
                                            <th>Annual Percentage Rate</th>
                                            <th>Term (Months)</th>
                                            <th>Amount Approved</th>
                                            <th>Received Date</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.BatchEntries != null)
                                        {
                                            foreach (var entries in ViewBag.BatchEntries)
                                            {
                                                <tr>
                                                    <td>
                                                        <input type="checkbox" class="rowCheckbox" value="@entries.Id" checked>
                                                    </td>
                                                    <td>@entries.CaseNumber</td>
                                                    <td>@entries.StatusDescription</td>
                                                    <td>@entries.CustomerFullName</td>
                                                    <td>@entries.CustomerReference3</td>
                                                    <td>@entries.LoanProductDescription</td>
                                                    <td>@entries.LoanPurposeDescription</td>
                                                    <td>@entries.LoanInterestAnnualPercentageRate</td>
                                                    <td>@entries.LoanRegistrationTermInMonths</td>
                                                    <td style="text-align: right;">@entries.ApprovedAmount</td>
                                                    <td>@entries.ReceivedDate</td>

                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <br />

                            <input type="checkbox" id="headerCheckbox" style="transform: scale(1); color: blue;">
                            <label for="headerCheckbox" style="font-weight: bold;">Select All</label>

                            <!-- Hidden Input to Store Selected IDs -->
                            <input type="hidden" name="selectedIds" id="selectedIds">
                        </div>
                        <br />

                        <div class="blue-section">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.AuditRemarks, "Remarks", htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.AuditRemarks, new { htmlAttributes = new { @class = "form-control custom-border-radius", @required = "", @placeholder = "Enter text..." } })
                                    </div>
                                </div>

                                <div class="col-lg-2" style="margin-top: 25px;">
                                    <div class="form-group form-group-lg">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.Auth, authOption,
                                            new { @class = "form-control input-md", @id = "authOption" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4" style="margin-top: 25px;">
                                    <div class="form-group form-group-sm">
                                        <input type="submit" value="Update" class="btn btn-primary" style="width: 150px;" />
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    function updateSelectedIds() {
        const selected = [];
        document.querySelectorAll(".rowCheckbox:checked").forEach(cb => {
            selected.push(cb.value);
        });
        document.getElementById("selectedIds").value = selected.join(",");
    }

    // Run on page load to capture default checked boxes
    window.addEventListener("DOMContentLoaded", updateSelectedIds);

    // Run when any checkbox is clicked
    document.querySelectorAll(".rowCheckbox").forEach(cb => {
        cb.addEventListener("change", updateSelectedIds);
    });

    // Optional: update when form is submitted
    const form = document.querySelector("form");
    if (form) {
        form.addEventListener("submit", updateSelectedIds);
    }
</script>









