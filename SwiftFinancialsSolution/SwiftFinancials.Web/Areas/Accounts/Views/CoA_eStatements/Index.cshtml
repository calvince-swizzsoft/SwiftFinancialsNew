
@{
    ViewBag.Title = "CoA_eStatements";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>CoA_eStatements</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>



<style>
    .dropdown-item {
        display: block;
        padding: 10px 15px;
        color: #333;
        text-decoration: none;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 4px;
        transition: background-color 0.3s, color 0.3s;
    }

        .dropdown-item:hover {
            background-color: #007bff;
            color: #fff;
        }

        .dropdown-item:active {
            background-color: #0056b3;
            color: #fff;
        }

        .dropdown-item:focus {
            outline: none;
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
        }
</style>




<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    @Html.ActionLink("Create CoA_eStatements", "Create", "CoA_eStatements", new { Area = "Accounts" }, new { @class = "btn btn-primary" })
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["SuccessMessage"]

                            <button type="button" class="close" data-dismiss="alert">
                                <span>
                                    &times;
                                </span>
                            </button>
                        </div>
                    }
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="CoA_eStatementssGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">
                                        Loading data from server
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#CoA_eStatementssGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "CoA_eStatements", new { Area = "Accounts"}))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                   var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var startDate = new Date(parseInt(aData.DurationStartDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + startDate.getHours()).slice(-2);
                    var m = ("0" + startDate.getMinutes()).slice(-2);
                    var s = ("0" + startDate.getSeconds()).slice(-2);

                    var dt_StartDate = $.datepicker.formatDate('dd/mm/yy', startDate) ;
                    aData.DurationStartDate = dt_StartDate;

                    var endDate = new Date(parseInt(aData.DurationEndDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + endDate.getHours()).slice(-2);
                    var m = ("0" + endDate.getMinutes()).slice(-2);
                    var s = ("0" + endDate.getSeconds()).slice(-2);

                    var dt_EndDate = $.datepicker.formatDate('dd/mm/yy', endDate) ;
                    aData.DurationEndDate = dt_EndDate;

                    var editUrl = '<a  href="/accounts/CoA_eStatements/edit/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Edit</a>';
                    var viewUrl = '<a  href="/accounts/CoA_eStatements/details/' + aData.Id + '" class = "btn btn-outline-info"">' + 'View</a>';
                    var CloseUrl = '<a  href="/accounts/CoA_eStatements/Close/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Close</a>';
                    $('td:eq(1)', nRow).html(dt_StartDate);
                    $('td:eq(2)', nRow).html(dt_EndDate);
                    $('td:eq(6)', nRow).html(dt_Created);
                    var dropdownHtml = `
                        <div class="dropdown">
                            <button class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Actions
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/accounts/CoA_eStatements/details/${aData.Id}">View</a>
                                <a class="dropdown-item" href="/accounts/CoA_eStatements/edit/${aData.Id}">Edit</a>
                            </div>
                        </div>`;

                    $('td:eq(7)', nRow).html(dropdownHtml);
                    return nRow;
                },
                // Display settings
                "aoColumns": [
                    { "mDataProp": "FullAccountNumber", "sTitle": "FullAccountNumber" },
                    { "mDataProp": "DurationStartDate", "sTitle": "Start Date"},
                    { "mDataProp": "DurationEndDate", "sTitle": "End Date" },
                    { "mDataProp": "ProductDescription", "sTitle": "ProductDescription" },
                    { "mDataProp": "CustomerAccountCustomerFullName", "sTitle": "Name" },
                    { "mDataProp": "Remarks", "sTitle": "Remarks" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "bSortable": false },
                    { "mDataProp": "CreatedDate", "sTitle": "Actions",  "bSortable": false }],
                "aaSorting": [[0, "desc"]]
            });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>

}
