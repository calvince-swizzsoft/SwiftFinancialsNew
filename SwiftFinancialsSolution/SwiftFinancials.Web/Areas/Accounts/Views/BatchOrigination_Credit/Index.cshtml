@model  Application.MainBoundedContext.DTO.AccountsModule.CreditBatchDTO


@{
    ViewBag.Title = "Credit Batch";
    var status = ViewBag.BatchStatus as List<SelectListItem>;
}

<style>

   

    .col-lg-2 {
        display: flex;
        align-items: center; /* Center the title vertically */
        justify-content: center; /* Center the title horizontally if needed */
        padding: 0; /* Remove default padding if necessary */
        border-radius: 4px; /* Rounded corners */
        @*border: 1px solid black;*@ /* Border color and style */
    }
    .bottom-button {
        border: 2px solid gray; /* Border color set to gray */
        padding: 10px; /* Padding inside the border */
        border-radius: 5px; /* Rounded corners (optional) */


        font-size: 16px;
        font-weight: bold;
        background-color: #e0f0ff;
    }
</style>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row row-center">

    <div class="col-lg-12">
        <div class="nav1">
            <div class="col-lg-12">
                <nav class="nav">
                    <a href="@Url.Action("Index", "BatchOrigination_Voucher", new { Area = "Accounts" })" class="nav-link">
                        <i class="fa fa-cog"></i> Voucher
                    </a>
                    <a href="@Url.Action("Index", "BatchOrigination_Credit", new { Area = "Accounts" })" class="nav-link">
                        <i class="fa fa-cog"></i> Credit Batch
                    </a>
                    <a href="@Url.Action("Index", "BatchOrigination_Debit", new { Area = "Accounts" })" class="nav-link">
                        <i class="fa fa-cog"></i> Debit Batch
                    </a>
                    <a href="@Url.Action("Index", "BatchOrigination_Refund", new { Area = "Accounts" })" class="nav-link">
                        <i class="fa fa-cog"></i> Refund Batch
                    </a>
                    <a href="@Url.Action("Index", "BatchOrigination_Disbursement", new { Area = "Accounts" })" class="nav-link">
                        <i class="fa fa-cog"></i> Disbursement Batch
                    </a>
                    <a href="@Url.Action("Index", "BatchOrigination_WireTransfer", new { Area = "Accounts" })" class="nav-link">
                        <i class="fa fa-cog"></i> Wire Transfer Batch
                    </a>
                    <a href="@Url.Action("Index", "AddGeneralLedger", new { Area = "Accounts" })" class="nav-link">
                        <i class="fa fa-cog"></i> General Ledger Batch
                    </a>

                    <a href="@Url.Action("Index", "InterAccountTransfer", new { Area = "Accounts" })" class="nav-link">
                        <i class="fa fa-cog"></i> Inter Account Transfer Batch
                    </a>

                </nav>
            </div>

        </div>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    @if (TempData["CreditBatchCreated"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["CreditBatchCreated"]
                        </div>
                    }

                    @if (TempData["VerifySuccess"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["VerifySuccess"]
                        </div>
                    }

                    @if (TempData["AuthorizeSuccess"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["Authorize"]
                        </div>
                    }


                    @Html.ActionLink("Create Credit Batch", "Create", "BatchOrigination_Credit", new { Area = "Accounts" }, new { @class = "btn btn-primary" })
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="creditBatchesGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">Loading data from server</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    @using (Html.BeginForm("Index", "BatchOrigination_Credit", new { Area = "Accounts" }, FormMethod.Post, new { @class = "wizard-big", @id = "form" }))
                    {
                        <div class="bottom-button">

                            <div class="row" style="display: flex; justify-content: flex-start; align-content:center;">
                                <div class="col-lg-3">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.Status, new { @class = "control-label" })

                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.Status, status,
                                            new { @class = "form-control input-md", @id = "status" })

                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group spacing-form-group" id="data_3">
                                        @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label" })
                                        <div class="input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            <input type="text" name="valuedate" class="form-control" id="startDate" value="@DateTime.Today.AddDays(-30).ToString("dd/MM/yyyy")">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group spacing-form-group" id="data_3">
                                        @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label" })
                                        <div class="input-group date">
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                            <input type="text" name="valuedate" class="form-control" id="endDate" value="@DateTime.Today.ToString("dd/MM/yyyy")">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-3" style="display: flex; justify-content: flex-end; padding-right:50px; margin-top:20px;">
                                    <div class="form-group form-group-sm">
                                        <input type="submit" value="Refresh" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>

                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles{
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/wizardStepsStyles")
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    @Styles.Render("~/plugins/awesomeCheckboxStyles")
    @Styles.Render("~/plugins/clockpickerStyles")
    @Styles.Render("~/plugins/dateRangeStyles")
    @Styles.Render("~/Content/plugins/chosen/chosenStyles")
    @Styles.Render("~/plugins/switcheryStyles")
    @Styles.Render("~/plugins/jasnyBootstrapStyles")
    @Styles.Render("~/plugins/nouiSliderStyles")
    @Styles.Render("~/plugins/dataPickerStyles")
    @Styles.Render("~/Content/plugins/ionRangeSlider/ionRangeStyles")
    @Styles.Render("~/plugins/imagecropperStyles")
    @Styles.Render("~/Content/plugins/colorpicker/colorpickerStyles")
    @Styles.Render("~/plugins/select2Styles")
    @Styles.Render("~/plugins/touchSpinStyles")
    @Styles.Render("~/plugins/tagInputsStyles")
    @Styles.Render("~/plugins/duallistStyles")
}

@section Scripts{
    @Scripts.Render("~/plugins/wizardSteps")
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/typehead")
    @Scripts.Render("~/plugins/dataTables")
    @Scripts.Render("~/plugins/iCheck")
    @Scripts.Render("~/plugins/dataPicker")
    @Scripts.Render("~/plugins/ionRange")
    @Scripts.Render("~/plugins/nouiSlider")
    @Scripts.Render("~/plugins/jasnyBootstrap")
    @Scripts.Render("~/plugins/switchery")
    @Scripts.Render("~/plugins/chosen")
    @Scripts.Render("~/plugins/knob")
    @Scripts.Render("~/plugins/imagecropper")
    @Scripts.Render("~/plugins/colorpicker")
    @Scripts.Render("~/plugins/clockpicker")
    @Scripts.Render("~/plugins/dateRange")
    @Scripts.Render("~/plugins/select2")
    @Scripts.Render("~/plugins/touchSpin")
    @Scripts.Render("~/plugins/tagInputs")
    @Scripts.Render("~/plugins/duallist")

    <script type="text/javascript">
        $(document).ready(function () {

            $('#data_3 .input-group.date').datepicker({
                startView: 2,
                todayBtn: "linked",
                keyboardNavigation: false,
                forceParse: false,
                autoclose: true,
                format: 'dd/mm/yyyy',
                language: 'en-GB'  // Use British English locale to ensure dd/mm/yyyy format
            }); 


            var defaultStatus = $('#status').val();
            var defaultStartDate = $('#startDate').val();
            var defaultEndDate = $('#endDate').val();

            // Function to convert date from dd/mm/yyyy to yyyy-mm-dd
            function formatDate(dateString) {
                var parts = dateString.split("/");
                return parts[2] + "-" + parts[1] + "-" + parts[0];
            }

            $('#creditBatchesGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "BatchOrigination_Credit", new { Area = "Accounts"}))",
                "sServerMethod": "POST",
                "fnServerParams": function (aoData) {
                    aoData.push(
                        { "name": "status", "value": $('#status').val() || defaultStatus },
                        { "name": "startDate", "value": formatDate($('#startDate').val() || defaultStartDate) },
                        { "name": "endDate", "value": formatDate($('#endDate').val() || defaultEndDate) }
                    );
                },
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);
                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var dropdownHtml = `
                        <div class="dropdown">
                            <button style="width: 150px;" class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">`;

                    var viewButton = `<a class="dropdown-item" href="/Accounts/BatchOrigination_Credit/details/${aData.Id}">View</a>`;
                    var editButton = `<a class="dropdown-item" href="/Accounts/BatchOrigination_Credit/edit/${aData.Id}">Edit</a>`;
                    var verifyButton = `<a class="dropdown-item" href="/Accounts/BatchOrigination_Credit/Verify/${aData.Id}">Verify</a>`;
                    var authorizeButton = `<a class="dropdown-item" href="/Accounts/BatchOrigination_Credit/Authorize/${aData.Id}">Authorize</a>`;

                    switch (aData.Status) {
                        case 1:
                            dropdownHtml += viewButton + editButton + verifyButton ;
                            break;
                        case 8:
                            dropdownHtml += viewButton + authorizeButton;
                            break;
                        case 2:
                            dropdownHtml += viewButton;
                            break;
                        default:
                            dropdownHtml += viewButton;
                            break;
                    }

                    dropdownHtml += `</div></div>`;

                    $('td:eq(8)', nRow).html(dt_Created);
                    $('td:eq(9)', nRow).html(dropdownHtml);

                    return nRow;
                },
                "aoColumns": [
                    { "mDataProp": "BranchDescription", "sTitle": "Branch", "sWidth": "8%" },
                    { "mDataProp": "PaddedBatchNumber", "sTitle": "Batch Number", "sWidth": "8%" },
                    { "mDataProp": "PostingPeriodDescription", "sTitle": "Posting Period ", "sWidth": "8%" },
                    { "mDataProp": "TypeDescription", "sTitle": "Batch Type ", "sWidth": "8%" },
                    { "mDataProp": "StatusDescription", "sTitle": "Status ", "sWidth": "8%" },
                    { "mDataProp": "MonthDescription", "sTitle": "Month ", "sWidth": "8%" },
                    { "mDataProp": "Reference", "sTitle": "Reference ", "sWidth": "8%" },
                    { "mDataProp": "TotalValue", "sTitle": "Total Value ", "sWidth": "8%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "8%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Actions", "sWidth": "5%", "bSortable": false }
                ],
                "aaSorting": [[0, "desc"]]
            });

            // Refresh button click handler
            $('#form').on('submit', function (e) {
                e.preventDefault();
                $('#creditBatchesGrid').DataTable().ajax.reload();
            });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>
}
