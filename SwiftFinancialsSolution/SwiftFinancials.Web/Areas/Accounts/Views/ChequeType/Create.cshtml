    <script>
        document.getElementById('chequeTypeForm').addEventListener('submit', function (e) {
            e.preventDefault(); // Prevent default form submission

            // Serialize form data
            const form = e.target;
            const formData = new FormData(form);

            // Send data via AJAX
            fetch(form.action, {
                method: form.method,
                body: formData
            })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // SweetAlert success message
                        Swal.fire({
                            title: 'Success!',
                            text: data.message || 'The cheque type was successfully created!',
                            icon: 'success',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            // Optional: Reload page or redirect after confirmation
                            location.reload(); // Replace with redirect if needed
                        });
                    } else {
                        // SweetAlert error message
                        Swal.fire({
                            title: 'Error',
                            text: data.message || 'An error occurred while creating the cheque type.',
                            icon: 'error',
                            confirmButtonText: 'Try Again'
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        title: 'Error',
                        text: 'An unexpected error occurred. Please try again later.',
                        icon: 'error',
                        confirmButtonText: 'OK'
                    });
                });
        });
    </script>
