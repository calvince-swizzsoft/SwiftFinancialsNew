@model  Application.MainBoundedContext.DTO.AccountsModule.SystemGeneralLedgerAccountMappingDTO

@{
    /**/

    ViewBag.Title = "G/L Account Determination";
    var systemGeneralLedgerAccountCodes = ViewBag.SystemGeneralLedgerAccountCodeSelectList as List<SelectListItem>;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "SystemGeneralLedgerAccountMapping", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>G/L Accounts Determination</h2>

                    @if (TempData["CreateError"] != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Failed !</strong> @TempData["CreateError"]

                            <button type="button" class="close" data-dismiss="alert">
                                <span>
                                    &times;
                                </span>
                            </button>
                        </div>
                    }

                    @if (TempData["ErrorMsg"] != null)
                    {
                        <div class="alert alert-warning">
                            <strong>Failed !</strong> @TempData["ErrorMsg"]

                            <button type="button" class="close" data-dismiss="alert">
                                <span>
                                    &times;
                                </span>
                            </button>
                        </div>
                    }

                    <div class="ibox-tools">
                        <hr />
                        <a class="collapse-link">
                            <strong><i class="fa fa-chevron-up"></i></strong>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white">
                    @using (Html.BeginForm("Create", "SystemGeneralLedgerAccountMapping", new { Area = "Accounts" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.SystemGeneralLedgerAccountCode, new { @class = "control-label" })
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                        @Html.DropDownListFor(model => model.SystemGeneralLedgerAccountCode, systemGeneralLedgerAccountCodes, new { @class = "form-control input-md" })
                                        @Html.ValidationMessageFor(model => model.SystemGeneralLedgerAccountCode)
                                    </div>
                                </div>
                            </div>
                            <div class="form-group form-group-lg">
                                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Remarks", @required = "" } })
                                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.ChartOfAccountId, new { @class = "control-label" })
                                    <div class="input-group" data-autoclose="true">
                                        @Html.HiddenFor(model => model.ChartOfAccountId, new { @id = "ChartOfAccountId" })
                                        @Html.TextBoxFor(model => model.ChartOfAccountAccountName, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly", @required = "required", @placeholder = "", @id = "ChartOfAccountAccountName" })
                                        <span class="input-group-addon">
                                            <a data-toggle="modal" data-target="#chartofAccountLookupModal"><span class="fa fa-search"></span></a>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="panel-heading">General Ledger</div>
                        <div class="panel-body">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>General Ledger</th>
                                        <th>Account code</th>

                                        <th>cost center</th>

                                    </tr>

                                </thead>
                                <tbody>
                                    @if (ViewBag.Generalledger != null)
                                    {
                                        foreach (var commission in ViewBag.Generalledger)
                                        {
                                            <tr>
                                                <td>@commission.ChartOfAccountAccountName</td>
                                                <td>@commission.SystemGeneralLedgerAccountCodeDescription</td>
                                                <td>@commission.ChartOfAccountCostCenterDescription</td>


                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="2">No General Ledger available</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>




                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group form-group-lg">
                                    <input type="submit" style="width:150px;" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal  fade" id="chartofAccountLookupModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h3 class="font-bold">G/L Account Lookup<button type="button" class="close" data-dismiss="modal"><span class="sr-only">Close</span></button></h3>
            </div>

            <br />
            <style>
                #chartsofAccountGrid thead {
                    background-color: #007bff;
                    color: white;
                }
            </style>
            <table id="chartsofAccountGrid" class="table table-hover" style="width:100%">
