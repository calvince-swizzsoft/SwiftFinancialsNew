                    var h = ("0" + startDate.getHours()).slice(-2);
                    var m = ("0" + startDate.getMinutes()).slice(-2);
                    var s = ("0" + startDate.getSeconds()).slice(-2);

                    var dt_StartDate = $.datepicker.formatDate('dd/mm/yy', startDate);
                    aData.DurationStartDate = dt_StartDate;

                    var endDate = new Date(parseInt(aData.DurationEndDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + endDate.getHours()).slice(-2);
                    var m = ("0" + endDate.getMinutes()).slice(-2);
                    var s = ("0" + endDate.getSeconds()).slice(-2);

                    var dt_EndDate = $.datepicker.formatDate('dd/mm/yy', endDate);
                    aData.DurationEndDate = dt_EndDate;

                    var editUrl = '<a  href="/accounts/PostingPeriod/edit/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Edit</a>';
                    var viewUrl = '<a  href="/accounts/PostingPeriod/details/' + aData.Id + '" class = "btn btn-outline-info"">' + 'View</a>';
                    var CloseUrl = '<a  href="/accounts/PostingPeriod/Close/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Close</a>';
                    $('td:eq(1)', nRow).html(dt_StartDate);
                    $('td:eq(2)', nRow).html(dt_EndDate);
                    $('td:eq(4)', nRow).html(dt_Created);

                    var selectUrl = '<a  href="/Accounts/closepostingperiod/Create/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Select</a>';

                    $('td:eq(4)', nRow).html(dt_Created);
                    $('td:eq(5)', nRow).html(selectUrl);

                    return nRow;
                },
             // Display settings
             "aoColumns": [
                 { "mDataProp": "Description", "sTitle": "Description" },
                 { "mDataProp": "DurationStartDate", "sTitle": "Start Date" },
                 { "mDataProp": "DurationEndDate", "sTitle": "End Date" },
                 { "mDataProp": "ClosedDate", "sTitle": "Closed Date" },
                 { "mDataProp": "CreatedDate", "sTitle": "Created Date", "bSortable": false },
                 { "mDataProp": "CreatedDate", "sTitle": "Actions", "bSortable": false }],
             "aaSorting": [[0, "desc"]]
    });

