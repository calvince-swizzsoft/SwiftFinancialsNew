        $('#CustomerStationDescription').val(CustomersMap[item].StationDescription);
        $('#CustomerSerialNumber').val(CustomersMap[item].SerialNumber);
        $('#CustomerIndividualIdentityCardNumber').val(CustomersMap[item].IndividualIdentityCardNumber);
        $('#CustomerIndividualPayrollNumbers').val(CustomersMap[item].IndividualPayrollNumbers);
        $('#customerLookupModal').modal('hide');
    });

         // PostingPeriod typehead starts here
        $('.PostingPeriodsLookup').typeahead({
            source: function (query, process) {
                return $.getJSON(
                    '@Url.Action("GetPostingPeriodsAsync", "PostingPeriod", new { Area = "Accounts" })',
                    { query: query },
                    function (PostingPeriods) {
                        var newPostingPeriodsData = [];
                        PostingPeriodsMap = {};
                        $.each(PostingPeriods, function (i, PostingPeriod) {
                            newPostingPeriodsData.push(PostingPeriod.Description);
                            PostingPeriodsMap[PostingPeriod.Description] = PostingPeriod;
                        });
                        process(newPostingPeriodsData);
                        return;
                    });
            },
            matcher: function (item) {
                if (item.toLowerCase().indexOf(this.query.trim().toLowerCase()) != -1) {
                    return true;
                }
            },
            sorter: function (items) {
                return items.sort();
            },
            highlighter: function (item) {
                var regex = new RegExp('(' + this.query + ')', 'gi');
                return item.replace(regex, "<strong>$1</strong>");
            },
            updater: function (item) {
                var postingPeriodId = "";
                PostingPeriodId = PostingPeriodsMap[item].Id;
                $('#PostingPeriodId').val(PostingPeriodId);
                return item;
            }
        });

    </script>
