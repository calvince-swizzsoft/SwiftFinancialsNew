                                        <script>
    $(document).ready(function () {
        // Load existing data from localStorage on page load
        const storedData = localStorage.getItem('chargeTiers');
        if (storedData) {
            const rows = JSON.parse(storedData).map(scale => `
                <tr>
                    <td>${scale.ChargeType}</td>
                    <td>${scale.RangeLowerLimit}</td>
                    <td>${scale.RangeUpperLimit}</td>
                    <td>${scale.Percentage}</td>
                </tr>
            `);
            $('#chargeTiersTable tbody').html(rows.join(''));
        }

        $('#addChargeTierBtn').click(function () {
            const data = {
                ChargeType: $('#ChargeType').val(),
                fixedeposite: [{
                    RangeLowerLimit: $('#RangeLowerLimit').val(),
                    RangeUpperLimit: $('#RangeUpperLimit').val(),
                    Percentage: $('#Percentage').val()
                }]
            };

            // Save to server
            $.ajax({
                url: '@Url.Action("Chargetiers")',
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json; charset=utf-8',
                success: function (response) {
                    if (response.success) {
                        // Append the new row to the table
                        const row = `
                            <tr>
                                <td>${data.ChargeType}</td>
                                <td>${data.fixedeposite[0].RangeLowerLimit}</td>
                                <td>${data.fixedeposite[0].RangeUpperLimit}</td>
                                <td>${data.fixedeposite[0].Percentage}</td>
                            </tr>`;
                        $('#chargeTiersTable tbody').append(row);

                        // Save to localStorage
                        const existingData = JSON.parse(localStorage.getItem('chargeTiers')) || [];
                        existingData.push({
                            ChargeType: data.ChargeType,
                            RangeLowerLimit: data.fixedeposite[0].RangeLowerLimit,
                            RangeUpperLimit: data.fixedeposite[0].RangeUpperLimit,
                            Percentage: data.fixedeposite[0].Percentage
                        });
                        localStorage.setItem('chargeTiers', JSON.stringify(existingData));

                        // Clear input fields
                        $('#ChargeType').val('');
                        $('#RangeLowerLimit').val('');
                        $('#RangeUpperLimit').val('');
                        $('#Percentage').val('');
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('An error occurred while processing the request.');
                }
            });
        });

        // Clear localStorage on page unload (when navigating away)
        $(window).on('beforeunload', function () {
            localStorage.removeItem('chargeTiers');
        });
    });
                                        </script>


