@model  Application.MainBoundedContext.DTO.AccountsModule.CommissionDTO

@{
    /**/

    ViewBag.Title = "Create Charges";

}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Accounts</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "CostCenter", new { Area = "Accounts" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Create Charges</h2>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Failed !</strong> @TempData["Error"]

                            <button type="button" class="close" data-dismiss="alert">
                                <span>
                                    &times;
                                </span>
                            </button>
                        </div>
                    }

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Create", "Charges", new { Area = "Accounts" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <fieldset>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Cost Center name" } })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.MaximumCharge, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.MaximumCharge, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kshs.0.00" } })
                                        @Html.ValidationMessageFor(model => model.MaximumCharge, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <hr />
                        </fieldset>


                        <fieldset title="Use this section to split the charge into one or more than one different G/L Accounts">
                            <center><h2>Charge Splitting</h2></center>
                            <h3>Charge Details</h3>
                            <br />

                            <div class="row">
                                <div class="col-lg-4">

                                    <div class="col-md-13 form-group">
                                        @Html.LabelFor(model => model.CommissionSplit.ChartOfAccountId, new { @class = "control-label" })
                                        <div class="input-group" data-autoclose="true">
                                            @Html.HiddenFor(model => model.CommissionSplit.ChartOfAccountId)
                                            @Html.TextBoxFor(model => model.CommissionSplit.ChartOfAccountAccountName, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly", @placeholder = "Link G/L Account" })
                                            <span class="input-group-addon">
                                                <a data-toggle="modal" data-target="#customerLookupModal"><span class="fa fa-search"></span></a>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.CommissionSplit.Description, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.CommissionSplit.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Charge Description" } })
                                        @Html.ValidationMessageFor(model => model.CommissionSplit.Description, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.CommissionSplit.Percentage, htmlAttributes: new { @class = "" })
                                        @Html.EditorFor(model => model.CommissionSplit.Percentage, new { htmlAttributes = new { @class = "form-control", @placeholder = "100.00000%" } })
                                        @Html.ValidationMessageFor(model => model.CommissionSplit.Percentage, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="row" style="margin-top:10px; background-color:skyblue; border-radius:6px; ">
                                <div class="col-lg-8">
                                </div>

                                <div class="col-lg-2" style="color:white; ">
                                    <div class="form-group form-group-lg">
                                        @Html.CheckBoxFor(model => model.Leviable, htmlAttributes: new { @class = "" })
                                        @Html.LabelFor(model => model.Leviable, new { htmlAttributes = new { @class = "form-control", @placeholder = "Is Locked?" } })
                                        @Html.ValidationMessageFor(model => model.Leviable, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-lg-2">
                                    <div class="form-group form-group-sm">
                                        <input type="submit" value="Add" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>

                        </fieldset>
                    }
                </div>

            </div>

        </div>
    </div>
</div>

<div class="modal  fade" id="customerLookupModal" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header  bg-primary">
                <h3 class="font-bold">G/L Accounts Lookup<button type="button" class="close" data-dismiss="modal"><span class="sr-only">Close</span></button></h3>
            </div>
            <table id="customersGrid" class="table table-striped table-bordered table-hover" style="width:100%;">
                <tbody>
                    <tr>
                        <td class="dataTables_empty">
                            Loading data from server
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

