@model Application.MainBoundedContext.DTO.InventoryCatalogDTO

@{
    ViewBag.Title = "Inventory Item Details";
}

<!-- Page Heading -->
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Inventory Item Details</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Inventory", "Index", "InventoryCatalog", new { Area = "Inventory" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Details</strong>
            </li>
        </ol>
    </div>
</div>

<!-- Content -->
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Inventory Item Information</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        <a class="close-link"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="ibox-content">

                    <div class="row">
                        <!-- LEFT COLUMN -->
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Name</dt>
                                <dd class="col-sm-7">@Model.Name</dd>

                                <dt class="col-sm-5">Base UOM</dt>
                                <dd class="col-sm-7">@Model.BaseUOM</dd>

                                <dt class="col-sm-5">GL Account</dt>
                                <dd class="col-sm-7">@Model.GLAccount</dd>

                                <dt class="col-sm-5">Reorder Point</dt>
                                <dd class="col-sm-7">@Model.ReorderPoint</dd>

                                <dt class="col-sm-5">Units Per Pack</dt>
                                <dd class="col-sm-7">@Model.UnitsPerPack</dd>

                                <dt class="col-sm-5">Palette HI</dt>
                                <dd class="col-sm-7">@Model.PaletteHI</dd>

                                <dt class="col-sm-5">Gross Weight</dt>
                                <dd class="col-sm-7">@Model.UnitGrossWeight</dd>

                                <dt class="col-sm-5">Economic Order</dt>
                                <dd class="col-sm-7">@Model.EconomicOrder</dd>

                                <dt class="col-sm-5">Unit Price</dt>
                                <dd class="col-sm-7">@Model.UnitPrice.ToString("C")</dd>
                            </dl>
                        </div>

                        <!-- RIGHT COLUMN -->
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Category</dt>
                                <dd class="col-sm-7">@Model.Category</dd>

                                <dt class="col-sm-5">Package Type</dt>
                                <dd class="col-sm-7">@Model.PackageType</dd>

                                <dt class="col-sm-5">Main Supplier</dt>
                                <dd class="col-sm-7">@Model.MainSupplier</dd>

                                <dt class="col-sm-5">Max Order</dt>
                                <dd class="col-sm-7">@Model.MaximumOrder</dd>

                                <dt class="col-sm-5">Palette TI</dt>
                                <dd class="col-sm-7">@Model.PaletteTI</dd>

                                <dt class="col-sm-5">Net Weight</dt>
                                <dd class="col-sm-7">@Model.UnitNetWeight</dd>

                                <dt class="col-sm-5">Lead Days</dt>
                                <dd class="col-sm-7">@Model.LeadDays</dd>

                                <dt class="col-sm-5">Unit Cost</dt>
                                <dd class="col-sm-7">@Model.UnitCost.ToString("C")</dd>

                                <dt class="col-sm-5">Monthly Demand</dt>
                                <dd class="col-sm-7">@Model.MonthlyDemand</dd>
                            </dl>
                        </div>
                    </div>

                    <!-- Remarks -->
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <h5 class="font-weight-bold">Remarks</h5>
                            <p class="text-muted">@Model.Remarks</p>
                        </div>
                    </div>

                    <!-- Navigation -->
                    <div class="form-group row mt-4">
                        <div class="col-sm-12">
                            @Html.ActionLink("Back to list", "Index", null, new { @class = "btn btn-secondary ml-2" })
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
