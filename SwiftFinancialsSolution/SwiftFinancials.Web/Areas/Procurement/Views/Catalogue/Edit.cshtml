@model Application.MainBoundedContext.DTO.AssetDTO

@{
    ViewBag.Title = "Edit Asset";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Edit Asset</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Assets", "Index", "Catalogue", new { Area = "Asset" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Edit</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeIn">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Edit Asset Details</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        <a class="close-link"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)

                        <div class="row">
                            <div class="col-md-6">
                                @* Left column *@
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Name, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.AssetType, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.AssetType, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Supplier, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.Supplier, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Department, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.Department, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.SerialNumber, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.SerialNumber, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Manufacturer, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.Manufacturer, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Model, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                @* Right column *@
                                <div class="form-group">
                                    @Html.LabelFor(m => m.TagNumber, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.TagNumber, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Location, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.Location, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.GLAccount, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.GLAccount, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.PicturePath, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.PicturePath, new { @class = "form-control" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.PurchasePrice, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.PurchasePrice, new { @class = "form-control", type = "number", step = "0.01" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.ResidualValue, new { @class = "font-weight-bold" })
                                    @Html.TextBoxFor(m => m.ResidualValue, new { @class = "form-control", type = "number", step = "0.01" })
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(m => m.Remarks, new { @class = "font-weight-bold" })
                                    @Html.TextAreaFor(m => m.Remarks, new { @class = "form-control", rows = 3 })
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4 text-center">
                            <button type="submit" class="btn btn-success">
                                <i class="fa fa-save"></i> Save Changes
                            </button>
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ml-2" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
