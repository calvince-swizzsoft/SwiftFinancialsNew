@model IEnumerable<Application.MainBoundedContext.DTO.SupplierDTO>

@{
    ViewBag.Title = "Suppliers";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Supplier</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Manage Suppliers</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        <a class="close-link"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="ibox-content">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                    <div class="mb-3 text-right">
                        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success btn-lg" })
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="unitsTable">
                            <thead>
                                <tr>
                                    <th>Chart of Account</th>
                                    <th>Supplier</th>
                                    <th>Email</th>
                                    <th>Mobile</th>
                                    <th>Street</th>
                                    <th>Address Line 1</th>
                                    <th style="width: 120px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ChartofAccountName</td>
                                        <td>@item.Name</td>
                                        <td>@item.Email</td>
                                        <td>@item.MobileLine</td>
                                        <td>@item.Street</td>
                                        <td>@item.AddressLine1</td>
                                        <td>
                                            <div class="dropdown">
                                                <button class="btn btn-outline-info dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                    Actions
                                                </button>
                                                <div class="dropdown-menu">
                                                    <a class="dropdown-item" href="@Url.Action("Details", new { id = item.Id })">View</a>
                                                    <a class="dropdown-item" href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    <style>
        .dropdown-item {
            display: block;
            padding: 8px 15px;
            color: #333;
            text-decoration: none;
            background-color: #f8f9fa;
            border-bottom: 1px solid #ddd;
            transition: background-color 0.3s, color 0.3s;
        }

            .dropdown-item:hover {
                background-color: #007bff;
                color: white;
            }

        .btn-lg {
            font-size: 16px;
            padding: 10px 24px;
        }
    </style>
}

@section Scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#unitsTable').DataTable({
                pageLength: 10,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy' },
                    { extend: 'csv' },
                    { extend: 'excel', title: 'Supplier' },
                    { extend: 'pdf', title: 'Supplier' },
                    {
                        extend: 'print',
                        customize: function (win) {
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');
                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]
            });
        });
    </script>
}
