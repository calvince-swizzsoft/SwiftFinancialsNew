@model Application.MainBoundedContext.DTO.UnitOfMeasurementDTO
@{
    ViewBag.Title = "Create Unit of Measurement";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Create Unit</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Units", "Index", "UnitOfMeasurement", new { Area = "Procurement" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <!-- Full width -->
            <div class="ibox">
                <div class="ibox-title">
                    <h5>New Unit Details</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                        <a class="close-link"><i class="fa fa-times"></i></a>
                    </div>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Symbol, htmlAttributes: new { @class = "col-sm-2 col-form-label text-right font-weight-bold" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Symbol, new { @class = "form-control", placeholder = "e.g. Kg, Ltr, Pcs" })
                                @Html.ValidationMessageFor(m => m.Symbol, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(m => m.Description, htmlAttributes: new { @class = "col-sm-2 col-form-label text-right font-weight-bold" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "e.g. Kilogram, Litre, Pieces" })
                                @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10 offset-sm-2">
                                <button type="submit" class="btn btn-primary">Save</button>
                                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary ml-2" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}