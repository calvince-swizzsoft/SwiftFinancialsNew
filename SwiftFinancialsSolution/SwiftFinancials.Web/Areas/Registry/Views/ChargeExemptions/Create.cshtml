@model Application.MainBoundedContext.DTO.RegistryModule.CustomerDTO


@{


    ViewBag.Title = "Create ChargeExemptions";
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>ChargeExemptions</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "ChargeExemptions", new { Area = "Registry" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger fade in">
        <button class="close" data-dismiss="alert">
            ×
        </button>
        <i class="fa-fw fa fa-times"></i>
        <strong>Error!</strong> @TempData["Error"]
    </div>
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Create", "ChargeExemptions", new { Area = "Registry" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.StationZoneDivisionEmployerId, new { id = "StationZoneDivisionEmployerId" })
                        @Html.HiddenFor(model => model.StationId, new { id = "StationId" })

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <!-- Upper row with one column -->
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="col-md-13 form-group">
                                        @Html.LabelFor(model => model.CommissionDTO.Description, new { @class = "control-label" })
                                        <div class="input-group" data-autoclose="true">
                                            @Html.HiddenFor(model => model.CommissionDTO.Id)
                                            @Html.TextBoxFor(model => model.CommissionDTO.Description, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly" })
                                            <span class="input-group-addon">
                                                <a data-toggle="modal" data-target="#chargeLookup"><span class="fa fa-search"></span></a>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-6">
                                    <div class="form-group form-group-sm">
                                        @Html.LabelFor(model => model.CommissionDTO.ChargeTypeDescription, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.CommissionDTO.ChargeTypeDescription, new { htmlAttributes = new { @class = "form-control", @placeholder = " ", @required = "" } })
                                        @Html.ValidationMessageFor(model => model.CommissionDTO.ChargeTypeDescription, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                            </div>

                            <h3>Customer Details</h3>

                            <!-- Lower row with three columns -->
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="col-md-13 form-group">
                                        @Html.LabelFor(model => model.IndividualFirstName, new { @class = "control-label" })
                                        <div class="input-group" data-autoclose="true">
                                            @Html.HiddenFor(model => model.Id)
                                            @Html.TextBoxFor(model => model.IndividualFirstName, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly" })
                                            <span class="input-group-addon">
                                                <a data-toggle="modal" data-target="#customerLookup"><span class="fa fa-search"></span></a>
                                            </span>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="Reference1">Account Number</label>
                                        <input type="text" id="Reference1" class="form-control" readonly />
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="form-group">
                                        <label for="StationZoneDivisionEmployerDescription">Employer </label>
                                        <input type="text" id="StationZoneDivisionEmployerDescription" class="form-control" readonly />
                                    </div>

                                    <div class="form-group">
                                        <label for="Reference3">File Number</label>
                                        <input type="text" id="Reference3" class="form-control" readonly />
                                    </div>
                                </div>

                                <div class="col-lg-4">

                                    <div class="form-group">
                                        <label for="StationDescription">Station</label>
                                        <input type="text" id="StationDescription" class="form-control" readonly />
                                    </div>

                                    <div class="form-group">
                                        <label for="Reference2">Membership Number</label>
                                        <input type="text" id="Reference2" class="form-control" readonly />
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <div class="form-group form-group-sm">
                                        @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control", @placeholder = " ", @required = "" } })
                                        @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                            </div>


                            <div class="form-group form-group-sm">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="chargeLookup" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h3 class="font-bold">
                    Charge Lookup
                    <button type="button" class="close" data-dismiss="modal"><span class="sr-only">Close</span></button>
                </h3>
            </div>
            <div class="modal-body">
                <table id="ChargesGrid" class="table table-striped table-bordered table-hover" style="width:100%;">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Maximum Charge</th>
                            <th>Is Looked</th>
                            <th>Created Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="dataTables_empty">Loading data from server</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="customerLookup" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h3 class="font-bold">
                    Customers Lookup
                    <button type="button" class="close" data-dismiss="modal"><span class="sr-only">Close</span></button>
                </h3>
            </div>
            <div class="modal-body">
                <table id="CustomersGrid" class="table table-striped table-bordered table-hover" style="width:100%;">
                    <thead>
                        <tr>
                            <th>Customer FullName</th>
                            <th>Nationality</th>
                            <th>Identity CardNumber</th>
                            <th>Gender</th>
                            <th>Marital Status</th>
                            <th>Created Date</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="dataTables_empty">Loading data from server</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


