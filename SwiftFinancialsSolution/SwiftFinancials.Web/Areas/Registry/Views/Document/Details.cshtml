@model Application.MainBoundedContext.DTO.RegistryModule.CustomerDocumentDTO

@{
    ViewBag.Title = "CustomerDocument Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customer Document Details</h2>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Document</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Details", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "Document", new { Area = "Registry" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Details</strong>
            </li>
        </ol>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger fade in">
        <button class="close" data-dismiss="alert">
            ×
        </button>
        <i class="fa-fw fa fa-times"></i>
        <strong>Error!</strong> @TempData["Error"]
    </div>
}




<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    <div class="form-horizontal">
                        <div class="row">
                            <!-- Left Side -->
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Type, new { @class = "control-label" })
                                    <div>
                                        @Html.TextBoxFor(model => model.Type, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.CustomerFullName, new { @class = "control-label" })
                                    <div>
                                        @Html.TextBoxFor(model => model.CustomerFullName, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>

                            <!-- Right Side -->
                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FileTitle, new { @class = "control-label" })
                                    <div>
                                        @Html.TextBoxFor(model => model.FileTitle, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.FileName, new { @class = "control-label" })
                                    <div>
                                        @Html.TextBoxFor(model => model.FileName, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-12">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.FileDescription, new { @class = "control-label" })
                                    <div>
                                        @Html.TextBoxFor(model => model.FileDescription, new { @class = "form-control", @readonly = "readonly" })
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>