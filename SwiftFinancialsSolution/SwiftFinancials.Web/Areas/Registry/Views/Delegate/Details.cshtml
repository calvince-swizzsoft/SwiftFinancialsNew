@model Application.MainBoundedContext.DTO.RegistryModule.DelegateDTO

@{
    ViewBag.Title = "Delegate Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delegate Details</h2>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Delegate</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Details", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "Delegate", new { Area = "Registry" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Details</strong>
            </li>
        </ol>
    </div>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger fade in">
        <button class="close" data-dismiss="alert">
            ×
        </button>
        <i class="fa-fw fa fa-times"></i>
        <strong>Error!</strong> @TempData["Error"]
    </div>
}




<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info">
                    @using (Html.BeginForm("Details", "Delegate", new { Area = "Registry" }, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="row">
                                <!-- Left Side -->
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CustomerId, new { @class = "control-label" })
                                        <div>
                                            @Html.TextBoxFor(model => model.CustomerFullName, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Remarks, new { @class = "control-label" })
                                        <div>
                                            @Html.TextBoxFor(model => model.Remarks, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>
                                </div>

                                <!-- Right Side -->
                                <div class="col-lg-6">
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.CustomerStationZoneId, new { @class = "control-label" })
                                        <div>
                                            @Html.TextBoxFor(model => model.CustomerStationZoneDescription, new { @class = "form-control", @readonly = "readonly" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.IsLocked, new { @class = "control-label" })
                                        <div>
                                            @if (Model.IsLocked)
                                            {
                                                <span class="form-control-static">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="form-control-static">No</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>








