
@{
    ViewBag.Title = "Withdrawal Notifications";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Withdrawal Notification</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>
<style>
    .dropdown-item {
        display: block;
        padding: 10px 15px;
        color: #333;
        text-decoration: none;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 4px;
        transition: background-color 0.3s, color 0.3s;
    }

        .dropdown-item:hover {
            background-color: #007bff;
            color: #fff;
        }

        .dropdown-item:active {
            background-color: #0056b3;
            color: #fff;
        }

        .dropdown-item:focus {
            outline: none;
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0.25);
        }
</style>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">

                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
                <div class="ibox-title">
                    @Html.ActionLink("Create WithdrawalNotification", "Create", "WithdrawalNotification", new { Area = "Registry" }, new { @class = "btn btn-primary" })
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="withdrawalNotificationsGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">
                                        Loading data from server
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#withdrawalNotificationsGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "WithdrawalNotification", new { Area = "Registry"}))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                   var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;
                    var dropdownHtml = `
                        <div class="dropdown">
                            <button class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Actions
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/Registry/WithdrawalNotification/details/${aData.Id}">View</a>                                
                                    <a class="dropdown-item" href="/Registry/WithdrawalNotification/Approval/${aData.Id}">Approval</a>
                                        <a class="dropdown-item" href="/Registry/WithdrawalNotification/Verify/${aData.Id}">Verify</a>
                                    <a class="dropdown-item" href="/Registry/WithdrawalNotification/Settlement/${aData.Id}">Settlement</a>
                                        <a class="dropdown-item" href="/Registry/WithdrawalNotification/Deathclaim/${aData.Id}">Deathclaim</a>

                                  

                            </div>
                        </div>`;

                    $('td:eq(7)', nRow).html(dropdownHtml);

                   // $('td:eq(3)', nRow).html(dt_Created);
                   // $('td:eq(4)', nRow).html(viewUrl + '&nbsp;' + editUrl + '&nbsp;' + ApproveUrl + '&nbsp;' + verifyUrl + '&nbsp;' + SettlementUrl + '&nbsp;' + DeathClaimUrl);

                    return nRow;
                },
                // Display settings
                "aoColumns": [
                    { "mDataProp": "Customer.FullName", "sTitle": "Customer", "sWidth": "4%" },
                    { "mDataProp": "StatusDescription", "sTitle": "StatusDescription", "sWidth": "4%" },
                    { "mDataProp": "CustomerStationDescription", "sTitle": "Station", "sWidth": "4%" },
                    { "mDataProp": "BranchDescription", "sTitle": "Branch", "sWidth": "4%" },
                    { "mDataProp": "CategoryDescription", "sTitle": "Category", "sWidth": "4%" },
                    { "mDataProp": "Remarks", "sTitle": "Remarks", "sWidth": "4%" },
                    { "mDataProp": "CustomerReference1", "sTitle": "Ac/No", "sWidth": "4%" },
                    { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "6%", "bSortable": false }],
                "aaSorting": [[0, "desc"]]
        });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>

}
