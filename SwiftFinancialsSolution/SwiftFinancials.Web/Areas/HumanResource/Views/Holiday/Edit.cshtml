    <script>
       $(document).ready(function () {
    $('.nav-tabs li:first-child a').addClass('active');
    $('#tab1').addClass('active');

    $('.tab-link').on('click', function (e) {
        e.preventDefault();

        $('.tab-link').removeClass('active');
        $('.tab-content').removeClass('active');

        $(this).addClass('active');
        $($(this).attr('href')).addClass('active');
    });

    // Initialize the Datepicker with the desired format for displaying
    $('#DurationDate').datepicker({
        format: 'dd-mm-yyyy',
        todayHighlight: true,
        autoclose: true
    });

    // PostingPeriod typeahead starts here
    $('.PostingPeriodsLookup').typeahead({
        source: function (query, process) {
            return $.getJSON(
                '@Url.Action("GetPostingPeriodsAsync", "PostingPeriod", new { Area = "Accounts" })',
                { query: query },
                function (PostingPeriods) {
                    var newPostingPeriodsData = [];
                    PostingPeriodsMap = {};
                    $.each(PostingPeriods, function (i, PostingPeriod) {
                        newPostingPeriodsData.push(PostingPeriod.Description);
                        PostingPeriodsMap[PostingPeriod.Description] = PostingPeriod;
                    });
                    process(newPostingPeriodsData);
                    return;
                }
            );
        },
        matcher: function (item) {
            if (item.toLowerCase().indexOf(this.query.trim().toLowerCase()) != -1) {
                return true;
            }
        },
        sorter: function (items) {
            return items.sort();
        },
        highlighter: function (item) {
            var regex = new RegExp('(' + this.query + ')', 'gi');
            return item.replace(regex, "<strong>$1</strong>");
        },
        updater: function (item) {
            var PostingPeriodId = PostingPeriodsMap[item].Id;
            var PostingPeriodDurationStartDate = PostingPeriodsMap[item].DurationStartDate;
            var PostingPeriodDurationEndDate = PostingPeriodsMap[item].DurationEndDate;

            // Format the dates before setting them into hidden fields
            var formattedStartDate = moment(PostingPeriodDurationStartDate).format('DD-MM-YYYY');
            var formattedEndDate = moment(PostingPeriodDurationEndDate).format('DD-MM-YYYY');

            // Populate the hidden fields with the formatted date values
            $('#PostingPeriodId').val(PostingPeriodId);
            $('#PostingPeriodDurationStartDate').val(formattedStartDate);
            $('#PostingPeriodDurationEndDate').val(formattedEndDate);

            return item;
        }
    });
});

    </script>




