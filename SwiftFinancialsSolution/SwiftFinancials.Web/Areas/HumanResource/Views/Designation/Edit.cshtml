@section Scripts{
    @Scripts.Render("~/plugins/wizardSteps")
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/typehead")

    <script>
        $(document).ready(function () {
            $("#wizard").steps();
            $("#form").steps({
                bodyTag: "fieldset",
                onStepChanging: function (event, currentIndex, newIndex) {
                    // Always allow going backward even if the current step contains invalid fields!
                    if (currentIndex > newIndex) {
                        return true;
                    }

                    // Forbid suppressing "Warning" step if the user is to young
                    if (newIndex === 3 && Number($("#age").val()) < 18) {
                        return false;
                    }

                    var form = $(this);

                    // Clean up if user went backward before
                    if (currentIndex < newIndex) {
                        // To remove error styles
                        $(".body:eq(" + newIndex + ") label.error", form).remove();
                        $(".body:eq(" + newIndex + ") .error", form).removeClass("error");
                    }

                    // Disable validation on fields that are disabled or hidden.
                    form.validate().settings.ignore = ":disabled,:hidden";

                    // Start validation; Prevent going forward if false
                    return form.valid();
                },
                onStepChanged: function (event, currentIndex, priorIndex) {
                    // Suppress (skip) "Warning" step if the user is old enough.
                    if (currentIndex === 2 && Number($("#age").val()) >= 18) {
                        $(this).steps("next");
                    }

                    // Suppress (skip) "Warning" step if the user is old enough and wants to the previous step.
                    if (currentIndex === 2 && priorIndex === 3) {
                        $(this).steps("previous");
                    }
                },
                onFinishing: function (event, currentIndex) {
                    var form = $(this);

                    // Disable validation on fields that are disabled.
                    // At this point it's recommended to do an overall check (mean ignoring only disabled fields)
                    form.validate().settings.ignore = ":disabled";

                    // Start validation; Prevent form submission if false
                    return form.valid();
                },
                onFinished: function (event, currentIndex) {
                    var form = $(this);

                    // Submit form input
                    form.submit();
                }
            }).validate({
                errorPlacement: function (error, element) {
                    element.before(error);
                },
                rules: {
                    confirm: {
                        equalTo: "#password"
                    }
                }
            });

             //Designation typehead starts here
            $('.designationsLookup').typeahead({
                source: function (query, process) {
                    return $.getJSON(
                        '@Url.Action("GetDesignationsAsync", "Designation", new { Area = "HumanResource" })',
                        { query: query },
                        function (Designations) {
                            var newDesignationsData = [];
                            DesignationsMap = {};
                            $.each(Designations, function (i, Designation) {
                                newDesignationsData.push(Designation.Description);
                                DesignationsMap[Designation.Description] = Designation;
                            });
                            process(newDesignationsData); return;
                        });
                },
                matcher: function (item) {
                    if (item.toLowerCase().indexOf(this.query.trim().toLowerCase()) != -1) {
                        return true;
                    }
                },
                sorter: function (items) {
                    return items.sort();
                },
                highlighter: function (item) {
                    var regex = new RegExp('(' + this.query + ')', 'gi');
                    return item.replace(regex, "<strong>$1</strong>");
                },
                updater: function (item) {
                    var designationId = "";
                    DesignationId = DesignationsMap[item].Id;
                    $('#DesignationId').val(DesignationId);
                    //console.log(DesignationId)
                    return item;
                }
            });
        });</script>

    <script>
$(document).ready(function() {
    // Get the current count of thresholds for indexing
    let thresholdIndex = @(Model.TransactionThresholds?.Count ?? 0);

    // Handle Add button click
    $('#addThreshold').click(function() {
        const type = $('#Type option:selected');
        const threshold = $('#Threshold').val();

        if (!type.val() || !threshold) {
            alert('Please fill in both Type and Threshold fields');
            return;
        }

        // Check if the type has already been added
        let alreadyExists = false;
        $('#thresholdTable tbody tr').each(function() {
            const existingType = $(this).find('input[name*="Type"]').val();
            if (existingType === type.val()) {
                alreadyExists = true;
                return false;  // Exit loop early
            }
        });

        if (alreadyExists) {
            alert('This transaction type has already been added.');
            return;
        }

        // Create new row with hidden inputs for model binding
        const newRow = $('<tr>');

        // Type column
        const typeCell = $('<td>').append(
            $('<input>').attr({
                type: 'hidden',
                name: `TransactionThresholds[${thresholdIndex}].Type`,
                value: type.val()
            }),
            $('<input>').attr({
                type: 'hidden',
                name: `TransactionThresholds[${thresholdIndex}].TypeText`,
                value: type.text()
            }),
            type.text()
        );

        // Threshold column
        const thresholdCell = $('<td>').append(
            $('<input>').attr({
                type: 'hidden',
                name: `TransactionThresholds[${thresholdIndex}].Threshold`,
                value: threshold
            }),
            threshold
        );

        // Created By column
        const createdBy = '@Model.ActiveUser';
        const createdByCell = $('<td>').append(
            $('<input>').attr({
                type: 'hidden',
                name: `TransactionThresholds[${thresholdIndex}].CreatedBy`,
                value: createdBy
            }),
            createdBy
        );

        // Created Date column
        const createdDate = new Date().toISOString();
        const createdDateCell = $('<td>').append(
            $('<input>').attr({
                type: 'hidden',
                name: `TransactionThresholds[${thresholdIndex}].CreatedDate`,
                value: createdDate
            }),
            new Date().toLocaleString()
        );

        // Action column
        const actionCell = $('<td>').append(
            $('<button>')
                .addClass('btn btn-danger btn-sm remove-threshold')
                .text('Remove')
        );

        // Append all cells to the row
        newRow.append(typeCell, thresholdCell, createdByCell, createdDateCell, actionCell);

        // Add new row to table
        $('#thresholdTable tbody').append(newRow);

        // Clear input fields
        $('#Type').val('');
        $('#Threshold').val('');

        thresholdIndex++;
    });

    // Handle Remove button click using event delegation
    $('#thresholdTable').on('click', '.remove-threshold', function() {
        const row = $(this).closest('tr');
        const currentIndex = row.index();

        // Remove the row
        row.remove();

        // Reindex remaining rows
        $('#thresholdTable tbody tr').each(function(newIndex) {
            $(this).find('input[type="hidden"]').each(function() {
                const name = $(this).attr('name');
                const newName = name.replace(/\[\d+\]/, `[${newIndex}]`);
                $(this).attr('name', newName);
            });
        });

        thresholdIndex--;
    });
});
