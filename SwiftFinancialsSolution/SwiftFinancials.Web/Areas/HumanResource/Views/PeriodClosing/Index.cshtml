<style>



    .col-lg-2 {
        display: flex;
        align-items: center; /* Center the title vertically */
        justify-content: center; /* Center the title horizontally if needed */
        padding: 0; /* Remove default padding if necessary */
        border-radius: 4px; /* Rounded corners */
        @*border: 1px solid black;*@ /* Border color and style */
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

@{
    var message = TempData["Message"] as string;
    var messageType = TempData["MessageType"] as string;
}

@if (!string.IsNullOrEmpty(message) && !string.IsNullOrEmpty(messageType))
{
    <script>
        Swal.fire({
            title: '@message',
            icon: '@messageType',
            confirmButtonText: 'OK'
        });
    </script>
}



<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="salaryPeriodsGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">
                                        Loading data from server
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="viewModal" tabindex="-1" role="dialog" aria-labelledby="viewModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="viewModalLabel">Close Salary Period</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to close this salary period?</p>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Close", "PeriodClosing", new { Area = "HumanResource" }, FormMethod.Post, new { @class = "wizard-big", @id = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-secondary">Close Period</button>
                }

                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>










@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")



    <script type="text/javascript">
        $(document).ready(function () {
            $('#salaryPeriodsGrid').DataTable({
            "sPaginationType": "full_numbers",
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "@(Url.Action("Index", "PeriodClosing", new { Area = "HumanResource" }))",
            "sServerMethod": "POST",
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                var h = ("0" + createdDate.getHours()).slice(-2);
                var m = ("0" + createdDate.getMinutes()).slice(-2);
                var s = ("0" + createdDate.getSeconds()).slice(-2);

                var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                aData.CreatedDate = dt_Created;

                var viewButton = `<a class="btn btn-primary view-btn" style="width: 150px; color: white;" data-id="${aData.Id}" data-toggle="modal" data-target="#viewModal">View</a>`;

                $('td:eq(7)', nRow).html(dt_Created);
                $('td:eq(8)', nRow).html(viewButton);
                return nRow;
            },
            "aoColumns": [
                { "mDataProp": "PostingPeriodDescription", "sTitle": "Posting Period", "sWidth": "15%" },
                { "mDataProp": "StatusDescription", "sTitle": "Status", "sWidth": "8%" },
                { "mDataProp": "EmployeeCategoryDescription", "sTitle": "Employee Type", "sWidth": "10%" },
                { "mDataProp": "TaxReliefAmount", "sTitle": "Tax Relief", "sWidth": "8%" },
                { "mDataProp": "MaximumProvidentFundReliefAmount", "sTitle": "Maximum Provident Relief Amount", "sWidth": "10%" },
                { "mDataProp": "MaximumInsuranceReliefAmount", "sTitle": "Maximum Insurance Relief", "sWidth": "18%" },
                { "mDataProp": "Remarks", "sTitle": "Remarks", "sWidth": "5%" },
                { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "5%" },
                { "mDataProp": "CreatedDate", "sTitle": "Action", "sWidth": "10%", "bSortable": false }
            ],
            "aaSorting": [[0, "desc"]],
        });

        $(document).on('click', '.view-btn', function () {
            var id = $(this).data('id');

            $.ajax({
                url: '/HumanResource/PeriodClosing/View/' + id,
                type: 'GET',
                success: function (response) {
                    if (response.success) {
                        console.log(response);
                    } else {
                        alert(response.message);
                    }
                },
                error: function (xhr, error, code) {
                    console.error("Error fetching details:", error, xhr.responseText);
                }
            });
        });
});

    </script>
}