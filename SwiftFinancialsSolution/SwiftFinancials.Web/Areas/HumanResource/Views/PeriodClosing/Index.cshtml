        <li>@Html.ActionLink("SalaryPeriods", "Index", "SalaryPeriods", new { area = "HumanResource" }, new { @class = "nav-link" })</li>
        <li>@Html.ActionLink("SalaryProcessing", "Index", "SalaryProcessing", new { area = "HumanResource" }, new { @class = "nav-link" })</li>
        <li>@Html.ActionLink("PayRoll", "Index", "PaySlips", new { area = "HumanResource" }, new { @class = "nav-link" })</li>
