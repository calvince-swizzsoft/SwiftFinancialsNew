                                    <br />
                                    <div class="col-lg-7">

                                        <div class="form-group form-group-lg" style="text-align: center;">
                                            @Html.LabelFor(model => model.SalaryGroupEntry.SalaryHeadId, htmlAttributes: new { @class = "control-label" })
                                            @Html.HiddenFor(model => model.SalaryGroupEntry.SalaryHeadId)
                                            @Html.ValidationMessageFor(model => model.SalaryGroupEntry.SalaryHeadId, "", new { @class = "text-danger" })
                                            @Html.EditorFor(model => model.SalaryGroupEntry.SalaryHeadDescription, new { htmlAttributes = new { @class = "SalaryHeadLookup form-control required", placeholder = "Salary Head Lookup" } })
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group form-group-lg">
                                                @Html.LabelFor(model => model.SalaryGroupEntries[0].ChargeTypeDescription, new { @class = "control-label" })
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                                    @Html.DropDownListFor(model => model.SalaryGroupEntries[0].ChargeTypeDescription, valueTypes, new { @class = "form-control input-md" })
                                                    @Html.ValidationMessageFor(model => model.SalaryGroupEntries[0].ChargeTypeDescription)
                                                </div>
                                            </div>

                                            <div class="form-group form-group-lg" style="text-align: center;">
                                                @Html.LabelFor(model => model.SalaryGroupEntries[0].MinimumValue, htmlAttributes: new { @class = "control-label" })
                                                @Html.EditorFor(model => model.SalaryGroupEntries[0].MinimumValue, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kshs.0.00", @required = "" } })
                                                @Html.ValidationMessageFor(model => model.SalaryGroupEntries[0].MinimumValue, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="col-lg-6">
                                            <div class="form-group form-group-lg" style="text-align: center;">
                                                @Html.LabelFor(model => model.SalaryGroupEntries[0].ChargeType, htmlAttributes: new { @class = "control-label" })
                                                @Html.EditorFor(model => model.SalaryGroupEntries[0].ChargeType, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kshs.0.00", @required = "" } })
                                                @Html.ValidationMessageFor(model => model.SalaryGroupEntries[0].ChargeType, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="form-group form-group-lg">
                                                @Html.LabelFor(model => model.SalaryGroupEntries[0].RoundingType, new { @class = "control-label" })
                                                <div class="input-group">
                                                    <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                                    @Html.DropDownListFor(model => model.SalaryGroupEntries[0].RoundingType, roundingType, new { @class = "form-control input-md" })
                                                    @Html.ValidationMessageFor(model => model.SalaryGroupEntries[0].RoundingType)
                                                </div>
