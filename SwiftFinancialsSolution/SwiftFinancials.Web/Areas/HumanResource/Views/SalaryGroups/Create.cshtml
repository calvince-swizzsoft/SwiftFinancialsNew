    <script>


    $('#data_3 .input-group.date').datepicker({
        startView: 2,
        todayBtn: "linked",
        keyboardNavigation: false,
        forceParse: false,
        autoclose: true,
    });

         //SalaryHead typehead starts here
            $('.SalaryHeadLookup').typeahead({
                source: function (query, process) {
                    return $.getJSON(
                        '@Url.Action("GetSalaryHeadsAsync", "SalaryGroups",new{ Area = "HumanResource" })',
                        { query: query },
                        function (SalaryHead) {
                            var newSalaryHeadData = [];
                            SalaryHeadMap = {};
                            $.each(SalaryHead, function (i, SalaryHead) {
                                newSalaryHeadData.push(SalaryHead.Description);
                                SalaryHeadMap[SalaryHead.Description] = SalaryHead;
                            });
                            process(newSalaryHeadData); return;
                        });
                },
                matcher: function (item) {
                    if (item.toLowerCase().indexOf(this.query.trim().toLowerCase()) != -1) {
                        return true;
                    }
                },
                sorter: function (items) {
                    return items.sort();
                },
                highlighter: function (item) {
                    var regex = new RegExp('(' + this.query + ')', 'gi');
                    return item.replace(regex, "<strong>$1</strong>");
                },
                updater: function (item) {
                    var SalaryHeadId = "";
                    SalaryHeadId = SalaryHeadMap[item].Id;
                    $('#SalaryHeadId').val(SalaryHeadId);
                    //console.log(SalaryHeadId)
                    return item;
                }
            });





    // Open the modal
    $("#openModalButton").click(function () {
        $("#expenseModal").css("display", "block");
    });

    // Close the modal
    $(".close").click(function () {
        $("#expenseModal").css("display", "none");
    });

    $("#submitEntry").click(function () {
        const salaryHead = $("#SalaryHeadDescription").val();
        const isOneOff = $("#SalaryHeadIsOneOff").val();
        const Value = $("#ChargeTypeDescription").val();
        const percentageValue = $("#ChargePercentage").val();
        const fixedValue = $("#ChargeFixedAmount").val();
        const minimumValue = $("#MinimumValue").val();
        const roundingType = $("#RoundingType").val();

        // Perform AJAX request to send the data to your server
        $.post("/addSalaryGroupEntry", { salaryHead, isOneOff, Value, percentageValue, fixedValue, minimumValue, roundingType }, function (response) {
            // Handle the response from the server
        });
    });


    //Branch typehead starts here
    $('#SalaryHeadDescription').on('input', function () {
        var query = $(this).val();

        // Perform AJAX request to get salary heads
        $.getJSON('/SalaryGroups/GetSalaryHeads', { query: query }, function (data) {
            // Update UI with the fetched data
            updateAutofillResults(data);
        });
    });

    function updateAutofillResults(data) {
        // Clear previous results
        $('#autofillResults').empty();

        // Append new results to a container (e.g., a dropdown)
        $.each(data, function (index, item) {
            $('#autofillResults').append($('<option>', {
                value: item.id,
                text: item.description
            }));
        });
    }


    $(document).ready(function () {
        $("#wizard").steps();
        $("#form").steps({
            bodyTag: "fieldset",
            onStepChanging: function (event, currentIndex, newIndex) {
                // Always allow going backward even if the current step contains invalid fields!
                if (currentIndex > newIndex) {
                    return true;
                }

                // Forbid suppressing "Warning" step if the user is to young
                if (newIndex === 3 && Number($("#age").val()) < 18) {
                    return false;
                }

                var form = $(this);

                // Clean up if user went backward before
                if (currentIndex < newIndex) {
                    // To remove error styles
                    $(".body:eq(" + newIndex + ") label.error", form).remove();
                    $(".body:eq(" + newIndex + ") .error", form).removeClass("error");
                }

                // Disable validation on fields that are disabled or hidden.
                form.validate().settings.ignore = ":disabled,:hidden";

                // Start validation; Prevent going forward if false
                return form.valid();
            },
            onStepChanged: function (event, currentIndex, priorIndex) {
                // Suppress (skip) "Warning" step if the user is old enough.
                if (currentIndex === 2 && Number($("#age").val()) >= 18) {
                    $(this).steps("next");
                }

                // Suppress (skip) "Warning" step if the user is old enough and wants to the previous step.
                if (currentIndex === 2 && priorIndex === 3) {
                    $(this).steps("previous");
                }
            },
            onFinishing: function (event, currentIndex) {
                var form = $(this);

                // Disable validation on fields that are disabled.
                // At this point it's recommended to do an overall check (mean ignoring only disabled fields)
                form.validate().settings.ignore = ":disabled";

                // Start validation; Prevent form submission if false
                return form.valid();
            },
            onFinished: function (event, currentIndex) {
                var form = $(this);

                // Submit form input
                form.submit();
            }
        }).validate({
            errorPlacement: function (error, element) {
                element.before(error);
            },
            rules: {
                confirm: {
                    equalTo: "#password"
                }
            }
        });


    });

    </script>
}
