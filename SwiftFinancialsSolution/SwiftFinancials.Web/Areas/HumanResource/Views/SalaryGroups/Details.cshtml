
@model Application.MainBoundedContext.DTO.HumanResourcesModule.SalaryGroupDTO

@{
    ViewBag.Title = "View Salary Group";
    var chargeTypeDescription = ViewBag.ValueTypeSelectList as List<SelectListItem>;
    var roundingTypeDescription = ViewBag.RoundingTypeSelectList as List<SelectListItem>;


}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Salary Group</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "SalaryGroups", new { Area = "HumanResource" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>View</strong>
            </li>
        </ol>
    </div>
</div>








<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $(document).ready(function () {
        $('.nav-tabs li:first-child a').addClass('active');
        $('#tab1').addClass('active');

        $('.tab-link').on('click', function (e) {
            e.preventDefault();

            $('.tab-link').removeClass('active');
            $('.tab-content').removeClass('active');

            $(this).addClass('active');
            $($(this).attr('href')).addClass('active');
        });

        $('#ValueDate').datepicker({
            format: 'dd/mm/yyyy',
            todayHighlight: true,
            autoclose: true
        });
    });
</script>



<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">


                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">

                        @using (Html.BeginForm("Details", "SalaryGroups", new { Area = "HumanResource" }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()



                            <fieldset>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <!-- Hidden fields -->
                                        @Html.HiddenFor(model => model.SalaryGroupEntries[0].SalaryHeadIsOneOff, new { id = "SalaryHeadIsOneOff" })
                                        @Html.HiddenFor(model => model.SalaryGroupEntries[0].SalaryHeadCustomerAccountTypeTargetProductId, new { id = "SalaryHeadCustomerAccountTypeTargetProductId" })
                                        @Html.HiddenFor(model => model.SalaryGroupEntries[0].SalaryHeadCustomerAccountTypeTargetProductCode, new { id = "SalaryHeadCustomerAccountTypeTargetProductCode" })
                                        @Html.HiddenFor(model => model.SalaryGroupEntries[0].SalaryHeadCustomerAccountTypeProductCode, new { id = "SalaryHeadCustomerAccountTypeProductCode" })
                                        @Html.HiddenFor(model => model.SalaryGroupEntries[0].SalaryHeadCategoryDescription, new { id = "SalaryHeadCategoryDescription" })
                                        @Html.HiddenFor(model => model.SalaryGroupEntries[0].SalaryHeadChartOfAccountId, new { id = "SalaryHeadChartOfAccountId" })
                                        @Html.HiddenFor(model => model.SalaryGroupEntries[0].SalaryHeadTypeDescription, new { id = "SalaryHeadTypeDescription" })

                                        <!-- Description field -->
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "" })
                                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Text....", @required = "", @id = "description", @readonly=""} })
                                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                        </div>
                                    </div>


                                </div>





                                <div class="row">
                                    <div class="col-lg-12">
                                        <h3>Salary Group Entries</h3>
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    <th>Salary Head Description</th>
                                                    <th>Charge Type</th>
                                                    <th>Charge Percentage</th>
                                                    <th>Fixed Amount</th>
                                                    <th>Minimum Value</th>
                                                    <th>Rounding Type</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (ViewBag.SalaryGroupEntries != null && ViewBag.SalaryGroupEntries.Count > 0)
                                                {
                                                    foreach (var entry in ViewBag.SalaryGroupEntries)
                                                    {
                                                        <tr>
                                                            <td>@entry.SalaryHeadDescription</td>
                                                            <td>@entry.ChargeType</td>
                                                            <td>@entry.ChargePercentage</td>
                                                            <td>@entry.ChargeFixedAmount</td>
                                                            <td>@entry.MinimumValue</td>
                                                            <td>@entry.RoundingType</td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td colspan="6" class="text-center">No entries found for this salary group.</td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>





                            </fieldset>





                        }

                        <div class="bottom-button row mt-3" style="display: flex; justify-content: flex-end; padding-right:50px; margin-top:20px;">
                           


                            <p>
                                @Html.ActionLink("Edit", "Edit", "SalaryGroups", new { id = Model.Id, Area = "HumanResource" }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Back to List", "Index", "SalaryGroups", new { Area = "HumanResource" }, new { @class = "btn btn-success" })
                            </p>
                        </div>




                    </div>
                </div>

                <style>
                    .card {
                        margin-bottom: 20px;
                    }



                    .form-group-lg {
                        margin-bottom: 1.5rem;
                    }

                    .form-control {
                        border-radius: .25rem;
                    }



                    .col-lg-2 {
                        display: flex;
                        align-items: center; /* Center the title vertically */
                        justify-content: center; /* Center the title horizontally if needed */
                        padding: 0; /* Remove default padding if necessary */
                        border-radius: 4px; /* Rounded corners */
                    }

                    .bottom-button {
                        border: 2px solid gray; /* Border color set to gray */
                        padding: 10px; /* Padding inside the border */
                        border-radius: 5px; /* Rounded corners (optional) */
                        font-size: 16px;
                        font-weight: bold;
                        background-color: #e0f0ff;
                    }
                </style>



            </div>
        </div>
    </div>
</div>