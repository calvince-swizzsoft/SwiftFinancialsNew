    <script>
               $(document).ready(function () {
            $('#customersGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("Index", "Employee", new { Area = "HumanResource" })",
                "sServerMethod": "POST",
                "fnServerData": function (sSource, aoData, fnCallback) {
                    $.ajax({
                        dataType: 'json',
                        type: 'POST',
                        url: sSource,
                        data: aoData,
                        success: function (response) {
                            fnCallback(response);
                        },
                        error: function () {
                            alert('Error retrieving data from the server.');
                        }
                    });
                },
                "aoColumns": [
                    { "mDataProp": "Customer.FullName", "sTitle": "Name", "sWidth": "15%" },
                    { "mDataProp": "BranchDescription", "sTitle": "Branch Name", "sWidth": "10%" },
                    { "mDataProp": "DepartmentDescription", "sTitle": "Department Description", "sWidth": "15%" },
                    { "mDataProp": "CustomerIndividualNationalityDescription", "sTitle": "Nationality", "sWidth": "15%" },
                    { "mDataProp": "CustomerIndividualGenderDescription", "sTitle": "Gender", "sWidth": "15%" },
                    {
                        "mDataProp": "CreatedDate",
                        "sTitle": "Created Date",
                        "sWidth": "15%",
                        "mRender": function (data) {
                            var createdDate = new Date(parseInt(data.replace("/Date(", "").replace(")/", ""), 10));
                            return $.datepicker.formatDate('dd/mm/yy', createdDate);
                        }
                    },
                    {
                        "mDataProp": null,
                        "sTitle": "Action",
                        "sWidth": "15%",
                        "bSortable": false,
                        "mRender": function (data, type, row) {
                            return '<a href="#" class="btn btn-outline-info select-customer" data-id="' + row.Id + '">Select</a>';
                        }
                    }
                ],
                "aaSorting": [[0, "desc"]]
            });

                   $('#customersGrid tbody').on('click', '.select-customer', function () {
                       var employeeId = $(this).data('id');

                $.ajax({
                    url: '@Url.Action("GetCustomerDetails", "EmployeeDocuments", new { Area = "HumanResource" })',
                    type: 'GET',
                    data: { employeeId: employeeId },
                    success: function (response) {
                        if (response.success) {
                            $('#EmployeeCustomerFullName').val(response.data.EmployeeCustomerFullName);
                            $('#EmployeeCustomerId').val(response.data.EmployeeCustomerId);
                            $('#EmployeeId').val(response.data.EmployeeId);
                            $('#EmployeeBloodGroupDescription').val(response.data.EmployeeBloodGroupDescription);
                            $('#EmployeeNationalHospitalInsuranceFundNumber').val(response.data.EmployeeNationalHospitalInsuranceFundNumber);
                            $('#EmployeeNationalSocialSecurityFundNumber').val(response.data.EmployeeNationalSocialSecurityFundNumber);
                            $('#EmployeeCustomerPersonalIdentificationNumber').val(response.data.EmployeeCustomerPersonalIdentificationNumber);
                            $('#EmployeeEmployeeTypeCategoryDescription').val(response.data.EmployeeEmployeeTypeCategoryDescription);
                            $('#EmployeeEmployeeTypeDescription').val(response.data.EmployeeEmployeeTypeDescription);
                            $('#EmployeeDepartmentDescription').val(response.data.EmployeeDepartmentDescription);
                            $('#EmployeeDepartmentId').val(response.data.EmployeeDepartmentId);
                            $('#EmployeeDesignationDescription').val(response.data.EmployeeDesignationDescription);
                            $('#EmployeeEmployeeTypeCategoryDescription').val(response.data.EmployeeEmployeeTypeCategoryDescription);
                            $('#EmployeeEmployeeTypeDescription').val(response.data.EmployeeEmployeeTypeDescription);
                            $('#EmployeeDesignationId').val(response.data.EmployeeDesignationId);
                            $('#EmployeeBranchDescription').val(response.data.EmployeeBranchDescription);
                            $('#EmployeeBranchId').val(response.data.EmployeeBranchId);
                            $('#EmployeeCustomerIndividualGenderDescription').val(response.data.EmployeeCustomerIndividualGenderDescription);
                            $('#EmployeeCustomerIndividualPayrollNumbers').val(response.data.EmployeeCustomerIndividualPayrollNumbers);





                            $('#customerLookup').modal('hide');
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('An error occurred while fetching the Customer details.');
                    }
                });
            });
        });

    </script>


