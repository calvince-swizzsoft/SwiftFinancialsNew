@model Application.MainBoundedContext.DTO.HumanResourcesModule.Attendancelog

@{
    ViewBag.Title = "View Attendance Log";
}

<div class="row wrapper border-bottom white-bg page-heading mb-4">
    <div class="col-lg-12">
        <h2 class="font-weight-bold">View Attendance Log</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Attendance Logs", "Index", "Attendacelogs", new { Area = "Procurement" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>View</strong>
            </li>
        </ol>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">View Attendance log</h5>
                <div class="ibox-tools">
                    <a class="text-white" data-toggle="collapse" href="#formContent"><i class="fa fa-chevron-down"></i></a>
                </div>
            </div>
            <div class="collapse show" id="formContent">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            @Html.LabelFor(m => m.EmployeeName, new { @class = "font-weight-bold" })
                            @Html.TextBoxFor(m => m.EmployeeName, new { @class = "form-control form-control-lg", placeholder = "Enter full name of the employee" })
                            @Html.ValidationMessageFor(m => m.EmployeeName, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Date, new { @class = "font-weight-bold" })
                            @Html.TextBoxFor(m => m.Date, "{0:yyyy-MM-dd}", new { @class = "form-control form-control-lg", type = "date" })
                            @Html.ValidationMessageFor(m => m.Date, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.TimeIn, new { @class = "font-weight-bold" })
                                @Html.TextBoxFor(m => m.TimeIn, "{0:HH\\:mm}", new { @class = "form-control form-control-lg", type = "time" })
                                @Html.ValidationMessageFor(m => m.TimeIn, "", new { @class = "text-danger small" })
                            </div>
                            <div class="form-group col-md-6">
                                @Html.LabelFor(m => m.TimeOut, new { @class = "font-weight-bold" })
                                @Html.TextBoxFor(m => m.TimeOut, "{0:HH\\:mm}", new { @class = "form-control form-control-lg", type = "time" })
                                @Html.ValidationMessageFor(m => m.TimeOut, "", new { @class = "text-danger small" })
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(m => m.Remarks, new { @class = "font-weight-bold" })
                            @Html.TextAreaFor(m => m.Remarks, new { @class = "form-control form-control-lg", rows = 3, placeholder = "Optional: Add remarks or notes here" })
                            @Html.ValidationMessageFor(m => m.Remarks, "", new { @class = "text-danger small" })
                        </div>

                        <div class="form-group text-right mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-4">Save</button>
                            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-secondary btn-lg ml-2" })
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('input[type="text"]').forEach(textbox => {
            textbox.disabled = true;
        });
    });
    //// Disable dropdowns (select elements)
    //document.querySelectorAll('select').forEach(dropdown => {
    //    dropdown.disabled = true;
    //});
</script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('input[type="number"]').forEach(textbox => {
            textbox.disabled = true;
        });
    });
</script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('input[type="checkbox"]').forEach(checkbox => {
            checkbox.disabled = true;
        });
    });
</script>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        function setPickersState(enabled) {
            const method = enabled ? 'removeAttribute' : 'setAttribute';
            document.getElementById('myDate')[method]('disabled', 'true');
            document.getElementById('myTime')[method]('disabled', 'true');
        }

        // Example toggles
        setPickersState(false);  // disable both
        // setPickersState(true); // enable both
    });
</script>
