@{
    /**/

    ViewBag.Title = "Salary Cards";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Salary Cards</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>

<div class="col-lg-12">
    <div class="nav1">
        <div class="col-lg-12">
            <nav class="nav">
                <a href="@Url.Action("Index", "SalaryCards", new { Area = "HumanResource" })" class="nav-link">
                    <i class="fa fa-cog"></i> Salary Cards
                </a>
                <a href="@Url.Action("Index", "SalaryProcessing", new { Area = "HumanResource" })" class="nav-link">

                    <i class="fa fa-cog"></i> Salary Processing
                </a>
                <a href="@Url.Action("Index", "Salary", new { Area = "HumanResource" })" class="nav-link">
                    <i class="fa fa-cog"></i> Salary LeaveApplication
                </a>
                <a href="@Url.Action("Index", "SalaryGroups", new { Area = "HumanResource" })" class="nav-link">
                    <i class="fa fa-cog"></i> Salary Groups
                </a>



            </nav>

        </div>

    </div>
</div>
<style>



    .col-lg-2 {
        display: flex;
        align-items: center; /* Center the title vertically */
        justify-content: center; /* Center the title horizontally if needed */
        padding: 0; /* Remove default padding if necessary */
        border-radius: 4px; /* Rounded corners */
        @*border: 1px solid black;*@ /* Border color and style */
    }
</style>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Salary Cards</h2>
                    <hr />
                    @Html.ActionLink("Create SalaryCard", "Create", "SalaryCards", new { Area = "HumanResource" }, new { @class = "btn btn-primary" })
                    <br />
                    <br />
                    @if (TempData["AlertMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["AlertMessage"]

                            <button type="button" class="close" data-dismiss="alert">
                                <span>
                                    &times;
                                </span>
                            </button>
                        </div>
                    }

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="salaryCardsGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">
                                        Loading data from server
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")



    <script type="text/javascript">
        $(document).ready(function () {
            $('#salaryCardsGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "SalaryCards", new { Area = "HumanResource" }))",
                "sServerMethod": "POST",
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);
                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var dropdownHtml = `
                        <div class="dropdown">
                            <button style="width: 150px;" class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">`;

                    var viewButton = `<a class="dropdown-item" href="/HumanResource/SalaryCards/details/${aData.Id}">View</a>`;
                    var editButton = `<a class="dropdown-item" href="/HumanResource/SalaryCards/edit/${aData.Id}">Edit</a>`;

                    switch (aData.Status) {
                        case 1: // Pending
                            dropdownHtml += viewButton + editButton;
                            break;
                        default:
                            dropdownHtml += viewButton + editButton;
                            break;
                    }

                    dropdownHtml += `</div></div>`;

                    $('td:eq(4)', nRow).html(dt_Created);
                    $('td:eq(5)', nRow).html(dropdownHtml);

                    return nRow;
                },
                // Display settings
                "aoColumns": [
                    { "mDataProp": "EmployeeCustomerFullName", "sTitle": "Name", "sWidth": "20%" },
                    { "mDataProp": "SalaryGroupDescription", "sTitle": "Salary Group", "sWidth": "15%" },
                    { "mDataProp": "CardNumber", "sTitle": "Card Number", "sWidth": "5%" },
                    { "mDataProp": "TaxExemption", "sTitle": "Tax Exemption", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "15%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Action", "sWidth": "13%", "bSortable": false }],
                "aaSorting": [[0, "desc"]],
                "responsive": true,
            });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });

        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>
}
