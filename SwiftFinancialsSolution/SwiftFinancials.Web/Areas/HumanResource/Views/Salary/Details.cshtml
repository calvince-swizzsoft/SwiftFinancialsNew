@model  Application.MainBoundedContext.DTO.HumanResourcesModule.SalaryHeadDTO
@{
    ViewBag.Title = "Salary Head Details";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1><strong>Salary</strong></h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "Salary", new { Area = "HumanResource" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>View</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Salary Head Details</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-6">
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.TypeDescription)</strong><br>
                                @Html.TextBoxFor(model => model.TypeDescription, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly" })
                                <br>
                            </p>
                            <p>
                                <strong>@Html.DisplayNameFor(model => model.Description)</strong><br>

                                @Html.TextBoxFor(model => model.Description, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly"})<br>
                            </p>
                            <p>
                                <strong> @Html.DisplayNameFor(model => model.CustomerAccountTypeTargetProductId)</strong><br>
                                @Html.TextBoxFor(model => model.CustomerAccountTypeTargetProductId, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly" })<br>
                            </p>
                            <p>
                                <strong> @Html.DisplayNameFor(model => model.ChartOfAccountId)</strong><br>
                                @Html.TextBoxFor(model => model.ChartOfAccountAccountName, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly" })
                                <br>
                            </p>
                            <p>
                                <strong> @Html.DisplayNameFor(model => model.CreatedDate)</strong><br>
                                @Html.TextBoxFor(model => model.CreatedDate, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly" })
                                <br>
                            </p>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <p>
                                @Html.ActionLink("Back to List", "Index", "Salary", new { Area = "HumanResource" }, new { @class = "btn btn-success" })
                                &nbsp;&nbsp;&nbsp;&nbsp;
                                @Html.ActionLink("Edit", "Edit", "Salary", new { id = Model.Id, Area = "HumanResource" }, new { @class = "btn btn-success" })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
