    </script>

    <script>
        $(document).on("change", ".groupSelect", function () {
            const salaryGroupId = $(this).val(); // Get the selected SalaryGroupId

            if ($(this).is(":checked")) {
                // Send the selected SalaryGroupId to the server
                $.ajax({
                    url: "/SalaryProcessing/CheckEmployeesBySalaryGroup",
                    method: "POST",
                    contentType: "application/json",
                    data: JSON.stringify({ salaryGroupId }), // Send SalaryGroupId
                    success: function (response) {
                        if (response.success) {
                            const employees = response.data;
                            // Clear and populate the Employees table
                            const employeeTableBody = $("#employeeTable tbody");
                            employeeTableBody.empty(); // Clear previous rows

                            employees.forEach(employee => {
                                // Fix invalid date handling
                                const createdDate = new Date(employee.CreatedDate);
                                const formattedDate = createdDate instanceof Date && !isNaN(createdDate) ? createdDate.toLocaleDateString() : "Invalid Date";

                                // Append the employee data to the table
                                employeeTableBody.append(`
                                        <tr>
                                            <td hidden>${employee.EmployeeId}</td> <!-- Make EmployeeId hidden -->
                                            <td>${employee.EmployeeCustomerFullName}</td>
                                            <td>${employee.CardNumber}</td>
                                            <td>${employee.Remarks || "N/A"}</td>
                                            <td>${formattedDate}</td> <!-- Fix CreatedDate display -->
                                        </tr>
                                    `);
                            });
                        } else {
                            alert(response.message || "No employees found for the selected salary group.");
                        }
                    },
                    error: function () {
                        alert("An error occurred while processing the request.");
                    }
                });
            }
        });
    </script>

    <script>
        $(document).on("submit", "#salaryProcessingForm", function (e) {
            e.preventDefault(); // Prevent default form submission

            // Collect Employee IDs from the table
            const employeeIds = [];
            $("#employeeTable tbody tr").each(function () {
                const employeeId = $(this).find("td:first").text(); // Assuming EmployeeId is in the first cell
                if (employeeId) {
                    employeeIds.push(employeeId.trim());
                }
            });

            // Include Employee IDs in the form data
            const formData = $(this).serializeArray(); // Serialize the form fields
            formData.push({ name: "employeeIds", value: employeeIds });

            // Send the form data via AJAX
            $.ajax({
                url: $(this).attr("action"),
                method: "POST",
                data: $.param(formData), // Serialize the form data for the server
                success: function (response) {
                    if (response.success) {
                        alert("Salary processing successful!");
                        window.location.href = response.redirectUrl;
                    } else {
                        alert(response.message || "Failed to process salary.");
                    }
                },
                error: function () {
                    alert("An error occurred while processing the form.");
                }
            });
        });

    </script>













