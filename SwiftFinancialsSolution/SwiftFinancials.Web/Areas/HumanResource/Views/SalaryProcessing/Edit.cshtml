    <script>
    $(document).ready(function () {
        var salaryPeriodsMap = {};

        $('.PostingPeriodsLookup').typeahead({
            minLength: 1,
            source: function (query, process) {
                $.getJSON('@Url.Action("GetSalaryPeriodsAsync", "SalaryProcessing")', function (salaryPeriods) {
                    if (salaryPeriods && salaryPeriods.length > 0) {
                        var months = [];
                        salaryPeriodsMap = {};

                        $.each(salaryPeriods, function (index, salaryPeriod) {
                            var description = salaryPeriod.PostingPeriodDescription; // Display month description
                            months.push(description);
                            salaryPeriodsMap[description] = salaryPeriod;
                        });

                        process(months);
                    } else {
                        console.warn("No salary periods found.");
                    }
                }).fail(function () {
                    console.error("Failed to fetch salary periods.");
                });
            },
            updater: function (item) {
                var selectedSalaryPeriod = salaryPeriodsMap[item];
                if (selectedSalaryPeriod) {
                    $('#PostingPeriodId').val(selectedSalaryPeriod.PostingPeriodId);
                    $('#EmployeeCategoryDescription').val(selectedSalaryPeriod.EmployeeCategoryDescription);
                    $('#Remarks').val(selectedSalaryPeriod.Remarks);
                    $('#TaxReliefAmount').val(selectedSalaryPeriod.TaxReliefAmount);
                    $('#MaximumProvidentFundReliefAmount').val(selectedSalaryPeriod.MaximumProvidentFundReliefAmount);
                    $('#MaximumInsuranceReliefAmount').val(selectedSalaryPeriod.MaximumInsuranceReliefAmount);
                    $('#EmployeeCategoryDescription').val(selectedSalaryPeriod.EmployeeCategoryDescription);
                    $('#EmployeeCategory').val(selectedSalaryPeriod.EmployeeCategory = 0);
                    $('#Month').val(selectedSalaryPeriod.Month);
                    $('#MonthDescription').val(selectedSalaryPeriod.MonthDescription);
                    $('#PostedEntries').val(selectedSalaryPeriod.PostedEntries);



                }
                return item;
            }
        });
    });
    </script>

    <script>
        document.getElementById('selectAll').addEventListener('click', function () {
