    @Scripts.Render("~/plugins/colorpicker")
    @Scripts.Render("~/plugins/clockpicker")
    @Scripts.Render("~/plugins/dateRange")
    @Scripts.Render("~/plugins/select2")
    @Scripts.Render("~/plugins/touchSpin")
    @Scripts.Render("~/plugins/tagInputs")
    @Scripts.Render("~/plugins/duallist")


    <script type="text/javascript">
        $(document).ready(function () {
            $('#FixedDepositsGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "SalaryProcessing", new { Area = "HumanResource"}))",
                "sServerMethod": "POST",
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);
                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;



                    var dropdownHtml = `
                        <div class="dropdown">
                            <button style="width: 150px;" class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">`;


                    var viewButton = `<a class="dropdown-item" href="/HumanResource/SalaryPeriods/view/${aData.Id}">Verify</a>`;
                    var editButton = `<a class="dropdown-item" href="/HumanResource/SalaryProcessing/edit/${aData.Id}">Edit</a>`;


                    $('td:eq(7)', nRow).html(dt_Created);


                    switch (aData.Status) {
                        case 1: // Pending
                            dropdownHtml += viewButton + editButton;
                            break;
                        default:
                            dropdownHtml += viewButton + editButton;
                            break;
                    }

                    dropdownHtml += `</div></div>`;

                    $('td:eq(8)', nRow).html(dropdownHtml);


                    return nRow;
                },

                // Display settings
                "aoColumns": [
                    //{ "mDataProp": "Description", "sTitle": "Type", "sWidth": "15%" },
                    { "mDataProp": "PostingPeriodDescription", "sTitle": "Posting Period", "sWidth": "15%" },
                    { "mDataProp": "StatusDescription", "sTitle": "Status", "sWidth": "8%" },
                    { "mDataProp": "EmployeeCategory", "sTitle": "Employee Type", "sWidth": "10%" },
                    { "mDataProp": "TaxReliefAmount", "sTitle": "Tax Relief", "sWidth": "8%" },
                    { "mDataProp": "MaximumProvidentFundReliefAmount", "sTitle": "Maximum Provident Relief Amount", "sWidth": "10%" },
                    { "mDataProp": "MaximumInsuranceReliefAmount", "sTitle": "Maximum Insurance Relief", "sWidth": "18%" },
                    { "mDataProp": "Remarks", "sTitle": "Remarks", "sWidth": "5%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "10%" }],

                "aaSorting": [[0, "desc"]]
            });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });

        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>

    <script>
    $(document).ready(function () {
        $('#startDate').datepicker();
        $('#endDate').datepicker();

        function loadCheques() {
            var startDate = $('#startDate').datepicker('getDate');
            var endDate = $('#endDate').datepicker('getDate');
            var text = $('#searchInput').val();
            if (!startDate || !endDate) {
                alert("Please select both a start date and an end date.");
                return;
            }

            var formattedStartDate = startDate.toISOString().split('T')[0];
            var formattedEndDate = endDate.toISOString().split('T')[0];

            var url = '@(Url.Action("Index", "SalaryProcessing", new { Area = "HumanResource" }))';
            url += '?startDate=' + formattedStartDate + '&endDate=' + formattedEndDate + '&text=' + text;

            $('#FixedDepositsGrid').DataTable().ajax.url(url).load();
        }

        $('#searchButton').click(function () {
            loadCheques();
        });

        $('#refreshButton').on('click', function () {
            loadCheques();
        });
    });
    </script>
