                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="FixedDepositsGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">
                                        Loading data from server
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="bottom-button" style="display: flex; justify-content: flex-end; padding-right:50px; margin-top:20px;">
                    <div class="col-md-5">
                        <label for="startDate">Start Date:</label>
                        <input type="text" id="startDate" class="form-control" />
                    </div>
                    <div class="col-md-5">
                        <label for="endDate">End Date:</label>
                        <input type="text" id="endDate" class="form-control" />
                    </div>
                    <button id="refreshButton" class="btn btn-info">Refresh</button>


                </div>
            </div>
        </div>
    </div>
</div>

