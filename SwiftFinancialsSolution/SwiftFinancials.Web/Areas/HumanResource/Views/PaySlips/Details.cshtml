@model  Application.MainBoundedContext.DTO.HumanResourcesModule.PaySlipEntryDTO
@model  Application.MainBoundedContext.DTO.HumanResourcesModule.PaySlipDTO
@model  Application.MainBoundedContext.DTO.HumanResourcesModule.SalaryCardDTO
@{
    ViewBag.Title = "Pay Slip Details";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Salary</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "PaySlips", new { Area = "HumanResource" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>View</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Pay Slips</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="col-md-13 form-group">
                                @Html.LabelFor(model => model.SalaryPeriodId, htmlAttributes: new { @class = "control-label" })
                                <div class="input-group" data-autoclose="true">
                                    @Html.HiddenFor(model => model.SalaryPeriodId)
                                    @Html.TextBoxFor(model => model.SalaryPeriodId, new { @class = "form-control input-md alpha alphaspace required", @readonly = "readonly", placeholder = "Link Employee..." })
                                    <span class="input-group-addon">
                                        <a data-toggle="modal" data-target="#SalaryPeriodsLookupModal"><span class="fa fa-search"></span></a>
                                    </span>
                                </div>
                            </div>

                            <div class="form-group form-group-lg">
                                @Html.LabelFor(model => model.SalaryCardEmployeeEmployeeTypeCategory, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.SalaryCardEmployeeEmployeeTypeCategory, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kshs.0.00" } })
                                @Html.ValidationMessageFor(model => model.SalaryCardEmployeeEmployeeTypeCategory, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="form-group form-group-lg">
                                @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "" })
                                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kshs.0.00" } })
                                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group form-group-lg">
                                @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label" })
                                @Html.HiddenFor(model => model.Remarks)
                                @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                                @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control required", @placeholder = "Chart of Acccount Name" } })
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-6">
                        <div class="form-group form-group-lg">
                            @Html.LabelFor(model => model.TaxExemption, htmlAttributes: new { @class = "" })
                            @Html.EditorFor(model => model.TaxExemption, new { htmlAttributes = new { @class = "form-control", @placeholder = "Kshs.0.00" } })
                            @Html.ValidationMessageFor(model => model.TaxExemption, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group form-group-lg">
                            @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label" })
                            @Html.HiddenFor(model => model.Remarks)
                            @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control required", @placeholder = "Chart of Acccount Name" } })
                        </div>
                    </div>
                </div>

                    @using (Html.BeginForm("Create", "SalaryCards", new { Area = "HumanResource" }, FormMethod.Post, new { @class = "wizard-big", @id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <fieldset>
                        </fieldset>
                    }
                    <div class="row">
                        <div class="col-lg-12">
                            <p>
                                @*@Html.ActionLink("Edit", "Edit", "Salary", new { id = Model.Id, Area = "HumanResource" }, new { @class = "btn btn-success" })*@
                                @Html.ActionLink("Back to List", "Index", "PaySlips", new { Area = "HumanResource" }, new { @class = "btn btn-success" })
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
