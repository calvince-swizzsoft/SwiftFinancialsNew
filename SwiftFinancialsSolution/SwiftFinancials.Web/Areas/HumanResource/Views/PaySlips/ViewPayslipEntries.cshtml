@model IEnumerable<Application.MainBoundedContext.DTO.HumanResourcesModule.PaySlipEntryDTO>

@{ ViewBag.Title = "Payslip"; }

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Employee Payslip</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "PaySlips", new { Area = "HumanResource" }, null)
            </li>
            <li class="breadcrumb-item active">Employee Payslip</li>
        </ol>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

<div class="container-fluid mt-5" id="payslip-content">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h2>Employee Payslip</h2>
            <p><strong>Company Name:</strong> Swizz Soft Systems</p>
            <p><strong>Address:</strong> Mombasa Road 001</p>
        </div>
        <div class="text-right mt-4 no-print">
            <button class="btn btn-secondary" onclick="printPayslip()">Print Payslip</button>
            <button class="btn btn-primary" onclick="downloadPayslip()">Download as PDF</button>
        </div>

        <div class="card-body">
            <!-- Employee Details -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Account Number</th>
                                <th>Payslip Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var group in Model.GroupBy(entry => new { entry.CustomerAccountFullAccountNumber, entry.CreatedDate }))
                            {
                                <tr>
                                    <td>@group.Key.CustomerAccountFullAccountNumber</td>
                                    <td>@group.Key.CreatedDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <!-- Earnings Table -->
                    <table id="earningsTable" class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Earnings</th>
                                <th class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model.Where(x => x.SalaryHeadCategoryDescription == "Earning"))
                            {
                                <tr>
                                    <td>@entry.Description</td>
                                    <td class="text-end">Ksh @entry.Principal.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Total Earnings</th>
                                <th class="text-end">Ksh @Model.Where(x => x.SalaryHeadCategoryDescription == "Earning").Sum(x => x.Principal).ToString("N2")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <div class="col-md-6">
                    <!-- Deductions Table -->
                    <table id="deductionsTable" class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Deductions</th>
                                <th class="text-end">Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model.Where(x => x.SalaryHeadCategoryDescription == "Deduction"))
                            {
                                <tr>
                                    <td>@entry.Description</td>
                                    <td class="text-end">Ksh @entry.Principal.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Total Deductions</th>
                                <th class="text-end">Ksh @Model.Where(x => x.SalaryHeadCategoryDescription == "Deduction").Sum(x => x.Principal).ToString("N2")</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

            <!-- Net Salary Calculation -->
            <div class="table-secondary">
                <table class="table">
                    <tr>
                        <th>Net Salary</th>
                        <th class="text-end">
                            @{
                                var totalEarnings = Model.Where(x => x.SalaryHeadCategoryDescription == "Earning").Sum(x => x.Principal);
                                var totalDeductions = Model.Where(x => x.SalaryHeadCategoryDescription == "Deduction").Sum(x => x.Principal);
                                var netSalary = totalEarnings - totalDeductions;
                            }
                            @netSalary.ToString("C", new System.Globalization.CultureInfo("en-KE"))
                        </th>
                    </tr>
                </table>
            </div>

            <!-- Signatures -->
            <div class="row mt-5">
                <div class="col-md-6 text-center">
                    <p><strong>Employer:</strong> ________________</p>
                </div>
                <div class="col-md-6 text-center">
                    <p><strong>Employee:</strong> ________________</p>
                </div>
            </div>
        </div>
        <div class="card-footer text-center text-muted">
            <p>Generated by HR System | Confidential</p>
        </div>
    </div>
</div>

<style>
    media print {
        body * {
            visibility: hidden;
        }

        #payslip-content,
        #payslip-content * {
            visibility: visible;
        }

        #payslip-content {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }

        .no-print {
            display: none !important;
        }

        .col-md-6 {
            width: 50% !important;
            float: left !important;
            page-break-inside: avoid !important;
        }

        table {
            width: 100% !important;
            page-break-inside: avoid !important;
        }
    }

    .card {
        margin-bottom: 30px;
    }

    .table {
        margin-bottom: 1rem;
    }
</style>

<script>
    function printPayslip() {
        window.print();
    }

    function downloadPayslip() {
        const { jsPDF } = window.jspdf;
        const payslipContent = document.getElementById('payslip-content');

        const buttons = payslipContent.querySelector('.no-print');
        buttons.style.display = 'none';

        html2canvas(payslipContent, {
            scale: 2,
            useCORS: true,
            logging: false,
            windowWidth: payslipContent.scrollWidth,
            windowHeight: payslipContent.scrollHeight,
            onclone: function (clonedDoc) {
                const clonedButtons = clonedDoc.querySelector('.no-print');
                if (clonedButtons) {
                    clonedButtons.remove();
                }
            }
        }).then(canvas => {
            buttons.style.display = 'block';

            const imgData = canvas.toDataURL('image/png');
            const pdf = new jsPDF({
                orientation: 'portrait',
                unit: 'mm',
                format: 'a4'
            });

            const pdfWidth = pdf.internal.pageSize.getWidth();
            const pdfHeight = (canvas.height * pdfWidth) / canvas.width;

            pdf.addImage(imgData, 'PNG', 0, 0, pdfWidth, pdfHeight);
            pdf.save('Payslip.pdf');
        });
    }
</script>