@model IEnumerable<Application.MainBoundedContext.DTO.HumanResourcesModule.PaySlipEntryDTO>

@{
    ViewBag.Title = "Payslip";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Employee PaySlip</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "PaySlips", new { Area = "HumanResource" }, null)
            </li>
            <li class="breadcrumb-item active">Employee PaySlip</li>
        </ol>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h2>Employee Payslip</h2>
        </div>
        <div class="card-body">
            <!-- Employee Details -->
            <div class="row mb-4">
                <div class="col-md-12">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Full Account Number</th>
                                <th>Payslip Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var group in Model.GroupBy(entry => new { entry.CustomerAccountFullAccountNumber, entry.CreatedDate }))
                            {
                                <tr>
                                    <td>@group.Key.CustomerAccountFullAccountNumber</td>
                                    <td>@group.Key.CreatedDate.ToString("dd/MM/yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>



            <!-- Payslip Entries -->
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Description</th>
                        <th class="text-end">Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model)
                    {
                        <tr>
                            <td>@entry.Description</td>
                            <td class="text-end">@entry.Principal.ToString("C")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Total Earnings</th>
                        <th class="text-end">@Model.Sum(x => x.Principal).ToString("C")</th>
                    </tr>
                    <tr>
                        <th>Total Deductions</th>
                        <th class="text-end">@Model.Sum(x => x.Interest).ToString("C")</th>
                    </tr>
                    <tr class="table-secondary">
                        <th>Net Salary</th>
                        <th class="text-end">
                            @{
                                var netSalary = Model.Sum(x => x.Principal) - Model.Sum(x => x.Interest);
                            }
                            @netSalary.ToString("C", new System.Globalization.CultureInfo("en-KE"))
                        </th>
                    </tr>

                </tfoot>
            </table>
        </div>
        <div class="card-footer text-center text-muted">
            <p>Generated by HR System | Confidential</p>
        </div>
    </div>
</div>
