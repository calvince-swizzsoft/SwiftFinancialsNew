@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#LeaveApprovalGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "LeaveApproval", new { Area = "HumanResource"}))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var DurationStartDate = new Date(parseInt(aData.DurationStartDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + DurationStartDate.getHours()).slice(-2);
                    var m = ("0" + DurationStartDate.getMinutes()).slice(-2);
                    var s = ("0" + DurationStartDate.getSeconds()).slice(-2);

                    var dt_DurationStartDate = $.datepicker.formatDate('dd/mm/yy', DurationStartDate) + " " + h + ":" + m + ":" + s;
                    aData.DurationStartDate = dt_DurationStartDate;

                    var DurationEndDate = new Date(parseInt(aData.DurationEndDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + DurationEndDate.getHours()).slice(-2);
                    var m = ("0" + DurationEndDate.getMinutes()).slice(-2);
                    var s = ("0" + DurationEndDate.getSeconds()).slice(-2);

                    var dt_DurationEndDate = $.datepicker.formatDate('dd/mm/yy', DurationEndDate) + " " + h + ":" + m + ":" + s;
                    aData.DurationEndDate = dt_DurationEndDate;

                    var editUrl = '<a  href="/humanResource/LeaveApproval/Approval/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Approval</a>';
                   // var viewUrl = '<a  href="/humanResource/Employee/details/' + aData.Id + '" class = "btn btn-outline-info"">' + 'View</a>';

                    $('td:eq(2)', nRow).html(dt_Created);
                    $('td:eq(3)', nRow).html(dt_DurationStartDate);
                    $('td:eq(4)', nRow).html(dt_DurationEndDate);
                    $('td:eq(6)', nRow).html(editUrl);

                    return nRow;
                },
                // Display settings
                "aoColumns": [
                    { "mDataProp": "EmployeeCustomerFullName", "sTitle": "Customer Name", "sWidth": "15%" },
                    { "mDataProp": "LeaveTypeDescription", "sTitle": "Leave Type", "sWidth": "15%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "15%" },
                    { "mDataProp": "DurationStartDate", "sTitle": "Leave Start Date", "sWidth": "15%" },
                    { "mDataProp": "DurationEndDate", "sTitle": "Leave End Date", "sWidth": "15%" },
                    { "mDataProp": "StatusDescription", "sTitle": "Status", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "10%", "bSortable": false }],
                "aaSorting": [[0, "desc"]]
        });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>

}



