<script>
    $('#CustomerAccountsGrid').DataTable({
        "sPaginationType": "full_numbers",
        "bProcessing": true,
        "bServerSide": true,
        "sAjaxSource": "@(Url.Action("Index", "SalaryPeriods", new { Area = "HumanResource" }))",
        "sServerMethod": "POST",

        "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
            var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
            var h = ("0" + createdDate.getHours()).slice(-2);
            var m = ("0" + createdDate.getMinutes()).slice(-2);
            var s = ("0" + createdDate.getSeconds()).slice(-2);

            var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
            aData.CreatedDate = dt_Created;

            // Change URL to point to Edit action
            var selectUrl = '<a href="/HumanResource/SalaryPeriods/ProcessSalary/' + aData.Id + '" class="btn btn-outline-info">Select</a>';

            $('td:eq(5)', nRow).html(dt_Created);
            $('td:eq(6)', nRow).html(selectUrl);

            return nRow;
        },

        "aoColumns": [
            { "mDataProp": "PostingPeriodDescription", "sTitle": "Posting Period", "sWidth": "15%" },
            { "mDataProp": "StatusDescription", "sTitle": "Status", "sWidth": "10%" },
            { "mDataProp": "EmployeeCategoryDescription", "sTitle": "Employee Category", "sWidth": "15%" },
            { "mDataProp": "TaxReliefAmount", "sTitle": "Tax Relief", "sWidth": "15%" },
            { "mDataProp": "MaximumProvidentFundReliefAmount", "sTitle": "Maximum Relief Amount", "sWidth": "15%" },
            { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "15%" },
            { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "15%", "bSortable": false }
        ],
        "aaSorting": [[0, "desc"]]
    });

    // Handle row selection and data population for Edit
    $("#CustomerAccountsGrid tbody").on("click", "tr", function () {
        var data = CustomerAccountsGrid.row(this).data();

        // Populate Edit form fields based on selected customer account details
        $('#Id').val(data.Id);
        $('#PostingPeriodId').val(data.PostingPeriodId);
        $('#PostingPeriodDescription').val(data.PostingPeriodDescription);
        

        // Close the modal after selecting
        $('#customerLookupModal').modal('hide');
    });
</script>
