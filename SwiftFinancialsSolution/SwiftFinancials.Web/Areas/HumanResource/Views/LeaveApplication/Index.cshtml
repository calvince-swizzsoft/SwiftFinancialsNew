﻿
@{
    ViewBag.Title = "Leave Application";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>LeaveApplication</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    @Html.ActionLink("Create ", "Create", "LeaveApplication", new { Area = "HumanResource" }, new { @class = "btn btn-primary" })
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="LeaveApplicationsGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">
                                        Loading data from server
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#LeaveApplicationsGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "LeaveApplication", new { Area = "HumanResource"}))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                   var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;


                    var startDate = new Date(parseInt(aData.DurationStartDate.replace("/Date(", "").replace(")/", ""), 10));
                    var hStart = ("0" + startDate.getHours()).slice(-2);
                    var mStart = ("0" + startDate.getMinutes()).slice(-2);
                    var sStart = ("0" + startDate.getSeconds()).slice(-2);

                    var dt_DurationStart = $.datepicker.formatDate('dd/mm/yy', startDate) + " " + hStart + ":" + mStart + ":" + sStart;
                    aData.DurationStartDate = dt_DurationStart;



                    var endDate = new Date(parseInt(aData.DurationEndDate.replace("/Date(", "").replace(")/", ""), 10));
                    var hEnd = ("0" + endDate.getHours()).slice(-2);
                    var mEnd = ("0" + endDate.getMinutes()).slice(-2);
                    var sEnd = ("0" + endDate.getSeconds()).slice(-2);

                    var dt_DurationEnd = $.datepicker.formatDate('dd/mm/yy', endDate) + " " + hEnd + ":" + mEnd + ":" + sEnd;
                    aData.DurationEndDate = dt_DurationEnd;

                    var dropdownHtml = `
    <div class="dropdown">
        <button style="width: 150px;" class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Action
        </button>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">`;

                    var viewButton = `<a class="dropdown-item" href="/HumanResource/LeaveApplication/details/${aData.Id}">View</a>`;
                    var editButton = `<a class="dropdown-item" href="/HumanResource/LeaveApplication/edit/${aData.Id}">Edit</a>`;
                    var approveButton = `<a class="dropdown-item" href="/HumanResource/LeaveApplication/approval/${aData.Id}">Approval</a>`;
                    var recallButton = `<a class="dropdown-item" href="/HumanResource/LeaveApplication/recall/${aData.Id}">Recall</a>`;


                    switch (aData.Status) {
                        case 1: // Pending
                            dropdownHtml += viewButton + editButton + approveButton;
                            break;
                        case 2: // Another specific status (e.g., Approved)
                            dropdownHtml += viewButton + approveButton + recallButton;
                            break;
                        default: // Other cases
                            dropdownHtml += viewButton + recallButton;
                            break;
                    }

                    dropdownHtml += `</div></div>`;



                    $('td:eq(9)', nRow).html(dt_Created);
                    $('td:eq(#)', nRow).html(dt_DurationEnd);
                    $('td:eq(#)', nRow).html(dt_DurationStart);
                    $('td:eq(10)', nRow).html(dropdownHtml);

                    return nRow;
                },
                // Display settings
                "aoColumns": [
                    { "mDataProp": "LeaveTypeDescription", "sTitle": "Type", "sWidth": "15%" },
                    { "mDataProp": "StatusDescription", "sTitle": "Status", "sWidth": "10%" },
                    { "mDataProp": "EmployeeCustomerFullName", "sTitle": "Employee Name", "sWidth": "10%" },
                    { "mDataProp": "EmployeeCustomerIndividualNationalityDescription", "sTitle": "Nationality", "sWidth": "15%" },
                    { "mDataProp": "EmployeeCustomerIndividualIdentityCardTypeDescription", "sTitle": "Identity Card Type", "sWidth": "15%" },
                    { "mDataProp": "EmployeeCustomerIndividualIdentityCardNumber", "sTitle": "Identity Card Number", "sWidth": "15%" },
                    { "mDataProp": "EmployeeCustomerIndividualGenderDescription", "sTitle": "Gender", "sWidth": "15%" },
                    { "mDataProp": "EmployeeCustomerIndividualMaritalStatusDescription", "sTitle": "Marital Status", "sWidth": "15%" },
                    { "mDataProp": "EmployeeCustomerSerialNumber", "sTitle": "Serial Number", "sWidth": "15%" },

                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "10%"},
                    { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "10%", "bSortable": false }],
                "aaSorting": [[0, "desc"]]
        });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>

}