@{
    ViewBag.Title = "Documents";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Documents</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Documents</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Employee Documents</h2>
                    <hr />
                    @Html.ActionLink("Create Documents", "Create", "Documents", new { Area = "HumanResource" }, new { @class = "btn btn-primary" })
                    <button class="btn btn-secondary" id="refreshBtn">Refresh</button>
                    <br />
                    <br />

                    <!-- Instructions Section -->
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>Instructions</h5>
                        </div>
                        <div class="ibox-content">
                            <p>To create an employee document:</p>
                            <ol>
                                <li>Click on the <strong>Create Documents</strong> button located at the top-left corner of this page.</li>
                                <li>You will be redirected to a form where you can enter the details for the new document.</li>
                                <li>Click the <strong>Submit</strong> button to save the document.</li>
                            </ol>
                        </div>
                    </div>

                    <!-- DataTable Section -->
                    <div class="ibox-content">
                        <div class="sk-spinner sk-spinner-double-bounce">
                            <div class="sk-double-bounce1"></div>
                            <div class="sk-double-bounce2"></div>
                        </div>
                        <div class="table-responsive">
                            <table id="documentsGrid" class="table table-striped table-bordered table-hover" width="100%">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>MIME Type</th>
                                        <th>Employee Name</th>
                                        <th>Nationality</th>
                                        <th>Identify Card Number</th>
                                        <th>Gender</th>
                                        <th>Marital Status</th>
                                        <th>Payroll Number</th>
                                        <th>Designation</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td colspan="9" class="dataTables_empty">Loading data from server</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">
        $(document).ready(function () {
            // Initializing the DataTable with server-side processing
            var table = $('#documentsGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("GetDocuments", "Documents", new { Area = "HumanResource" }))",
                "sServerMethod": "POST",

                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var editUrl = '<a  href="/humanResource/EmployeeDocuments/edit/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Edit</a>';
                    var viewUrl = '<a  href="/humanResource/EmployeeDocuments/details/' + aData.Id + '" class = "btn btn-outline-info"">' + 'View</a>';

                    //$('td:eq(4)', nRow).html(dt_Created);
                    $('td:eq(9)', nRow).html(viewUrl + '&nbsp;' + editUrl);

                    return nRow;
                },

                "aoColumns": [
                    { "mDataProp": "Title", "sTitle": "Title", "sWidth": "10%" },
                    { "mDataProp": "MimeType", "sTitle": "MIME Type", "sWidth": "10%" },
                    { "mDataProp": "EmployeeName", "sTitle": "Employee Name", "sWidth": "10%" },
                    { "mDataProp": "Nationality", "sTitle": "Nationality", "sWidth": "10%" },
                    { "mDataProp": "IdentifyCardNumber", "sTitle": "Identify Card Number", "sWidth": "10%" },
                    { "mDataProp": "Gender", "sTitle": "Gender", "sWidth": "10%" },
                    { "mDataProp": "MaritalStatus", "sTitle": "Marital Status", "sWidth": "10%" },
                    { "mDataProp": "PayrollNumber", "sTitle": "Payroll Number", "sWidth": "10%" },
                    { "mDataProp": "Designation", "sTitle": "Designation", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "10%", "bSortable": false }],
                "aaSorting": [[0, "desc"]]
            });

            $('#refreshBtn').click(function () {
                table.ajax.reload();
            });
        });

        // Show loading spinner on AJAX start
        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });

        // Hide loading spinner on AJAX stop
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });

    </script>
}
