    <script>
$(document).ready(function () {
    // Relieve row data
    $('.remove-btn').click(function () {
        var row = $(this).closest('tr');
        var id = row.data('id'); // Fetch the guarantor ID from the data-id attribute of the row

        $.ajax({
            url: '@Url.Action("guarantorSubstitution", "AttachGuarantor")',
            type: 'POST',
            data: { id: id }, // Send the ID to the controller
            success: function () {
                row.remove(); // Remove the row if the request is successful
            },
            error: function () {
                alert('Error relieving guarantor.');
            }
        });
    });
});
    </script>

