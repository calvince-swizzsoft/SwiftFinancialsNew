<link href="~/Scripts/css/tabbing2.css" rel="stylesheet" />

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Loaning</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "AttachGuarantor", new { Area = "Loaning" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox ">
                <div class="ibox-title">
                    <h2>Attach Guarantor</h2>

                    @Html.ActionLink("Back", "Create", "AttachGuarantor", new { Area = "Loaning" }, new { @class = "btn btn-primary" })

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                @if (TempData["AlertMessage"] != null)
                {
                    <div class="alert alert-success">
                        <strong>Failed !</strong> @TempData["AlertMessage"]

                        <button type="button" class="close" data-dismiss="alert">
                            <span>
                                &times;
                            </span>
                        </button>
                    </div>
                }

                <div class="ibox-content">
                    @using (Html.BeginForm("Add", "AttachGuarantor", new { Area = "Loaning" }, FormMethod.Post, new { @class = "wizard-big", @id = "form" }))
                    {
                        <fieldset>
                            <center>
                                <button id="toggleButton" class="toggle-button">Open</button>
                                <button id="toggleButton2" class="toggle-button">Open</button>
                                <button id="toggleButton3" class="toggle-button">Open</button>
                            </center>

                            <section id="section" class="section">
                                @*Page here*@
                                <p>Section 1</p>
                            </section>

                            <section id="section2" class="section">
                                @*Page here*@
                                <p>Section 2</p>
                            </section>

                            <section id="section3" class="section">
                                @*Page here*@
                                <p>Section 3</p>
                            </section>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

