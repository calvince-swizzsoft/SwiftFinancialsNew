@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#DataPeriodsGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("GetDataAttachmentPeriodEntries", "Closing", new { Area = "Loaning"}))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                   var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    return nRow;
                },
                // Display settings
                "aoColumns": [
                    { "mDataProp": "FullAccountNumber", "sTitle": "Full Account Number","sWidth": "20%" },
                    { "mDataProp": "CustomerFullName", "sTitle": "Customer", "sWidth": "20" },
                    { "mDataProp": "TransactionTypeDescription", "sTitle": "Transaction Type", "sWidth": "20" },
                    { "mDataProp": "SequenceNumber", "sTitle": "Sequence Number", "sWidth": "20" },
                    { "mDataProp": "CurrentAmount", "sTitle": "Current Amount", "sWidth": "20" },
                    { "mDataProp": "CurrentBalance", "sTitle": "Current Balance", "sWidth": "20" },
                    { "mDataProp": "CurrentAbility", "sTitle": "Current Ability", "sWidth": "20" },
                    { "mDataProp": "NewAmount", "sTitle": "New Amount", "sWidth": "20" },
                    { "mDataProp": "NewBalance", "sTitle": "New Balance", "sWidth": "20" },
                    { "mDataProp": "NewAbility", "sTitle": "New Ability", "sWidth": "20" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Actions", "sWidth": "5%" }],
                "aaSorting": [[0, "desc"]]
            });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>

}
