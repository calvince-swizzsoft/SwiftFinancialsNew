</nav>


<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Loan Cases</h2>
                    <hr />

                    <div class="row">
                        <div class="col-lg-2">
                            <select>
                                <option>Attached</option>
                                <option>Released</option>
                            </select>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.StartDate, "")
                                @Html.TextBoxFor(m => m.StartDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @id = "datepicker" })
                            </div>
                        </div>

                        <div class="col-lg-2">
                            <div class="form-group">
                                @Html.LabelFor(m => m.EndDate, "Select Date:")
                                @Html.TextBoxFor(m => m.EndDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @id = "datepicker" })
                            </div>
                        </div>

                        <div class="col-lg-4"></div>

                        <div class="col-lg-2"></div>
                    </div>

                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
