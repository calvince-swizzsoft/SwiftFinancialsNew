                    "buttons": [
                        {
                        extend: 'pdf',
                        className: 'btn btn-light rounded-0',
                        text: '<i class="fa fa-file-pdf-o"></i> PDF',
                        customize: function (win) {
                        var imgSrc = '@Url.Content("~/Images/MIA.JPG")'; // Generate absolute URL

                        $(win.document.body)
                        .prepend(
                        `<center><img src="${imgSrc}" style="text-align:center; margin-top:20px; width: 250px;"></center>`)
                         .css('font-size', '10pt')
                         .prepend(
                         `<h1 style="text-align:center;">Swizzsoft Ltd.</h1>`
                             );
                           }
                        },

                        {
                            extend: 'print',
                            className: 'btn btn-light rounded-0',
                            text: '<i class="fa fa-print"></i> Print',
                            customize: function (win) {
                                var imgSrc = '@Url.Content("~/Images/MIA.JPG")'; // Generate absolute URL

                                $(win.document.body)
                                    .prepend(
                                        `<center><img src="${imgSrc}" style="text-align:center; margin-top:20px; width: 250px;"></center>`
                                    )
                                    .css('font-size', '10pt')
                                    .prepend(
                                        `<h1 style="text-align:center;">Swizzsoft Ltd.</h1>`
                                    );
                            }
                        }
                    ],

                    "initComplete": function (settings, json) {
                        var info = this.api().page.info();
                        var numEntries = `Showing ${info.start + 1} to ${info.end} of ${info.recordsTotal} entries`;
                        $(this).append(`<div class="dataTables_info">${numEntries}</div>`);
                    }
                });
            }
        });
    });
