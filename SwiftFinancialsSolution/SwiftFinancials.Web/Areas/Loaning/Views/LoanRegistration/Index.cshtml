<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Loan Registration</h2>

                    @if (TempData["Edit"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["Edit"]
                        </div>
                    }

                    @if (TempData["AlertMessage"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success !</strong> @TempData["AlertMessage"]
                        </div>
                    }

                    @if (TempData["LoanCaseStatusInvalid"] != null)
                    {
                        <div class="alert alert-danger"><strong>Attempt Failed !</strong> @TempData["LoanCaseStatusInvalid"]</div>
                    }

                    <hr />
                    @Html.ActionLink("Register Loan", "Create", "LoanRegistration", new { Area = "Loaning" }, new { @class = "btn btn-primary" })


                    @*<a href="#" class="btn btn-secondary" data-toggle="modal" data-target="#loanCasesModal">
                            Export Loan Cases
                        </a>*@


                    @*@using (Html.BeginForm("ExportToExcel", "LoanRegistration", FormMethod.Post))
                        {*@
                    @* Include necessary hidden fields or input elements for jQueryDataTablesModel *@
                    @Html.Hidden("sEcho", "1") @* or bind it to your model *@

                    @*<button type="submit" class="btn btn-primary">Export to Excel</button>
                        }*@




                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
