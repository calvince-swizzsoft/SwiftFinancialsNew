                        <div class="sk-double-bounce2"></div>
                    </div>


                    <div class="blue-section">
                        <form id="filterForm">
                            <div class="row" style="display: flex; justify-content: flex-start; align-content:center;">
                                <div class="col-lg-3">
                                    <div class="form-group form-group-lg">
                                        <label for="filterType">Loan Status</label>

                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.Status, LoanCaseStatus,
                                            new { @class = "form-control input-md", @id = "loanCaseStatus" })
                                        </div>
                                    </div>
                                </div>

                                <div class="col-lg-3">  
                                    <div class="form-group form-group-lg">
                                        <label for="filterType">Loan Filter</label>

                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                            @Html.DropDownListFor(model => model.filterText, LoanCaseFilter,
                                            new { @class = "form-control input-md", @id = "filterType" })
                                        </div>
                                    </div>
                                </div>

