        <li>@Html.ActionLink("Loan Appraisal", "Index", "AppraiseLoan", new { area = "Loaning" }, new { @class = "nav-link" })</li>
        <li>@Html.ActionLink("Loan Approval", "Index", "ApproveLoan", new { area = "Loaning" }, new { @class = "nav-link" })</li>
