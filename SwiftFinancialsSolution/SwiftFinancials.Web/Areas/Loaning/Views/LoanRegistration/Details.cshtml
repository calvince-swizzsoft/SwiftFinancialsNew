@model  Application.MainBoundedContext.DTO.BackOfficeModule.LoanCaseDTO
@{
    ViewBag.Title = "Loan Case Details";
}


<style>
    body {
        font-family: Arial, sans-serif;
    }

    .tab-header, .sub-tab-header {
        display: flex;
        border-bottom: 1px solid #ccc;
        margin-bottom: 10px;
    }

    .tab-button, .sub-tab-button {
        background-color: #f1f1f1;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .tab-button:hover, .sub-tab-button:hover {
            background-color: #ddd;
        }

        .tab-button.active, .sub-tab-button.active {
            background-color: #ddd; /* Same as hover background color */
        }

        .tab-button:focus, .sub-tab-button:focus {
            outline: none;
        }

    .tab, .sub-tab-content {
        display: none;
    }

        .tab-content, .sub-tab-content.active {
            display: block;
        }

    .tab-content, .sub-tab-content {
        max-height: 1000px; /* Adjust the height as needed */
        overflow-y: auto;
        padding: 10px;
        border: 1px solid #ccc; /* Borderline around tab content */
        background-color: #fff;
        margin-top: 10px;
    }


    <style >


    #dataTableEntries {
        width: 100%;
        border-collapse: collapse;
    }

    #dataTableEntries th, td {
        padding: 15px;
        text-align: center;
        border: 1px solid #ddd;
        transition: background 0.3s, transform 0.3s;
    }

    #dataTableEntries th {
        background: linear-gradient(to bottom, #4a90e2, #003366);
        color: white;
        text-transform: uppercase;
        font-size: 1.1em;
        position: sticky;
        top: 0;
        z-index: 1;
    }

    #dataTableEntries tr:hover td {
        background: rgba(74, 144, 226, 0.2);
        transform: translateY(-2px);
    }

    #dataTableEntries td {
        background: #f9f9f9;
        color: #333;
    }

    #dataTableEntries tr:nth-child(even) td {
        background: #f2f2f2;
    }

    #dataTableEntries tr:nth-child(odd) td {
        background: #ffffff;
    }

    #dataTableEntries tr:last-child td {
        border-bottom: none;
    }
</style>







