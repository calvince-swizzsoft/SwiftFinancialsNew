                    }
                </style>


                <div class="calculator">
                    <div class="form-group">
                        <label for="loanAmount">Loan Amount</label>
                        <input type="number" id="loanAmount" placeholder="Enter loan amount">
                    </div>
                    <div class="form-group">
                        <label for="interestRate">Annual Percentage Rate (APR) (%)</label>
                        <input type="number" id="interestRate" placeholder="Enter APR">
                    </div>
                    <div class="form-group">
                        <label for="loanTerm">Loan Term (years)</label>
                        <input type="number" id="loanTerm" placeholder="Enter loan term">
                    </div>
                    <div class="form-group">
                        <label for="periodsPerYear">Payments per Year</label>
                        <input type="number" id="periodsPerYear" placeholder="Enter payments per year (e.g., 12 for monthly)">
                    </div>
                    <button onclick="calculateLoan()" style="width: 100%;">Calculate</button>

                    <div class="result">
                        <h3>Results</h3>
                        <p id="monthlyPayment">Payment per Period: Kshs. 0.00</p>
                        <p id="totalPayment">Total Payment: Kshs. 0.00</p>
                        <p id="totalInterest">Total Interest Paid: Kshs. 0.00</p>
                        <p id="apr">Annual Percentage Rate (APR): 0.00%</p>
                        <p id="yearlyPayment">Yearly Payment: Kshs. 0.00</p>
                    </div>
                </div>

                <script>
                    function calculateLoan() {
                        var loanAmount = parseFloat(document.getElementById('loanAmount').value);
                        var interestRate = parseFloat(document.getElementById('interestRate').value);
                        var loanTerm = parseFloat(document.getElementById('loanTerm').value);
                        var periodsPerYear = parseInt(document.getElementById('periodsPerYear').value);

                        var monthlyRate = (interestRate / 100) / periodsPerYear;
                        var totalPeriods = loanTerm * periodsPerYear;

                        var x = Math.pow(1 + monthlyRate, totalPeriods);
                        var paymentPerPeriod = (loanAmount * x * monthlyRate) / (x - 1);

                        var totalPayment = paymentPerPeriod * totalPeriods;
                        var totalInterest = totalPayment - loanAmount;

                        var apr = ((totalInterest / totalPeriods) / loanAmount) * periodsPerYear * 100;

                        var yearlyPayment = paymentPerPeriod * periodsPerYear;

                        document.getElementById('monthlyPayment').innerText = 'Payment per Period: Kshs. ' + paymentPerPeriod.toFixed(2);
                        document.getElementById('totalPayment').innerText = 'Total Payment: Kshs. ' + totalPayment.toFixed(2);
                        document.getElementById('totalInterest').innerText = 'Total Interest Paid: Kshs. ' + totalInterest.toFixed(2);
                        document.getElementById('apr').innerText = 'Annual Percentage Rate (APR): ' + apr.toFixed(2) + '%';
                        document.getElementById('yearlyPayment').innerText = 'Yearly Payment: Kshs. ' + yearlyPayment.toFixed(2);
                    }
                </script>
            </div>
