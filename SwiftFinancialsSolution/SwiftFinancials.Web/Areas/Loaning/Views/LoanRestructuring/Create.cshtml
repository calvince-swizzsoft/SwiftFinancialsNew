        function selectCustomer(id) {
            console.log("Selected ID:", id);
            $.ajax({
                url: '/Loaning/LoanRestructuring/CustomerAccountLookUp',
                type: 'POST',
                data: { Id: id },
                success: function (response) {
                    if (response.success) {
                        $('#FullAccountNumber').val(response.data.FullAccountNumber);
                        $('#CustomerAccountId').val(response.data.CustomerAccountId);
                        $('#AccountStatus').val(response.data.AccountStatus);
                        $('#PrincipalBalance').val(response.data.PrincipalBalance);
                        $('#InterestBalance').val(response.data.InterestBalance);
                        $('#CustomerIndividualFirstName').val(response.data.CustomerIndividualFirstName);
                        $('#CustomerIndividualPayrollNumbers').val(response.data.CustomerIndividualPayrollNumbers);
                        $('#CustomerPersonalIdentificationNumber').val(response.data.CustomerPersonalIdentificationNumber);
                        $('#CustomerReference1').val(response.data.CustomerReference1);
                        $('#CustomerReference2').val(response.data.CustomerReference2);
                        $('#CustomerReference3').val(response.data.CustomerReference3);
                        $('#LoanProductId').val(response.data.LoanProductId);
                        $('#LoanProductDescription').val(response.data.LoanProductDescription);
                        $('#loanProductSection').val(response.data.loanProductSection);
                        $('#LoanInterestAnnualPercentageRate').val(response.data.LoanInterestAnnualPercentageRate);
                        $('#loanProductPaymentFrequencyPerYear').val(response.data.loanProductPaymentFrequencyPerYear);
                        $('#NumberOfPeriods').val(response.data.NumberOfPeriods);

                        $('#CustomerAccountLookUpModal').modal('hide');
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('An error occurred while processing your request.');
                }
            });
        }


