                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.MonthDescription, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.MonthDescription, new { htmlAttributes = new { @class = "form-control required", @readonly = "readonly" } })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group form-group-lg">
                                    @Html.LabelFor(model => model.Remarks, htmlAttributes: new { @class = "control-label" })
                                    @Html.EditorFor(model => model.Remarks, new { htmlAttributes = new { @class = "form-control required", @readonly = "readonly" } })
