        function calculateApportionedAndShortage() {
            var amountGuaranteed = parseFloat(document.getElementById('amountGuaranteed').value) || 0;
            var principalAttached = parseFloat(document.getElementById('principalAttached').value) || 0;
            var interestAttached = parseFloat(document.getElementById('interestAttached').value) || 0;

            var apportioned = principalAttached + interestAttached;

            var shortage = amountGuaranteed - apportioned;

            document.getElementById('apportioned').value = apportioned.toFixed(2);
            document.getElementById('shortage').value = shortage >= 0 ? shortage.toFixed(2) : 0;
        }

        function clearApportionments() {
            document.getElementById("apportioned").value = "";
            document.getElementById("shortage").value = "";
            document.getElementById("interestAttached").value = "";
            document.getElementById("principalAttached").value = "";
            document.getElementById("amountGuaranteed").value = "";
        }
