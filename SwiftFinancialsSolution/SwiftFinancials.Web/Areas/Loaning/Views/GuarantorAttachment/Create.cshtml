    <script>
        let selectedRow = null; 

        document.querySelector("#dataTable tbody").addEventListener("click", function (event) {
            const row = event.target.closest("tr");
            if (!row) return;

            if (selectedRow) {
                selectedRow.classList.remove("highlight-row");
            }

            row.classList.add("highlight-row");
            selectedRow = row;

            const cells = row.querySelectorAll("td");
            document.getElementById("amountGuaranteed").value = cells[7]?.textContent.trim() || "";
            document.getElementById("principalAttached").value = cells[8]?.textContent.trim() || "";
            document.getElementById("interestAttached").value = cells[9]?.textContent.trim() || "";
        });

        function updateRow() {
            if (selectedRow) {
                const amountGuaranteed = document.getElementById("amountGuaranteed").value;
                const principalAttached = document.getElementById("principalAttached").value;
                const interestAttached = document.getElementById("interestAttached").value;
                
                const cells = selectedRow.querySelectorAll("td");
                cells[7].textContent = amountGuaranteed;
                cells[8].textContent = principalAttached;
                cells[9].textContent = interestAttached;

                selectedRow.classList.remove("highlight-row");
                selectedRow = null;
            } else {
                alert("Please select a row to update.");
            }
        }

        function prepareTableData() {
            const table = document.getElementById("dataTable");
            const rows = table.querySelectorAll("tbody tr");

            const tableData = [];
            rows.forEach((row) => {
                const cells = row.querySelectorAll("td");
                console.log("ID Cell Content:", cells[1]?.textContent.trim()); 
                if (cells.length > 0) {
                    tableData.push({
                        Id: cells[1]?.textContent.trim() || "",
                        CustomerId: cells[2]?.textContent.trim() || "",
                        StatusDescription: cells[3]?.textContent.trim() || "",
                        CustomerName: cells[4]?.textContent.trim() || "",
                        TotalShares: cells[5]?.textContent.trim() || "",
                        CommittedShares: cells[6]?.textContent.trim() || "",
                        AmountGuaranteed: cells[7]?.textContent.trim() || "",
                        PrincipalAttached: cells[8]?.textContent.trim() || "",
                        InterestAttached: cells[9]?.textContent.trim() || "",
                    });
                }
            });

            document.getElementById("tableDataJson").value = JSON.stringify(tableData);
            console.log("Serialized Table Data:", JSON.stringify(tableData)); 
        }
    </script>

    <script>
