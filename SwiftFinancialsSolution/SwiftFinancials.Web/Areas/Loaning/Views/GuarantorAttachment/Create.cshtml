    <link href="~/Scripts/css/ViewbagTable.css" rel="stylesheet" />

    <script>
        var defaultProductCode = $('#productCode').val();
        var defaultRecordStatus = $('#recordStatus').val();
        $('#customerAccountsGrid').DataTable({
        "sPaginationType": "full_numbers",
        "bProcessing": true,
        "bServerSide": true,
        "sAjaxSource": "@(Url.Action("Index", "CoA_register", new { Area = "Accounts"}))",
        "sServerMethod": "POST",
        "fnServerParams": function (aoData) {
            aoData.push(
                { "name": "productCode", "value": $('#productCode').val() || defaultProductCode },
                { "name": "recordStatus", "value": $('#recordStatus').val() || defaultRecordStatus }

            );
        },
        "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
            var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
            var h = ("0" + createdDate.getHours()).slice(-2);
            var m = ("0" + createdDate.getMinutes()).slice(-2);
            var s = ("0" + createdDate.getSeconds()).slice(-2);

            var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
            aData.CreatedDate = dt_Created;

            var selectUrl = '<button class="btn btn-outline-info" onclick="selectCustomerAccounts(\'' + aData.Id + '\')">Select</button>';

            $('td:eq(5)', nRow).html(dt_Created);
            $('td:eq(6)', nRow).html(selectUrl);

            return nRow;
        },
        "aoColumns": [
            { "mDataProp": "CustomerFullName", "sTitle": "Customer", "sWidth": "10%" },
            { "mDataProp": "CustomerIndividualGenderDescription", "sTitle": "Gender", "sWidth": "10%" },
            { "mDataProp": "CustomerAccountTypeProductCodeDescription", "sTitle": "Product", "sWidth": "10%" },
            { "mDataProp": "RecordStatusDescription", "sTitle": "Record Status", "sWidth": "10%" },
            { "mDataProp": "BranchDescription", "sTitle": "Branch", "sWidth": "10%" },
            { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "10%" },
            { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "10%", "bSortable": false }],
        "aaSorting": [[0, "desc"]]
    });

        $('#modalFilterForm').on('submit', function (e) {
            e.preventDefault();
            $('#customerAccountsGrid').DataTable().ajax.reload();
        });

        function selectCustomerAccounts(id) {
            $.ajax({
                url: '/Loaning/GuarantorAttachment/CustomerAccountLookUp',
                type: 'POST',
                data: { Id: id },
                success: function (response) {
                    if (response.success) {
                        $('#CustomerAccountFullAccountNumber').val(response.data.CustomerAccountFullAccountNumber);
                        $('#CustomerAccountAccountId').val(response.data.CustomerAccountAccountId);
                        $('#CustomerAccountAccountStatusDescription').val(response.data.CustomerAccountAccountStatusDescription);
                        $('#CustomerAccountAccountRemarks').val(response.data.CustomerAccountAccountRemarks);
                        $('#BookBalance').val(response.data.BookBalance);
                        $('#CustomerId').val(response.data.CustomerId);
                        $('#CustomerIndividualFirstName').val(response.data.CustomerIndividualFirstName);
                        $('#CustomerAccounntCustomerTypeDescription').val(response.data.CustomerAccounntCustomerTypeDescription);
                        $('#CustomerIndividualPayrollNumbers').val(response.data.CustomerIndividualPayrollNumbers);
                        $('#CustomerPersonalIdentificationNumber').val(response.data.CustomerPersonalIdentificationNumber);
                        $('#CustomerReference1').val(response.data.CustomerReference1);
                        $('#CustomerReference2').val(response.data.CustomerReference2);
                        $('#CustomerReference3').val(response.data.CustomerReference3);
                        $('#amountGuaranteed').val(response.data.AmountGuaranteed);
                        $('#EmployerDescription').val(response.data.EmployerDescription);

                        var guarantors = response.data.Guarantors;
                        const noDataMessage = document.querySelector('.no-data-message');


                        if (!guarantors || guarantors.length === 0) {
                            noDataMessage.style.display = 'block';
                            $('#dataTable tbody').empty();
                        } else {
                            noDataMessage.style.display = 'none';
                            var tbody = $('#dataTable tbody');
                            tbody.empty();


                            guarantors.forEach(function (guarantor) {
                                var row = '<tr>' +
                                    '<td>' + guarantor.StatusDescription + '</td>' +
                                    '<td>' + guarantor.CustomerIndividualFirstName + ' ' + guarantor.CustomerIndividualLastName + '</td>' +
                                    '<td>' + guarantor.TotalShares + '</td>' +
                                    '<td>' + guarantor.CommittedShares + '</td>' +
                                    '<td><input type="number" class="amount-guaranteed" value="' + guarantor.AmountGuaranteed + '" /></td>' +
                                    '<td>' + guarantor.PrincipalAttached + '</td>' +
                                    '<td>' + guarantor.InterestAttached + '</td>' +
                                    '<td>' + guarantor.CustomerIndividualPayrollNumbers + '</td>' +
                                    '</tr>';
                                tbody.append(row);
                            });

                            $('#fullAccountNumberLookupModal').modal('hide');
                        }
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('An error occurred while processing your request.');
                }
            });
