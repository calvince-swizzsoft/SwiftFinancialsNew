                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "IncomeAdjustments", new { Area = "Loaning" }))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                    var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created;

                    var selectUrl = '<button class="btn btn-outline-info" onclick="selectIncomeAdjustment(\'' + aData.Id + '\')">Select</button>';

                    $('td:eq(3)', nRow).html(dt_Created);
                    $('td:eq(4)', nRow).html(selectUrl);

                    return nRow;
                },
                // Display settings
                // Display settings
                "aoColumns": [
                    { "mDataProp": "Description", "sTitle": "Name", "sWidth": "20%" },
                    { "mDataProp": "TypeDescription", "sTitle": "Type", "sWidth": "7%" },
                    { "mDataProp": "IsLocked", "sTitle": "Is Locked?", "sWidth": "5%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "5%", "bSortable": false }
                ],
                "aaSorting": [[0, "desc"]]
            });



        function selectIncomeAdjustment(id) {
            $.ajax({
                url: '/Loaning/AppraiseLoan/IncomeAdjustmentsLookUp',
                type: 'POST',
                data: { Id: id },
                success: function (response) {
                    if (response.success) {
                        // Populate fields with the returned data
                        $('#Description').val(response.data.IncomeAdjustment);
                        $('#TypeDescription').val(response.data.TypeDescription);
                        $('#IncomeAdjustmentId').val(response.data.Id); // Hidden field for the ID

                        // Close the modal
                        $('#incomeAdjustmentsLookupModal').modal('hide');
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('An error occurred while processing your request.');
                }
            });
        }
    </script>


    <script type="text/javascript">
        $(document).ready(function () {

            var addedIncomeAdjustments = [];

            $('#addEntryBtn').click(function (event) {
                event.preventDefault();

                // Retrieve the entered values
                var description = $('#Description').val();
                var typeDescription = $('#TypeDescription').val();
                var amount = $('#Amount').val(); // Assuming you have an input field with ID "Amount" for the user to enter the amount
                var incomeAdjustmentId = $('#IncomeAdjustmentId').val(); // Hidden field for the selected Income Adjustment ID

                // Validation: ensure amount is entered
                if (!amount) {
                    alert('Please enter an amount.');
                    return;
                }

                // Check if the Income Adjustment Id is already in the list
                var existingEntry = addedIncomeAdjustments.find(function (entry) {
                    return entry.id === incomeAdjustmentId;
                });

                if (existingEntry) {
                    alert('Income Adjustment has already been added.');
                    return;
                }

                // If not already added, add the Id and amount to the list
                addedIncomeAdjustments.push({ id: incomeAdjustmentId, amount: amount });

                var tableBody = $("#incomeAdjustmentsdataTable tbody");
                var newRow = `
                                    <tr data-id="${incomeAdjustmentId}">
                                        <td>${description}</td>
                                        <td>${typeDescription}</td>
                                        <td style="text-align: right;">${amount}</td>
                                        <td><button type="button" class="btn btn-danger remove-entry" data-id="${incomeAdjustmentId}">Remove</button></td>
                                    </tr>`;
                tableBody.append(newRow);

                // Clear the input fields after adding to the table
                $('#Description').val('');
                $('#TypeDescription').val('');
                $('#Amount').val('');
                $('#IncomeAdjustmentId').val('');
            });


        });


        $(document).on('click', '.remove-entry', function () {
            var incomeAdjustmentId = $(this).data('id');

            $(this).closest('tr').remove();

            // Remove the corresponding entry from the addedIncomeAdjustments array
            addedIncomeAdjustments = addedIncomeAdjustments.filter(function (entry) {
                return entry.id !== incomeAdjustmentId;
            });
        });
    </script>


    <script>
        // Initialize variables to track the active tab and modal status
        var activeTab = localStorage.getItem('activeTab') || 'section1';
        var isModalOpened = localStorage.getItem('isModalOpened') === 'true';

        // Function to open a tab and set it as active
        function openTab(evt, tabName) {
            var i, tabcontent, tabbuttons;

            // Hide all tab contents
            tabcontent = document.getElementsByClassName("tab");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
                tabcontent[i].classList.remove("active");
            }

            // Remove the active class from all tab buttons
            tabbuttons = document.getElementsByClassName("tab-button");
            for (i = 0; i < tabbuttons.length; i++) {
                tabbuttons[i].classList.remove("active");
            }

            // Show the current tab and add active class to the button and tab content
            document.getElementById(tabName).style.display = "block";
            document.getElementById(tabName).classList.add("active");
            evt.currentTarget.classList.add("active");

            // Update the active tab
            activeTab = tabName;
            localStorage.setItem('activeTab', tabName);
        }

        // Function to open a sub-tab and set it as active
        function openSubTab(evt, subTabName) {
            var i, subTabContent, subTabButtons;

            // Hide all sub-tab contents
            subTabContent = document.getElementsByClassName("sub-tab-content");
            for (i = 0; i < subTabContent.length; i++) {
                subTabContent[i].style.display = "none";
                subTabContent[i].classList.remove("active");
