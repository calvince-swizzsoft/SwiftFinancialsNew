        width: 100%;
        border-collapse: collapse;
    }

        #repaymentScheduledataTable th, td {
            padding: 15px;
            text-align: center;
            border: 1px solid #ddd;
            transition: background 0.3s, transform 0.3s;
        }

        #repaymentScheduledataTable th {
            background: linear-gradient(to bottom, #4a90e2, #003366);
            color: white;
            text-transform: uppercase;
            font-size: 1.1em;
            position: sticky; /* Makes the header sticky */
            top: 0; /* Fixes the header at the top of the scrollable area */
            z-index: 1; /* Keeps header above other content */
        }

        #repaymentScheduledataTable tr:hover td {
            background: rgba(74, 144, 226, 0.2);
            transform: translateY(-2px);
        }

        #repaymentScheduledataTable td {
            background: #f9f9f9;
            color: #333;
        }

        #repaymentScheduledataTable tr:nth-child(even) td {
            background: #f2f2f2;
        }

        #repaymentScheduledataTable tr:nth-child(odd) td {
            background: #ffffff;
        }

        #repaymentScheduledataTable tr:last-child td {
