        document.addEventListener("DOMContentLoaded", function () {
            // Get references to the fields
            const netIncomeField = document.querySelector("#LoanRegistrationNetIncome"); // Replace with the correct ID for Net Income
            const totalAllowancesField = document.querySelector("#LoanRegistrationTotalAllowance"); // Replace with the correct ID
            const totalDeductionsField = document.querySelector("#LoanRegistrationTotalDeduction"); // Replace with the correct ID
            const totalIncomeField = document.querySelector("#LoanRegistrationTotalIncome"); // Replace with the correct ID
            const takeHomeField = document.querySelector("#TakeHomeFixedAmount"); // Replace with the correct ID
            const abilityToPayField = document.querySelector("#LoanRegistrationAbilityToPay"); // Replace with the correct ID
            const abilityToPayOverLoanTermField = document.querySelector("#LoanRegistrationAbilityToPayOverLoanTerm"); // Replace with the correct ID
            const loanPlusInterestField = document.querySelector("#LoanRegistrationLoanPlusInterest"); // Replace with the correct ID
            const loanPartField = document.querySelector("#LoanRegistrationLoanPart"); // Replace with the correct ID
            const interestPartField = document.querySelector("#LoanRegistrationInterestPart"); // Replace with the correct ID

            // Function to calculate all values
            function calculateValues() {
                const netIncome = parseFloat(netIncomeField.value.replace(/,/g, '')) || 0;
                const totalAllowances = parseFloat(totalAllowancesField.value.replace(/,/g, '')) || 0;
                const totalDeductions = parseFloat(totalDeductionsField.value.replace(/,/g, '')) || 0;

                // Calculate total income
                const totalIncome = netIncome + totalAllowances;
                totalIncomeField.value = totalIncome.toFixed(2).toLocaleString();

                // Calculate take-home value (assuming it's netIncome - totalDeductions)
                const takeHomeValue = netIncome - totalDeductions;
                takeHomeField.value = takeHomeValue.toFixed(2).toLocaleString();

                // Calculate ability to pay (net income - deductions + allowances)
                const abilityToPay = netIncome - totalDeductions + totalAllowances;
                abilityToPayField.value = abilityToPay.toFixed(2).toLocaleString();

                // Calculate ability to pay over the loan term
                const loanTerm = 12; // Replace with actual loan term value
                const abilityToPayOverLoanTerm = abilityToPay * loanTerm;
                abilityToPayOverLoanTermField.value = abilityToPayOverLoanTerm.toFixed(2).toLocaleString();

                // Calculate loan + interest (assuming some rate, replace with actual logic)
                const interestRate = 0.05; // Example interest rate
                const loanPlusInterest = abilityToPayOverLoanTerm * (1 + interestRate);
                loanPlusInterestField.value = loanPlusInterest.toFixed(2).toLocaleString();

                // Calculate loan part and interest part
                loanPartField.value = abilityToPayOverLoanTerm.toFixed(2).toLocaleString();
                interestPartField.value = (loanPlusInterest - abilityToPayOverLoanTerm).toFixed(2).toLocaleString();
            }

            // Attach the event listener to the net income field for real-time calculations
            netIncomeField.addEventListener("input", calculateValues);
        });

    </script>

