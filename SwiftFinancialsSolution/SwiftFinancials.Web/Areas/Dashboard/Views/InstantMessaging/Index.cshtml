
@{
    ViewBag.Title = "Index";
}


<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f4f8;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .chat-container {
        width: 100%;
        max-width: 1000px;
        height: 600px;
        background: #eaf3fc;
        border: 1px solid #ccc;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .header {
        background-color: #007bff;
        color: white;
        text-align: center;
        padding: 10px;
        font-size: 18px;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .content {
        display: flex;
        flex: 1;
        overflow: hidden;
    }

    .online-pane {
        width: 30%;
        background: #dff1ff;
        border-right: 1px solid #ccc;
        padding: 10px;
        overflow-y: auto;
    }

        .online-pane h3 {
            margin: 0 0 10px;
            color: #007bff;
        }

    .online-list {
        list-style: none;
        padding: 0;
    }

        .online-list li {
            padding: 10px;
            margin-bottom: 5px;
            background: #ffffff;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

    .message-pane {
        width: 70%;
        display: flex;
        flex-direction: column;
        padding: 10px;
    }

    .messages {
        flex: 1;
        overflow-y: auto;
        background: #ffffff;
        border: 1px solid #ccc;
        margin-bottom: 10px;
        border-radius: 4px;
    }

        .messages table {
            width: 100%;
            border-collapse: collapse;
        }

        .messages th, .messages td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .messages th {
            background: #007bff;
            color: white;
        }

    .input-area {
        display: flex;
        gap: 10px;
    }

        .input-area input {
            flex: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .input-area button {
            padding: 10px 20px;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .input-area button:hover {
                background: #0056b3;
            }
</style>



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Back Office</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "InstantMessaging", new { Area = "Dashboard" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

