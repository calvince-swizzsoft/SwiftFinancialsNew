@model  Application.MainBoundedContext.DTO.MessagingModule.TextAlertDTO

@{
    ViewBag.Title = "Create";
}


<style>
    body {
        background-color: #f8f9fa;
        font-family: Arial, sans-serif;
    }

    .form-container {
        max-width: 800px;
        margin: 50px auto;
        padding: 20px;
        background: #ffffff;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-header {
        text-align: center;
        margin-bottom: 20px;
        font-size: 1.5rem;
        color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .checkbox-group {
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 10px;
        margin-top: 10px;
    }

    .checkbox-group {
        border: 1px solid #ddd;
        padding: 10px;
        border-radius: 5px;
        background-color: #f9f9f9;
    }

    .form-check {
        margin-bottom: 5px;
    }

    .form-check-label {
        font-weight: 500;
    }

    .form-check-input {
        cursor: pointer;
    }



    .message {
        height: auto;
        min-height: 200px;
        max-height: 400px;
        overflow-y: auto;
        font-size: 14px;
    }
</style>



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Dashboard Module</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "TextAlerts", new { Area = "Dashboard" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Create Text Alert</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white">
                    @using (Html.BeginForm("Create", "TextAlerts", new { Area = "Dashboard" }, FormMethod.Post, new { id = "messageGroupForm" }))
                    {
                        @Html.AntiForgeryToken()


                        <div class="mb-3">
                            @Html.LabelFor(m => m.TextMessageBody, new { @class = "form-label fw-bold fs-5" }) 
                            @Html.TextAreaFor(m => m.TextMessageBody,
                                new
                                    {
                                        @class = "form-control message border border-dark shadow-lg", 
                                        @rows = 10,
                                        @style = "resize: none; overflow-y: auto; font-size: 1.1rem;", 
                                        placeholder = "Enter text..."
                                })
                            @Html.ValidationMessageFor(m => m.TextMessageBody, null, new { @class = "text-danger fs-6" }) 
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold fs-5">Recipients</label> 
                            <div class="checkbox-group border border-dark p-3 rounded shadow-sm" style="max-height: 200px; overflow-y: auto;">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="recipient1" value="Bosa" name="Recipients">
                                    <label class="form-check-label fs-5 fw-semibold" for="recipient1">Bosa</label> 
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="recipient2" value="All employees" name="Recipients">
                                    <label class="form-check-label fs-5 fw-semibold" for="recipient2">All employees</label> 
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="recipient3" value="ICT team" name="Recipients">
                                    <label class="form-check-label fs-5 fw-semibold" for="recipient3">ICT team</label> 
                                </div>
                            </div>
                        </div>

                        <div class="mb-3 form-check">
                            @Html.CheckBoxFor(m => m.AppendSignature, new { @class = "form-check-input" })
                            @Html.LabelFor(m => m.AppendSignature, new { @class = "form-check-label fw-bold fs-5" }) 
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary btn-lg me-2 shadow" style="width: 150px; font-size: 1.2rem;">Send</button> 
                        </div>

                    }
                </div>
            </div>
        </div>
    </div>
</div>




