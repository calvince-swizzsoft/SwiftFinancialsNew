    <script>
document.addEventListener("DOMContentLoaded", function () {
    var entries = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.entries));
    var entriesBody = document.getElementById("entriesBody");
    var noDataMessage = document.getElementById("noDataMessage");

    function populateTable(entries) {
        entriesBody.innerHTML = "";

        if (entries && entries.length > 0) {
            entries.forEach(function(entry) {
                var row = document.createElement("tr");

                row.setAttribute("data-account-id", entry.Id);

                row.innerHTML = `
                    <td>${entry.FullAccountNumber}</td>
                    <td>${entry.SelectCustomerName}</td>
                    <td>${entry.TransactionTypeDescription}</td>
                    <td>${entry.SequenceNumber}</td>
                    <td>${entry.CurrentAmount}</td>
                    <td>${entry.CurrentBalance}</td>
                    <td>${entry.CurrentAbility}</td>
                    <td>${entry.NewAmount}</td>
                    <td>${entry.NewBalance}</td>
                    <td>${entry.NewAbility}</td>
                    <td>${entry.Remarks}</td>
                    <td><button style="background-color: red;" class="btn btn-danger remove-entry" data-id="${entry.Id}">Remove</button></td>
                `;
                entriesBody.appendChild(row);
            });
            noDataMessage.style.display = "none";
        } else {
            noDataMessage.style.display = "block";
        }
    }

    populateTable(entries);

    // Filter functionality
    document.getElementById("refreshButton").addEventListener("click", function () {
        var filterText = document.getElementById("tableFilterInput").value.toLowerCase();

        var filteredEntries = entries.filter(function(entry) {
            return (
                (entry.FullAccountNumber && entry.FullAccountNumber.toLowerCase().includes(filterText)) ||
                (entry.CustomerName && entry.CustomerName.toLowerCase().includes(filterText)) ||
                (entry.TransactionType && entry.TransactionType.toLowerCase().includes(filterText)) ||
                (entry.SequenceNumber && entry.SequenceNumber.toString().includes(filterText)) ||
                (entry.CurrentAmount && entry.CurrentAmount.toString().includes(filterText)) ||
                (entry.CurrentBalance && entry.CurrentBalance.toString().includes(filterText)) ||
                (entry.CurrentAbility && entry.CurrentAbility.toString().includes(filterText)) ||
                (entry.NewAmount && entry.NewAmount.toString().includes(filterText)) ||
                (entry.NewBalance && entry.NewBalance.toString().includes(filterText)) ||
                (entry.NewAbility && entry.NewAbility.toString().includes(filterText))
            );
        });

        populateTable(filteredEntries);
    });
});


        $(document).on("click", ".remove-entry", function (event) {
            event.preventDefault();
            var entryId = $(this).data("id");
            removeEntry(entryId);
        });



        function removeEntry(id) {
            $.ajax({
                url: '@Url.Action("Remove", "DataProcessing")',
                type: 'POST',
                data: { id: id },
                success: function (response) {
                    if (response.success) {
                        updateEntriesTable(response.data);
                    } else {
                        alert("An error occurred while removing the entry.");
                    }
                },
                error: function () {
                    alert("An error occurred while processing the request.");
                }
            });
        }



        function openFullscreen(imageId) {
            const image = document.getElementById(imageId);
            const fullscreenOverlay = document.getElementById('fullscreenOverlay');
            const fullscreenImage = document.getElementById('fullscreenImage');

            fullscreenImage.src = image.src;
            fullscreenOverlay.style.display = 'flex';
        }

        function closeFullscreen() {
            const fullscreenOverlay = document.getElementById('fullscreenOverlay');
            fullscreenOverlay.style.display = 'none';
        }
    </script>





    <script>
        function openTab(evt, tabName) {
            evt.preventDefault();
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(tabName).style.display = "block";
            evt.currentTarget.className += " active";
