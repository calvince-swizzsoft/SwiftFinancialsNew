    <link href="~/Scripts/css/ViewbagTable.css" rel="stylesheet" />
    <script src="~/Scripts/js/navlink.js"></script>


    <script>
        var defaultProductCode = $('#productCode').val();
        var defaultRecordStatus = $('#recordStatus').val();
        $('#customersGrid').DataTable({
        "sPaginationType": "full_numbers",
        "bProcessing": true,
        "bServerSide": true,
        "sAjaxSource": "@(Url.Action("Index", "Customer", new { Area = "Registry"}))",
        "sServerMethod": "POST",
        "fnServerParams": function (aoData) {
            aoData.push(
                { "name": "productCode", "value": $('#productCode').val() || defaultProductCode },
                { "name": "recordStatus", "value": $('#recordStatus').val() || defaultRecordStatus }

            );
        },
        "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
            var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
            var h = ("0" + createdDate.getHours()).slice(-2);
            var m = ("0" + createdDate.getMinutes()).slice(-2);
            var s = ("0" + createdDate.getSeconds()).slice(-2);

            var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
            aData.CreatedDate = dt_Created;

            var selectUrl = '<button class="btn btn-outline-info" onclick="selectCustomer(\'' + aData.Id + '\')">Select</button>';
            console.log(aData.Id);

            $('td:eq(4)', nRow).html(dt_Created);
            $('td:eq(5)', nRow).html(selectUrl);

            return nRow;
        },
        "aoColumns": [
            { "mDataProp": "TypeDescription", "sTitle": "Customer Type", "sWidth": "6%" },
            { "mDataProp": "FullName", "sTitle": "Customer", "sWidth": "15%" },
            { "mDataProp": "IndividualGenderDescription", "sTitle": "Gender", "sWidth": "4%" },
            { "mDataProp": "IndividualMaritalStatusDescription", "sTitle": "Marital Status", "sWidth": "6%" },
            { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "10%" },
            { "mDataProp": "CreatedDate", "sTitle": "", "sWidth": "10%", "bSortable": false }],
        "aaSorting": [[0, "desc"]]
    });

        $('#modalFilterForm').on('submit', function (e) {
            e.preventDefault();
            $('#customersGrid').DataTable().ajax.reload();
        });

        function selectCustomer(id) {
            console.log("selectCustomer called with id: " + id);

            if (!id) {
                alert("Customer ID is undefined or null");
                return;
            }

            $.ajax({
                url: '/Dashboard/MessagingGroups/CustomerLookUp',
                type: 'POST',
                data: { Id: id },
                success: function (response) {
                    console.log(response);

                    if (response.success) {
                        $('#model\\.customer\\[0\\]\\.Id').val(response.data.CustomerID);
                        $('#model\\.customer\\[0\\]\\.IndividualFirstName').val(response.data.Customer);
                        $('#model\\.customer\\[0\\]\\.AddressMobileLine').val(response.data.Mobile);
                        $('#model\\.customer\\[0\\]\\.AddressEmail').val(response.data.Email);

                        var customers = response.data.Customers;
                        const noDataMessage = document.querySelector('.no-data-message');


                        if (!customers || customers.length === 0) {
                            noDataMessage.style.display = 'block';
                            $('#dataTable tbody').empty();
                        } else {
                            noDataMessage.style.display = 'none';
                            var tbody = $('#dataTable tbody');
                            tbody.empty();


                            customers.forEach(function (Customer) {
                                var row = '<tr>' +
                                    '<td>' + Customer.TypeDescription + '</td>' +
                                    '<td>' + Customer.PaddedSerialNumber + '</td>' +
                                    '<td>' + Customer.Reference1 + '</td>' +
                                    '<td>' + Customer.Reference2 + '</td>' +
                                    '<td>' + Customer.IndividualSalutationDescription + " " + Customer.IndividualFirstName + " " + Customer.IndividualLastName + '</td>' +
                                    '<td>' + Customer.IndividualPayrollNumbers + '</td>' +
                                    '<td>' + Customer.IndividualGenderDescription + '</td>' +
                                    '<td>' + Customer.IndividualMaritalStatusDescription + '</td>' +
                                    '<td>' + Customer.IdentificationNumber + '</td>' +
                                    '</tr>';
                                tbody.append(row);
                            });

                            $('#customerLookupModal').modal('hide');
                        }
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert('An error occurred while processing your request.');
                }
            });
        }






        function gatherCustomerData() {
            var customers = [];
            $('#dataTable tbody tr').each(function () {
                var row = $(this);
                var customer = {
                    StatusDescription: row.find('td:eq(0)').text(),
                    CustomerIndividualFirstName: row.find('td:eq(1)').text(),
                    TotalShares: row.find('td:eq(2)').text(),
                    CommittedShares: row.find('td:eq(3)').text(),
                    AmountGuaranteed: row.find('td:eq(4)').text(),
                    PrincipalAttached: row.find('td:eq(5)').text(),
                    InterestAttached: row.find('td:eq(6)').text(),
                    CustomerIndividualPayrollNumbers: row.find('td:eq(7)').text()
                };
                customers.push(customer);
            });

            $('#customersData').val(JSON.stringify(customers));
        }

        function sendFormData() {
            gatherCustomerData();

            $('#messageGroupForm').submit();
        }
    </script>
}


