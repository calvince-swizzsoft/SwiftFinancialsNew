    <script>
        $('#data_3 .input-group.date').datepicker({
            startView: 2,
            todayBtn: "linked",
            keyboardNavigation: false,
            forceParse: false,
            autoclose: true,
            format: 'dd/mm/yyyy',
            language: 'en-GB'
        });
    </script>

    <script type="text/javascript">
      $(document).ready(function () {
          const table = $('#EmailAlertsGrid').DataTable({
        "sPaginationType": "full_numbers",
        "bProcessing": true,
        "bServerSide": true,
        "sAjaxSource": "@Url.Action("Index", "EmailAlerts", new { Area = "Dashboard" })",
        "sServerMethod": "POST",
        "language": {
            "emptyTable": "No data available in table"
        },
        "fnServerParams": function (aoData) {
            aoData.push(
                { "name": "status", "value": $('#status').val() },
                { "name": "filterValue", "value": $('#filterValue').val() },
                { "name": "startDate", "value": $('#startDate').val() },
                { "name": "endDate", "value": $('#endDate').val() }
            );
        },
        "aoColumns": [
            { "mDataProp": "MailMessageFrom", "sTitle": "Origin", "sWidth": "10%" },
            { "mDataProp": "MailMessageTo", "sTitle": "Recipient", "sWidth": "15%" },
            { "mDataProp": "MailMessageBody", "sTitle": "Message", "sWidth": "20%" },
            { "mDataProp": "MailMessagePriorityDescription", "sTitle": "Priority", "sWidth": "10%" },
            { "mDataProp": "MailMessageSendRetry", "sTitle": "Send Retry", "sWidth": "5%" },
            { "mDataProp": "MailMessageDLRStatusDescription", "sTitle": "Delivery Status", "sWidth": "10%" },
            { "mDataProp": "MailMessageSubject", "sTitle": "MailMessageSubject", "sWidth": "10%" },
            { "mDataProp": "CreatedBy", "sTitle": "Created By", "sWidth": "10%" },
            { "mDataProp": "CreatedDate", "sTitle": "Created Date", "sWidth": "10%" }
            //,
            //{
            //    "mDataProp": "Actions",
            //    "sTitle": "Action",
            //    "sWidth": "10%",
            //    "bSortable": false,
            //    "mRender": function (data, type, row) {
            //        return '<button class="btn btn-primary">Details</button>';
            //    }
            //}
        ],
        "aaSorting": [[8, "desc"]],
        "fnRowCallback": function (nRow, aData) {
            const createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
            const formattedDate = $.datepicker.formatDate('dd/mm/yy', createdDate);
            $('td:eq(8)', nRow).html(formattedDate);
            return nRow;
        },

        "fnPreDrawCallback": function () {
            $('.ibox-content').addClass('sk-loading');
        },
        "fnDrawCallback": function () {
            $('.ibox-content').removeClass('sk-loading');
        }
    });

    $('#filterForm').on('submit', function (e) {
        e.preventDefault();
        table.ajax.reload();
    });
});

    </script>
}

