    <script>
               $(document).ready(function () {
            $('#EmployeesGrid').DataTable({
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@Url.Action("Index", "Employee", new { Area = "HumanResource" })",
                "sServerMethod": "POST",
                "fnServerData": function (sSource, aoData, fnCallback) {
                    $.ajax({
                        dataType: 'json',
                        type: 'POST',
                        url: sSource,
                        data: aoData,
                        success: function (response) {
                            fnCallback(response);
                        },
                        error: function () {
                            alert('Error retrieving data from the server.');
                        }
                    });
                },
                "aoColumns": [
                    { "mDataProp": "Customer.FullName", "sTitle": "Customer FullName", "sWidth": "15%" },
                    { "mDataProp": "CustomerIndividualNationalityDescription", "sTitle": "Nationality", "sWidth": "15%" },
                    { "mDataProp": "BranchDescription", "sTitle": "Branch", "sWidth": "15%" },
                    { "mDataProp": "DepartmentDescription", "sTitle": "Department", "sWidth": "15%" },
                    { "mDataProp": "CustomerIndividualGenderDescription", "sTitle": "Gender", "sWidth": "15%" },
                    {
                        "mDataProp": "CreatedDate",
                        "sTitle": "Created Date",
                        "sWidth": "15%",
                        "mRender": function (data) {
                            var createdDate = new Date(parseInt(data.replace("/Date(", "").replace(")/", ""), 10));
                            return $.datepicker.formatDate('dd/mm/yy', createdDate);
                        }
                    },
                    {
                        "mDataProp": null,
                        "sTitle": "Action",
                        "sWidth": "15%",
                        "bSortable": false,
                        "mRender": function (data, type, row) {
                            return '<a href="#" class="btn btn-outline-info select-employee" data-id="' + row.Id + '">Select</a>';
                        }
                    }
                ],
                "aaSorting": [[0, "desc"]]
            });

                   $('#EmployeesGrid tbody').on('click', '.select-employee', function () {
                var employeeId = $(this).data('id');

                $.ajax({
                    url: '@Url.Action("GetCustomerDetails", "MicroCreditOfficers", new { Area = "MicroCredit" })',
                    type: 'GET',
                    data: { employeeId: employeeId },
                    success: function (response) {
                        if (response.success) {
                            $('#EmployeeCustomerFullName').val(response.data.EmployeeCustomerFullName);
                            $('#EmployeeCustomerIndividualNationalityDescription').val(response.data.EmployeeCustomerIndividualNationalityDescription);
                            $('#EmployeeCustomerId').val(response.data.EmployeeCustomerId);
                            $('#EmployeeCustomerIndividualIdentityCardNumber').val(response.data.EmployeeCustomerIndividualIdentityCardNumber);
                            $('#EmployeeCustomerIndividualGenderDescription').val(response.data.EmployeeCustomerIndividualGenderDescription);
                            $('#EmployeeCustomerIndividualMaritalStatusDescription').val(response.data.EmployeeCustomerIndividualMaritalStatusDescription);
                            $('#EmployeeCustomerIndividualPayrollNumbers').val(response.data.EmployeeCustomerIndividualPayrollNumbers);
                            $('#EmployeeDesignationDescription').val(response.data.EmployeeDesignationDescription);
                            $('#EmployeeBranchDescription').val(response.data.EmployeeBranchDescription);
                            $('#EmployeeId').val(response.data.EmployeeId);
                            $('#EmployeeBranchId').val(response.data.EmployeeBranchId);
                            $('#EmployeeCustomerAddressAddressLine1').val(response.data.EmployeeCustomerAddressAddressLine1);
                            $('#EmployeeCustomerAddressAddressLine2').val(response.data.EmployeeCustomerAddressAddressLine2);
                            $('#EmployeeCustomerAddressCity').val(response.data.EmployeeCustomerAddressCity);
                            $('#EmployeeCustomerAddressEmail').val(response.data.EmployeeCustomerAddressEmail);
                            $('#EmployeeCustomerAddressLandLine').val(response.data.EmployeeCustomerAddressLandLine);
                            $('#EmployeeCustomerAddressStreet').val(response.data.EmployeeCustomerAddressStreet);
                            $('#EmployeeCustomerIndividualFirstName').val(response.data.EmployeeCustomerIndividualFirstName);
                            $('#EmployeeCustomerIndividualLastName').val(response.data.EmployeeCustomerIndividualLastName);
                            $('#EmployeeDepartmentId').val(response.data.EmployeeDepartmentId);
                            $('#EmployeeCustomerPersonalIdentificationNumber').val(response.data.EmployeeCustomerPersonalIdentificationNumber)
                            $('#EmployeeDesignationId').val(response.data.EmployeeDesignationId);

                            $('#employeeLookup').modal('hide');
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('An error occurred while fetching the Employees details.');
                    }
                });
            });
        });

    </script>

