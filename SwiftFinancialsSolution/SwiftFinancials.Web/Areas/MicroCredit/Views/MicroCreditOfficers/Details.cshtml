@model Application.MainBoundedContext.DTO.MicroCreditModule.MicroCreditOfficerDTO

@{
    ViewBag.Title = "MicroCredit Officer Details";



}







<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
    $(document).ready(function () {
        $('.nav-tabs li:first-child a').addClass('active');
        $('#tab1').addClass('active');

        $('.tab-link').on('click', function (e) {
            e.preventDefault();

            $('.tab-link').removeClass('active');
            $('.tab-content').removeClass('active');

            $(this).addClass('active');
            $($(this).attr('href')).addClass('active');
        });

        $('#ValueDate').datepicker({
            format: 'dd/mm/yyyy',
            todayHighlight: true,
            autoclose: true
        });
    });
</script>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Micro-Credit Officer</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "MicroCreditOfficers", new { Area = "MicroCredit" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>}


                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        @using (Html.BeginForm("Details", "MicroCreditOfficers", new { Area = "MicroCredit" }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.HiddenFor(model => model.EmployeeCustomerIndividualNationalityDescription, new { id = "EmployeeCustomerIndividualNationalityDescription" })
                            @Html.HiddenFor(model => model.EmployeeCustomerId, new { id = "EmployeeCustomerId" })
                            @Html.HiddenFor(model => model.EmployeeCustomerIndividualIdentityCardNumber, new { id = "EmployeeCustomerIndividualIdentityCardNumber" })
                            @Html.HiddenFor(model => model.EmployeeCustomerIndividualMaritalStatusDescription, new { id = "EmployeeCustomerIndividualMaritalStatusDescription" })
                            @Html.HiddenFor(model => model.EmployeeCustomerIndividualPayrollNumbers, new { id = "EmployeeCustomerIndividualPayrollNumbers" })
                            @Html.HiddenFor(model => model.EmployeeDesignationDescription, new { id = "EmployeeDesignationDescription" })
                            @Html.HiddenFor(model => model.EmployeeBranchDescription, new { id = "EmployeeBranchDescription" })
                            @Html.HiddenFor(model => model.EmployeeBranchId, new { id = "EmployeeBranchId" })
                            @Html.HiddenFor(model => model.EmployeeCustomerAddressAddressLine1, new { id = "EmployeeCustomerAddressAddressLine1" })
                            @Html.HiddenFor(model => model.EmployeeCustomerAddressAddressLine2, new { id = "EmployeeCustomerAddressAddressLine2" })
                            @Html.HiddenFor(model => model.EmployeeCustomerAddressCity, new { id = "EmployeeCustomerAddressCity" })
                            @Html.HiddenFor(model => model.EmployeeCustomerAddressEmail, new { id = "EmployeeCustomerAddressEmail" })
                            @Html.HiddenFor(model => model.EmployeeCustomerAddressLandLine, new { id = "EmployeeCustomerAddressLandLine" })
                            @Html.HiddenFor(model => model.EmployeeCustomerAddressMobileLine, new { id = "EmployeeCustomerAddressMobileLine" })
                            @Html.HiddenFor(model => model.EmployeeCustomerAddressStreet, new { id = "EmployeeCustomerIndividualFirstName" })
                            @Html.HiddenFor(model => model.EmployeeCustomerIndividualFirstName, new { id = "EmployeeCustomerIndividualFirstName" })
                            @Html.HiddenFor(model => model.EmployeeCustomerIndividualLastName, new { id = "EmployeeCustomerIndividualLastName" })
                            @Html.HiddenFor(model => model.EmployeeDepartmentId, new { id = "EmployeeDepartmentId" })
                            @Html.HiddenFor(model => model.EmployeeCustomerPersonalIdentificationNumber, new { id = "EmployeeCustomerPersonalIdentificationNumber" })
                            @Html.HiddenFor(model => model.EmployeeDesignationId, new { id = "EmployeeDesignationId" })





                            <!-- Expense Payables -->
                            <fieldset>
                                <div class="card mb-4">
                                    <div class="card-body text-dark">
                                        <div class="row">

                                            <!-- Customer Account Fields -->
                                            <div class="col-lg-6 customer-fields">
                                                
                                                <div class="form-group form-group-lg">
                                                    @Html.LabelFor(model => model.EmployeeCustomerFullName, new { @class = "control-label" })
                                                    @Html.HiddenFor(model => model.EmployeeId, new { id = "EmployeeId" })

                                                    @Html.TextAreaFor(model => model.EmployeeCustomerFullName, new { @class = "form-control", @placeholder = "Enter Text...", @readonly ="" })
                                                    @Html.ValidationMessageFor(model => model.EmployeeCustomerFullName, "", new { @class = "text-danger" })
                                                </div>
                                            </div>

                                            <div class="col-lg-6">
                                                <div class="form-group form-group-lg">
                                                    @Html.LabelFor(model => model.Remarks, new { @class = "control-label" })
                                                    @Html.TextAreaFor(model => model.Remarks, new { @rows = 3, @class = "form-control", @placeholder = "Enter Text...", @readonly ="" })
                                                    @Html.ValidationMessageFor(model => model.Remarks, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.IsLocked, htmlAttributes: new { @class = "" })
                                                @Html.LabelFor(model => model.IsLocked, new { htmlAttributes = new { @class = "form-control", @placeholder = "Is Locked?", @readyonly ="" } })
                                                @Html.ValidationMessageFor(model => model.IsLocked, "", new { @class = "text-danger" })
                                            </div>

                                        </div>
                                        

                                    </div>

                                </div>
                            </fieldset>

                            <div class="bottom-button row mt-3" style="display: flex; justify-content: flex-end; padding-right:50px; margin-top:20px;">
                                <p>
                                    @Html.ActionLink("Edit", "Edit", "MicroCreditOfficers", new { id = Model.Id, Area = "MicroCredit" }, new { @class = "btn btn-success" })
                                    @Html.ActionLink("Back to List", "Index", "MicroCreditOfficers", new { Area = "MicroCredit" }, new { @class = "btn btn-success" })
                                </p>
                            </div>



                        }
                    </div>
                </div>

                <style>
                    .card {
                        margin-bottom: 20px;
                    }

                    .nav-tabs .nav-link.active {
                        background-color: #007bff;
                        color: white;
                    }

                    .form-group-lg {
                        margin-bottom: 1.5rem;
                    }

                    .form-control {
                        border-radius: .25rem;
                    }

                    /* The .nav class is incorrectly nested, so I'll fix that */
                    .nav {
                        display: flex;
                        flex-wrap: wrap; /* Allows the links to wrap onto multiple lines */
                        padding: 0;
                        margin: 5px;
                        margin-bottom: 0;
                        border: 2px solid black;
                        border-radius: 8px;
                        margin-top: 20px;
                        gap: 10px; /* Space between links */
                        text-align: center; /* Centers the text inside links */
                        padding: 10px;
                    }

                    .nav-link {
                        display: flex;
                        text-decoration: none;
                        color: #007bff; /* Default text color */
                        transition: color 0.3s ease, background-color 0.3s ease; /* Smooth transition */
                        border-radius: 4px; /* Rounded corners */
                        font-size: 14px; /* Adjust font size for better fit */
                        white-space: nowrap; /* Prevents text from wrapping inside the link */
                    }

                        .nav-link:hover {
                            color: #fff; /* Text color on hover */
                            background-color: #0056b3; /* Background color on hover */
                        }

                        .nav-link i {
                            margin-right: 8px; /* Space between icon and text */
                            font-size: 16px; /* Adjust icon size */
                        }

                        .nav-link.disabled {
                            pointer-events: none;
                            opacity: 0.6;
                            cursor: not-allowed;
                        }

                    .col-lg-2 {
                        display: flex;
                        align-items: center; /* Center the title vertically */
                        justify-content: center; /* Center the title horizontally if needed */
                        padding: 0; /* Remove default padding if necessary */
                        border-radius: 4px; /* Rounded corners */
                    }

                    .bottom-button {
                        border: 2px solid gray; /* Border color set to gray */
                        padding: 10px; /* Padding inside the border */
                        border-radius: 5px; /* Rounded corners (optional) */
                        font-size: 16px;
                        font-weight: bold;
                        background-color: #00e0ff;
                    }
                </style>



            </div>
        </div>
    </div>
</div>














    <style>
