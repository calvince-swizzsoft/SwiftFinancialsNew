@{ ViewBag.Title = "Roles"; }

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Roles</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            <strong>Success !</strong> @TempData["Success"]

            <button type="button" class="close" data-dismiss="alert">
                <span>
                    &times;
                </span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    @Html.ActionLink("Create Role", "Create", "Role", new { Area = "Admin" }, new { @class = "btn btn-primary" })
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="rolesGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">
                                        Loading data from server
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#rolesGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "Role", new { Area = "Admin"}))",
                "sServerMethod": "POST",
                // Callback settings
                //"fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                //    var editUrl = '<a  href="/Admin/Role/Edit/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Edit</a>';
                //    var viewUrl = '<a  href="/Admin/Role/Details/' + aData.Id + '" class = "btn btn-outline-info"">' + 'View</a>';

                //    $('td:eq(1)', nRow).html(viewUrl + '&nbsp;' + editUrl);

                //    return nRow;
                //},
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                    var editUrl = '<a  href="/Admin/Role/Edit/' + aData.Id + '" class = "btn btn-outline-info"">' + 'Edit</a>';
                    var viewUrl = '<a  href="/Admin/Role/Details/' + aData.Id + '" class = "btn btn-outline-info"">' + 'View</a>';
                    var dropdownHtml = `
                        <div class="dropdown">
                            <button style="width: 150px;" class="btn btn-outline-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Action
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/admin/Role/details/${aData.Id}">View</a>
                                <a class="dropdown-item" href="/admin/Role/edit/${aData.Id}">Edit</a>
                            </div>
                        </div>`;


                    //$('td:eq(6)', nRow).html(dropdownHtml);
                    $('td:eq(1)', nRow).html(dropdownHtml);
                    //$('td:eq(1)', nRow).html(viewUrl + '&nbsp;' + editUrl);
                    return nRow;
                },
                // Display settings
                "aoColumns": [
                { "mDataProp": "Name", "sTitle": "Name", "sWidth": "60%" },
                    { "mDataProp": "Name", "sTitle": "", "sWidth": "40%", "bSortable": false}],
                "aaSorting": [[0, "desc"]]
        });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>
}