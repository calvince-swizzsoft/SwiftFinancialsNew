@model Application.MainBoundedContext.DTO.AdministrationModule.CompanyBindingModel
@{
    ViewBag.Title = "Company";
    var DebitTypes = ViewBag.DebitTypes;
    var InvestmentProducts = ViewBag.InvestmentProducts;
    var SavingsProducts = ViewBag.SavingsProducts;
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Companies</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "Company", new { Area = "Admin" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>
<style>
    .animated-tabs {
        font-size: 0.75rem; /* Smaller font size */
    }

    h {
        text-decoration: underline;
        text-underline-offset: 4px; /* Adjust the offset value as desired */
        font-size: large;
    }

    .animated-tabs .nav-link {
        transition: all 0.3s ease-in-out; /* Smooth transition for hover effect */
        padding: 8px 12px; /* Adjust padding for a compact look */
    }

        /* Hover effect for the tabs */
        .animated-tabs .nav-link:hover {
            color: #ffffff; /* Text color on hover */
            background-color: #007bff; /* Background color change */
            transform: scale(1.1); /* Slightly scale up */
            border-radius: 5px; /* Rounded corners for a smooth look */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        }
</style>
<div class="wrapper wrapper-content" style="padding: 20px;">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Create Company</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white" style="padding: 20px;">
                    @using (Html.BeginForm("Create", "Company", new { Area = "Admin" }, FormMethod.Post, new { @class = "wizard-big", @id = "form", enctype = "multipart/form-data", method = "post" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "font-bold" })
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @required = "", @style = "border-radius: 5px;" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.RegistrationNumber, htmlAttributes: new { @class = "font-bold" })
                                    @Html.EditorFor(model => model.RegistrationNumber, new { htmlAttributes = new { @class = "form-control", @required = "", @style = "border-radius: 5px;" } })
                                    @Html.ValidationMessageFor(model => model.RegistrationNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PersonalIdentificationNumber, htmlAttributes: new { @class = "font-bold" })
                                    @Html.EditorFor(model => model.PersonalIdentificationNumber, new { htmlAttributes = new { @class = "form-control", @required = "", @style = "border-radius: 5px;" } })
                                    @Html.ValidationMessageFor(model => model.PersonalIdentificationNumber, "", new { @class = "text-danger" })
                                </div>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.MembershipTerminationNoticePeriod, "Termination Notice Period", htmlAttributes: new { @class = "font-bold" })
                                    @Html.EditorFor(model => model.MembershipTerminationNoticePeriod, new { htmlAttributes = new { @class = "form-control", @required = "", @style = "border-radius: 5px;" } })
                                    @Html.ValidationMessageFor(model => model.MembershipTerminationNoticePeriod, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <script>
                            document.getElementById('logoInput').addEventListener('change', function (event) {
                                const file = event.target.files[0];
                                const reader = new FileReader();

                                reader.onload = function (e) {
                                    document.getElementById('logoPreview').src = e.target.result;
                                };

                                if (file) {
                                    reader.readAsDataURL(file);
                                }
                            });

                            document.getElementById('form').addEventListener('submit', function (e) {
                                e.preventDefault();

                                const formData = new FormData(this);

                                fetch('/Company/Create', {
                                    method: 'POST',
                                    body: formData,
                                })
                                    .then(async (response) => {
                                        if (response.ok) {
                                             window.location.href = '@Url.Action("Index", "Company")';
                                        } else {
                                            const error = await response.json();
                                            alert('Error: ' + (error.message || 'Submission failed.'));
                                        }
                                    })
                                    .catch(error => {
                                        console.error('Submission error:', error);
                                        alert('An error occurred.');
                                    });
                            });
                        </script>

                        <!-- Vision, Mission, and Motto Section -->
                        <br />
                        <h>Vision, Mission, and Motto</h>
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group mb-4">
                                    @Html.LabelFor(model => model.Vision, htmlAttributes: new { @class = "font-bold" })
                                    @Html.EditorFor(model => model.Vision, new { htmlAttributes = new { @class = "form-control", @required = "", @style = "border-radius: 5px;" } })
                                    @Html.ValidationMessageFor(model => model.Vision, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group mb-4">
                                    @Html.LabelFor(model => model.Mission, htmlAttributes: new { @class = "font-bold" })
                                    @Html.EditorFor(model => model.Mission, new { htmlAttributes = new { @class = "form-control", @required = "", @style = "border-radius: 5px;" } })
                                    @Html.ValidationMessageFor(model => model.Mission, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group mb-4">
                                    @Html.LabelFor(model => model.Motto, htmlAttributes: new { @class = "font-bold" })
                                    @Html.EditorFor(model => model.Motto, new { htmlAttributes = new { @class = "form-control", @required = "", @style = "border-radius: 5px;" } })
                                    @Html.ValidationMessageFor(model => model.Motto, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-lg-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.RecoveryPriority, htmlAttributes: new { @class = "font-bold" })
                                    @Html.DropDownListFor(model => model.RecoveryPriority, new List<SelectListItem>
                                    {
                                        new SelectListItem { Text = "DirectDebits", Value = "DirectDebits" },
                                        new SelectListItem { Text = "Investments", Value = "Investments" },
                                        new SelectListItem { Text = "Loans", Value = "Loans" },
                                        new SelectListItem { Text = "Savings", Value = "Savings" }
                                    }, new { @class = "form-control", @style = "border-radius: 5px;" })
                                    @Html.ValidationMessageFor(model => model.RecoveryPriority, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>


                        <script>
                            document.getElementById('logoInput').addEventListener('change', function (event) {
                                const file = event.target.files[0];
                                const reader = new FileReader();

                                reader.onload = function (e) {
                                    document.getElementById('logoPreview').src = e.target.result;
                                };

                                if (file) {
                                    reader.readAsDataURL(file);
                                }
                            });
                        </script>

                        <br />

                        <ul class="nav nav-tabs d-flex flex-nowrap animated-tabs" style="margin-bottom: 20px;">
                            <li class="nav-item">
                                <a class="nav-link active" href="#address">Address</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#mandatoryDebitTypes">Mandatory Debit Types</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#mandatoryInvestmentProducts">Mandatory Investment Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#mandatorySavingsProducts">Mandatory Savings Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#flags">Flags</a>
                            </li>
                        </ul>

                        <div class="tab-content">
                            <div id="address" class="tab-pane active">
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AddressAddressLine1, htmlAttributes: new { @class = "font-bold" })
                                            @Html.EditorFor(model => model.AddressAddressLine1, new { htmlAttributes = new { @class = "form-control", @style = "border-radius: 5px;" } })
                                            @Html.ValidationMessageFor(model => model.AddressAddressLine1, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AddressAddressLine2, htmlAttributes: new { @class = "font-bold" })
                                            @Html.EditorFor(model => model.AddressAddressLine2, new { htmlAttributes = new { @class = "form-control", @style = "border-radius: 5px;" } })
                                            @Html.ValidationMessageFor(model => model.AddressAddressLine2, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AddressStreet, htmlAttributes: new { @class = "font-bold" })
                                            @Html.EditorFor(model => model.AddressStreet, new { htmlAttributes = new { @class = "form-control", @style = "border-radius: 5px;" } })
                                            @Html.ValidationMessageFor(model => model.AddressStreet, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AddressCity, htmlAttributes: new { @class = "font-bold" })
                                            @Html.EditorFor(model => model.AddressCity, new { htmlAttributes = new { @class = "form-control", @style = "border-radius: 5px;" } })
                                            @Html.ValidationMessageFor(model => model.AddressCity, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AddressPostalCode, htmlAttributes: new { @class = "font-bold" })
                                            @Html.EditorFor(model => model.AddressPostalCode, new { htmlAttributes = new { @class = "form-control", @style = "border-radius: 5px;" } })
                                            @Html.ValidationMessageFor(model => model.AddressPostalCode, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AddressEmail, htmlAttributes: new { @class = "font-bold" })
                                            @Html.EditorFor(model => model.AddressEmail, new { htmlAttributes = new { @class = "form-control", @required = "", @style = "border-radius: 5px;" } })
                                            @Html.ValidationMessageFor(model => model.AddressEmail, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AddressLandLine, htmlAttributes: new { @class = "font-bold" })
                                            @Html.EditorFor(model => model.AddressLandLine, new { htmlAttributes = new { @class = "form-control", @style = "border-radius: 5px;" } })
                                            @Html.ValidationMessageFor(model => model.AddressLandLine, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AddressMobileLine, htmlAttributes: new { @class = "font-bold" })
                                            @Html.EditorFor(model => model.AddressMobileLine, new { htmlAttributes = new { @class = "form-control", @required = "", @style = "border-radius: 5px;" } })
                                            @Html.ValidationMessageFor(model => model.AddressMobileLine, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-content">
                                <div id="mandatoryDebitTypes" class="tab-pane">
                                    <div class="ibox-content m-b-sm border-bottom text-dark" style="background-color: #f0f8ff; border-color: #e3e6e8;">
                                        <table class="footable table table-striped toggle-arrow-tiny grey-table" style="color: #333;">
                                            <thead style="background-color: #4682b4; color: #fff;">
                                                <tr>
                                                    <th data-toggle="true">Description</th>
                                                    <th data-hide="phone"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (ViewBag.debit != null)
                                                {
                                                    foreach (var debitype in ViewBag.debit)
                                                    {
                                                        <tr style="background-color: #f5f5f5;">
                                                            <td>
                                                                <input type="checkbox" class="debit-checkbox" name="debittypes" value="@debitype.Id" />
                                                                @debitype.Description
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div id="mandatoryInvestmentProducts" class="tab-pane">
                                    <div class="ibox-content m-b-sm border-bottom text-dark" style="background-color: #f0f8ff; border-color: #e3e6e8;">
                                        <table class="footable table table-striped toggle-arrow-tiny grey-table" style="color: #333;">
                                            <thead style="background-color: #4682b4; color: #fff;">
                                                <tr>
                                                    <th data-toggle="true">Description</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (ViewBag.investment != null)
                                                {
                                                    foreach (var invest in ViewBag.investment)
                                                    {
                                                        <tr style="background-color: #f5f5f5;">
                                                            <td>
                                                                <input type="checkbox" class="investment-checkbox" name="investmentproducts" value="@invest.Id" />
                                                                @invest.Description
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div id="mandatorySavingsProducts" class="tab-pane">
                                    <div class="ibox-content m-b-sm border-bottom text-dark" style="background-color: #f0f8ff; border-color: #e3e6e8;">
                                        <table class="footable table table-striped toggle-arrow-tiny grey-table" style="color: #333;">
                                            <thead style="background-color: #4682b4; color: #fff;">
                                                <tr>
                                                    <th data-toggle="true">Description</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (ViewBag.savings != null)
                                                {
                                                    foreach (var save in ViewBag.savings)
                                                    {
                                                        <tr style="background-color: #f5f5f5;">
                                                            <td>
                                                                <input type="checkbox" class="savings-checkbox" name="savingsproducts" value="@save.Id" />
                                                                @save.Description
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div id="mandatoryDebitTypes" class="tab-pane" style="margin-left:20px;">
                                <fieldset>

                                    @if (ViewBag.DebitTypes != null)
                                    {
                                        foreach (var debitType in ViewBag.DebitTypes)
                                        {
                                            <div class="form-group form-group-lg">
                                                <input type="checkbox" name="DebitTypes" value="@debitType.Id" class="form-check-input" />
                                                <label class="font-bold" style="color: #1ab394;">@debitType.Description</label>
                                            </div>}
                                    }
                                </fieldset>

                            </div>
                            <!-- Investment Products Section -->
                            <div id="mandatoryInvestmentProducts" class="tab-pane" style="margin-left: 20px;">
                                <fieldset>

                                    @if (ViewBag.InvestmentProducts != null)
                                    {
                                        foreach (var investmentProduct in ViewBag.InvestmentProducts)
                                        {
                                            <div class="form-group form-group-lg">
                                                <input type="checkbox" name="InvestmentProducts" value="@investmentProduct.Id" class="form-check-input" />
                                                <label class="font-bold" style="color: #1ab394;">@investmentProduct.Description</label>
                                            </div>}
                                    }
                                </fieldset>
                            </div>

                            <!-- Savings Products Section -->
                            <div id="mandatorySavingsProducts" class="tab-pane" style="margin-left: 20px;">
                                <fieldset>

                                    @if (ViewBag.SavingsProducts != null)
                                    {
                                        foreach (var savingsProduct in ViewBag.SavingsProducts)
                                        {
                                            <div class="form-group form-group-lg">
                                                <input type="checkbox" name="SavingsProducts" value="@savingsProduct.Id" class="form-check-input" />
                                                <label class="font-bold" style="color: #1ab394;">@savingsProduct.Description</label>
                                            </div>}
                                    }
                                </fieldset>
                            </div>



                            <div id="flags" class="tab-pane" style="margin-left: 20px;">
                                <fieldset>
                                    <div class="row">
                                        <div class="col-lg-4">

                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.EnforceCustomerAccountMakerChecker, new { @class = "form-check-input" })
                                                @Html.LabelFor(model => model.EnforceCustomerAccountMakerChecker, "Enforce customer account maker/checker?", new { @class = "font-bold", @style = "color: #1ab394;" })
                                            </div>
                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.BypassRefundBatchAudit, new { @class = "form-check-input" })
                                                @Html.LabelFor(model => model.BypassRefundBatchAudit, "Bypass refund batch verification?", new { @class = "font-bold", @style = "color: #1ab394;" })
                                            </div>
                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.BypassInterAccountTransferBatchAudit, new { @class = "form-check-input" })
                                                @Html.LabelFor(model => model.BypassInterAccountTransferBatchAudit, "Bypass inter-account transfer batch verification?", new { @class = "font-bold", @style = "color: #1ab394;" })
                                            </div>
                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.RecoverArrearsOnCashDeposit, new { @class = "form-check-input" })
                                                @Html.LabelFor(model => model.RecoverArrearsOnCashDeposit, "Recover arrears on cash deposit?", new { @class = "font-bold", @style = "color: #1ab394;" })
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.IsFileTrackingEnforced, new { @class = "form-check-input" })
                                                @Html.LabelFor(model => model.IsFileTrackingEnforced, "Enforce file tracking?", new { @class = "font-bold", @style = "color: #1ab394;" })
                                            </div>
                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.BypassJournalVoucherAudit, new { @class = "form-check-input" })
                                                @Html.LabelFor(model => model.BypassJournalVoucherAudit, "Bypass journal voucher verification?", new { @class = "font-bold", @style = "color: #1ab394;" })
                                            </div>
                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.BypassWireTransferBatchAudit, new { @class = "form-check-input" })
                                                @Html.LabelFor(model => model.BypassWireTransferBatchAudit, "Bypass wire transfer batch verification?", new { @class = "font-bold", @style = "color: #1ab394;" })
                                            </div>
                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.RecoverArrearsOnExternalChequeClearance, new { @class = "form-check-input" })
                                                @Html.LabelFor(model => model.RecoverArrearsOnExternalChequeClearance, "Recover arrears on external cheque clearance?", new { @class = "font-bold", @style = "color: #1ab394;" })
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.ApplicationMembershipTextAlertsEnabled, new { @class = "form-check-input" })
                                                @Html.LabelFor(model => model.ApplicationMembershipTextAlertsEnabled, "Membership text alerts enabled?", new { @class = "font-bold", @style = "color: #1ab394;" })
                                            </div>
                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.BypassCreditBatchAudit, new { @class = "form-check-input" })
                                                @Html.LabelFor(model => model.BypassCreditBatchAudit, "Bypass credit batch verification?", new { @class = "font-bold", @style = "color: #1ab394;" })
                                            </div>
                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.BypassExpensePayableAudit, new { @class = "form-check-input" })
                                                @Html.LabelFor(model => model.BypassExpensePayableAudit, "Bypass expense payable verification?", new { @class = "font-bold", @style = "color: #1ab394;" })
                                            </div>
                                            <div class="form-group form-group-lg">
                                                @Html.CheckBoxFor(model => model.RecoverArrearsOnFixedDepositPayment, new { @class = "form-check-input" })
                                                @Html.LabelFor(model => model.RecoverArrearsOnFixedDepositPayment, "Recover arrears on fixed deposit payment?", new { @class = "font-bold", @style = "color: #1ab394;" })
                                            </div>
                                        </div>
                                    </div>


                                </fieldset>
                            </div>
                        </div>

                        <!-- Button -->
                        <div style="margin-top: 20px;">
                            <button type="submit" class="btn btn-primary" style="width: 150px;" onclick="openModal()">Create</button>
                        </div>

                        <!-- Modal Structure -->
                        <div id="confirmationModal" style="display: none; position: fixed; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5); align-items: center; justify-content: center;">
                            <div style="background-color: white; padding: 20px; border-radius: 8px; width: 300px; text-align: center;">
                                <h3>Confirm Submission</h3>
                                <p>Are you sure you want to proceed with the submission?</p>
                                <button onclick="proceed()" style="padding: 10px 20px; font-size: 14px; font-weight: bold; background-color: #1ab394; color: white; border: none; border-radius: 5px; cursor: pointer; margin-right: 10px;">Proceed</button>
                                <button onclick="closeModal()" style="padding: 10px 20px; font-size: 14px; font-weight: bold; background-color: #d9534f; color: white; border: none; border-radius: 5px; cursor: pointer;">Decline</button>
                            </div>
                        </div>

