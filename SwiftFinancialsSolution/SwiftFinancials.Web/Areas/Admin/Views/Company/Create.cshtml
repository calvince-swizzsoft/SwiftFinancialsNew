                                function openModal() {
                                    document.getElementById('confirmationModal').style.display = 'flex';
                                }

                                function closeModal() {
                                    document.getElementById('confirmationModal').style.display = 'none';
                                }

                                function proceed() {
                                    // Close the modal
                                    closeModal();
                                    // Submit the form
                                    document.querySelector('form').submit();
                                }
                            </script>*@


                    }
                </div>
            </div>
        </div>
    </div>
</div>


