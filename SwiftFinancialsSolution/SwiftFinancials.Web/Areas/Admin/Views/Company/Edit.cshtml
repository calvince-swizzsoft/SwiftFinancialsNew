                                        <table class="footable table table-striped toggle-arrow-tiny grey-table" style="color: #333;">
                                            <thead style="background-color: #4682b4; color: #fff;">
                                                <tr>
                                                    <th>Description</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (ViewBag.allInvestments != null)
                                                {
                                                    var selectedInvestmentProducts = ViewBag.SelectedInvestmentProducts as List<Guid> ?? new List<Guid>();

                                                    foreach (var invest in ViewBag.allInvestments)
                                                    {
                                                        <tr style="background-color: #f5f5f5;">
                                                            <td>
                                                                <input type="checkbox"
                                                                       class="investment-checkbox"
                                                                       name="investmentproducts"
                                                                       value="@invest.Id"
                                                                       @(selectedInvestmentProducts.Contains(invest.Id) ? "checked" : "") />
                                                                @invest.Description
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div id="mandatoryDebitTypes" class="tab-pane">
                                    <div class="ibox-content m-b-sm border-bottom text-dark" style="background-color: #f0f8ff; border-color: #e3e6e8;">
                                        <table class="footable table table-striped toggle-arrow-tiny grey-table" style="color: #333;">
                                            <thead style="background-color: #4682b4; color: #fff;">
                                                <tr>
                                                    <th>Description</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (ViewBag.debit!= null)
                                                {
                                                    var selectedDebitTypes = ViewBag.SelectedDebitTypes as List<Guid> ?? new List<Guid>();

                                                    foreach (var debit in ViewBag.debit)
                                                    {
