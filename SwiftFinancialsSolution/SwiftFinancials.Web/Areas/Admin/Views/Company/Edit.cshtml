                                            @Html.LabelFor(model => model.AddressEmail, htmlAttributes: new { @class = "font-bold" })
                                            @Html.EditorFor(model => model.AddressEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email", @required = "", @style = "border-radius: 5px;" } })
                                            @Html.ValidationMessageFor(model => model.AddressEmail, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AddressLandLine, htmlAttributes: new { @class = "font-bold" })
                                            @Html.EditorFor(model => model.AddressLandLine, new { htmlAttributes = new { @class = "form-control", @placeholder = "Land line", @style = "border-radius: 5px;" } })
                                            @Html.ValidationMessageFor(model => model.AddressLandLine, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.AddressMobileLine, htmlAttributes: new { @class = "font-bold" })
                                            @Html.EditorFor(model => model.AddressMobileLine, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mobile line", @required = "", @style = "border-radius: 5px;" } })
                                            @Html.ValidationMessageFor(model => model.AddressMobileLine, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="tab-content">
                                <div id="mandatoryInvestmentProducts" class="tab-pane">
