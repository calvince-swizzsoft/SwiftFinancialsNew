    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script>
    $(document).ready(function () {
        $('#submitButton').on('click', function () {
            var debitTypes = [];
            var investmentProducts = [];
            var savingsProducts = [];

            // Gather selected debit types
            $('.debit-checkbox:checked').each(function () {
                debitTypes.push($(this).val());
            });

            // Gather selected investment products
            $('.investment-checkbox:checked').each(function () {
                investmentProducts.push($(this).val());
            });

            // Gather selected savings products
            $('.savings-checkbox:checked').each(function () {
                savingsProducts.push($(this).val());
            });

            $.ajax({
                url: '@Url.Action("Edit", "Company")', // Update with your controller name
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({
                    debittypes: debitTypes,
                    investmentproducts: investmentProducts,
                    savingsproducts: savingsProducts
                }),
                success: function (response) {
                    // Handle success
                    alert("Data submitted successfully!");
                },
                error: function (xhr, status, error) {
                    // Handle error
                    alert("An error occurred: " + error);
                }
            });
        });
    });
    </script>

