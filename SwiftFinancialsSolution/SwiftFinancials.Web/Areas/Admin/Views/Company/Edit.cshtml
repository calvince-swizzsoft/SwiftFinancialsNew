@model Application.MainBoundedContext.DTO.AdministrationModule.CompanyBindingModel
@{
    ViewBag.Title = "Company";
    var DebitTypes = ViewBag.DebitTypes;
    var InvestmentProducts = ViewBag.InvestmentProducts;
    var SavingsProducts = ViewBag.SavingsProducts;
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Companies</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "Company", new { Area = "Admin" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Edit</strong>
            </li>
        </ol>
    </div>
</div>
<style>
    .animated-tabs {
        font-size: 0.75rem; /* Smaller font size */
    }

    h {
        text-decoration: underline;
        text-underline-offset: 4px; /* Adjust the offset value as desired */
        font-size: large;
    }

    .animated-tabs .nav-link {
        transition: all 0.3s ease-in-out; /* Smooth transition for hover effect */
        padding: 8px 12px; /* Adjust padding for a compact look */
    }

        /* Hover effect for the tabs */
        .animated-tabs .nav-link:hover {
            color: #ffffff; /* Text color on hover */
            background-color: #007bff; /* Background color change */
            transform: scale(1.1); /* Slightly scale up */
            border-radius: 5px; /* Rounded corners for a smooth look */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        }
</style>
<div class="wrapper wrapper-content" style="padding: 20px;">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Edit Company</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-info" style="padding: 20px;">
                    @using (Html.BeginForm("Edit", "Company", new { Area = "Admin" }, FormMethod.Post, new { @class = "wizard-big", @id = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-8">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "font-bold" })
