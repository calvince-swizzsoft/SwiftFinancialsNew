                                @Html.ValidationMessageFor(model => model.MembershipTerminationNoticePeriod, "", new { @class = "text-danger" })
                            </div>
                        </div>


                        <script>
                            document.getElementById('logoInput').addEventListener('change', function (event) {
                                const file = event.target.files[0];
                                const reader = new FileReader();

                                reader.onload = function (e) {
                                    document.getElementById('logoPreview').src = e.target.result;
                                };

                                if (file) {
                                    reader.readAsDataURL(file);
                                }
                            });
                        </script>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Vision, htmlAttributes: new { @class = "font-bold" })
                            @Html.EditorFor(model => model.Vision, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Vision.", @required = "", @style = "border-radius: 5px;" } })
                            @Html.ValidationMessageFor(model => model.Vision, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Mission, htmlAttributes: new { @class = "font-bold" })
                            @Html.EditorFor(model => model.Mission, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Mission.", @required = "", @style = "border-radius: 5px;" } })
                            @Html.ValidationMessageFor(model => model.Mission, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Motto, htmlAttributes: new { @class = "font-bold" })
                            @Html.EditorFor(model => model.Motto, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Motto.", @required = "", @style = "border-radius: 5px;" } })
                            @Html.ValidationMessageFor(model => model.Motto, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.RecoveryPriority, htmlAttributes: new { @class = "font-bold" })
