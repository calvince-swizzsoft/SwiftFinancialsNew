                                                            <td>
                                                                <input type="checkbox"
                                                                       class="debit-checkbox"
                                                                       name="debittypes"
                                                                       value="@debit.Id"
                                                                       @(selectedDebitTypes.Contains(debit.Id) ? "checked" : "") />
                                                                @debit.Description
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>


                                <div id="mandatorySavingsProducts" class="tab-pane">
                                    <div class="ibox-content m-b-sm border-bottom text-dark" style="background-color: #f0f8ff; border-color: #e3e6e8;">
                                        <table class="footable table table-striped toggle-arrow-tiny grey-table" style="color: #333;">
                                            <thead style="background-color: #4682b4; color: #fff;">
                                                <tr>
                                                    <th>Description</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (ViewBag.allSavings != null)
                                                {
                                                    var selectedSavingsProducts = ViewBag.SelectedSavingsProducts as List<Guid> ?? new List<Guid>();

                                                    foreach (var save in ViewBag.allSavings)
                                                    {
                                                        <tr style="background-color: #f5f5f5;">
                                                            <td>
                                                                <input type="checkbox"
                                                                       class="savings-checkbox"
                                                                       name="savingsproducts"
                                                                       value="@save.Id"
                                                                       @(selectedSavingsProducts.Contains(save.Id) ? "checked" : "") />
                                                                @save.Description
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
