
@{
    ViewBag.Title = "Auditlogs";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Auditlogs</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>
<form id="modalFilterForm" style="background-color: #E0f0ff; padding: 20px; border-radius: 8px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);">
    <div class="form-row" style="display: flex; justify-content: space-between; align-items: center; gap: 30px;">
        <!-- Status Filter -->
        <!-- Start Date Filter -->
        <div class="col-lg-3 form-group">
            <div style="display: flex; gap: 20px; align-items: center;">
                <label for="startDate" style="white-space: nowrap; font-weight: bold;">Start Date</label>
                <input type="date" id="startDate" name="startDate" class="form-control" style="width: 100%;">
            </div>
        </div>

        <!-- End Date Filter -->
        <div class="col-lg-3 form-group">
            <div style="display: flex; gap: 20px; align-items: center;">
                <label for="endDate" style="white-space: nowrap; font-weight: bold;">End Date</label>
                <input type="date" id="endDate" name="endDate" class="form-control" style="width: 100%;">
            </div>
        </div>

        <!-- Refresh Button -->
        <div class="col-lg-2 form-group">
            <input type="submit" value="Refresh" class="btn btn-primary"
                   style="min-width: 120px; background-color: #008080; border-color: #0056b3; " />
        </div>
    </div>
</form>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="sk-spinner sk-spinner-double-bounce">
                        <div class="sk-double-bounce1"></div>
                        <div class="sk-double-bounce2"></div>
                    </div>
                    <div class="table-responsive">
                        <table id="zonesGrid" class="table table-striped table-bordered table-hover" width="100%">
                            <tbody>
                                <tr>
                                    <td colspan="7" class="dataTables_empty">
                                        Loading data from server
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
}

@section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script type="text/javascript">

        $(document).ready(function () {
            $('#zonesGrid').DataTable({
                // Ajax settings
                "sPaginationType": "full_numbers",
                "bProcessing": true,
                "bServerSide": true,
                "sAjaxSource": "@(Url.Action("Index", "AuditLogs", new { Area = "Admin"}))",
                "sServerMethod": "POST",
                // Callback settings
                "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {

                   var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));
                    var h = ("0" + createdDate.getHours()).slice(-2);
                    var m = ("0" + createdDate.getMinutes()).slice(-2);
                    var s = ("0" + createdDate.getSeconds()).slice(-2);

                    var dt_Created = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;
                    aData.CreatedDate = dt_Created


                    $('td:eq(7)', nRow).html(dt_Created);

                    return nRow;
                },
                // Display settings
                "aoColumns": [
                    { "mDataProp": "EventType", "sTitle": "EventType", "sWidth": "15%" },
                   { "mDataProp": "ApplicationUserName", "sTitle": "ApplicationUserName", "sWidth": "10%" },
                    { "mDataProp": "EnvironmentUserName", "sTitle": "EnvironmentUserName", "sWidth": "10%" },
                    { "mDataProp": "EnvironmentMachineName", "sTitle": "EnvironmentMachineName", "sWidth": "10%" },
                    { "mDataProp": "EnvironmentIPAddress", "sTitle": "EnvironmentIPAddress", "sWidth": "10%" },
                    { "mDataProp": "EnvironmentMotherboardSerialNumber", "sTitle": "EnvironmentMotherboardSerialNumber", "sWidth": "10%" },
                    { "mDataProp": "EnvironmentIPAddress", "sTitle": "EnvironmentIPAddress", "sWidth": "10%" },
                    { "mDataProp": "CreatedDate", "sTitle": "Log in time", "sWidth": "10%", "bSortable": false }
                ],
                "aaSorting": [[0, "desc"]]
        });
        });

        $(document).ajaxStart(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
        $(document).ajaxStop(function () {
            $('.ibox').children('.ibox-content').toggleClass('sk-loading');
        });
    </script>
}
