@model IEnumerable<SwiftFinancials.Web.Areas.Admin.Models.DynamicReport>

@{
    ViewBag.Title = "Reports";
}

<style>
    .table-hover tbody tr:hover {
        background-color: #e9ecef;
        cursor: pointer;
    }

    .table th, .table td {
        padding: 1rem;
        border-bottom: 2px solid #dee2e6;
    }

    .table thead th {
        background: linear-gradient(to bottom right, #343a40, #495057);
        color: #fff;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
    }

    .btn-warning, .btn-danger {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .btn-warning:hover, .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

    td > a {
        display: inline-block;
    }

    .btn-primary {
        border-radius: 50px;
        background-image: linear-gradient(to right, #007bff, #0056b3);
        border: none;
    }

        .btn-primary:hover {
            background-image: linear-gradient(to right, #0056b3, #004494);
        }

        .btn-danger{
            background-color: red;
            color: white;
        }

        .btn:hover{
            background-color: darkred;
            color: white;
        }
</style>


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h1>Administration</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>List</strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Reports</h2>
                    <hr />
                    @Html.ActionLink("Create New Report", "Create", "DynamicReporting", null, new { @class = "btn btn-primary btn-lg" })
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">

                    @if (TempData["SuccessMessage"] != null)
                    {
                      <div class="alert alert-success">
                          <strong>Success !</strong> @TempData["SuccessMessage"]
                      </div>
                    }

                    <h2 class="mt-4 mb-3 text-center text-primary">Reports List</h2>

                    <div class="container">
                        @if (Model.Any())
                        {
                            <div class="table-responsive" style="max-height: 400px; overflow-y: auto; overflow-x: auto;">
                                <table class="table table-hover table-bordered shadow-sm" style="background-color: #f8f9fa; width: 100%;">
                                    <thead class="table-dark" style="position: sticky; top: 0; z-index: 100;">
                                        <tr>
                                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                                            <th>@Html.DisplayNameFor(model => model.StoredProcedureName)</th>
                                            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                                            @*<th>Actions</th>*@
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var report in Model)
                                        {
                                            <tr class="align-middle">
                                                <td>@report.Name</td>
                                                <td>@report.StoredProcedureName</td>
                                                <td>@report.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                                @*<td>*@
                                                    @*@Html.ActionLink("Edit", "Edit", new { id = report.Id }, new { @class = "btn btn-sm btn-warning me-2" })*@
                                                    @*@Html.ActionLink("Delete", "DynamicReporting", new { id = report.Id }, new { @class = "btn btn-sm btn-danger", @onclick = "return confirm('Are you sure you want to delete this report?');" })*@
                                                @*</td>*@
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger text-center">
                                No reports available.
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



