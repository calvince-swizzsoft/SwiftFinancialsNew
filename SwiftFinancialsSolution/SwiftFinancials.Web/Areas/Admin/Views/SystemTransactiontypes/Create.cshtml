    <script type="text/javascript">
        $(document).ready(function () {
            $('#roleBranchTabs a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
            });
        });
    </script>
    <script src="~/Scripts/js/navlink.js"></script>
    <script>
    $(document).ready(function () {
        // Load roles into the table
        function loadRoles() {
            $.ajax({
                url: '@Url.Action("GetRoles", "SystemTransactiontypes", new { Area = "Admin" })',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    var rolesTableBody = $('#rolesTableBody');
                    rolesTableBody.empty(); // Clear existing rows

                    // Loop through the roles and append them to the table
                    $.each(data, function (index, role) {
                        var row = $('<tr></tr>');
                        row.append($('<td style="display: none"></td>').text(role.Id));
                        row.append($('<td></td>').text(role.Name));
                        row.append($('<td></td>').html('<input type="checkbox" class="role-checkbox" data-role-id="' + role.Id + '" data-role-name="' + role.Name + '" />'));
                        rolesTableBody.append(row);
                    });
                },
                error: function (xhr, status, error) {
                    console.error("Error loading roles: ", error);
                }
            });
        }

        // Call the function to load roles when the page is ready
        loadRoles();

        // Capture selected roles on form submit
        $('form').on('submit', function () {
            var selectedRoles = [];
            $('.role-checkbox:checked').each(function () {
                selectedRoles.push({
                    Id: $(this).data('role-id'),
                    Name: $(this).data('role-name')
                });
            });
            $('#SelectedRoles').val(JSON.stringify(selectedRoles)); // Store selected roles in hidden input
        });
    });
    </script>

    <script>
        $(document).ready(function () {
    // Load branches into the table
    function loadBranches() {
        $.ajax({
            url: '@Url.Action("GetBranchesAsync", "SystemTransactiontypes", new { Area = "Admin" })',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                var branchesTableBody = $('#branchesTableBody');
                branchesTableBody.empty(); // Clear existing rows

                // Loop through the branches and append them to the table
                $.each(data, function (index, branch) {
                    var row = $('<tr></tr>');
                    row.append($('<td style="display: none"></td>').text(branch.Id));
                    row.append($('<td></td>').text(branch.Description));
                    row.append($('<td></td>').html('<input type="checkbox" class="branch-checkbox" data-branch-id="' + branch.Id + '" />'));
                    branchesTableBody.append(row);
                });
            },
            error: function (xhr, status, error) {
                console.error("Error loading branches: ", error);
            }
        });
    }

    // Call the function to load branches when the page is ready
    loadBranches();

    // Capture selected branches on form submit
    $('form').on('submit', function () {
        var selectedBranches = [];
        $('.branch-checkbox:checked').each(function () {
            selectedBranches.push($(this).data('branch-id'));
        });
        $('#SelectedBranches').val(selectedBranches.join(',')); // Store selected branches in hidden input
    });
});

    </script>
}