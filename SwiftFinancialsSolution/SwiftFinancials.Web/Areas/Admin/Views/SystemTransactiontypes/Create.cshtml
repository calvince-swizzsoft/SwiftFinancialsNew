@model Application.MainBoundedContext.DTO.AdministrationModule.SystemPermissionTypeInRoleDTO

@{
    var month = ViewBag.SystemPermissionTypeSelectList as List<SelectListItem>;
    ViewBag.Title = "Update System Transaction";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2>Update System Permission</h2>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Create", "SystemTransactiontypes", new { Area = "Admin" }, null)
            </li>
            <li class="breadcrumb-item active">
                <strong>Update System Permission</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success">
                            <strong>Success!</strong> @TempData["Success"]
                            <button type="button" class="close" data-dismiss="alert">
                                <span>&times;</span>
                            </button>
                        </div>
                    }
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white text-dark">
                    @using (Html.BeginForm("Create", "SystemTransactiontypes", new { Area = "Admin" }, FormMethod.Post, new { id = "updateForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group form-group-lg">
                                @Html.LabelFor(model => model.SystemPermissionTypeDescription, htmlAttributes: new { @class = "" })
                                <div class="input-group">
                                    <span class="input-group-addon"><i class="fa fa-bars fa-fw"></i></span>
                                    @Html.DropDownListFor(model => model.SystemPermissionType, month, new { @class = "form-control input-md", id = "SystemPermissionType" })
                                    @Html.ValidationMessageFor(model => model.SystemPermissionTypeDescription)
                                </div>
                            </div>

                            <!-- Hidden inputs to store selected roles and branches -->
                            <input type="hidden" name="SelectedRoles" id="SelectedRoles" />
                            <input type="hidden" name="SelectedBranches" id="SelectedBranches" />

                            <!-- Tabs for Roles and Branches -->
                            <ul class="nav nav-tabs" id="roleBranchTabs" role="tablist">
                                <li class="nav-item">
                                    <a class="nav-link" id="branches-tab" data-toggle="tab" href="#branches" role="tab" aria-controls="branches" aria-selected="false">Branches</a>
                                </li>
                                <li class="nav-item active">
                                    <a class="nav-link active" id="roles-tab" data-toggle="tab" href="#roles" role="tab" aria-controls="roles" aria-selected="true">Roles</a>
                                </li>
                            </ul>

                            <div class="tab-content">
                                <!-- Roles Tab -->
                                <div class="tab-pane fade show active" id="roles" role="tabpanel" aria-labelledby="roles-tab">
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">Roles</div>
                                        <div class="panel-body">
                                            <table class="table table-hover" id="rolesTable">
                                                <thead>
                                                    <tr>
                                                        <th style="display: none">Id</th>
                                                        <th>Name</th>
                                                        <th>Map</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="rolesTableBody">
                                                    <!-- Roles will be dynamically populated here -->
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                                <!-- Branches Tab -->
                                <div class="tab-pane fade" id="branches" role="tabpanel" aria-labelledby="branches-tab">
                                    <div class="panel panel-primary">
                                        <div class="panel-heading">Branches</div>
                                        <div class="panel-body">
                                            <table class="table table-hover" id="branchesTable">
                                                <thead>
                                                    <tr>
                                                        <th style="display: none">Id</th>
                                                        <th>Description</th>
                                                        <th>Map</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="branchesTableBody">
                                                    <!-- Branches will be dynamically populated here -->
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script type="text/javascript">
        $(document).ready(function () {
            // Initial load of roles and branches
            loadRolesAndBranches();

            // Event listener for dropdown change
            $('#SystemPermissionType').change(function () {
                var systemPermissionTypeId = $(this).val();
                if (systemPermissionTypeId) {
                    loadRolesAndBranches(systemPermissionTypeId);
                }
            });

            function loadRolesAndBranches(systemPermissionTypeId) {
                $.ajax({
                    url: '@Url.Action("GetAction", "SystemTransactiontypes", new { Area = "Admin" })',
                    type: 'GET',
                    data: { systemPermissionTypeId: systemPermissionTypeId },
                    dataType: 'json',
                    success: function (data) {
                        populateRoles(data.allRoles, data.linkedRoles);
                        populateBranches(data.allBranches, data.linkedBranches);
                    },
                    error: function () {
                       // alert('Failed to load roles and branches.');
                    }
                });
            }

            function populateRoles(allRoles, linkedRoles) {
                var rolesTableBody = $('#rolesTableBody');
                rolesTableBody.empty();
                $.each(allRoles, function (index, role) {
                    var isChecked = linkedRoles.some(linkedRole => linkedRole.RoleId === role.Id);
                    rolesTableBody.append(
                        '<tr>' +
                        '<td style="display: none">' + role.Id + '</td>' +
                        '<td>' + role.Name + '</td>' +
                        '<td><input type="checkbox" class="role-checkbox" data-role-id="' + role.Id + '" data-role-name="' + role.Name + '"' + (isChecked ? ' checked' : '') + '></td>' +
                        '</tr>'
                    );
                });
            }

            function populateBranches(allBranches, linkedBranches) {
                var branchesTableBody = $('#branchesTableBody');
                branchesTableBody.empty();
                $.each(allBranches, function (index, branch) {
                    var isChecked = linkedBranches.some(linkedBranch => linkedBranch.Id === branch.Id);
                    branchesTableBody.append(
                        '<tr>' +
                        '<td style="display: none">' + branch.Id + '</td>' +
                        '<td>' + branch.Description + '</td>' +
                        '<td><input type="checkbox" class="branch-checkbox" data-branch-id="' + branch.Id + '"' + (isChecked ? ' checked' : '') + '></td>' +
                        '</tr>'
                    );
                });
            }

            // Event listener for checkbox changes
            $(document).on('change', '.role-checkbox, .branch-checkbox', function () {
                var isChecked = $(this).is(':checked');
                var id = $(this).data('role-id') || $(this).data('branch-id');
                var name = $(this).data('role-name') || '';
                var type = $(this).hasClass('role-checkbox') ? 'role' : 'branch';

                if (isChecked) {
                    handleCreate(type, id, name);
                } else {
                    handleRemove(type, id);
                }
            });

            function handleCreate(type, id, name) {
                var url = '@Url.Action("Create", "SystemTransactiontypes", new { Area = "Admin" })';
                var selectedRoles = JSON.parse($('#SelectedRoles').val() || '[]');
                var selectedBranches = JSON.parse($('#SelectedBranches').val() || '[]');

                if (type === 'role') {
                    if (!selectedRoles.some(role => role.RoleId === id)) {
                        selectedRoles.push({ RoleId: id, RoleName: name });
                        $('#SelectedRoles').val(JSON.stringify(selectedRoles));
                    }
                } else if (type === 'branch') {
                    if (!selectedBranches.some(branch => branch.Id === id)) {
                        selectedBranches.push({ Id: id });
                        $('#SelectedBranches').val(JSON.stringify(selectedBranches));
                    }
                }

                $.ajax({
                    url: url,
                    type: 'POST',
                    contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                    data: $('#updateForm').serialize(),
                    success: function (response) {
                        if (response.success) {
                            console.log(response.message);
                            alert('Added system permissions.');
                        } 
                    },
                    error: function () {
                        alert('Failed to create system permissions.');
                    }
                });
            }

            function handleRemove(type, id) {
                var url = '@Url.Action("Remove", "SystemTransactiontypes", new { Area = "Admin" })';
                var selectedRoles = JSON.parse($('#SelectedRoles').val() || '[]');
                var selectedBranches = JSON.parse($('#SelectedBranches').val() || '[]');

                if (type === 'role') {
                    selectedRoles = selectedRoles.filter(role => role.RoleId !== id);
                    $('#SelectedRoles').val(JSON.stringify(selectedRoles));
                } else if (type === 'branch') {
                    selectedBranches = selectedBranches.filter(branch => branch.Id !== id);
                    $('#SelectedBranches').val(JSON.stringify(selectedBranches));
                }

                $.ajax({
                    url: url,
                    type: 'POST',
                    contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                    data: $('#updateForm').serialize(),
                    success: function (response) {
                        if (response.success) {
                            console.log(response.message);
                          //  alert('removed system permissions.');
                        } 
                    },
                    error: function () {
                        alert('Failed to remove system permissions.');
                    }
                });
            }
        });
    </script>
}



