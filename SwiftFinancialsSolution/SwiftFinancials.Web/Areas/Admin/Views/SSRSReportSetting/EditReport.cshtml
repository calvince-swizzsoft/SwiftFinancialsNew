
@{
    ViewBag.Title = "EditReport";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var report = ViewBag.Report;
}



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h1>Administration</h1>
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" })
            </li>
            <li class="breadcrumb-item">
                @Html.ActionLink("Home", "Index", "", new { Area = "Admin" })
            </li>
            <li class="breadcrumb-item active">
                <strong>Create</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content" style="padding: 20px;">
    <div class="row">
        <div class="col-md-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h2>Edit Report</h2>
                    <div class="ibox-tools">
                        <a class="collapse-link" aria-label="Collapse">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link" aria-label="Close">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content bg-white">
                    @using (Html.BeginForm("UpdateReport", "SSRSReportSetting", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="CategoryID">Category</label>
                                    <select name="categoryId" class="form-control">
                                        @foreach (var category in ViewBag.Categories)
                                        {
                                            <option value="@category.Value" @(category.Value == report.CategoryID.ToString() ? "selected" : "")>@category.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="ReportName">Report Name</label>
                                    <input type="text" name="reportName" class="form-control" value="@report.ReportName" />
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>Upload New Report (optional)</label>
                                    <input type="file" name="reportFile" class="form-control" accept=".rdl" />
                                </div>

                                <label style="font-size: medium;">Existing Report File: <strong style="color: dodgerblue;">@report.FileName</strong></label>
                            </div>
                        </div>

                        <input type="hidden" name="reportID" value="@report.ReportID" />

                        <button type="submit" class="btn btn-primary">Save Changes</button>
                        <a href="@Url.Action("Create", "SSRSReportSetting")" class="btn btn-secondary">Cancel</a>
                    }

                    <br />

                    @if (TempData["ErrorReportName"] != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Attempt Failed! </strong>@TempData["ErrorReportName"]
                        </div>
                    }

                    @if (TempData["InvalidFileEdit"] != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Attempt Failed! </strong>@TempData["InvalidFileEdit"]
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
