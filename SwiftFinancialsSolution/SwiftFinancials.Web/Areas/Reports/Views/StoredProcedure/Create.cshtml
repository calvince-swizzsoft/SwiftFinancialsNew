@model SwiftFinancials.Web.Models.StoredProcedureInfo 

@{
    ViewBag.Title = "Create Stored Procedure";
}

<h2>Create a New Stored Procedure</h2>

@using (Html.BeginForm("Create", "StoredProcedure", FormMethod.Post))
{
    <div class="form-group">
        <label for="ProcedureName">Procedure Name</label>
        @Html.TextBoxFor(model => model.ProcedureName, new { @class = "form-control", required = "required" })
    </div>
    <div class="form-group">
        <label for="ProcedureDefinition">Procedure Definition (SQL)</label>
        @Html.TextAreaFor(model => model.ProcedureDefinition, new { @class = "form-control", rows = 10, required = "required" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

<a href="@Url.Action("Index", "StoredProcedure")" class="btn btn-secondary">Back to List</a>
