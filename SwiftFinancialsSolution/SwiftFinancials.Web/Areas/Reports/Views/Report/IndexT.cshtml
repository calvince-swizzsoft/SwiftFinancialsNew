@model IEnumerable<SwiftFinancials.Web.Areas.Reports.Models.ReportViewModel>

@{
    ViewBag.Title = "Reports Index";
}

<div class="container">
    <h2>Reports</h2>

    <div class="mb-3">
        <a href="@Url.Action("CreateReport", "Report")" class="btn btn-primary">Create New Report</a>
    </div>

    @if (Model.Any())
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Report Name</th>
                    <th>Stored Procedure</th>
                    <th>Category</th>
                    <th>Created Date</th>
                    <th>Created By</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var report in Model)
                {
                    <tr>
                        <td>@report.ReportName</td>
                        <td>@report.StoredProcedureName</td>
                        <td>@report.Category</td>
                        <td>@report.CreatedDate.ToString("yyyy-MM-dd")</td>
                        <td>@report.CreatedBy</td>
                        <td>
                            <a href="@Url.Action("Details", "Report", new { id = report.Id })" class="btn btn-info btn-sm">Details</a>
                            <a href="@Url.Action("Delete", "Report", new { id = report.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this report?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No reports available.</div>
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}
