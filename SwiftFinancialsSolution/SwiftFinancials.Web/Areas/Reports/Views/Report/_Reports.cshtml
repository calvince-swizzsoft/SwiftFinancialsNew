<script type="text/javascript">
    $(document).ready(function () {

        $('#reportsGrid').dataTable({
            // Ajax settings
            "sPaginationType": "full_numbers",
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "@(Url.Action("ReportHeadersList", "Reports"))",
            "sServerMethod": "POST",
            // Callback settings
            "fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
                /* row manipulation */

                $('td:eq(4)', nRow).css("text-align", "left");

                var createdDate = new Date(parseInt(aData.CreatedDate.replace("/Date(", "").replace(")/", ""), 10));

                var h = ("0" + createdDate.getHours()).slice(-2);
                var m = ("0" + createdDate.getMinutes()).slice(-2);
                var s = ("0" + createdDate.getSeconds()).slice(-2);

                var dtCreated = $.datepicker.formatDate('dd/mm/yy', createdDate) + " " + h + ":" + m + ":" + s;

                $('td:eq(5)', nRow).html(dtCreated);

                var selectUrl = '<a href="/Reports/Create/' + aData.Id + '">' + 'Select</a>';

                $('td:eq(6)', nRow).html(selectUrl);
                /* return*/

                return nRow;
            },
            // Display settings
            "bJQueryUI": true,
            "aoColumns": [
                { "mDataProp": "Name", "sTitle": "Report Name" },
                { "mDataProp": "CategoryDescription", "sTitle": " Report Category" },
                { "mDataProp": "Path", "sTitle": "Report Path" },
                { "mDataProp": "Depth", "sTitle": "Report Depth" },
                { "mDataProp": "CreatedBy", "sTitle": "Created By" },
                { "mDataProp": "CreatedDate", "sTitle": "Created Date" },
                { "mDataProp": "Commands", "sTitle": "Actions", "bSortable": false }
            ],
            "aaSorting": [[0, 'desc']]
        });
    });

</script>

