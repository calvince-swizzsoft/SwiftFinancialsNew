@model IEnumerable<SwiftFinancials.Web.Areas.Reports.Models.ReportByCategoryViewModel>
@{
    ViewBag.Title = "Executive Reports";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-5 px-lg-5">
    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold text-dark">:file_folder: Executive Reports</h1>
        <p class="lead text-secondary">Refined, categorized, and ready for intelligent decision-making.</p>
    </div>
    <!-- Search -->
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="input-group shadow-sm">
                <span class="input-group-text bg-white border-end-0"><i class="fa fa-search text-muted"></i></span>
                <input type="text" id="reportSearchInput" class="form-control border-start-0 rounded-end-pill" placeholder="Search reports..." onkeyup="searchReports()" />
            </div>
            <div id="searchNotFound" class="text-danger text-center mt-2 fw-semibold d-none"></div>
        </div>
    </div>
    <!-- Report Categories -->
    <div class="accordion accordion-flush" id="reportAccordion">
        @foreach (var categoryGroup in Model.GroupBy(r => r.CategoryName))
        {
            var collapseId = "collapse-" + Guid.NewGuid().ToString("N");
            <div class="accordion-item border-0 mb-3">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed bg-light text-dark fw-semibold shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#@collapseId">
                        <i class="fa fa-folder me-2 text-primary"></i>
                        @categoryGroup.Key (@categoryGroup.Count())
                    </button>
                </h2>
                <div id="@collapseId" class="accordion-collapse collapse">
                    <div class="accordion-body bg-white px-4">
                        @if (!categoryGroup.Any())
                        {
                            <p class="text-muted fst-italic">No reports in this category.</p>
                        }
                        else
                        {
                            <div class="row g-4">
                                @foreach (var report in categoryGroup)
                                {
                                    var fileNameWithoutExtension = System.IO.Path.GetFileNameWithoutExtension(report.FileName);
                                    var encodedFileName = fileNameWithoutExtension.Replace(" ", "%20");
                                    <div class="col-sm-6 col-lg-4">
                                        <a href="http://197.232.170.121:7047/Reports/report/@encodedFileName" target="_blank" class="text-decoration-none">
                                            <div class="card h-100 border-0 shadow-lg rounded-4 elegant-hover">
                                                <div class="card-body d-flex align-items-center gap-3">
                                                    <div class="text-primary fs-3">
                                                        <i class="fa fa-file-alt"></i>
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold text-dark">@report.ReportName</div>
                                                        <small class="text-muted">Open report</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- Search Script -->
<script>
    function searchReports() {
        const input = document.getElementById('reportSearchInput');
        const filter = input.value.toLowerCase();
        const categories = document.querySelectorAll('.accordion-item');
        const noMatchMsg = document.getElementById('searchNotFound');
        let foundAny = false;
        categories.forEach(group => {
            const cards = group.querySelectorAll('.card');
            let visible = false;
            cards.forEach(card => {
                const title = card.textContent.toLowerCase();
                const match = title.includes(filter);
                card.parentElement.style.display = match ? 'block' : 'none';
                if (match) visible = true;
            });
            group.style.display = visible ? 'block' : 'none';
            if (visible) foundAny = true;
        });
        noMatchMsg.classList.toggle("d-none", foundAny || filter.trim() === "");
        if (!foundAny && filter.trim() !== "") {
            noMatchMsg.textContent = ":no_entry_sign: No reports found.";
        }
    }
</script>
<!-- Styles -->
<style>
    .elegant-hover {
        transition: all 0.3s ease;
        border-radius: 1rem;
    }
        .elegant-hover:hover {
            transform: scale(1.02);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
        }
    .accordion-button:not(.collapsed) {
        background-color: #F8F9FA;
        color: #212529;
    }
    .card {
        background-color: #FDFDFD;
    }
</style>
