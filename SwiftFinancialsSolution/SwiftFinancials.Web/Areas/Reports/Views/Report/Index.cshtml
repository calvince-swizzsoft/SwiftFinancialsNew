@model IEnumerable<Application.MainBoundedContext.DTO.AdministrationModule.ReportDTO>

    @{
    ViewBag.Title = "Index";
    }

    <div class="row wrapper border-bottom white-bg page-heading">
        <div class="col-lg-10">
            <h2>System Reports</h2>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    @Html.ActionLink("Dashboard", "Index", "Home", new { Area = "" }, null)
                </li>
                <li class="breadcrumb-item active">
                    <strong>List</strong>
                </li>
            </ol>
        </div>
    </div>

    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        @Html.ActionLink("Create Report Setting", "Create", "ReportSetting", new { Area = "Admin" }, new { @class = "btn btn-primary" })
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="sk-spinner sk-spinner-double-bounce">
                            <div class="sk-double-bounce1"></div>
                            <div class="sk-double-bounce2"></div>
                        </div>
                        <div class="table-responsive">
                            <div class="panel-body">
                                <!-- Search input for filtering the table -->
                                <input type="text" id="roleSearch" placeholder="Search reports..." class="form-control mb-3">

                                <table class="table table-hover" id="rolesTableBody">
                                    <thead style="position: sticky; top: 0; background-color: white; z-index: 1;">
                                        <tr>
                                            <th style="display: none">Id</th>
                                            <th>Report Name</th>
                                            <th>Parent</th>
                                            <th>Report Path</th>
                                            <th>Report Query</th>
                                            <th>SSRS Host</th>
                                            <th>SSRS Port</th>
                                            <th>Report URL</th>
                                            <th>Category</th>
                                            <th>Depth</th>
                                            <th>Created Date</th>
                                            <th>Map</th>
                                        </tr>
                                    </thead>
                                    <tbody id="rolesTableBody">
                                        @*Branches are loaded here*@
                                    </tbody>
                                </table>
                            </div>
                          
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden input to store the serialized list 'k' -->
    <input type="hidden" id="kList" name="k" />

    @section Styles {
    @Styles.Render("~/Content/plugins/dataTables/dataTablesStyles")
    }

    @section scripts {
    @Scripts.Render("~/plugins/dataTables")

    <script>
        $(document).ready(function () {
            // Load roles into the table
            function loadRoles() {
                $.ajax({
                    url: '@Url.Action("GetRoles", "Report", new { Area = "Reports" })',
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        var rolesTableBody = $('#rolesTableBody');
                        rolesTableBody.empty(); // Clear existing rows

                        // Loop through the roles and append them to the table
                        $.each(data, function (index, role) {
                            var row = $('<tr></tr>');
                            row.append($('<td style="display: none"></td>').text(role.Id));
                            row.append($('<td></td>').text(role.ReportName));
                            row.append($('<td></td>').text(role.Parent?.ReportName ?? "N/A"));

                            // Update ReportPath to create a download link
                            var reportPath = role.ReportPath;
                            var downloadPath = '@Url.Action("DownloadFile", "Report", new { Area = "Reports" })' + '?path=' + encodeURIComponent(reportPath);
                            row.append($('<td></td>').html('<a href="' + downloadPath + '" download>Download ' + role.ReportPath + '</a>'));

                            row.append($('<td></td>').text(role.ReportQuery));
                            row.append($('<td></td>').text(role.ReportHost));
                            row.append($('<td></td>').text(role.ReportPort));

                            // Update ReportURL to create a download link
                            var reportUrl = role.ReportURL;
                            var downloadUrl = '@Url.Action("DownloadFile", "Report", new { Area = "Reports" })' + '?path=' + encodeURIComponent(reportUrl);
                            row.append($('<td></td>').html('<a href="' + downloadUrl + '" download>Download ' + role.ReportURL + '</a>'));

                            row.append($('<td></td>').text(role.CategoryDescription));
                            row.append($('<td></td>').text(role.Depth));
                            row.append($('<td></td>').text(new Date(role.CreatedDate).toLocaleDateString()));
                            row.append($('<td></td>').html('<input type="checkbox" class="role-checkbox" data-role-id="' + role.Id + '" data-role-name="' + role.ReportName + '" />'));
                            rolesTableBody.append(row);
                        });
                    },
                    error: function (xhr, status, error) {
                        console.error("Error loading roles: ", error);
                    }
                });
            }

            // Call the function to load roles when the page is ready
            loadRoles();

            // Typeahead filtering
            $('#roleSearch').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                $('#rolesTableBody tr').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
                });
            });

            // Capture selected roles on form submit
            $('form').on('submit', function () {
                var selectedRoles = [];
                $('.role-checkbox:checked').each(function () {
                    selectedRoles.push({
                        Id: $(this).data('role-id'),
                        Name: $(this).data('role-name')
                    });
                });
                $('#SelectedRoles').val(JSON.stringify(selectedRoles)); // Store selected roles in hidden input
            });
        });
    </script>
    }
