                                    <div class="form-group form-group-lg">
                                        @Html.LabelFor(model => model.ContactPersonIdentityNumber, htmlAttributes: new { @class = "control-label" })
                                        @Html.EditorFor(model => model.ContactPersonIdentityNumber, new { htmlAttributes = new { @class = "form-control required", placeholder = "Identity Number", colspan = "10" } })
                                        @Html.ValidationMessageFor(model => model.ContactPersonIdentityNumber, "", new { @class = "text-danger" })
