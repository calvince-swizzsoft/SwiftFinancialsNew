                                            @Html.EditorFor(model => model.AddressEmail, new { htmlAttributes = new { @class = "form-control", placeholder = "Email address" } })
                                            @Html.ValidationMessageFor(model => model.AddressEmail, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="form-group form-group-lg">
                                            @Html.LabelFor(model => model.AddressLandLine, htmlAttributes: new { @class = "control-label" })
                                            @Html.EditorFor(model => model.AddressLandLine, new { htmlAttributes = new { @class = "form-control", placeholder = "Land-line" } })
                                            @Html.ValidationMessageFor(model => model.AddressLandLine, "", new { @class = "text-danger" })
                                        </div>
