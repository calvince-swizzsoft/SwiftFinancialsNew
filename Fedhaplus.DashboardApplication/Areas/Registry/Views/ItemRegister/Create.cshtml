            </div>
        </div>
    </div>
</div>

@section Styles{
    @Styles.Render("~/Content/plugins/iCheck/iCheckStyles")
    @Styles.Render("~/plugins/wizardStepsStyles")
}

@section Scripts{
    @Scripts.Render("~/plugins/wizardSteps")
    @Scripts.Render("~/plugins/validate")
    @Scripts.Render("~/plugins/typehead")

<script>
        $(document).ready(function () {

              //ItemCategory typehead starts here
            $('.ItemCategorysLookup').typeahead({
                source: function (query, process) {
                    return $.getJSON(
                        '@Url.Action("GetItemCategoriesAsync", "ItemRegister", new { Area = "Registry" })',
                        { query: query },
                        function (ItemCategorys) {
                            var newItemCategorysData = [];
                            ItemCategorysMap = {};
                            $.each(ItemCategorys, function (i, ItemCategory) {
                                newItemCategorysData.push(ItemCategory.Description + '|' + ItemCategory.SubCategory);
                                ItemCategorysMap[ItemCategory.Description + '|' + ItemCategory.SubCategory] = ItemCategory;
                            });
                            process(newItemCategorysData); return;
                        });
                },
                matcher: function (item) {
                    if (item.toLowerCase().indexOf(this.query.trim().toLowerCase()) != -1) {
                        return true;
                    }
                },
                sorter: function (items) {
                    return items.sort();
                },
                highlighter: function (item) {
                    var regex = new RegExp('(' + this.query + ')', 'gi');
                    return item.replace(regex, "<strong>$1</strong>");
                },
                updater: function (item) {
                    var ItemCategoryId = "";
                    ItemCategoryId = ItemCategorysMap[item].Id;
                    $('#ItemCategoryId').val(ItemCategoryId);
                    //console.log(ItemCategoryId)
                    return item;
                }
            });

